{
  "name": "astro-pro-template",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "build": "astro build && npx pagefind --site dist --glob \"blog/**/*.html\"",
    "build:no-search": "astro build",
    "preview": "astro preview",
    "check": "astro check",
    "lint": "eslint src/**/*.{astro,ts,tsx}",
    "format": "prettier --write src/**/*.{astro,ts,tsx,css,md,mdx}",
    "lighthouse": "npx lighthouse http://localhost:4321 --output=html --output-path=./lighthouse-report.html"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.0",
    "@astrojs/mdx": "^4.2.0",
    "@astrojs/rss": "^4.0.15",
    "@astrojs/sitemap": "^3.3.0",
    "astro": "^5.7.0",
    "marked": "^17.0.3"
  },
  "devDependencies": {
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-plugin-astro": "^1.0.0",
    "pagefind": "^1.4.0",
    "prettier": "^3.4.0",
    "prettier-plugin-astro": "^0.14.0",
    "typescript": "^5.7.0"
  }
}
