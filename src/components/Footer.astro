<style>
  /* ═══════════════════════════════════════════════════════════════════════
     FOOTER — Mobile First
     ═══════════════════════════════════════════════════════════════════════ */
  .bmx-ft {
    background: #0a0a0a;
    color: #888;
    font-family: system-ui, -apple-system, sans-serif;
    font-size: 13px;
    line-height: 1.5;
  }

  .bmx-ft-inner {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 16px;
  }

  /* ═══ Main — Mobile First ═══ */
  .bmx-ft-main {
    display: flex;
    flex-direction: column;
    gap: 32px;
    padding: 40px 0 32px;
    border-bottom: 1px solid #1a1a1a;
  }

  /* ═══ Brand — Mobile ═══ */
  .bmx-ft-brand {
    text-align: center;
  }

  .bmx-ft-logo {
    display: inline-block;
    font-size: 28px;
    font-weight: 900;
    color: #fff;
    text-decoration: none;
  }

  .bmx-ft-logo span { color: #dc2626; }

  .bmx-ft-slogan {
    font-size: 13px;
    font-style: italic;
    color: #555;
    margin: 6px 0 12px;
  }

  .bmx-ft-desc {
    font-size: 12px;
    color: #666;
    line-height: 1.7;
    margin: 0 0 20px;
    max-width: 300px;
    margin-inline: auto;
  }

  .bmx-ft-stats {
    display: flex;
    justify-content: center;
    gap: 24px;
    padding-top: 16px;
    border-top: 1px solid #1a1a1a;
  }

  .bmx-ft-stats div {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .bmx-ft-stats strong {
    font-size: 22px;
    font-weight: 900;
    color: #dc2626;
  }

  .bmx-ft-stats span {
    font-size: 9px;
    color: #555;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* ═══ Nav — Mobile (accordion-style) ═══ */
  .bmx-ft-nav {
    display: grid;
    grid-template-columns: 1fr;
    gap: 24px;
    text-align: center;
  }

  .bmx-ft-nav div {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
  }

  .bmx-ft-nav h4 {
    font-size: 11px;
    font-weight: 700;
    color: #fff;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin: 0 0 4px;
    padding-bottom: 10px;
    border-bottom: 2px solid #dc2626;
    display: inline-block;
  }

  .bmx-ft-nav a {
    font-size: 12px;
    color: #777;
    text-decoration: none;
    padding: 4px 0;
    min-height: 36px;
    display: flex;
    align-items: center;
    transition: color 0.2s;
  }

  .bmx-ft-nav a:active { color: #dc2626; }

  .bmx-ft-address {
    font-size: 11px;
    color: #555;
    line-height: 1.6;
    margin-top: 8px;
  }

  /* ═══ States Directory — Mobile ═══ */
  .bmx-ft-states {
    padding: 24px 0;
    border-bottom: 1px solid #1a1a1a;
  }

  .bmx-ft-states h4 {
    font-size: 10px;
    font-weight: 700;
    color: #555;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin: 0 0 16px;
    text-align: center;
  }

  .bmx-ft-states-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 6px 12px;
    text-align: center;
  }

  .bmx-ft-states-grid a {
    font-size: 11px;
    color: #666;
    text-decoration: none;
    padding: 8px 4px;
    min-height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: color 0.2s;
  }

  .bmx-ft-states-grid a:active {
    color: #dc2626;
  }

  /* ═══ Certs — Mobile ═══ */
  .bmx-ft-certs {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12px;
    padding: 20px 0;
    border-bottom: 1px solid #1a1a1a;
    text-align: center;
  }

  .bmx-ft-certs-group {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: 6px;
  }

  .bmx-ft-certs-label {
    font-size: 9px;
    color: #444;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    width: 100%;
    margin-bottom: 4px;
  }

  .bmx-ft-certs-group span:not(.bmx-ft-certs-label) {
    padding: 4px 8px;
    background: #151515;
    border: 1px solid #252525;
    border-radius: 4px;
    font-size: 10px;
    font-weight: 600;
    color: #999;
  }

  /* ═══ Bottom — Mobile ═══ */
  .bmx-ft-bottom {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12px;
    padding: 20px 0;
    text-align: center;
  }

  .bmx-ft-bottom p {
    font-size: 11px;
    color: #444;
    margin: 0;
  }

  .bmx-ft-legal {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 16px;
  }

  .bmx-ft-legal a {
    font-size: 11px;
    color: #555;
    text-decoration: none;
    padding: 4px 0;
    min-height: 36px;
    display: flex;
    align-items: center;
  }

  .bmx-ft-legal a:active { color: #fff; }

  /* ═══ Tablet (≥640px) ═══ */
  @media (min-width: 640px) {
    .bmx-ft-inner {
      padding: 0 24px;
    }

    .bmx-ft-main {
      padding: 48px 0 40px;
      gap: 40px;
    }

    .bmx-ft-logo {
      font-size: 32px;
    }

    .bmx-ft-desc {
      font-size: 13px;
      max-width: 360px;
    }

    .bmx-ft-nav {
      grid-template-columns: repeat(2, 1fr);
      gap: 24px 32px;
    }

    .bmx-ft-states-grid {
      grid-template-columns: repeat(3, 1fr);
    }

    .bmx-ft-certs {
      flex-direction: row;
      justify-content: center;
      gap: 24px;
    }

    .bmx-ft-certs-label {
      width: auto;
      margin-bottom: 0;
    }

    .bmx-ft-bottom {
      flex-direction: row;
      justify-content: space-between;
    }
  }

  /* ═══ Tablet Landscape (≥768px) ═══ */
  @media (min-width: 768px) {
    .bmx-ft-nav {
      grid-template-columns: repeat(3, 1fr);
    }

    .bmx-ft-states-grid {
      grid-template-columns: repeat(4, 1fr);
    }

    .bmx-ft-nav a,
    .bmx-ft-states-grid a,
    .bmx-ft-legal a {
      min-height: auto;
      padding: 0;
    }
  }

  /* ═══ Desktop (≥1024px) ═══ */
  @media (min-width: 1024px) {
    .bmx-ft-main {
      display: grid;
      grid-template-columns: 300px 1fr;
      gap: 64px;
      padding: 64px 0 48px;
    }

    .bmx-ft-brand {
      text-align: left;
    }

    .bmx-ft-desc {
      margin-inline: 0;
    }

    .bmx-ft-stats {
      justify-content: flex-start;
    }

    .bmx-ft-stats div {
      align-items: flex-start;
    }

    .bmx-ft-nav {
      grid-template-columns: repeat(5, 1fr);
      gap: 32px;
      text-align: left;
    }

    .bmx-ft-nav div {
      align-items: flex-start;
    }

    .bmx-ft-nav h4 {
      display: block;
    }

    .bmx-ft-states-grid {
      grid-template-columns: repeat(6, 1fr);
      text-align: left;
    }

    .bmx-ft-states-grid a {
      justify-content: flex-start;
    }

    .bmx-ft-certs {
      justify-content: space-between;
    }

    @media (hover: hover) {
      .bmx-ft-nav a:hover { color: #fff; }
      .bmx-ft-states-grid a:hover { color: #dc2626; }
      .bmx-ft-legal a:hover { color: #fff; }
    }
  }

  /* ═══ Large Desktop (≥1200px) ═══ */
  @media (min-width: 1200px) {
    .bmx-ft-main {
      grid-template-columns: 320px 1fr;
    }

    .bmx-ft-states-grid {
      grid-template-columns: repeat(8, 1fr);
    }
  }
</style>
