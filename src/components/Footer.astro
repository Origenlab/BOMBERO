<style>
  /* ═══════════════════════════════════════════════════════════════════════
     PRO FOOTER - Diseño Premium
     ═══════════════════════════════════════════════════════════════════════ */

  .pro-footer {
    background: #0a0a0a;
    color: #999;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  }

  .pro-footer__container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 32px;
  }

  /* ═══ Upper Section ═══ */
  .pro-footer__upper {
    padding: 80px 0 60px;
    border-bottom: 1px solid #1a1a1a;
  }

  .pro-footer__grid {
    display: grid;
    grid-template-columns: 420px 1fr;
    gap: 80px;
  }

  /* Brand */
  .pro-footer__brand {
    padding-right: 40px;
  }

  .pro-footer__logo {
    display: inline-block;
    font-size: 36px;
    font-weight: 900;
    color: #fff;
    text-decoration: none;
    letter-spacing: -0.02em;
  }

  .pro-footer__logo span {
    color: #dc2626;
  }

  .pro-footer__slogan {
    font-size: 16px;
    font-weight: 600;
    color: #666;
    font-style: italic;
    margin: 8px 0 20px;
  }

  .pro-footer__desc {
    font-size: 14px;
    line-height: 1.8;
    color: #666;
    margin: 0 0 32px;
  }

  /* Trust Badges */
  .pro-footer__trust {
    display: flex;
    gap: 24px;
    padding-top: 24px;
    border-top: 1px solid #1a1a1a;
  }

  .pro-footer__trust-item {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .pro-footer__trust-number {
    font-size: 32px;
    font-weight: 900;
    color: #dc2626;
    line-height: 1;
  }

  .pro-footer__trust-label {
    font-size: 11px;
    color: #555;
    line-height: 1.4;
    text-transform: uppercase;
    letter-spacing: 0.03em;
  }

  /* Navigation */
  .pro-footer__nav {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 40px;
  }

  .pro-footer__col h4 {
    font-size: 13px;
    font-weight: 700;
    color: #fff;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin: 0 0 24px;
    padding-bottom: 16px;
    border-bottom: 2px solid #dc2626;
    display: inline-block;
  }

  .pro-footer__col ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .pro-footer__col li {
    margin-bottom: 12px;
  }

  .pro-footer__col a {
    font-size: 14px;
    color: #777;
    text-decoration: none;
    transition: color 0.2s ease, padding-left 0.2s ease;
    display: inline-block;
  }

  .pro-footer__col a:hover {
    color: #fff;
    padding-left: 6px;
  }

  /* ═══ Contact Bar ═══ */
  .pro-footer__contact {
    background: #111;
    padding: 32px 0;
    border-bottom: 1px solid #1a1a1a;
  }

  .pro-footer__contact-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 32px;
  }

  .pro-footer__contact-item {
    text-align: center;
    padding: 0 16px;
    border-right: 1px solid #222;
  }

  .pro-footer__contact-item:last-child {
    border-right: none;
  }

  .pro-footer__contact-label {
    display: block;
    font-size: 10px;
    font-weight: 600;
    color: #555;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 8px;
  }

  .pro-footer__contact-value {
    font-size: 18px;
    font-weight: 700;
    color: #fff;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .pro-footer__contact-value:hover {
    color: #dc2626;
  }

  .pro-footer__contact-value--wa {
    color: #25D366;
  }

  .pro-footer__contact-value--wa:hover {
    color: #128C7E;
  }

  /* ═══ Certifications ═══ */
  .pro-footer__certs {
    padding: 40px 0;
    border-bottom: 1px solid #1a1a1a;
  }

  .pro-footer__certs-grid {
    display: grid;
    grid-template-columns: 1fr 1.5fr 1fr;
    gap: 48px;
    align-items: start;
  }

  .pro-footer__certs-title {
    display: block;
    font-size: 10px;
    font-weight: 700;
    color: #555;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 16px;
  }

  .pro-footer__certs-list {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
  }

  .pro-footer__cert {
    padding: 8px 16px;
    background: linear-gradient(135deg, #1a1a1a 0%, #111 100%);
    border: 1px solid #333;
    border-radius: 6px;
    font-size: 12px;
    font-weight: 700;
    color: #fff;
    letter-spacing: 0.05em;
  }

  .pro-footer__brand-tag {
    padding: 6px 12px;
    background: #151515;
    border: 1px solid #252525;
    border-radius: 4px;
    font-size: 11px;
    font-weight: 600;
    color: #888;
  }

  .pro-footer__certs-col--address {
    text-align: right;
  }

  .pro-footer__address {
    font-style: normal;
    font-size: 13px;
    color: #666;
    line-height: 1.8;
  }

  /* ═══ Bottom Bar ═══ */
  .pro-footer__bottom {
    padding: 24px 0;
    background: #050505;
  }

  .pro-footer__bottom-grid {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 32px;
  }

  .pro-footer__copyright p {
    font-size: 13px;
    color: #555;
    margin: 0;
  }

  .pro-footer__copyright strong {
    color: #888;
  }

  .pro-footer__legal-note {
    font-size: 11px !important;
    color: #444 !important;
    margin-top: 4px !important;
  }

  .pro-footer__legal {
    display: flex;
    gap: 32px;
  }

  .pro-footer__legal a {
    font-size: 12px;
    color: #555;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .pro-footer__legal a:hover {
    color: #fff;
  }

  /* ═══ Responsive ═══ */
  @media (max-width: 1200px) {
    .pro-footer__grid {
      grid-template-columns: 1fr;
      gap: 60px;
    }

    .pro-footer__brand {
      padding-right: 0;
      text-align: center;
      max-width: 600px;
      margin: 0 auto;
    }

    .pro-footer__trust {
      justify-content: center;
    }

    .pro-footer__certs-grid {
      grid-template-columns: 1fr 1fr;
    }

    .pro-footer__certs-col--address {
      grid-column: 1 / -1;
      text-align: center;
    }
  }

  @media (max-width: 900px) {
    .pro-footer__upper {
      padding: 60px 0 48px;
    }

    .pro-footer__nav {
      grid-template-columns: repeat(2, 1fr);
      gap: 32px;
    }

    .pro-footer__contact-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 24px;
    }

    .pro-footer__contact-item {
      border-right: none;
      padding: 16px;
      background: #0d0d0d;
      border-radius: 8px;
    }

    .pro-footer__certs-grid {
      grid-template-columns: 1fr;
      gap: 32px;
      text-align: center;
    }

    .pro-footer__certs-list {
      justify-content: center;
    }

    .pro-footer__certs-col--address {
      text-align: center;
    }
  }

  @media (max-width: 640px) {
    .pro-footer__container {
      padding: 0 20px;
    }

    .pro-footer__upper {
      padding: 48px 0 40px;
    }

    .pro-footer__logo {
      font-size: 28px;
    }

    .pro-footer__trust {
      flex-direction: column;
      align-items: center;
      gap: 16px;
    }

    .pro-footer__trust-item {
      flex-direction: column;
      text-align: center;
      gap: 4px;
    }

    .pro-footer__trust-label {
      text-align: center;
    }

    .pro-footer__nav {
      grid-template-columns: 1fr;
      gap: 32px;
      text-align: center;
    }

    .pro-footer__col h4 {
      display: block;
      text-align: center;
    }

    .pro-footer__col ul {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .pro-footer__contact-grid {
      grid-template-columns: 1fr;
    }

    .pro-footer__bottom-grid {
      flex-direction: column;
      text-align: center;
      gap: 20px;
    }

    .pro-footer__legal {
      flex-wrap: wrap;
      justify-content: center;
      gap: 16px;
    }
  }
</style>
