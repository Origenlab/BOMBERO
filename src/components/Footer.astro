<style>
  .bmx-ft {
    background: #0a0a0a;
    color: #888;
    font-family: system-ui, -apple-system, sans-serif;
    font-size: 14px;
    line-height: 1.5;
  }

  .bmx-ft-inner {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 24px;
  }

  /* Main */
  .bmx-ft-main {
    display: grid;
    grid-template-columns: 320px 1fr;
    gap: 64px;
    padding: 64px 0 48px;
    border-bottom: 1px solid #1a1a1a;
  }

  /* Brand */
  .bmx-ft-brand {}

  .bmx-ft-logo {
    display: inline-block;
    font-size: 32px;
    font-weight: 900;
    color: #fff;
    text-decoration: none;
  }

  .bmx-ft-logo span { color: #dc2626; }

  .bmx-ft-slogan {
    font-size: 14px;
    font-style: italic;
    color: #555;
    margin: 8px 0 16px;
  }

  .bmx-ft-desc {
    font-size: 13px;
    color: #666;
    line-height: 1.7;
    margin: 0 0 24px;
  }

  .bmx-ft-stats {
    display: flex;
    gap: 24px;
    padding-top: 20px;
    border-top: 1px solid #1a1a1a;
  }

  .bmx-ft-stats div {
    display: flex;
    flex-direction: column;
  }

  .bmx-ft-stats strong {
    font-size: 24px;
    font-weight: 900;
    color: #dc2626;
  }

  .bmx-ft-stats span {
    font-size: 10px;
    color: #555;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Nav */
  .bmx-ft-nav {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 32px;
  }

  .bmx-ft-nav div {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .bmx-ft-nav h4 {
    font-size: 12px;
    font-weight: 700;
    color: #fff;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin: 0 0 8px;
    padding-bottom: 12px;
    border-bottom: 2px solid #dc2626;
  }

  .bmx-ft-nav a {
    font-size: 13px;
    color: #777;
    text-decoration: none;
  }

  .bmx-ft-nav a:hover { color: #fff; }

  .bmx-ft-address {
    font-size: 11px;
    color: #555;
    line-height: 1.6;
    margin-top: 8px;
  }

  /* States Directory */
  .bmx-ft-states {
    padding: 32px 0;
    border-bottom: 1px solid #1a1a1a;
  }

  .bmx-ft-states h4 {
    font-size: 11px;
    font-weight: 700;
    color: #555;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin: 0 0 20px;
    text-align: center;
  }

  .bmx-ft-states-grid {
    display: grid;
    grid-template-columns: repeat(8, 1fr);
    gap: 8px 16px;
  }

  .bmx-ft-states-grid a {
    font-size: 12px;
    color: #666;
    text-decoration: none;
    padding: 6px 0;
    transition: color 0.2s;
  }

  .bmx-ft-states-grid a:hover {
    color: #dc2626;
  }

  /* Certs */
  .bmx-ft-certs {
    display: flex;
    justify-content: space-between;
    padding: 24px 0;
    border-bottom: 1px solid #1a1a1a;
  }

  .bmx-ft-certs-group {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .bmx-ft-certs-label {
    font-size: 10px;
    color: #444;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-right: 4px;
  }

  .bmx-ft-certs-group span:not(.bmx-ft-certs-label) {
    padding: 4px 10px;
    background: #151515;
    border: 1px solid #252525;
    border-radius: 4px;
    font-size: 11px;
    font-weight: 600;
    color: #999;
  }

  /* Bottom */
  .bmx-ft-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px 0;
  }

  .bmx-ft-bottom p {
    font-size: 12px;
    color: #444;
    margin: 0;
  }

  .bmx-ft-legal {
    display: flex;
    gap: 24px;
  }

  .bmx-ft-legal a {
    font-size: 12px;
    color: #555;
    text-decoration: none;
  }

  .bmx-ft-legal a:hover { color: #fff; }

  /* Responsive */
  @media (max-width: 1200px) {
    .bmx-ft-states-grid { grid-template-columns: repeat(6, 1fr); }
  }

  @media (max-width: 1024px) {
    .bmx-ft-main {
      grid-template-columns: 1fr;
      gap: 48px;
    }
    .bmx-ft-brand { text-align: center; }
    .bmx-ft-stats { justify-content: center; }
    .bmx-ft-nav { grid-template-columns: repeat(2, 1fr); }
    .bmx-ft-states-grid { grid-template-columns: repeat(4, 1fr); }
  }

  @media (max-width: 768px) {
    .bmx-ft-states-grid { grid-template-columns: repeat(3, 1fr); }
  }

  @media (max-width: 640px) {
    .bmx-ft-main { padding: 48px 0 32px; }
    .bmx-ft-nav {
      grid-template-columns: 1fr;
      text-align: center;
    }
    .bmx-ft-nav div { align-items: center; }
    .bmx-ft-stats { flex-direction: column; align-items: center; gap: 16px; }
    .bmx-ft-states-grid { grid-template-columns: repeat(2, 1fr); text-align: center; }
    .bmx-ft-certs {
      flex-direction: column;
      gap: 16px;
      align-items: center;
      text-align: center;
    }
    .bmx-ft-certs-group { flex-wrap: wrap; justify-content: center; }
    .bmx-ft-bottom {
      flex-direction: column;
      gap: 16px;
      text-align: center;
    }
    .bmx-ft-legal { flex-wrap: wrap; justify-content: center; gap: 16px; }
  }
</style>
