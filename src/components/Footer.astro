---
/**
 * ─── Footer Component ───
 * Footer profesional para BOMBERO.MX
 * Incluye: Logo, descripción SEO, contacto, redes sociales, navegación, newsletter
 *
 * Props:
 * - variant: "default" | "minimal" (opcional)
 */
import Logo from "./Logo.astro";
import { footerNav } from "@data/navigation";
import { SITE } from "@data/site";

interface Props {
  variant?: "default" | "minimal";
}

const { variant = "default" } = Astro.props;

const year = new Date().getFullYear();

const columnTitles: Record<string, string> = {
  productos: "Productos",
  servicios: "Servicios",
  empresa: "Empresa",
  legal: "Legal",
};

const footerClasses = [
  "footer",
  `footer--${variant}`,
].join(" ");
---

<footer class={footerClasses} role="contentinfo">
  {variant === "default" && (
    <!-- Newsletter Section -->
    <div class="footer__newsletter">
      <div class="container">
        <div class="footer__newsletter-inner">
          <div class="footer__newsletter-content">
            <h2 class="footer__newsletter-title">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
                <rect width="20" height="16" x="2" y="4" rx="2"/>
                <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
              </svg>
              Recibe ofertas exclusivas
            </h2>
            <p class="footer__newsletter-text">
              Suscríbete y obtén descuentos especiales en equipo para bomberos
            </p>
          </div>
          <form class="footer__newsletter-form" action="/api/newsletter" method="POST">
            <input
              type="email"
              name="email"
              placeholder="Tu correo electrónico"
              required
              aria-label="Correo electrónico para newsletter"
              class="footer__newsletter-input"
            />
            <button type="submit" class="footer__newsletter-btn">
              Suscribirme
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </button>
          </form>
        </div>
      </div>
    </div>
  )}

  <!-- Main Footer -->
  <div class="footer__main">
    <div class="container">
      <div class="footer__grid">
        <!-- Brand Column -->
        <div class="footer__brand">
          <Logo variant="white" size="md" />

          <p class="footer__description">
            Somos distribuidores autorizados de equipo profesional para bomberos en México.
            Ofrecemos trajes estructurales, cascos, equipos SCBA y herramientas de rescate
            con certificación NFPA.
          </p>

          <!-- Contact Info -->
          <div class="footer__contact">
            <a href={`tel:${SITE.contact.phoneRaw}`} class="footer__contact-item">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72c.127.96.361 1.903.7 2.81a2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45c.907.339 1.85.573 2.81.7A2 2 0 0 1 22 16.92z"/>
              </svg>
              <span>{SITE.contact.phoneTollFree}</span>
            </a>
            <a href={`mailto:${SITE.contact.email}`} class="footer__contact-item">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
                <rect width="20" height="16" x="2" y="4" rx="2"/>
                <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
              </svg>
              <span>{SITE.contact.email}</span>
            </a>
            <a href={`https://wa.me/${SITE.contact.whatsapp}`} class="footer__contact-item footer__contact-item--whatsapp" target="_blank" rel="noopener noreferrer">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
              <span>WhatsApp</span>
            </a>
          </div>

          <!-- Social Links -->
          <div class="footer__social">
            <a href={SITE.social.facebook} class="footer__social-link" aria-label="Facebook" target="_blank" rel="noopener noreferrer">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/>
              </svg>
            </a>
            <a href={SITE.social.instagram} class="footer__social-link" aria-label="Instagram" target="_blank" rel="noopener noreferrer">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
                <rect width="20" height="20" x="2" y="2" rx="5" ry="5"/>
                <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/>
                <line x1="17.5" x2="17.51" y1="6.5" y2="6.5"/>
              </svg>
            </a>
            <a href={SITE.social.youtube} class="footer__social-link" aria-label="YouTube" target="_blank" rel="noopener noreferrer">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
              </svg>
            </a>
            <a href={SITE.social.linkedin} class="footer__social-link" aria-label="LinkedIn" target="_blank" rel="noopener noreferrer">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
          </div>
        </div>

        <!-- Nav Columns -->
        {Object.entries(footerNav).map(([key, items]) => (
          <div class="footer__col">
            <h2 class="footer__col-title">{columnTitles[key] ?? key}</h2>
            <ul class="footer__nav" role="list">
              {items.map((item) => (
                <li>
                  <a href={item.href} class="footer__link">{item.label}</a>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>

      <!-- Certifications -->
      <div class="footer__certifications">
        <span class="footer__cert-label">Certificaciones:</span>
        <div class="footer__cert-badges">
          <span class="footer__cert-badge">NFPA</span>
          <span class="footer__cert-badge">NOM</span>
          <span class="footer__cert-badge">UL</span>
          <span class="footer__cert-badge">ISO 9001</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="footer__bottom">
    <div class="container footer__bottom-inner">
      <p class="footer__copyright">
        &copy; {year} {SITE.organization.name}. Todos los derechos reservados.
      </p>
      <p class="footer__location">
        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
          <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/>
          <circle cx="12" cy="10" r="3"/>
        </svg>
        Ciudad de México, México
      </p>
    </div>
  </div>
</footer>

<style>
  /* ═══════════════════════════════════════════════════════════════════════
     FOOTER COMPONENT
     ═══════════════════════════════════════════════════════════════════════ */

  .footer {
    background: var(--color-smoke-900);
    color: var(--color-smoke-300);
  }

  /* ═══ Newsletter Section ═══ */
  .footer__newsletter {
    background: linear-gradient(135deg, var(--color-fire-600) 0%, var(--color-fire-700) 100%);
    padding: var(--space-10) 0;
  }

  .footer__newsletter-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-8);
  }

  .footer__newsletter-content {
    flex: 1;
  }

  .footer__newsletter-title {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    font-size: var(--text-xl);
    font-weight: 700;
    color: white;
    margin: 0 0 var(--space-2);
  }

  .footer__newsletter-text {
    color: rgba(255, 255, 255, 0.85);
    margin: 0;
  }

  .footer__newsletter-form {
    display: flex;
    gap: var(--space-3);
    flex: 1;
    max-width: 500px;
  }

  .footer__newsletter-input {
    flex: 1;
    padding: var(--space-4) var(--space-5);
    background: white;
    border: none;
    border-radius: var(--radius-lg);
    font-size: var(--text-base);
    color: var(--color-smoke-900);
  }

  .footer__newsletter-input::placeholder {
    color: var(--color-smoke-500);
  }

  .footer__newsletter-input:focus {
    outline: 2px solid white;
    outline-offset: 2px;
  }

  .footer__newsletter-btn {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-4) var(--space-6);
    background: var(--color-smoke-900);
    color: white;
    font-weight: 600;
    border: none;
    border-radius: var(--radius-lg);
    cursor: pointer;
    transition: all var(--transition-fast);
    white-space: nowrap;
  }

  .footer__newsletter-btn:hover {
    background: var(--color-smoke-800);
    transform: translateY(-2px);
  }

  /* ═══ Main Footer ═══ */
  .footer__main {
    padding: var(--space-16) 0 var(--space-10);
  }

  .footer__grid {
    display: grid;
    grid-template-columns: 1.5fr repeat(4, 1fr);
    gap: var(--space-10);
  }

  /* ═══ Brand Column ═══ */
  .footer__brand {
    padding-right: var(--space-8);
  }

  .footer__description {
    margin: var(--space-5) 0;
    font-size: var(--text-sm);
    line-height: 1.7;
    color: var(--color-smoke-400);
  }

  .footer__contact {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
    margin-bottom: var(--space-6);
  }

  .footer__contact-item {
    display: inline-flex;
    align-items: center;
    gap: var(--space-3);
    color: var(--color-smoke-300);
    text-decoration: none;
    font-size: var(--text-sm);
    transition: color var(--transition-fast);
  }

  .footer__contact-item:hover {
    color: var(--color-fire-400);
  }

  .footer__contact-item--whatsapp:hover {
    color: #25D366;
  }

  .footer__contact-item svg {
    flex-shrink: 0;
    opacity: 0.7;
  }

  .footer__contact-item:hover svg {
    opacity: 1;
  }

  .footer__social {
    display: flex;
    gap: var(--space-3);
  }

  .footer__social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: var(--color-smoke-800);
    border-radius: var(--radius-lg);
    color: var(--color-smoke-400);
    transition: all var(--transition-fast);
  }

  .footer__social-link:hover {
    background: var(--color-fire-500);
    color: white;
    transform: translateY(-2px);
  }

  /* ═══ Nav Columns ═══ */
  .footer__col-title {
    font-size: var(--text-sm);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: white;
    margin: 0 0 var(--space-5);
  }

  .footer__nav {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .footer__link {
    color: var(--color-smoke-400);
    text-decoration: none;
    font-size: var(--text-sm);
    transition: all var(--transition-fast);
    display: inline-block;
  }

  .footer__link:hover {
    color: white;
    transform: translateX(4px);
  }

  /* ═══ Certifications ═══ */
  .footer__certifications {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    margin-top: var(--space-10);
    padding-top: var(--space-8);
    border-top: 1px solid var(--color-smoke-800);
  }

  .footer__cert-label {
    font-size: var(--text-xs);
    color: var(--color-smoke-500);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .footer__cert-badges {
    display: flex;
    gap: var(--space-2);
  }

  .footer__cert-badge {
    padding: var(--space-1) var(--space-3);
    background: var(--color-smoke-800);
    border: 1px solid var(--color-smoke-700);
    border-radius: var(--radius-md);
    font-size: var(--text-xs);
    font-weight: 600;
    color: var(--color-smoke-300);
  }

  /* ═══ Bottom Bar ═══ */
  .footer__bottom {
    background: rgba(0, 0, 0, 0.3);
    padding: var(--space-5) 0;
  }

  .footer__bottom-inner {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .footer__copyright {
    font-size: var(--text-xs);
    color: var(--color-smoke-500);
    margin: 0;
  }

  .footer__location {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-xs);
    color: var(--color-smoke-500);
    margin: 0;
  }

  /* ═══ Minimal Variant ═══ */
  .footer--minimal .footer__newsletter {
    display: none;
  }

  .footer--minimal .footer__main {
    padding: var(--space-10) 0;
  }

  .footer--minimal .footer__grid {
    grid-template-columns: 1fr;
    text-align: center;
  }

  .footer--minimal .footer__brand {
    padding-right: 0;
  }

  .footer--minimal .footer__col {
    display: none;
  }

  .footer--minimal .footer__social {
    justify-content: center;
  }

  .footer--minimal .footer__certifications {
    justify-content: center;
  }

  /* ═══ Responsive ═══ */
  @media (max-width: 1024px) {
    .footer__grid {
      grid-template-columns: 1fr 1fr;
      gap: var(--space-8);
    }

    .footer__brand {
      grid-column: 1 / -1;
      padding-right: 0;
      text-align: center;
    }

    .footer__contact {
      align-items: center;
    }

    .footer__social {
      justify-content: center;
    }

    .footer__newsletter-inner {
      flex-direction: column;
      text-align: center;
    }

    .footer__newsletter-form {
      max-width: 100%;
      width: 100%;
    }

    .footer__certifications {
      flex-direction: column;
      text-align: center;
    }
  }

  @media (max-width: 768px) {
    .footer__grid {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .footer__col {
      padding-top: var(--space-6);
      border-top: 1px solid var(--color-smoke-800);
    }

    .footer__nav {
      align-items: center;
    }

    .footer__newsletter-form {
      flex-direction: column;
    }

    .footer__newsletter-input,
    .footer__newsletter-btn {
      width: 100%;
      justify-content: center;
    }

    .footer__bottom-inner {
      flex-direction: column;
      gap: var(--space-3);
      text-align: center;
    }
  }

  @media (max-width: 480px) {
    .footer__main {
      padding: var(--space-10) 0 var(--space-8);
    }

    .footer__newsletter {
      padding: var(--space-8) 0;
    }

    .footer__social-link {
      width: 36px;
      height: 36px;
    }
  }
</style>
