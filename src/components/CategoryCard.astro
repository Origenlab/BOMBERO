  tools: `<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"/></svg>`,
  camera: `<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M14.5 4h-5L7 7H4a2 2 0 0 0-2 2v9a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2h-3l-2.5-3z"/><circle cx="12" cy="13" r="3"/></svg>`,
  extinguisher: `<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 6.5V3a1 1 0 0 0-1-1h-2a1 1 0 0 0-1 1v3.5"/><path d="M9 18h6"/><path d="M18 3h-3"/><path d="M15 3v3"/><rect width="10" height="12" x="7" y="6" rx="2"/></svg>`,
};
---

<a href={href} class="category-card">
  <div class="category-card__icon" set:html={icons[icon] || icons.shield} />
  <h3 class="category-card__title">{name}</h3>
  <p class="category-card__description">{description}</p>
  <span class="category-card__link">
    Ver productos
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
  </span>
</a>

<style>
  .category-card {
    display: flex;
    flex-direction: column;
    padding: var(--space-xl);
    background: var(--color-bg);
    border: 1px solid var(--color-border-light);
    border-radius: var(--radius-lg);
    text-decoration: none;
    color: inherit;
  }

  .category-card__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 64px;
    height: 64px;
    background: var(--color-accent-light);
    color: var(--color-accent);
    border-radius: var(--radius-md);
    margin-block-end: var(--space-lg);
  }

  .category-card__title {
    font-size: var(--text-lg);
    font-weight: 700;
    color: var(--color-primary);
    margin-block-end: var(--space-sm);
  }

  .category-card__description {
    font-size: var(--text-sm);
    color: var(--color-text-light);
    line-height: 1.6;
    flex-grow: 1;
  }

  .category-card__link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    margin-block-start: var(--space-lg);
    font-size: var(--text-sm);
    font-weight: 600;
    color: var(--color-accent);
  }
</style>
