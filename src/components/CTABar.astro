---
/**
 * ─── CTABar Component ───
 * Barra de llamada a la acción compacta — va inmediatamente
 * debajo del hero, antes del contenido principal.
 * Reemplaza la barra de certificaciones en páginas de productos.
 *
 * Props:
 * - quote: texto del botón de cotización (default)
 */

import { SITE } from "@data/site";

interface Props {
  quote?: string;
}

const { quote = "Solicitar Cotización" } = Astro.props;

const waMsg = encodeURIComponent(
  "Hola, me interesa cotizar equipo para bomberos certificado NFPA. ¿Podrían asesorarme?"
);
---

<div class="ctabar">
  <div class="container ctabar__inner">

    <!-- ── Columna izq: stats ── -->
    <ul class="ctabar__stats" aria-label="Por qué elegirnos">
      <li class="ctabar__stat">
        <span class="ctabar__stat-num">500<span class="ctabar__stat-plus">+</span></span>
        <span class="ctabar__stat-label">Productos NFPA</span>
      </li>
      <li class="ctabar__divider" aria-hidden="true"></li>
      <li class="ctabar__stat">
        <span class="ctabar__stat-num">32</span>
        <span class="ctabar__stat-label">Estados · Envío Express</span>
      </li>
      <li class="ctabar__divider" aria-hidden="true"></li>
      <li class="ctabar__stat">
        <span class="ctabar__stat-num">+15</span>
        <span class="ctabar__stat-label">Años de Experiencia</span>
      </li>
    </ul>

    <!-- ── Columna centro: CTA principal ── -->
    <a href="/cotizar" class="ctabar__cta" aria-label="Solicitar cotización sin compromiso">
      <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
        <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
        <polyline points="14 2 14 8 20 8"/>
        <line x1="16" y1="13" x2="8" y2="13"/>
        <line x1="16" y1="17" x2="8" y2="17"/>
        <polyline points="10 9 9 9 8 9"/>
      </svg>
      {quote}
      <svg class="ctabar__cta-arrow" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
        <line x1="5" y1="12" x2="19" y2="12"/>
        <polyline points="12 5 19 12 12 19"/>
      </svg>
    </a>

    <!-- ── Columna der: contacto directo ── -->
    <div class="ctabar__contact">
      <a
        href={`https://wa.me/${SITE.contact.whatsapp}?text=${waMsg}`}
        class="ctabar__contact-link ctabar__contact-link--wa"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="Contactar por WhatsApp"
      >
        <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 0 1-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 0 1-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 0 1 2.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0 0 12.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 0 0 5.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 0 0-3.48-8.413z"/>
        </svg>
        <span>WhatsApp</span>
      </a>

      <span class="ctabar__contact-sep" aria-hidden="true">·</span>

      <a
        href={`tel:${SITE.contact.phoneRaw}`}
        class="ctabar__contact-link"
        aria-label={`Llamar al ${SITE.contact.phone}`}
      >
        <svg width="15" height="15" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
          <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07A19.5 19.5 0 0 1 4.69 12a19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 3.6 1.27h3a2 2 0 0 1 2 1.72c.127.96.361 1.903.7 2.81a2 2 0 0 1-.45 2.11L7.91 8.86a16 16 0 0 0 6.07 6.07l.95-.95a2 2 0 0 1 2.11-.45c.907.339 1.85.573 2.81.7A2 2 0 0 1 22 16.92z"/>
        </svg>
        <span>{SITE.contact.phone}</span>
      </a>
    </div>

  </div>
</div>

<style>
  /* ── Contenedor ── */
  .ctabar {
    background: var(--color-smoke-950);
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    position: relative;
    overflow: hidden;
  }

  /* Línea de fuego superior */
  .ctabar::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: var(--gradient-fire);
  }

  .ctabar__inner {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    gap: var(--space-8);
    padding: var(--space-5) 0;
  }

  /* ── Stats ── */
  .ctabar__stats {
    display: flex;
    align-items: center;
    gap: var(--space-5);
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .ctabar__stat {
    display: flex;
    flex-direction: column;
    line-height: 1.2;
  }

  .ctabar__stat-num {
    font-size: var(--text-xl);
    font-weight: 800;
    color: white;
    letter-spacing: -0.02em;
    line-height: 1;
  }

  .ctabar__stat-plus {
    font-size: var(--text-base);
    color: var(--color-fire-400);
  }

  .ctabar__stat-label {
    font-size: var(--text-xs);
    color: var(--color-smoke-400);
    font-weight: 500;
    white-space: nowrap;
  }

  .ctabar__divider {
    width: 1px;
    height: 2rem;
    background: var(--color-smoke-800);
    flex-shrink: 0;
  }

  /* ── CTA Button ── */
  .ctabar__cta {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-3) var(--space-6);
    background: var(--gradient-fire);
    color: white;
    font-size: var(--text-sm);
    font-weight: 700;
    text-decoration: none;
    border-radius: var(--radius-full);
    white-space: nowrap;
    letter-spacing: 0.01em;
    box-shadow: 0 0 20px rgba(220, 38, 38, 0.35);
    transition: transform var(--transition-fast), box-shadow var(--transition-fast);
  }

  .ctabar__cta:hover {
    transform: translateY(-2px) scale(1.03);
    box-shadow: 0 4px 30px rgba(220, 38, 38, 0.5);
  }

  .ctabar__cta-arrow {
    transition: transform var(--transition-fast);
  }

  .ctabar__cta:hover .ctabar__cta-arrow {
    transform: translateX(3px);
  }

  /* ── Contacto ── */
  .ctabar__contact {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    gap: var(--space-3);
  }

  .ctabar__contact-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-sm);
    font-weight: 600;
    color: var(--color-smoke-300);
    text-decoration: none;
    transition: color var(--transition-fast);
    white-space: nowrap;
  }

  .ctabar__contact-link:hover {
    color: white;
  }

  .ctabar__contact-link--wa {
    color: #25d366;
  }

  .ctabar__contact-link--wa:hover {
    color: #1fba58;
  }

  .ctabar__contact-sep {
    color: var(--color-smoke-700);
    font-size: var(--text-lg);
    line-height: 1;
  }

  /* ── Responsive ── */
  @media (max-width: 1024px) {
    .ctabar__stats {
      gap: var(--space-4);
    }

    .ctabar__stat-num {
      font-size: var(--text-lg);
    }
  }

  @media (max-width: 768px) {
    .ctabar__inner {
      grid-template-columns: 1fr;
      text-align: center;
      gap: var(--space-4);
      padding: var(--space-5) 0;
    }

    .ctabar__stats {
      justify-content: center;
    }

    .ctabar__contact {
      justify-content: center;
    }

    .ctabar__cta {
      justify-content: center;
      width: 100%;
      max-width: 260px;
      margin: 0 auto;
    }
  }

  @media (max-width: 480px) {
    .ctabar__stats {
      gap: var(--space-3);
    }

    .ctabar__divider {
      height: 1.5rem;
    }
  }
</style>
