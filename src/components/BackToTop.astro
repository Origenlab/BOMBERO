---
/**
 * ─── BackToTop Component ───
 * Botón para volver al inicio de la página.
 * Se muestra cuando el usuario hace scroll hacia abajo.
 *
 * Props:
 * - threshold: número de pixels para mostrar el botón
 * - position: "left" | "right"
 */

interface Props {
  threshold?: number;
  position?: "left" | "right";
}

const {
  threshold = 400,
  position = "left",
} = Astro.props;

const buttonClasses = [
  "back-to-top",
  `back-to-top--${position}`,
].join(" ");
---

<button
  class={buttonClasses}
  aria-label="Volver al inicio"
  data-threshold={threshold}
  type="button"
>
  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" aria-hidden="true">
    <path d="M18 15l-6-6-6 6"/>
  </svg>
</button>

<script>
  const backToTop = document.querySelector('.back-to-top') as HTMLButtonElement | null;

  if (backToTop) {
    const threshold = parseInt(backToTop.dataset.threshold || '400', 10);

    // Show/hide based on scroll position
    window.addEventListener('scroll', () => {
      if (window.scrollY > threshold) {
        backToTop.classList.add('back-to-top--visible');
      } else {
        backToTop.classList.remove('back-to-top--visible');
      }
    });

    // Scroll to top on click
    backToTop.addEventListener('click', () => {
      window.scrollTo({
        top: 0,
        behavior: 'smooth',
      });
    });
  }
</script>

<style>
  /* ═══════════════════════════════════════════════════════════════════════
     BACK TO TOP COMPONENT
     ═══════════════════════════════════════════════════════════════════════ */

  .back-to-top {
    position: fixed;
    bottom: var(--space-6);
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: white;
    border: 1px solid var(--color-border);
    border-radius: 50%;
    color: var(--color-smoke-700);
    cursor: pointer;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    opacity: 0;
    visibility: hidden;
    transform: translateY(20px);
    transition: all var(--transition-base);
    z-index: var(--z-fixed);
  }

  .back-to-top--right {
    right: var(--space-6);
  }

  .back-to-top--left {
    left: var(--space-6);
  }

  .back-to-top--visible {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .back-to-top:hover {
    background: var(--color-fire-500);
    border-color: var(--color-fire-500);
    color: white;
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(220, 38, 38, 0.3);
  }

  .back-to-top:focus-visible {
    outline: 2px solid var(--color-fire-500);
    outline-offset: 2px;
  }

  .back-to-top:active {
    transform: translateY(0);
  }

  /* ═══ Responsive ═══ */
  @media (max-width: 768px) {
    .back-to-top {
      width: 44px;
      height: 44px;
      bottom: var(--space-4);
    }

    .back-to-top--right {
      right: var(--space-4);
    }

    .back-to-top--left {
      left: var(--space-4);
    }

    .back-to-top svg {
      width: 18px;
      height: 18px;
    }
  }

  /* Adjust position when WhatsApp button is present */
  @media (max-width: 768px) {
    .back-to-top--left {
      bottom: calc(var(--space-4) + 60px);
    }
  }
</style>
