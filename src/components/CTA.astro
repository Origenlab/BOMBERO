---
/**
 * ─── CTA Component ───
 * Call-to-action banner. Use at the bottom of pages to drive conversions.
 */

type Props = {
  title: string;
  description?: string;
  buttonLabel: string;
  buttonHref: string;
  variant?: "primary" | "dark";
};

const {
  title,
  description,
  buttonLabel,
  buttonHref,
  variant = "primary",
} = Astro.props;
---

<section class:list={["cta section", `cta--${variant}`]}>
  <div class="container stack" style="align-items: center; text-align: center;">
    <h2 class="cta__title">{title}</h2>
    {description && <p class="cta__description">{description}</p>}
    <a href={buttonHref} class="btn btn--primary cta__button">
      {buttonLabel}
    </a>
  </div>
</section>

<style>
  .cta--primary {
    background-color: var(--color-bg-alt);
  }

  .cta--dark {
    background-color: var(--color-bg-dark);
    color: var(--color-text-on-dark);
  }

  .cta--dark .cta__title {
    color: var(--color-text-on-dark);
  }

  .cta__title {
    font-size: var(--text-3xl);
    max-width: 25ch;
  }

  .cta__description {
    font-size: var(--text-lg);
    color: var(--color-text-light);
    max-width: 50ch;
  }

  .cta__button {
    margin-block-start: var(--space-md);
    font-size: var(--text-base);
    padding: 1em 2.5em;
  }
</style>
