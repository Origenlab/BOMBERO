---
/**
 * ─── Header Component ───
 * Header principal del sitio BOMBERO.MX
 * Incluye: TopBar, Logo, Navegación, CTA y menú móvil
 *
 * Props:
 * - variant: "default" | "transparent" | "dark" (opcional)
 * - sticky: boolean (default: true)
 */
import TopBar from "./TopBar.astro";
import Nav from "./Nav.astro";
import Logo from "./Logo.astro";
import { SITE } from "@data/site";

interface Props {
  variant?: "default" | "transparent" | "dark";
  sticky?: boolean;
}

const { variant = "default", sticky = true } = Astro.props;

const headerClasses = [
  "header",
  `header--${variant}`,
  sticky && "header--sticky",
].filter(Boolean).join(" ");
---

<!-- Top Bar -->
<TopBar />

<!-- Main Header -->
<header class={headerClasses} role="banner">
  <div class="container header__inner">
    <!-- Logo -->
    <Logo />

    <!-- Desktop Navigation -->
    <nav class="header__nav" id="main-nav" aria-label="Navegación principal">
      <Nav />
    </nav>

    <!-- Header Actions -->
    <div class="header__actions">
      <!-- Search Button -->
      <button class="header__search" aria-label="Buscar productos" type="button">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
          <circle cx="11" cy="11" r="8"/>
          <path d="m21 21-4.3-4.3"/>
        </svg>
      </button>

      <!-- WhatsApp Quick Contact -->
      <a
        href={`https://wa.me/${SITE.contact.whatsapp}?text=Hola, me interesa información sobre equipo para bomberos`}
        class="header__whatsapp"
        aria-label="Contactar por WhatsApp"
        target="_blank"
        rel="noopener noreferrer"
      >
        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
