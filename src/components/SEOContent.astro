<style>
  /* ═══════════════════════════════════════════════════════════════════════
     SEO CONTENT EXTENDED COMPONENT
     ═══════════════════════════════════════════════════════════════════════ */

  .seo-content-extended {
    padding: var(--space-20) 0;
    background: var(--color-smoke-50);
  }

  .seo-content-extended__main {
    max-width: 900px;
    margin: 0 auto var(--space-12);
    text-align: center;
  }

  .seo-content-extended__title {
    font-size: clamp(1.5rem, 3vw, 2rem);
    font-weight: 800;
    color: var(--color-smoke-900);
    line-height: 1.3;
    margin-bottom: var(--space-8);
  }

  .seo-content-extended__text {
    text-align: left;
    display: flex;
    flex-direction: column;
    gap: var(--space-5);
  }

  .seo-content-extended__text p {
    font-size: var(--text-base);
    color: var(--color-smoke-700);
    line-height: 1.9;
    margin: 0;
  }

  .seo-content-extended__text strong {
    color: var(--color-smoke-900);
    font-weight: 600;
  }

  .seo-content-extended__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-6);
  }

  .seo-content-extended__card {
    padding: var(--space-8);
    background: white;
    border-radius: var(--radius-2xl);
    border: 1px solid var(--color-smoke-100);
  }

  .seo-content-extended__card h3 {
    font-size: var(--text-lg);
    font-weight: 700;
    color: var(--color-smoke-900);
    margin-bottom: var(--space-4);
    padding-bottom: var(--space-3);
    border-bottom: 2px solid var(--color-fire-500);
  }

  .seo-content-extended__card p {
    font-size: var(--text-sm);
    color: var(--color-smoke-600);
    line-height: 1.8;
    margin: 0;
  }

  .seo-content-extended__card strong {
    color: var(--color-smoke-800);
  }

  /* ═══ Responsive ═══ */
  @media (max-width: 1024px) {
    .seo-content-extended__grid {
      gap: var(--space-5);
    }
  }

  @media (max-width: 768px) {
    .seo-content-extended {
      padding: var(--space-16) 0;
    }

    .seo-content-extended__grid {
      grid-template-columns: 1fr;
    }

    .seo-content-extended__card {
      padding: var(--space-6);
    }
  }

  @media (max-width: 480px) {
    .seo-content-extended__title {
      font-size: var(--text-xl);
    }

    .seo-content-extended__text p {
      font-size: var(--text-sm);
    }
  }
</style>
