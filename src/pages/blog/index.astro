---
/**
 * ─── Blog Index ───
 * Página principal del blog con listado de artículos.
 * URL: /blog
 */
import PageLayout from "@layouts/PageLayout.astro";
import Breadcrumb from "@components/Breadcrumb.astro";
import SectionHeader from "@components/SectionHeader.astro";
import CTABanner from "@components/CTABanner.astro";
import Pagination from "@components/Pagination.astro";
import BlogSearch from "@components/BlogSearch.astro";
import { cdnW } from "@utils/cdn";
import { getAllArticulos } from "@data/blog-articulos";

/* ── Configuración de paginación ── */
const ARTICLES_PER_PAGE = 6;
const currentPage = 1;

/* ── Obtener artículos paginados ── */
const allArticulos = getAllArticulos();
const totalPages = Math.ceil(allArticulos.length / ARTICLES_PER_PAGE);
const articulos = allArticulos.slice(0, ARTICLES_PER_PAGE);

/* ── Categorías con conteo dinámico ── */
const catsList = [
  { label: "Normativas", slug: "normativas" },
  { label: "Mantenimiento", slug: "mantenimiento" },
  { label: "Técnicas", slug: "tecnicas" },
  { label: "Industrial", slug: "industrial" },
  { label: "Forestales", slug: "forestales" },
  { label: "Equipo", slug: "equipo" },
];

const categorias = catsList.map((cat) => ({
  ...cat,
  count: allArticulos.filter((a) => a.categoria.toLowerCase() === cat.label.toLowerCase()).length,
}));

const breadcrumb = [
  { label: "Blog" },
];

const articulosCdn = articulos.map(a => ({ ...a, imagen: cdnW(a.imagen, 500) }));
---

<PageLayout
  title="Blog BOMBERO.MX — Artículos para Bomberos y Brigadas"
  description="Artículos técnicos sobre equipo para bomberos, normativas NFPA, técnicas de rescate, mantenimiento de EPP y más. Contenido profesional para cuerpos de bomberos y brigadas industriales."
  keywords={["blog bomberos", "artículos NFPA", "técnicas rescate", "mantenimiento EPP", "brigadas industriales"]}
  canonical="/blog"
>

  <Breadcrumb items={breadcrumb} />

  <!-- ═══════════════════════════════════════════════════════════════ -->
  <!-- HERO                                                             -->
  <!-- ═══════════════════════════════════════════════════════════════ -->
  <section class="blog-index-hero">
    <div class="blog-index-hero__bg">
      <div class="blog-index-hero__gradient"></div>
      <div class="blog-index-hero__grid"></div>
      <div class="blog-index-hero__glow blog-index-hero__glow--1"></div>
      <div class="blog-index-hero__glow blog-index-hero__glow--2"></div>
    </div>

    <div class="container hero__container">
      <div class="hero__content">
        <div class="hero__badge">
          <span class="hero__badge-dot"></span>
          Blog · Artículos · Guías Técnicas
        </div>
        <h1 class="hero__title">
          Blog
          <span class="hero__title-highlight">BOMBERO.MX</span>
        </h1>
        <p class="hero__subtitle">
          Artículos técnicos, guías de normativas, técnicas de rescate y todo lo que necesitas saber sobre equipo para bomberos y brigadas industriales.
        </p>
        <div class="hero__actions">
          <a href="#articulos" class="btn btn--primary btn--lg">
            <span>Ver artículos</span>
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
          <a href="/cotizar" class="btn btn--ghost btn--lg">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4M17 8l-5-5-5 5M12 3v12"/>
            </svg>
            <span>Solicitar cotización</span>
          </a>
        </div>
      </div>

      <div class="hero__seo">
        <div class="hero__seo-block">
          <h2 class="hero__seo-title">Contenido Técnico para Bomberos Profesionales</h2>
          <p class="hero__seo-text">
            En el <strong>Blog de BOMBERO.MX</strong> publicamos artículos técnicos sobre <strong>normativas NFPA</strong>, guías de mantenimiento de <strong>equipos SCBA</strong>, técnicas modernas de <strong>rescate vehicular</strong> y forestales. Contenido creado por especialistas para cuerpos de bomberos, protección civil y <strong>brigadas industriales</strong> en México.
          </p>
        </div>
        <div class="hero__seo-block">
          <h2 class="hero__seo-title">Guías de Selección y Uso de EPP</h2>
          <p class="hero__seo-text">
            Aprende a seleccionar el <strong>equipo de protección personal</strong> correcto según tu tipo de operación. Desde <strong>cascos estructurales NFPA 1971</strong> hasta <strong>trajes forestales NFPA 1977</strong>, nuestros artículos te ayudan a entender las certificaciones, requisitos de mantenimiento y mejores prácticas para cada pieza de tu equipamiento.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- ═══════════════════════════════════════════════════════════════ -->
  <!-- LAYOUT PRINCIPAL — ARTÍCULOS + SIDEBAR                          -->
  <!-- ═══════════════════════════════════════════════════════════════ -->
  <div class="blog-index-layout">
    <div class="container blog-index-layout__inner">

      <!-- ─── COLUMNA PRINCIPAL ─── -->
      <main class="blog-index-main">

        <SectionHeader
          label="Últimos Artículos"
          title="Contenido para Profesionales"
          description="Guías técnicas y artículos especializados para cuerpos de bomberos y brigadas industriales."
        >
          <p>Nuestro equipo de <strong>especialistas en protección contra incendios</strong> investiga y documenta las mejores prácticas para bomberos profesionales, incluyendo análisis de <strong>normativas NFPA</strong>, guías de mantenimiento de SCBA, y técnicas modernas de rescate.</p>
          <p>Cada artículo está diseñado para aportar valor real a <strong>estaciones de bomberos</strong>, <strong>brigadas industriales</strong> y equipos de protección civil que buscan mejorar sus protocolos y selección de equipo.</p>
        </SectionHeader>

        <div class="blog-grid" id="articulos">
          {articulosCdn.map((articulo) => (
            <article class="blog-card">
              <a href={`/blog/${articulo.slug}`} class="blog-card__link">
                <div class="blog-card__img-wrap">
                  <img
                    src={articulo.imagen}
                    alt={articulo.titulo}
                    loading="lazy"
                    width="500"
                    height="280"
                    class="blog-card__img"
                  />
                  <span class="blog-card__badge">{articulo.categoria}</span>
                </div>
                <div class="blog-card__body">
                  <h2 class="blog-card__title">{articulo.titulo}</h2>
                  <p class="blog-card__excerpt">{articulo.excerpt}</p>
                  <div class="blog-card__tags">
                    {articulo.tags.slice(0, 3).map((tag) => (
                      <span class="blog-card__tag">{tag}</span>
                    ))}
                  </div>
                  <span class="blog-card__anchor">
                    {articulo.anchorKeyword}
                    <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" aria-hidden="true">
                      <path d="M5 12h14M12 5l7 7-7 7"/>
                    </svg>
                  </span>
                </div>
              </a>
            </article>
          ))}
        </div>

        <!-- Paginación -->
        {totalPages > 1 && (
          <Pagination
            currentPage={currentPage}
            totalPages={totalPages}
            baseUrl="/blog"
          />
        )}

