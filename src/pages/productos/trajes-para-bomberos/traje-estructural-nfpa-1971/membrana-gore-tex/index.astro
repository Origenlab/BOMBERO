    max-width: 520px;
  }

  .hero__seo {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  .hero__seo-block {
    padding: var(--space-5);
    background: rgba(255,255,255,0.04);
    border: 1px solid rgba(255,255,255,0.08);
    border-radius: var(--radius-lg);
  }

  .hero__seo-title {
    font-size: var(--text-sm);
    font-weight: 700;
    color: #d1d5db;
    margin-bottom: var(--space-2);
    line-height: 1.4;
  }

  .hero__seo-text {
    font-size: var(--text-sm);
    color: #6b7280;
    line-height: 1.7;
  }

  .hero__seo-text strong { color: #9ca3af; font-weight: 600; }

  /* ═══════════════════════════════════════════════════════════════════════
     LAYOUT PRINCIPAL
     ═══════════════════════════════════════════════════════════════════════ */
  .prod-layout {
    background: var(--color-smoke-50, #f9fafb);
    padding: var(--space-12) 0 var(--space-16);
  }

  .prod-layout__inner {
    display: grid;
    grid-template-columns: 1fr 320px;
    gap: var(--space-8);
    align-items: start;
  }

  .prod-main {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  /* ═══════════════════════════════════════════════════════════════════════
     PROD-INTRO
     ═══════════════════════════════════════════════════════════════════════ */
  .prod-intro {
    background: #ffffff;
    border: 1px solid var(--color-smoke-200, #e5e7eb);
    border-radius: var(--radius-2xl, 16px);
    overflow: hidden;
  }

  .prod-intro__topbar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: var(--space-3);
    padding: var(--space-4) var(--space-6);
    background: var(--color-smoke-50, #f9fafb);
    border-bottom: 1px solid var(--color-smoke-200, #e5e7eb);
  }

  .prod-intro__category {
    font-size: var(--text-xs);
    font-weight: 700;
    color: var(--color-fire-700, #b91c1c);
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }

  .prod-intro__topbar-badges {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    flex-wrap: wrap;
  }

  .pcert {
    display: inline-flex;
    align-items: center;
    padding: 3px 10px;
    border-radius: 100px;
    font-size: 11px;
    font-weight: 700;
    letter-spacing: 0.04em;
  }

  .pcert--nfpa  { background: rgba(220,38,38,0.10);  color: #991b1b; border: 1px solid rgba(220,38,38,0.2);  }
  .pcert--tpp   { background: rgba(234,88,12,0.10);  color: #9a3412; border: 1px solid rgba(234,88,12,0.2);  }
  .pcert--solas { background: rgba(37,99,235,0.10);  color: #1e3a8a; border: 1px solid rgba(37,99,235,0.2);  }
  .pcert--astm  { background: rgba(16,185,129,0.10); color: #065f46; border: 1px solid rgba(16,185,129,0.2); }

  .prod-intro__sold {
    display: inline-flex;
    align-items: center;
    padding: 3px 10px;
    border-radius: 100px;
    font-size: 11px;
    font-weight: 800;
    letter-spacing: 0.06em;
    background: var(--color-fire-600, #dc2626);
    color: #ffffff;
  }

  .prod-intro__body {
    display: grid;
    grid-template-columns: 1fr 300px;
    gap: var(--space-8);
    padding: var(--space-7);
  }

  .prod-intro__title {
    font-size: clamp(1.25rem, 2.5vw, 1.6rem);
    font-weight: 900;
    color: var(--color-smoke-900, #111827);
    line-height: 1.2;
    margin-bottom: var(--space-4);
    letter-spacing: -0.01em;
  }

  .prod-intro__title-sub {
    display: block;
    font-size: var(--text-base);
    font-weight: 600;
    color: var(--color-fire-600, #dc2626);
    margin-top: var(--space-2);
  }

  .prod-intro__desc {
    font-size: var(--text-sm);
    color: var(--color-smoke-600, #4b5563);
    line-height: 1.7;
    margin-bottom: var(--space-5);
  }

  .prod-intro__features {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .prod-intro__features li {
    display: flex;
    align-items: flex-start;
    gap: var(--space-2);
    font-size: var(--text-sm);
    color: var(--color-smoke-700, #374151);
    line-height: 1.5;
  }

  .prod-intro__check {
    display: inline-block;
    width: 18px;
    height: 18px;
    min-width: 18px;
    background: var(--color-success-100, #dcfce7);
    border-radius: 50%;
    position: relative;
    margin-top: 1px;
  }

  .prod-intro__check::after {
    content: "";
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -60%) rotate(45deg);
    width: 4px;
    height: 7px;
    border-right: 2px solid #16a34a;
    border-bottom: 2px solid #16a34a;
  }

  .prod-intro__right {
    display: flex;
    flex-direction: column;
    gap: var(--space-5);
  }

  .prod-intro__app {
    background: var(--color-smoke-50, #f9fafb);
    border: 1px solid var(--color-smoke-200, #e5e7eb);
    border-radius: var(--radius-xl, 12px);
    padding: var(--space-4);
  }

  .prod-intro__app-label {
    font-size: var(--text-xs);
    font-weight: 700;
    color: var(--color-smoke-500, #6b7280);
    text-transform: uppercase;
    letter-spacing: 0.08em;
    margin-bottom: var(--space-3);
  }

  .prod-intro__app-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
  }

  .prod-intro__app-tags span {
    padding: var(--space-1) var(--space-3);
    background: #ffffff;
    border: 1px solid var(--color-smoke-200, #e5e7eb);
    border-radius: 100px;
    font-size: 12px;
    font-weight: 500;
    color: var(--color-smoke-700, #374151);
  }

  .prod-intro__actions { margin-top: auto; }

  /* ═══════════════════════════════════════════════════════════════════════
     GALERÍA
     ═══════════════════════════════════════════════════════════════════════ */
  .prod-gallery {
    border-radius: var(--radius-2xl, 16px);
    overflow: hidden;
  }

  .prod-gallery__track {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-3);
  }

  .prod-gallery__item {
    margin: 0;
    aspect-ratio: 3/4;
    overflow: hidden;
    border-radius: var(--radius-xl, 12px);
    background: var(--color-smoke-100, #f3f4f6);
  }

  .prod-gallery__item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* ═══════════════════════════════════════════════════════════════════════
     SECCIONES DE CONTENIDO
     ═══════════════════════════════════════════════════════════════════════ */
  .prod-section {
    background: #ffffff;
    border: 1px solid var(--color-smoke-200, #e5e7eb);
    border-radius: var(--radius-2xl, 16px);
    padding: var(--space-8);
  }

  .prod-section--light {
    background: var(--color-smoke-50, #f9fafb);
  }

  .prod-section__head {
    margin-bottom: var(--space-7);
    padding-bottom: var(--space-6);
    border-bottom: 1px solid var(--color-smoke-100, #f3f4f6);
  }

  .prod-section__eyebrow {
    display: inline-block;
    font-size: var(--text-xs);
    font-weight: 700;
    color: var(--color-fire-600, #dc2626);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: var(--space-2);
  }

  .prod-section__title {
    font-size: clamp(1.25rem, 2.5vw, 1.75rem);
    font-weight: 900;
    color: var(--color-smoke-900, #111827);
    letter-spacing: -0.01em;
    margin-bottom: var(--space-3);
  }

  .prod-section__desc {
    font-size: var(--text-sm);
    color: var(--color-smoke-500, #6b7280);
    line-height: 1.7;
    max-width: 680px;
  }

  /* ═══════════════════════════════════════════════════════════════════════
     CAPA CARDS
     ═══════════════════════════════════════════════════════════════════════ */
  .capas__grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: var(--space-4);
  }

  .capa-card {
    background: #ffffff;
    border: 1px solid var(--color-smoke-200, #e5e7eb);
    border-radius: var(--radius-xl, 12px);
    overflow: hidden;
  }

  .capa-card__head {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    padding: var(--space-4) var(--space-5);
    background: var(--color-smoke-50, #f9fafb);
    border-bottom: 1px solid var(--color-smoke-200, #e5e7eb);
  }

  .capa-card__num {
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 46px;
    height: 46px;
    border-radius: 50%;
    font-size: var(--text-lg);
    font-weight: 900;
    color: #ffffff;
    letter-spacing: -0.02em;
    flex-shrink: 0;
  }

  .capa-card--ember .capa-card__num { background: var(--color-fire-700, #b91c1c); }
  .capa-card--smoke .capa-card__num { background: var(--color-smoke-600, #4b5563); }
  .capa-card--fire  .capa-card__num { background: var(--color-ember-700, #c2410c); }

  .capa-card__title {
    font-size: var(--text-sm);
    font-weight: 800;
    color: var(--color-smoke-900, #111827);
    line-height: 1.3;
  }

  .capa-card__body {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0;
  }

  .capa-card__desc {
    padding: var(--space-4) var(--space-5);
    font-size: var(--text-sm);
    color: var(--color-smoke-600, #4b5563);
    line-height: 1.7;
    border-right: 1px solid var(--color-smoke-100, #f3f4f6);
  }

  .capa-card__specs {
    list-style: none;
    padding: var(--space-3);
    margin: 0;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0;
  }

  .capa-card__spec {
    padding: var(--space-2) var(--space-3);
    display: flex;
    flex-direction: column;
    gap: 2px;
    border-right: 1px solid var(--color-smoke-100, #f3f4f6);
    border-bottom: 1px solid var(--color-smoke-100, #f3f4f6);
  }

  .capa-card__spec:nth-child(even)  { border-right: none; }
  .capa-card__spec:nth-last-child(-n+2) { border-bottom: none; }

  .capa-card__spec-label {
    font-size: 11px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-smoke-400, #9ca3af);
  }

  .capa-card__spec-val {
    font-size: var(--text-sm);
    font-weight: 700;
    color: var(--color-smoke-900, #111827);
    line-height: 1.3;
  }

  /* ═══════════════════════════════════════════════════════════════════════
     TABLA DE ESPECIFICACIONES
     ═══════════════════════════════════════════════════════════════════════ */
  .specs__table-wrap {
    overflow-x: auto;
    border-radius: var(--radius-xl, 12px);
    border: 1px solid var(--color-smoke-200, #e5e7eb);
  }

  .specs__table {
    width: 100%;
    border-collapse: collapse;
    font-size: var(--text-sm);
  }

  .specs__table thead tr {
    background: var(--color-smoke-50, #f9fafb);
    border-bottom: 2px solid var(--color-smoke-200, #e5e7eb);
  }

  .specs__table th {
    padding: var(--space-3) var(--space-5);
    text-align: left;
    font-size: var(--text-xs);
    font-weight: 800;
    color: var(--color-smoke-500, #6b7280);
    text-transform: uppercase;
    letter-spacing: 0.08em;
    white-space: nowrap;
  }

  .specs__table tbody tr {
    border-bottom: 1px solid var(--color-smoke-100, #f3f4f6);
    transition: background 0.1s;
  }

  .specs__table tbody tr:last-child { border-bottom: none; }
  .specs__table tbody tr:hover { background: var(--color-smoke-50, #f9fafb); }

  .specs__cat {
    padding: var(--space-3) var(--space-5);
    width: 140px;
    vertical-align: top;
  }

  .specs__cat-badge {
    display: inline-flex;
    padding: 2px 10px;
    border-radius: 100px;
    font-size: 11px;
    font-weight: 700;
    white-space: nowrap;
  }

  .specs__cat-badge--construccion  { background: rgba(51,65,85,0.08);   color: #1e293b; }
  .specs__cat-badge--proteccion    { background: rgba(220,38,38,0.08);  color: #991b1b; }
  .specs__cat-badge--visibilidad   { background: rgba(234,88,12,0.08);  color: #9a3412; }
  .specs__cat-badge--ergonomia     { background: rgba(22,163,74,0.08);  color: #14532d; }
  .specs__cat-badge--certificacion { background: rgba(124,58,237,0.08); color: #4c1d95; }

  .specs__label {
    padding: var(--space-3) var(--space-5);
    color: var(--color-smoke-700, #374151);
    font-weight: 500;
  }

  .specs__val {
    padding: var(--space-3) var(--space-5);
    color: var(--color-smoke-900, #111827);
    font-weight: 700;
  }

  .specs__note {
    margin-top: var(--space-3);
    font-size: var(--text-xs);
    color: var(--color-smoke-400, #9ca3af);
    font-style: italic;
  }

  /* ═══════════════════════════════════════════════════════════════════════
     APLICACIONES
     ═══════════════════════════════════════════════════════════════════════ */
  .aplic__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-4);
  }

  .aplic-card {
    background: #ffffff;
    border: 1px solid var(--color-smoke-200, #e5e7eb);
    border-radius: var(--radius-xl, 12px);
    padding: var(--space-7);
  }

  .aplic-card__head {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    margin-bottom: var(--space-4);
  }

  .aplic-card__num {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 36px;
    height: 36px;
    background: rgba(220, 38, 38, 0.1);
    border-radius: var(--radius-lg, 8px);
    font-size: var(--text-sm);
    font-weight: 900;
    color: var(--color-fire-700, #b91c1c);
    flex-shrink: 0;
  }

  .aplic-card__title {
    font-size: var(--text-base);
    font-weight: 800;
    color: var(--color-smoke-900, #111827);
    line-height: 1.3;
  }

  .aplic-card__desc {
    font-size: var(--text-sm);
    color: var(--color-smoke-600, #4b5563);
    line-height: 1.7;
    padding-top: var(--space-4);
    border-top: 1px solid var(--color-smoke-100, #f3f4f6);
  }

  /* ═══════════════════════════════════════════════════════════════════════
     CERTIFICACIONES — SECCIÓN OSCURA
     ═══════════════════════════════════════════════════════════════════════ */
  .certs-dark {
    background: var(--color-smoke-950, #030712);
    border-radius: var(--radius-2xl, 16px);
    padding: var(--space-10);
    border: 1px solid rgba(255,255,255,0.06);
  }

  .certs-dark__head {
    text-align: center;
    margin-bottom: var(--space-8);
  }

  .certs-dark__eyebrow {
    display: inline-block;
    font-size: var(--text-xs);
    font-weight: 700;
    color: #ef4444;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: var(--space-3);
  }

  .certs-dark__title {
    font-size: clamp(1.25rem, 2.5vw, 1.75rem);
    font-weight: 900;
    color: #ffffff;
    letter-spacing: -0.01em;
    margin-bottom: var(--space-3);
  }

  .certs-dark__desc {
    font-size: var(--text-sm);
    color: #6b7280;
    line-height: 1.7;
    max-width: 560px;
    margin: 0 auto;
  }

  .certs-dark__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-3);
  }

  .cert-item {
    padding: var(--space-5);
    background: rgba(255,255,255,0.04);
    border: 1px solid rgba(255,255,255,0.08);
    border-radius: var(--radius-xl, 12px);
    transition: background 0.2s, border-color 0.2s;
  }

  .cert-item:hover {
    background: rgba(255,255,255,0.07);
    border-color: rgba(220,38,38,0.3);
  }

  .cert-item__code {
    font-size: var(--text-xl);
    font-weight: 900;
    color: #ef4444;
    letter-spacing: -0.02em;
    margin-bottom: var(--space-2);
  }

  .cert-item__desc {
    font-size: var(--text-sm);
    color: #6b7280;
    line-height: 1.5;
  }

  .cert-item--cta {
    background: rgba(220,38,38,0.1);
    border-color: rgba(220,38,38,0.25);
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: var(--space-3);
  }

  .cert-item__cta-label {
    font-size: var(--text-sm);
    font-weight: 700;
    color: #fca5a5;
  }

  .cert-item__cta-btn {
    display: inline-flex;
    align-items: center;
    padding: var(--space-2) var(--space-5);
    background: #dc2626;
    color: #ffffff;
    font-size: var(--text-sm);
    font-weight: 700;
    text-decoration: none;
    border-radius: var(--radius-lg, 8px);
    transition: background 0.2s;
  }

  .cert-item__cta-btn:hover { background: #b91c1c; }

  /* ═══════════════════════════════════════════════════════════════════════
     SIDEBAR
     ═══════════════════════════════════════════════════════════════════════ */
  .prod-sidebar {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    position: sticky;
    top: calc(var(--header-height, 80px) + var(--space-4));
  }

  .sb-card {
    background: #ffffff;
    border: 1px solid var(--color-smoke-200, #e5e7eb);
    border-radius: var(--radius-xl, 12px);
    padding: var(--space-5);
  }

  .sb-card--cta {
    background: linear-gradient(135deg, #7f1d1d 0%, #991b1b 50%, #b91c1c 100%);
    border-color: transparent;
    color: #ffffff;
  }

  .sb-card__title {
    font-size: var(--text-base);
    font-weight: 800;
    color: #ffffff;
    margin-bottom: var(--space-2);
  }

  .sb-card__title--dark {
    color: var(--color-smoke-900, #111827);
    display: flex;
    align-items: center;
    gap: var(--space-2);
    padding-bottom: var(--space-3);
    border-bottom: 1px solid var(--color-smoke-100, #f3f4f6);
    margin-bottom: var(--space-3);
  }

  .sb-card__title--dark svg { color: var(--color-fire-600, #dc2626); flex-shrink: 0; }

  .sb-card__text {
    font-size: var(--text-xs);
    color: rgba(255,255,255,0.75);
    line-height: 1.6;
    margin-bottom: var(--space-4);
  }

  .sb-card__subtext {
    font-size: var(--text-xs);
    color: var(--color-smoke-500, #6b7280);
    margin-top: calc(var(--space-3) * -1);
    margin-bottom: var(--space-3);
  }

  .sb-cta-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
    padding: var(--space-3) var(--space-4);
    background: #ffffff;
    color: #991b1b;
    font-size: var(--text-sm);
    font-weight: 800;
    text-decoration: none;
    border-radius: var(--radius-lg, 8px);
    margin-bottom: var(--space-3);
    transition: background 0.15s;
  }

  .sb-cta-btn:hover { background: #fef2f2; }

  .sb-card__contacts {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-2);
  }

  .sb-contact {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-1);
    padding: var(--space-2);
    background: rgba(255,255,255,0.15);
    border-radius: var(--radius-lg, 8px);
    font-size: var(--text-xs);
    font-weight: 700;
    color: #ffffff;
    text-decoration: none;
    transition: background 0.15s;
  }

  .sb-contact:hover { background: rgba(255,255,255,0.25); }
  .sb-contact--wa   { background: rgba(37,211,102,0.3); }
  .sb-contact--wa:hover { background: rgba(37,211,102,0.45); }

  .sb-specs { list-style: none; padding: 0; margin: 0; }

  .sb-specs__row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--space-2) 0;
    border-bottom: 1px solid var(--color-smoke-100, #f3f4f6);
    gap: var(--space-2);
  }

  .sb-specs__row:last-child { border-bottom: none; }

  .sb-specs__label {
