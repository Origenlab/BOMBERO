---
import PageLayout from "@layouts/PageLayout.astro";

const categorias = [
  { slug: "epp-bomberos", nombre: "EPP Bomberos" },
  { slug: "trajes", nombre: "Trajes" },
  { slug: "cascos", nombre: "Cascos" },
  { slug: "guantes-botas", nombre: "Guantes y Botas" },
  { slug: "botas", nombre: "Botas" },
  { slug: "guantes", nombre: "Guantes" },
  { slug: "capuchas", nombre: "Capuchas" },
  { slug: "gafas", nombre: "Gafas" },
  { slug: "scba", nombre: "SCBA" },
  { slug: "equipo-contra-incendios", nombre: "Equipo Contra Incendios" },
  { slug: "herramientas-rescate", nombre: "Herramientas de Rescate" },
  { slug: "tecnologia", nombre: "Tecnología" },
  { slug: "extintores", nombre: "Extintores" },
];
---

<PageLayout
  title="Catálogo de Productos para Bomberos | BOMBERO.MX"
  description="Catálogo en actualización de equipamiento para bomberos y brigadas industriales en México."
  noindex={true}
  canonical="https://bombero.mx/productos"
>
  <section class="section">
    <div class="container container--narrow">
      <h1>Catálogo de Productos</h1>
      <p>
        Estamos reorganizando el catálogo por categorías para mejorar navegación,
        cobertura técnica y fichas comparables por aplicación.
      </p>

      <ul class="products-list">
        {categorias.map((item) => (
          <li>
            <a href={`/productos/${item.slug}`}>{item.nombre}</a>
          </li>
        ))}
      </ul>
    </div>
  </section>
</PageLayout>

<style>
  .products-list {
    margin-top: var(--space-6);
    padding-left: var(--space-5);
    columns: 2;
    gap: var(--space-8);
  }

  .products-list li {
    margin-bottom: var(--space-2);
  }

  .products-list a {
    color: var(--color-fire-700);
    text-decoration: none;
  }

  @media (max-width: 768px) {
    .products-list {
      columns: 1;
    }
  }
</style>
