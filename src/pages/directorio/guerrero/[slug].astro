---
/**
 * ╔═══════════════════════════════════════════════════════════════════════════╗
 * ║  PÁGINA DINÁMICA DE ESTACIÓN DE BOMBEROS - GUERRERO                      ║
 * ║  Genera 16 páginas individuales con SEO optimizado                       ║
 * ╠═══════════════════════════════════════════════════════════════════════════╣
 * ║  Zonas: Acapulco, Costa Grande, Centro, Norte, Costa Chica, Montaña      ║
 * ║  Especialidades: Rescate Acuático, Huracanes, ARFF, Turismo, Patrimonio  ║
 * ╚═══════════════════════════════════════════════════════════════════════════╝
 */

import PageLayout from "@layouts/PageLayout.astro";
import {
  estacionesGuerrero,
  generarMetaSEO,
  getContextoZona,
  GUERRERO_SEO,
} from "@data/estaciones-guerrero";

export function getStaticPaths() {
  return estacionesGuerrero.map(estacion => ({
    params: { slug: estacion.slug },
    props: { estacion }
  }));
}

const { estacion } = Astro.props;
const metaSEO = generarMetaSEO(estacion);
const contextoZona = getContextoZona(estacion.ciudad);

// Determinar tipo de zona para contexto SEO enriquecido
const esAcapulco = estacion.ciudad === 'Acapulco de Juárez';
const esZihuatanejo = estacion.ciudad === 'Zihuatanejo de Azueta';
const esIxtapa = estacion.ciudad === 'Ixtapa';
const esChilpancingo = estacion.ciudad === 'Chilpancingo de los Bravo';
const esTaxco = estacion.ciudad === 'Taxco de Alarcón';
const esIguala = estacion.ciudad === 'Iguala de la Independencia';
const esTlapa = estacion.ciudad === 'Tlapa de Comonfort';
const esAltamirano = estacion.ciudad === 'Ciudad Altamirano';
const esCostaChica = ['Ometepec', 'San Marcos'].includes(estacion.ciudad);
const esAeropuerto = estacion.slug.includes('aeropuerto');

// Fecha de actualización
const fechaActualizacion = new Date().toISOString().split('T')[0];
---

<PageLayout
  title={metaSEO.title}
  description={metaSEO.description}
  keywords={metaSEO.keywords.join(', ')}
  canonical={metaSEO.canonical}
>
  <!-- Schema.org FireStation -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "FireStation",
    "name": estacion.nombre,
    "description": estacion.descripcion,
    "address": {
      "@type": "PostalAddress",
      "streetAddress": estacion.direccion,
      "addressLocality": estacion.ciudad,
      "addressRegion": "Guerrero",
      "postalCode": estacion.codigoPostal,
      "addressCountry": "MX"
    },
    "telephone": estacion.telefono,
    "email": estacion.email,
    "openingHours": "Mo-Su 00:00-23:59",
    "geo": {
      "@type": "GeoCoordinates",
      "latitude": estacion.coordenadas.lat,
      "longitude": estacion.coordenadas.lng
    },
    "areaServed": {
      "@type": "City",
      "name": estacion.ciudad
    },
    "numberOfEmployees": estacion.personal,
    "url": metaSEO.canonical,
    "sameAs": estacion.redes ? Object.values(estacion.redes) : []
  })} />

  <!-- Schema.org BreadcrumbList -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      { "@type": "ListItem", "position": 1, "name": "Inicio", "item": "https://bombero.mx" },
      { "@type": "ListItem", "position": 2, "name": "Directorio", "item": "https://bombero.mx/directorio" },
      { "@type": "ListItem", "position": 3, "name": "Guerrero", "item": "https://bombero.mx/directorio/guerrero" },
      { "@type": "ListItem", "position": 4, "name": estacion.nombre, "item": metaSEO.canonical }
    ]
  })} />

  <div class="gro-station">
    <!-- ═══════════════════════════════════════════════════════════════════
         HERO SECTION
         ═══════════════════════════════════════════════════════════════════ -->
    <section class="gro-station-hero">
      <div class="gro-station-hero__container">
        <!-- Badges -->
        <div class="gro-station-hero__badges">
          <span class="gro-station-hero__badge gro-station-hero__badge--state">GRO</span>
          <span class="gro-station-hero__badge gro-station-hero__badge--zone">{contextoZona.tipo}</span>
          {esAcapulco && <span class="gro-station-hero__badge gro-station-hero__badge--special">Destino Turístico #1</span>}
          {(esZihuatanejo || esIxtapa) && <span class="gro-station-hero__badge gro-station-hero__badge--special">Costa Grande</span>}
          {esTaxco && <span class="gro-station-hero__badge gro-station-hero__badge--special">Capital de la Plata</span>}
          {esIguala && <span class="gro-station-hero__badge gro-station-hero__badge--special">Cuna de la Bandera</span>}
          {esChilpancingo && <span class="gro-station-hero__badge gro-station-hero__badge--special">Capital del Estado</span>}
          {esTlapa && <span class="gro-station-hero__badge gro-station-hero__badge--special">Región Montaña</span>}
          {esAeropuerto && <span class="gro-station-hero__badge gro-station-hero__badge--special">ARFF Aeroportuario</span>}
        </div>

        <h1 class="gro-station-hero__title">{estacion.nombre}</h1>

        <p class="gro-station-hero__location">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="20" height="20">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          {estacion.ciudad}, Guerrero, México
        </p>

        <!-- Estadísticas rápidas -->
        <div class="gro-station-hero__stats">
          <div class="gro-station-hero__stat">
            <span class="gro-station-hero__stat-value">{estacion.personal}</span>
            <span class="gro-station-hero__stat-label">Bomberos</span>
          </div>
          <div class="gro-station-hero__stat">
            <span class="gro-station-hero__stat-value">{estacion.unidades}</span>
            <span class="gro-station-hero__stat-label">Unidades</span>
          </div>
          <div class="gro-station-hero__stat">
            <span class="gro-station-hero__stat-value">24/7</span>
            <span class="gro-station-hero__stat-label">Servicio</span>
          </div>
        </div>
      </div>
    </section>

    <!-- ═══════════════════════════════════════════════════════════════════
         BANNER DE EMERGENCIA
         ═══════════════════════════════════════════════════════════════════ -->
    <section class="gro-station-emergency">
      <div class="gro-station-emergency__container">
        <div class="gro-station-emergency__phone">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="24" height="24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          <div>
            <span class="gro-station-emergency__label">Teléfono de emergencia</span>
            <a href={`tel:${estacion.telefono.replace(/[^\d+]/g, '')}`} class="gro-station-emergency__number">
              {estacion.telefono}
            </a>
          </div>
        </div>
        <div class="gro-station-emergency__national">
          <span>Emergencias Nacional:</span>
          <a href="tel:911"><strong>911</strong></a>
        </div>
      </div>
    </section>

    <!-- ═══════════════════════════════════════════════════════════════════
         CONTENIDO PRINCIPAL
         ═══════════════════════════════════════════════════════════════════ -->
    <div class="gro-station-content">
      <div class="gro-station-content__container">

        <!-- Columna Principal -->
        <div class="gro-station-content__main">

          <!-- Descripción y Contexto -->
          <section class="gro-station-section">
            <h2 class="gro-station-section__title">Acerca de esta Estación</h2>
            <div class="gro-station-section__content">
              <p>{estacion.descripcion}</p>

              {/* Contexto específico por zona */}
              {esAcapulco && !esAeropuerto && (
                <div class="gro-station-context gro-station-context--acapulco">
                  <h3>Acapulco - Principal Destino Turístico de Playa</h3>
                  <p>
                    <strong>Acapulco</strong> es el destino de playa más icónico de México con más de
                    <strong>800,000 habitantes</strong> y <strong>12+ millones de visitantes anuales</strong>.
                    La bahía de Acapulco, los famosos <strong>clavadistas de La Quebrada</strong>, la
                    Zona Dorada y Acapulco Diamante requieren atención especializada. El <strong>Huracán
                    Otis (2023)</strong>, categoría 5, devastó la ciudad con vientos de 270 km/h,
                    recordando la importancia crítica de bomberos preparados para desastres.
                  </p>
                </div>
              )}

              {esAeropuerto && (
                <div class="gro-station-context gro-station-context--aeropuerto">
                  <h3>Servicio ARFF - Rescate y Extinción de Incendios en Aeronaves</h3>
                  <p>
                    Esta estación cuenta con <strong>certificación ARFF</strong> (Aircraft Rescue and
                    Fire Fighting) para el <strong>Aeropuerto Internacional General Juan N. Álvarez</strong>
                    de Acapulco. Con más de <strong>1.2 millones de pasajeros anuales</strong>, el aeropuerto
                    requiere personal especializado en emergencias aeronáuticas, manejo de combustible
                    Jet-A, evacuación de aeronaves y uso de agentes extintores especiales. Tiempo de
                    respuesta de <strong>3 minutos</strong> a cualquier punto de las pistas.
                  </p>
                </div>
              )}

              {esZihuatanejo && (
                <div class="gro-station-context gro-station-context--zihuatanejo">
                  <h3>Zihuatanejo - Pueblo Pesquero Tradicional</h3>
                  <p>
                    <strong>Zihuatanejo</strong> conserva su encanto de pueblo pesquero tradicional
                    mientras se ha convertido en un destino turístico boutique de clase mundial. La
                    <strong>bahía de Zihuatanejo</strong> con playas como La Ropa y Las Gatas atrae
                    turismo internacional. Los bomberos tienen especialización en <strong>rescate
                    acuático</strong>, emergencias en el muelle pesquero y coordinación con pescadores
                    locales para búsqueda y rescate en mar abierto.
                  </p>
                </div>
              )}

              {esIxtapa && (
                <div class="gro-station-context gro-station-context--ixtapa">
                  <h3>Ixtapa - Desarrollo Turístico de Clase Mundial</h3>
                  <p>
                    <strong>Ixtapa</strong> es un desarrollo turístico planificado con <strong>resorts
                    todo incluido</strong>, campos de golf de campeonato y <strong>Marina Ixtapa</strong>.
                    A diferencia del tradicional Zihuatanejo, Ixtapa ofrece turismo de gran escala con
                    alta ocupación. El personal está capacitado en <strong>atención bilingüe</strong>
                    (español-inglés), emergencias en hoteles de gran capacidad y rescate acuático en
                    <strong>Playa El Palmar</strong> e <strong>Isla Ixtapa</strong>.
                  </p>
                </div>
              )}

              {esChilpancingo && (
                <div class="gro-station-context gro-station-context--chilpancingo">
                  <h3>Capital del Estado - Brecha de Guerrero</h3>
                  <p>
                    <strong>Chilpancingo</strong> es la capital del estado con más de <strong>280,000
                    habitantes</strong>. Centro de coordinación estatal para emergencias mayores.
                    Ubicada sobre la <strong>Brecha de Guerrero</strong>, una de las zonas sísmicas
                    más activas del mundo con potencial de sismos superiores a <strong>magnitud 8.0</strong>.
                    Personal especializado en <strong>respuesta sísmica USAR</strong>, evaluación de
                    daños estructurales y búsqueda y rescate en edificios colapsados.
                  </p>
                </div>
              )}

              {esTaxco && (
                <div class="gro-station-context gro-station-context--taxco">
                  <h3>Pueblo Mágico - Capital Mundial de la Plata</h3>
                  <p>
                    <strong>Taxco de Alarcón</strong> es reconocido como Pueblo Mágico y la
                    <strong>Capital Mundial de la Plata</strong> con más de <strong>1,200 talleres
                    de joyería artesanal</strong>. Su arquitectura colonial con calles empedradas
                    estrechas, la icónica <strong>iglesia de Santa Prisca</strong> y el teleférico
                    de Monte Taxco requieren técnicas especializadas. Los bomberos atienden
                    emergencias en talleres de platería con sopletes, emergencias en callejones
                    donde no entran vehículos grandes y protección del patrimonio histórico.
                  </p>
                </div>
              )}

              {esIguala && (
                <div class="gro-station-context gro-station-context--iguala">
                  <h3>Iguala - Cuna de la Bandera de México</h3>
                  <p>
                    <strong>Iguala de la Independencia</strong> es la ciudad donde se creó la
                    <strong>Bandera de México</strong> en 1821. Tercera ciudad más poblada de
                    Guerrero con aproximadamente <strong>150,000 habitantes</strong>. Centro
                    comercial e industrial del norte del estado. Los bomberos proporcionan cobertura
                    a la zona industrial, comercio y la carretera federal hacia Taxco y Ciudad de México.
                  </p>
                </div>
              )}

              {esTlapa && (
                <div class="gro-station-context gro-station-context--tlapa">
                  <h3>Región Montaña - Comunidades Indígenas</h3>
                  <p>
                    <strong>Tlapa de Comonfort</strong> es el centro de la <strong>Región Montaña</strong>
                    de Guerrero con importante población indígena <strong>Nahua, Mixteca y Tlapaneca</strong>.
                    Zona de alta marginación con comunidades dispersas en la <strong>Sierra Madre del Sur</strong>.
                    El personal está capacitado en atención culturalmente apropiada, rescate en terreno
                    montañoso de difícil acceso, respuesta a <strong>deslaves</strong> en temporada de
                    lluvias e <strong>incendios forestales</strong> en la sierra.
                  </p>
                </div>
              )}

              {esAltamirano && (
                <div class="gro-station-context gro-station-context--altamirano">
                  <h3>Tierra Caliente - Zona Agrícola</h3>
                  <p>
                    <strong>Ciudad Altamirano</strong> es el centro de la región <strong>Tierra
                    Caliente</strong> en el límite con Michoacán. Zona agrícola con clima cálido
                    extremo que supera los <strong>40°C en verano</strong>. El personal está
                    capacitado en emergencias por <strong>golpes de calor</strong>, incendios en
                    pastizales y cultivos, y rescate vehicular en la carretera hacia Michoacán y el Bajío.
                  </p>
                </div>
              )}

              {esCostaChica && (
                <div class="gro-station-context gro-station-context--costa-chica">
                  <h3>Costa Chica - Comunidades Afromexicanas</h3>
                  <p>
                    La <strong>Costa Chica</strong> de Guerrero alberga una importante población
                    <strong>afromexicana</strong> con rica cultura y tradiciones. Zona agrícola
                    con producción de <strong>coco, mango y limón</strong>. La Carretera Federal
                    200 (Costera del Pacífico) conecta con Oaxaca. Personal especializado en
                    emergencias por <strong>huracanes e inundaciones</strong> durante la temporada
                    de lluvias y ciclones tropicales.
                  </p>
                </div>
              )}
            </div>
          </section>

          <!-- Servicios -->
          <section class="gro-station-section">
            <h2 class="gro-station-section__title">Servicios de Emergencia</h2>
            <ul class="gro-station-services">
              {estacion.servicios.map(servicio => (
                <li class="gro-station-services__item">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="20" height="20">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span>{servicio}</span>
                </li>
              ))}
            </ul>
          </section>

          <!-- Equipamiento -->
          {estacion.equipamiento && estacion.equipamiento.length > 0 && (
            <section class="gro-station-section">
              <h2 class="gro-station-section__title">Equipamiento y Unidades</h2>
              <div class="gro-station-equipment">
                {estacion.equipamiento.map(equipo => (
                  <div class="gro-station-equipment__item">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="18" height="18">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    <span>{equipo}</span>
                  </div>
                ))}
              </div>
            </section>
          )}

          <!-- Mapa -->
          <section class="gro-station-section">
            <h2 class="gro-station-section__title">Ubicación</h2>
            <div class="gro-station-map">
              <div class="gro-station-map__placeholder">
                <p><strong>Dirección:</strong> {estacion.direccion}</p>
                <p><strong>Código Postal:</strong> {estacion.codigoPostal}</p>
                <p><strong>Coordenadas:</strong> {estacion.coordenadas.lat}, {estacion.coordenadas.lng}</p>
                <a
                  href={`https://www.google.com/maps/search/?api=1&query=${estacion.coordenadas.lat},${estacion.coordenadas.lng}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="gro-station-map__link"
                >
                  Ver en Google Maps
                </a>
              </div>
            </div>
          </section>
        </div>

        <!-- Sidebar -->
        <aside class="gro-station-sidebar">

          <!-- Información de Contacto -->
          <div class="gro-station-card gro-station-card--contact">
            <h3 class="gro-station-card__title">Información de Contacto</h3>
            <ul class="gro-station-card__list">
              <li>
                <strong>Teléfono:</strong>
                <a href={`tel:${estacion.telefono.replace(/[^\d+]/g, '')}`}>{estacion.telefono}</a>
              </li>
              {estacion.email && (
                <li>
                  <strong>Email:</strong>
                  <a href={`mailto:${estacion.email}`}>{estacion.email}</a>
                </li>
              )}
              <li>
                <strong>Horario:</strong>
                <span>{estacion.horario}</span>
              </li>
              <li>
                <strong>Dirección:</strong>
                <span>{estacion.direccion}</span>
              </li>
              <li>
                <strong>C.P.:</strong>
                <span>{estacion.codigoPostal}</span>
              </li>
            </ul>
          </div>

          <!-- Estadísticas -->
          <div class="gro-station-card">
            <h3 class="gro-station-card__title">Datos de la Estación</h3>
            <ul class="gro-station-card__list">
              <li>
                <strong>Personal:</strong>
                <span>{estacion.personal} bomberos</span>
              </li>
              <li>
                <strong>Unidades:</strong>
                <span>{estacion.unidades} vehículos</span>
              </li>
              {estacion.fechaFundacion && (
                <li>
                  <strong>Fundación:</strong>
                  <span>{estacion.fechaFundacion}</span>
                </li>
              )}
              <li>
                <strong>Zona:</strong>
                <span>{contextoZona.tipo}</span>
              </li>
              <li>
                <strong>Actualizado:</strong>
                <span>{fechaActualizacion}</span>
              </li>
            </ul>
          </div>

          <!-- Teléfonos Regionales -->
          <div class="gro-station-card gro-station-card--phones">
            <h3 class="gro-station-card__title">Emergencias Guerrero</h3>
            <ul class="gro-station-card__phones">
              <li>
                <span>Emergencias Nacional</span>
                <a href="tel:911">911</a>
              </li>
              <li>
                <span>Bomberos Acapulco</span>
                <a href="tel:+527444850808">(744) 485-0808</a>
              </li>
              <li>
                <span>Bomberos Zihuatanejo</span>
                <a href="tel:+527555542020">(755) 554-2020</a>
              </li>
              <li>
                <span>Bomberos Chilpancingo</span>
                <a href="tel:+527474720505">(747) 472-0505</a>
              </li>
              <li>
                <span>Protección Civil Estatal</span>
                <a href="tel:+527474719911">(747) 471-9911</a>
              </li>
            </ul>
          </div>

          <!-- Redes Sociales -->
          {estacion.redes && Object.keys(estacion.redes).length > 0 && (
            <div class="gro-station-card">
              <h3 class="gro-station-card__title">Redes Sociales</h3>
              <div class="gro-station-social">
                {estacion.redes.facebook && (
                  <a href={estacion.redes.facebook} target="_blank" rel="noopener noreferrer" class="gro-station-social__link">
                    Facebook
                  </a>
                )}
                {estacion.redes.twitter && (
                  <a href={estacion.redes.twitter} target="_blank" rel="noopener noreferrer" class="gro-station-social__link">
                    Twitter/X
                  </a>
                )}
              </div>
            </div>
          )}

          <!-- Volver al directorio -->
          <div class="gro-station-card gro-station-card--back">
            <a href="/directorio/guerrero" class="gro-station-back-link">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="20" height="20">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
              </svg>
              Ver todas las estaciones de Guerrero
            </a>
          </div>

        </aside>
      </div>
    </div>

    <!-- Breadcrumb -->
    <nav class="gro-station-breadcrumb" aria-label="Breadcrumb">
      <ol class="gro-station-breadcrumb__list">
        <li class="gro-station-breadcrumb__item"><a href="/">Inicio</a></li>
        <li class="gro-station-breadcrumb__item"><a href="/directorio">Directorio</a></li>
        <li class="gro-station-breadcrumb__item"><a href="/directorio/guerrero">Guerrero</a></li>
        <li class="gro-station-breadcrumb__item gro-station-breadcrumb__item--active">{estacion.nombreCorto || estacion.nombre}</li>
      </ol>
    </nav>
  </div>
</PageLayout>

<style>
  /* ═══════════════════════════════════════════════════════════════════════
     VARIABLES CSS - TEMA CYAN PACÍFICO/DORADO SOL
     ═══════════════════════════════════════════════════════════════════════ */
  :root {
    --gro-cyan: rgb(14, 116, 144);
    --gro-cyan-light: rgb(6, 182, 212);
    --gro-cyan-dark: rgb(22, 78, 99);
    --gro-cyan-50: rgb(236, 254, 255);
    --gro-cyan-100: rgb(207, 250, 254);
    --gro-cyan-200: rgb(165, 243, 252);
    --gro-amber: rgb(245, 158, 11);
    --gro-white: #ffffff;
    --gro-red: #dc2626;
    --gro-slate-50: rgb(248, 250, 252);
    --gro-slate-100: rgb(241, 245, 249);
    --gro-slate-200: rgb(226, 232, 240);
