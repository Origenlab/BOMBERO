          <!-- Estadísticas del Estado -->
          <div class="cam-sidebar__card">
            <h4>Campeche en Números</h4>
            <ul class="cam-sidebar__stats">
              <li>
                <span class="cam-sidebar__stat-value">928K</span>
                <span class="cam-sidebar__stat-label">Habitantes</span>
