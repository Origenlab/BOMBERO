                <span class="cam-sidebar__emergency-number">981 816 3293</span>
                <span class="cam-sidebar__emergency-label">Bomberos Campeche Capital</span>
              </div>
              <div class="cam-sidebar__emergency-item">
                <span class="cam-sidebar__emergency-number">938 382 2990</span>
                <span class="cam-sidebar__emergency-label">Bomberos Ciudad del Carmen</span>
              </div>
              <div class="cam-sidebar__emergency-item">
                <span class="cam-sidebar__emergency-number">982 824 0088</span>
                <span class="cam-sidebar__emergency-label">Bomberos Escárcega</span>
              </div>
              <div class="cam-sidebar__emergency-item">
                <span class="cam-sidebar__emergency-number">982 828 0055</span>
                <span class="cam-sidebar__emergency-label">Bomberos Champotón</span>
              </div>
              <div class="cam-sidebar__emergency-item">
                <span class="cam-sidebar__emergency-number">983 871 6001</span>
                <span class="cam-sidebar__emergency-label">Bomberos Calakmul</span>
              </div>
            </div>
