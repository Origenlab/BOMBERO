// Obtener datos
const municipios = getMunicipios();
const estadisticas = getEstadisticas();

// Estados vecinos para interlinking SEO
const estadosVecinos = [
  { nombre: "Yucatán", slug: "yucatan" },
  { nombre: "Quintana Roo", slug: "quintana-roo" },
  { nombre: "Tabasco", slug: "tabasco" },
  { nombre: "Guatemala", slug: null }, // Frontera internacional
];

// Datos de municipios con información SEO
const municipiosInfo = [
  { nombre: "Campeche", poblacion: "295K", desc: "Capital UNESCO, ciudad amurallada" },
  { nombre: "Carmen", poblacion: "250K", desc: "Capital petrolera, Isla del Carmen" },
  { nombre: "Escárcega", poblacion: "58K", desc: "Crucero carretero, Tren Maya" },
  { nombre: "Champotón", poblacion: "92K", desc: "Puerto pesquero del Golfo" },
  { nombre: "Calkiní", poblacion: "59K", desc: "Camino Real, artesanías" },
  { nombre: "Candelaria", poblacion: "47K", desc: "Frontera Guatemala, selva" },
