---
/**
 * ─── Directorio de Estaciones de Bomberos CDMX ───
 * Página con todas las estaciones de bomberos en la Ciudad de México
 * Organizado por alcaldía con información de contacto completa
 */
import PageLayout from "@layouts/PageLayout.astro";
import SectionHeader from "@components/SectionHeader.astro";
import StationCard from "@components/StationCard.astro";
import { estacionesCDMX, getAlcaldias } from "@data/estaciones-cdmx";
import { breadcrumbJsonLd } from "@utils/seo";

// Obtener alcaldías
const alcaldias = getAlcaldias();

// Estados vecinos para interlinking
const estadosVecinos = [
  { nombre: "Estado de México", slug: "estado-de-mexico" },
  { nombre: "Morelos", slug: "morelos" },
  { nombre: "Hidalgo", slug: "hidalgo" },
  { nombre: "Tlaxcala", slug: "tlaxcala" },
  { nombre: "Puebla", slug: "puebla" },
];

const keywords = [
  "bomberos cdmx",
  "cuerpo bomberos ciudad de méxico",
  "estaciones bomberos df",
  "emergencias cdmx 068",
  "bomberos 911 cdmx",
  "bomberos alcaldías cdmx",
  "rescate cdmx",
];

const breadcrumbSchema = breadcrumbJsonLd([
  { name: "Inicio", url: "/" },
  { name: "Directorio de Bomberos", url: "/directorio" },
  { name: "Ciudad de México", url: "/directorio/ciudad-de-mexico" },
]);

const itemListSchema = {
  "@context": "https://schema.org",
  "@type": "ItemList",
  "name": "Estaciones de Bomberos en Ciudad de México, México",
  "description": "Directorio oficial de las estaciones de bomberos en la Ciudad de México. Teléfonos del Heroico Cuerpo de Bomberos CDMX, direcciones por alcaldía, servicios de rescate y emergencias. Llama al 068 o 911.",
  "numberOfItems": estacionesCDMX.length,
  "itemListElement": estacionesCDMX.map((e, i) => ({
    "@type": "ListItem",
    "position": i + 1,
    "item": {
      "@type": "FireStation",
      "name": e.nombre,
      "address": {
        "@type": "PostalAddress",
        "streetAddress": e.direccion,
        "addressLocality": e.alcaldia,
        "addressRegion": "Ciudad de México",
        "addressCountry": "MX"
      },
      "telephone": e.telefono,
      "url": `https://bombero.mx/directorio/ciudad-de-mexico/${e.slug}`
    }
  }))
};
---

<PageLayout
  title="Bomberos CDMX | Directorio Oficial Ciudad de México | BOMBERO.MX"
  description="Directorio oficial de las estaciones de bomberos en la Ciudad de México. Teléfonos del Heroico Cuerpo de Bomberos CDMX, direcciones por alcaldía, servicios de rescate y emergencias. Llama al 068 o 911."
  keywords={keywords}
  canonical="https://bombero.mx/directorio/ciudad-de-mexico"
  jsonLd={[breadcrumbSchema, itemListSchema]}
>
  <!-- Hero Section -->
  <section class="cdmx-hero">
    <div class="cdmx-hero__bg">
      <div class="cdmx-hero__gradient"></div>
      <div class="cdmx-hero__pattern"></div>
    </div>
    <div class="container">
      <div class="cdmx-hero__container">
        <!-- Left Column -->
        <div class="cdmx-hero__content">
          <nav class="cdmx-hero__breadcrumb">
            <a href="/">Inicio</a>
            <span>/</span>
            <a href="/directorio">Directorio</a>
            <span>/</span>
            <span>Ciudad de México</span>
          </nav>
          <span class="cdmx-hero__badge">
            <span class="cdmx-hero__badge-dot"></span>
            CDMX
          </span>
          <h1 class="cdmx-hero__title">
            Estaciones de Bomberos en
            <span class="cdmx-hero__highlight">Ciudad de México</span>
          </h1>
          <p class="cdmx-hero__desc">
            Directorio completo del <strong>Heroico Cuerpo de Bomberos de la Ciudad de México</strong>.
            Encuentra teléfonos de emergencia, direcciones y servicios de todas las estaciones en las 16 alcaldías.
          </p>
          <div class="cdmx-hero__stats">
            <div class="cdmx-hero__stat">
              <span class="cdmx-hero__stat-number">{estacionesCDMX.length}</span>
              <span class="cdmx-hero__stat-label">Estaciones</span>
            </div>
            <div class="cdmx-hero__stat">
              <span class="cdmx-hero__stat-number">16</span>
              <span class="cdmx-hero__stat-label">Alcaldías</span>
            </div>
            <div class="cdmx-hero__stat">
              <span class="cdmx-hero__stat-number">24/7</span>
              <span class="cdmx-hero__stat-label">Servicio</span>
            </div>
          </div>
        </div>

        <!-- Right Column -->
        <div class="cdmx-hero__seo">
          <h2 class="cdmx-hero__seo-title">Heroico Cuerpo de Bomberos de la Ciudad de México</h2>
          <p class="cdmx-hero__seo-text">
            El <strong>Heroico Cuerpo de Bomberos de la Ciudad de México</strong> es una de las instituciones
            de emergencia más antiguas y prestigiosas de América Latina. Fundado en 1887, cuenta con más de
            <strong>1,500 elementos activos</strong> distribuidos en estaciones estratégicamente ubicadas
            para garantizar una respuesta rápida en toda la capital del país.
          </p>
          <h2 class="cdmx-hero__seo-title">Servicios de Emergencia en la Capital</h2>
          <p class="cdmx-hero__seo-text">
            Las estaciones de bomberos de CDMX ofrecen servicios especializados: <strong>combate de incendios
            estructurales e industriales, rescate vehicular, atención de fugas de gas, materiales peligrosos
            (HAZMAT), rescate en alturas y espacios confinados</strong>. Para emergencias marca el
            <strong>911</strong>, el número único de emergencias en todo México.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Emergency Banner -->
  <section class="cdmx-emergency">
    <div class="container">
      <div class="cdmx-emergency__content">
        <div class="cdmx-emergency__icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
          </svg>
        </div>
        <div class="cdmx-emergency__text">
          <span class="cdmx-emergency__label">Emergencias</span>
          <span class="cdmx-emergency__number">911</span>
        </div>
        <p class="cdmx-emergency__desc">
          Número único de emergencias en CDMX. Disponible las 24 horas, los 365 días del año.
        </p>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="cdmx-main">
    <div class="container">
      <div class="cdmx-main__grid">
        <!-- Stations Grid -->
        <div class="cdmx-main__content">
          <SectionHeader
            label="Directorio Completo"
            title="Estaciones de Bomberos en CDMX"
            description="Información de contacto actualizada de todas las estaciones del Heroico Cuerpo de Bomberos en la Ciudad de México. Selecciona una estación para ver sus datos de contacto y servicios."
          />

          <!-- Stations Grid -->
          <div class="cdmx-stations-grid">
            {estacionesCDMX.map((estacion) => (
              <StationCard
                nombre={estacion.nombreCorto}
                slug={estacion.slug}
                direccion={`${estacion.direccion}, ${estacion.colonia}`}
                alcaldia={estacion.alcaldia}
                telefono={estacion.telefono}
                servicios={estacion.servicios}
                horario={estacion.horario}
              />
            ))}
          </div>

          <!-- SEO Content -->
          <div class="cdmx-seo">
            <h2>El Heroico Cuerpo de Bomberos de la Ciudad de México</h2>
            <p>
              El <strong>Heroico Cuerpo de Bomberos de la Ciudad de México</strong> es una institución de servicio
              público dedicada a la protección de la vida, el medio ambiente y el patrimonio de los habitantes de
              la capital mexicana. Con más de 135 años de historia, los bomberos de CDMX son reconocidos por su
              valentía, profesionalismo y compromiso con la comunidad.
            </p>
            <h3>¿Cómo contactar a los bomberos en CDMX?</h3>
            <p>
              En caso de <strong>emergencia en la Ciudad de México</strong>, marca el <strong>911</strong> desde
              cualquier teléfono. Este número conecta directamente con los servicios de emergencia y coordina la
              respuesta de bomberos, policía y servicios médicos según sea necesario. También puedes comunicarte
              directamente a la <strong>Estación Central de Bomberos</strong> al teléfono 55 5768 3700.
            </p>
            <h3>Servicios que ofrecen los bomberos de CDMX</h3>
            <p>
              Los bomberos de la Ciudad de México atienden una amplia variedad de emergencias:
              <strong>incendios estructurales e industriales, rescate vehicular en accidentes de tránsito,
              atención de fugas de gas y materiales peligrosos (HAZMAT), rescate de personas atrapadas,
              retiro de enjambres de abejas, inundaciones</strong> y muchos otros servicios vitales para la seguridad
              de los más de 9 millones de habitantes de la capital.
            </p>
          </div>
        </div>

        <!-- Sidebar -->
        <aside class="cdmx-sidebar">
          <!-- Quick Access -->
          <div class="cdmx-sidebar__card">
            <h4>Filtrar por Alcaldía</h4>
            <ul class="cdmx-sidebar__alcaldias">
              {alcaldias.map((alcaldia) => (
                <li>
                  <a href={`#${alcaldia.toLowerCase().replace(/\s+/g, '-').replace(/á/g, 'a').replace(/é/g, 'e').replace(/í/g, 'i').replace(/ó/g, 'o').replace(/ú/g, 'u')}`}>
                    <span class="cdmx-sidebar__bullet"></span>
                    <span>{alcaldia}</span>
                  </a>
                </li>
              ))}
            </ul>
          </div>

          <!-- Emergency Numbers -->
          <div class="cdmx-sidebar__card cdmx-sidebar__card--emergency">
            <h4>Teléfonos de Emergencia CDMX</h4>
            <div class="cdmx-sidebar__emergency-list">
              <div class="cdmx-sidebar__emergency-item">
                <span class="cdmx-sidebar__emergency-number">911</span>
                <span class="cdmx-sidebar__emergency-label">Emergencias</span>
              </div>
              <div class="cdmx-sidebar__emergency-item">
                <span class="cdmx-sidebar__emergency-number">55 5768 3700</span>
                <span class="cdmx-sidebar__emergency-label">Bomberos Central</span>
              </div>
              <div class="cdmx-sidebar__emergency-item">
                <span class="cdmx-sidebar__emergency-number">55 5658 1111</span>
                <span class="cdmx-sidebar__emergency-label">Protección Civil</span>
              </div>
            </div>
          </div>

          <!-- Nearby States -->
          <div class="cdmx-sidebar__card">
            <h4>Estados Cercanos</h4>
            <ul class="cdmx-sidebar__states">
              {estadosVecinos.map((estado) => (
                <li>
                  <a href={`/directorio/${estado.slug}`}>
                    <span>{estado.nombre}</span>
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M5 12h14M12 5l7 7-7 7"/>
                    </svg>
                  </a>
                </li>
              ))}
            </ul>
          </div>

          <!-- CTA -->
          <div class="cdmx-sidebar__card cdmx-sidebar__card--cta">
            <h4>¿Equipas una Estación en CDMX?</h4>
            <p>Somos distribuidores de equipo certificado NFPA para el Heroico Cuerpo de Bomberos</p>
            <a href="/cotizar" class="cdmx-sidebar__cta-btn">Solicitar Cotización</a>
          </div>

          <!-- Back to Directory -->
          <div class="cdmx-sidebar__card">
            <a href="/directorio" class="cdmx-sidebar__back">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M19 12H5M12 19l-7-7 7-7"/>
              </svg>
              <span>Ver todos los estados</span>
            </a>
          </div>

          <!-- Contact -->
          <div class="cdmx-sidebar__card">
            <h4>Contacto BOMBERO.MX</h4>
            <ul class="cdmx-sidebar__contact">
              <li><a href="tel:+525520780102">55 2078 0102</a></li>
              <li><a href="https://wa.me/525520780102">WhatsApp</a></li>
              <li><a href="mailto:ventas@bombero.mx">ventas@bombero.mx</a></li>
            </ul>
          </div>
        </aside>
      </div>
    </div>
  </section>
</PageLayout>

<style>
  /* ═══════════════════════════════════════════════════════════════════════
     DIRECTORIO CDMX - ESTACIONES DE BOMBEROS
     ═══════════════════════════════════════════════════════════════════════ */

