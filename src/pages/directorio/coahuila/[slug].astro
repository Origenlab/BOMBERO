---
/**
 * ╔═══════════════════════════════════════════════════════════════════════════╗
 * ║  PÁGINA DINÁMICA DE ESTACIÓN DE BOMBEROS - COAHUILA                      ║
 * ║  Genera 24 páginas individuales con SEO ultra-premium                    ║
 * ╠═══════════════════════════════════════════════════════════════════════════╣
 * ║  Zonas: Saltillo, La Laguna, Monclova, Carbonífera, Frontera, Parras    ║
 * ║  Especialidades: HAZMAT, Rescate Minero, Coord. Binacional              ║
 * ╚═══════════════════════════════════════════════════════════════════════════╝
 */

import PageLayout from "@layouts/PageLayout.astro";
import {
  estacionesCoahuila,
  generarMetaSEO,
  getContextoZona,
  COAHUILA_SEO,
} from "@data/estaciones-coahuila";

export function getStaticPaths() {
  return estacionesCoahuila.map(estacion => ({
    params: { slug: estacion.slug },
    props: { estacion }
  }));
}

const { estacion } = Astro.props;
const metaSEO = generarMetaSEO(estacion);
const contextoZona = getContextoZona(estacion.ciudad);

// Determinar tipo de zona para contexto SEO enriquecido
const esSaltillo = ['Saltillo', 'Ramos Arizpe'].includes(estacion.ciudad);
const esArteaga = estacion.ciudad === 'Arteaga';
const esLaguna = ['Torreón', 'Matamoros', 'San Pedro'].includes(estacion.ciudad);
const esMonclova = ['Monclova', 'Frontera', 'Castaños'].includes(estacion.ciudad);
const esCuatroCienegas = estacion.ciudad === 'Cuatro Ciénegas';
const esCarbonifera = ['Sabinas', 'Nueva Rosita', 'Múzquiz', 'San Juan de Sabinas'].includes(estacion.ciudad);
const esFronteriza = ['Piedras Negras', 'Ciudad Acuña', 'Allende', 'Nava'].includes(estacion.ciudad);
const esVitivinicola = ['Parras de la Fuente', 'General Cepeda'].includes(estacion.ciudad);

// Fecha de actualización
const fechaActualizacion = new Date().toISOString().split('T')[0];
---

<PageLayout
  title={metaSEO.title}
  description={metaSEO.description}
  keywords={metaSEO.keywords.join(', ')}
  canonical={metaSEO.canonical}
>
  <!-- Schema.org FireStation -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "FireStation",
    "name": estacion.nombre,
    "description": estacion.descripcion,
    "address": {
      "@type": "PostalAddress",
      "streetAddress": estacion.direccion,
      "addressLocality": estacion.ciudad,
      "addressRegion": "Coahuila de Zaragoza",
      "postalCode": estacion.codigoPostal,
      "addressCountry": "MX"
    },
    "telephone": estacion.telefono,
    "email": estacion.email,
    "openingHours": "Mo-Su 00:00-23:59",
    "geo": {
      "@type": "GeoCoordinates",
      "latitude": estacion.coordenadas.lat,
      "longitude": estacion.coordenadas.lng
    },
    "areaServed": {
      "@type": "City",
      "name": estacion.ciudad
    },
    "numberOfEmployees": estacion.personal,
    "url": metaSEO.canonical,
    "sameAs": estacion.redes ? Object.values(estacion.redes) : []
  })} />

  <!-- Schema.org BreadcrumbList -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      { "@type": "ListItem", "position": 1, "name": "Inicio", "item": "https://bombero.mx" },
      { "@type": "ListItem", "position": 2, "name": "Directorio", "item": "https://bombero.mx/directorio" },
      { "@type": "ListItem", "position": 3, "name": "Coahuila", "item": "https://bombero.mx/directorio/coahuila" },
      { "@type": "ListItem", "position": 4, "name": estacion.nombre, "item": metaSEO.canonical }
    ]
  })} />

  <div class="coah-station">
    <!-- ═══════════════════════════════════════════════════════════════════
         HERO SECTION
         ═══════════════════════════════════════════════════════════════════ -->
    <section class="coah-station-hero">
      <div class="coah-station-hero__container">
        <!-- Badges -->
        <div class="coah-station-hero__badges">
          <span class="coah-station-hero__badge coah-station-hero__badge--state">COAH</span>
          <span class="coah-station-hero__badge coah-station-hero__badge--zone">{contextoZona.tipo}</span>
          {esSaltillo && <span class="coah-station-hero__badge coah-station-hero__badge--special">Zona Automotriz</span>}
          {esArteaga && <span class="coah-station-hero__badge coah-station-hero__badge--special">Pueblo Mágico</span>}
          {esMonclova && <span class="coah-station-hero__badge coah-station-hero__badge--special">AHMSA</span>}
          {esCarbonifera && <span class="coah-station-hero__badge coah-station-hero__badge--special">Rescate Minero</span>}
          {esFronteriza && <span class="coah-station-hero__badge coah-station-hero__badge--special">Frontera Texas</span>}
          {esCuatroCienegas && <span class="coah-station-hero__badge coah-station-hero__badge--special">Área Protegida</span>}
          {esVitivinicola && <span class="coah-station-hero__badge coah-station-hero__badge--special">Ruta del Vino</span>}
        </div>

        <h1 class="coah-station-hero__title">{estacion.nombre}</h1>

        <p class="coah-station-hero__location">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="20" height="20">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          {estacion.ciudad}, Coahuila, México
        </p>

        <!-- Estadísticas rápidas -->
        <div class="coah-station-hero__stats">
          <div class="coah-station-hero__stat">
            <span class="coah-station-hero__stat-value">{estacion.personal}</span>
            <span class="coah-station-hero__stat-label">Bomberos</span>
          </div>
          <div class="coah-station-hero__stat">
            <span class="coah-station-hero__stat-value">{estacion.unidades}</span>
            <span class="coah-station-hero__stat-label">Unidades</span>
          </div>
          <div class="coah-station-hero__stat">
            <span class="coah-station-hero__stat-value">24/7</span>
            <span class="coah-station-hero__stat-label">Servicio</span>
          </div>
        </div>
      </div>
    </section>

    <!-- ═══════════════════════════════════════════════════════════════════
         BANNER DE EMERGENCIA
         ═══════════════════════════════════════════════════════════════════ -->
    <section class="coah-station-emergency">
      <div class="coah-station-emergency__container">
        <div class="coah-station-emergency__phone">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="24" height="24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          <div>
            <span class="coah-station-emergency__label">Teléfono de emergencia</span>
            <a href={`tel:${estacion.telefono.replace(/[^\d+]/g, '')}`} class="coah-station-emergency__number">
              {estacion.telefono}
            </a>
          </div>
        </div>
        <div class="coah-station-emergency__national">
          <span>Emergencias Nacional:</span>
          <a href="tel:911"><strong>911</strong></a>
        </div>
      </div>
    </section>

    <!-- ═══════════════════════════════════════════════════════════════════
         CONTENIDO PRINCIPAL
         ═══════════════════════════════════════════════════════════════════ -->
    <div class="coah-station-content">
      <div class="coah-station-content__container">

        <!-- Columna Principal -->
        <div class="coah-station-content__main">

          <!-- Descripción y Contexto -->
          <section class="coah-station-section">
            <h2 class="coah-station-section__title">Acerca de esta Estación</h2>
            <div class="coah-station-section__content">
              <p>{estacion.descripcion}</p>

              {/* Contexto específico por zona */}
              {esSaltillo && (
                <div class="coah-station-context coah-station-context--automotriz">
                  <h3>Segundo Clúster Automotriz de México</h3>
                  <p>
                    La zona metropolitana de <strong>Saltillo-Ramos Arizpe</strong> alberga plantas de
                    <strong>General Motors, Chrysler (Stellantis), Daimler, BMW y Toyota</strong>, además
                    de cientos de proveedores Tier 1 y Tier 2. Esta estación cuenta con personal
                    certificado en <strong>HAZMAT automotriz</strong> para emergencias con pinturas,
                    solventes, materiales compuestos y químicos de manufactura.
                  </p>
                </div>
              )}

              {esArteaga && (
                <div class="coah-station-context coah-station-context--pueblo-magico">
                  <h3>Pueblo Mágico "La Suiza de México"</h3>
                  <p>
                    <strong>Arteaga</strong> es conocido como "La Suiza de México" por sus bosques de
                    coníferas y nevadas invernales. La estación está especializada en
                    <strong>incendios forestales</strong> y <strong>rescate de montaña</strong>,
                    atendiendo emergencias en la Sierra de Arteaga y centros turísticos como Monterreal.
                    Más de 500,000 visitantes anuales.
                  </p>
                </div>
              )}

              {esLaguna && (
                <div class="coah-station-context coah-station-context--laguna">
                  <h3>Comarca Lagunera - Principal Cuenca Lechera</h3>
                  <p>
                    La <strong>Comarca Lagunera</strong> es la principal cuenca lechera de México, sede de
                    <strong>Grupo Lala</strong> y otras empresas lácteas. Esta estación tiene
                    especialización en emergencias con <strong>amoniaco</strong> (refrigeración industrial)
                    y atención a <strong>agroindustrias</strong>. La zona metropolitana supera 1.3 millones
                    de habitantes.
                  </p>
                </div>
              )}

              {esMonclova && (
                <div class="coah-station-context coah-station-context--siderurgica">
                  <h3>AHMSA - Mayor Acería Integrada de México</h3>
                  <p>
                    <strong>Monclova</strong> es sede de <strong>AHMSA (Altos Hornos de México, S.A.)</strong>,
                    el complejo siderúrgico integrado más grande del país. El personal está entrenado en
                    <strong>combate de incendios de metal fundido</strong>, <strong>rescate en altos
                    hornos</strong> y emergencias con <strong>gases industriales</strong>. Equipamiento
                    especializado para temperaturas extremas.
                  </p>
                </div>
              )}

              {esCuatroCienegas && (
                <div class="coah-station-context coah-station-context--naturaleza">
                  <h3>Área de Protección de Flora y Fauna</h3>
                  <p>
                    <strong>Cuatro Ciénegas</strong> es Pueblo Mágico y hogar de especies
                    <strong>endémicas únicas en el mundo</strong>, incluyendo estromatolitos vivos
                    (organismos de más de 3,500 millones de años). Esta estación coordina con
                    <strong>CONANP</strong> para la protección de las pozas, dunas de yeso y
                    ecosistemas frágiles del área natural protegida.
                  </p>
                </div>
              )}

              {esCarbonifera && (
                <div class="coah-station-context coah-station-context--minera">
                  <h3>Región Carbonífera - 95% Producción Nacional</h3>
                  <p>
                    La <strong>Región Carbonífera de Coahuila</strong> produce el <strong>95% del
                    carbón nacional</strong>. Esta estación cuenta con personal altamente especializado
                    en <strong>rescate minero</strong>, <strong>detección de gases explosivos</strong>
                    (metano, grisú) y operaciones de <strong>búsqueda en ambientes subterráneos</strong>.
                    Equipamiento de última generación para emergencias en minas de carbón.
                  </p>
                </div>
              )}

              {esFronteriza && (
                <div class="coah-station-context coah-station-context--frontera">
                  <h3>Coordinación Binacional México-EE.UU.</h3>
                  <p>
                    Esta estación mantiene <strong>protocolos de cooperación binacional</strong> con
                    departamentos de bomberos de Texas (Eagle Pass, Del Rio). Especialización en
                    emergencias de <strong>comercio internacional</strong>, <strong>puentes fronterizos</strong>
                    y zona maquiladora. Personal bilingüe y entrenamiento conjunto con bomberos
                    estadounidenses.
                  </p>
                </div>
              )}

              {esVitivinicola && (
                <div class="coah-station-context coah-station-context--vitivinicola">
                  <h3>Cuna de la Vitivinicultura en América</h3>
                  <p>
                    <strong>Parras de la Fuente</strong> es Pueblo Mágico y sede de <strong>Casa Madero</strong>,
                    el viñedo más antiguo del continente americano (fundado en 1597). Esta estación tiene
                    protocolos especiales para la <strong>protección del patrimonio histórico</strong>,
                    bodegas de vino coloniales y arquitectura del siglo XVI. Ruta del Vino de Coahuila.
                  </p>
                </div>
              )}
            </div>
          </section>

          <!-- Servicios -->
          <section class="coah-station-section">
            <h2 class="coah-station-section__title">Servicios de Emergencia</h2>
            <ul class="coah-station-services">
              {estacion.servicios.map(servicio => (
                <li class="coah-station-services__item">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="20" height="20">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span>{servicio}</span>
                </li>
              ))}
            </ul>
          </section>

          <!-- Equipamiento -->
          <section class="coah-station-section">
            <h2 class="coah-station-section__title">Equipamiento y Unidades</h2>
            <div class="coah-station-equipment">
              {estacion.equipamiento.map(equipo => (
                <div class="coah-station-equipment__item">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="18" height="18">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span>{equipo}</span>
                </div>
              ))}
            </div>
          </section>

          <!-- Mapa -->
          <section class="coah-station-section">
            <h2 class="coah-station-section__title">Ubicación</h2>
            <div class="coah-station-map">
              <div class="coah-station-map__placeholder">
                <p><strong>Dirección:</strong> {estacion.direccion}</p>
                <p><strong>Código Postal:</strong> {estacion.codigoPostal}</p>
                <p><strong>Coordenadas:</strong> {estacion.coordenadas.lat}, {estacion.coordenadas.lng}</p>
                <a
                  href={`https://www.google.com/maps/search/?api=1&query=${estacion.coordenadas.lat},${estacion.coordenadas.lng}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="coah-station-map__link"
                >
                  Ver en Google Maps
                </a>
              </div>
            </div>
          </section>
        </div>

        <!-- Sidebar -->
        <aside class="coah-station-sidebar">

          <!-- Información de Contacto -->
          <div class="coah-station-card coah-station-card--contact">
            <h3 class="coah-station-card__title">Información de Contacto</h3>
            <ul class="coah-station-card__list">
              <li>
                <strong>Teléfono:</strong>
                <a href={`tel:${estacion.telefono.replace(/[^\d+]/g, '')}`}>{estacion.telefono}</a>
              </li>
              <li>
                <strong>Email:</strong>
                <a href={`mailto:${estacion.email}`}>{estacion.email}</a>
              </li>
              <li>
                <strong>Horario:</strong>
                <span>{estacion.horario}</span>
              </li>
              <li>
                <strong>Dirección:</strong>
                <span>{estacion.direccion}</span>
              </li>
              <li>
                <strong>C.P.:</strong>
                <span>{estacion.codigoPostal}</span>
              </li>
            </ul>
          </div>

          <!-- Estadísticas -->
          <div class="coah-station-card">
            <h3 class="coah-station-card__title">Datos de la Estación</h3>
            <ul class="coah-station-card__list">
              <li>
                <strong>Personal:</strong>
                <span>{estacion.personal} bomberos</span>
              </li>
              <li>
                <strong>Unidades:</strong>
                <span>{estacion.unidades} vehículos</span>
              </li>
              {estacion.fechaFundacion && (
                <li>
                  <strong>Fundación:</strong>
                  <span>{estacion.fechaFundacion}</span>
                </li>
              )}
              <li>
                <strong>Zona:</strong>
                <span>{contextoZona.tipo}</span>
              </li>
              <li>
                <strong>Actualizado:</strong>
                <span>{fechaActualizacion}</span>
              </li>
            </ul>
          </div>

          <!-- Teléfonos Regionales -->
          <div class="coah-station-card coah-station-card--phones">
            <h3 class="coah-station-card__title">Emergencias Coahuila</h3>
            <ul class="coah-station-card__phones">
              <li>
                <span>Emergencias Nacional</span>
                <a href="tel:911">911</a>
              </li>
              <li>
                <span>Bomberos Saltillo</span>
                <a href="tel:+528444107900">(844) 410-7900</a>
              </li>
              <li>
                <span>Bomberos Torreón</span>
                <a href="tel:+528717120000">(871) 712-0000</a>
              </li>
              <li>
                <span>Protección Civil</span>
                <a href="tel:+528444115000">(844) 411-5000</a>
              </li>
            </ul>
          </div>

          <!-- Redes Sociales -->
          {estacion.redes && Object.keys(estacion.redes).length > 0 && (
            <div class="coah-station-card">
              <h3 class="coah-station-card__title">Redes Sociales</h3>
              <div class="coah-station-social">
                {estacion.redes.facebook && (
                  <a href={estacion.redes.facebook} target="_blank" rel="noopener noreferrer" class="coah-station-social__link">
                    Facebook
                  </a>
                )}
                {estacion.redes.twitter && (
                  <a href={estacion.redes.twitter} target="_blank" rel="noopener noreferrer" class="coah-station-social__link">
                    Twitter/X
                  </a>
                )}
              </div>
            </div>
          )}

          <!-- Volver al directorio -->
          <div class="coah-station-card coah-station-card--back">
            <a href="/directorio/coahuila" class="coah-station-back-link">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="20" height="20">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
              </svg>
              Ver todas las estaciones de Coahuila
            </a>
          </div>

        </aside>
      </div>
    </div>

    <!-- Breadcrumb -->
    <nav class="coah-station-breadcrumb" aria-label="Breadcrumb">
      <ol class="coah-station-breadcrumb__list">
        <li class="coah-station-breadcrumb__item"><a href="/">Inicio</a></li>
        <li class="coah-station-breadcrumb__item"><a href="/directorio">Directorio</a></li>
        <li class="coah-station-breadcrumb__item"><a href="/directorio/coahuila">Coahuila</a></li>
        <li class="coah-station-breadcrumb__item coah-station-breadcrumb__item--active">{estacion.nombre}</li>
      </ol>
    </nav>
  </div>
</PageLayout>

<style>
  /* ═══════════════════════════════════════════════════════════════════════
     VARIABLES CSS - TEMA ACERO INDUSTRIAL
     ═══════════════════════════════════════════════════════════════════════ */
  :root {
    --coah-steel: rgb(71, 85, 105);
    --coah-steel-light: rgb(100, 116, 139);
    --coah-steel-dark: rgb(30, 41, 59);
    --coah-slate-50: rgb(248, 250, 252);
    --coah-slate-100: rgb(241, 245, 249);
    --coah-slate-200: rgb(226, 232, 240);
    --coah-slate-400: rgb(148, 163, 184);
    --coah-slate-600: rgb(71, 85, 105);
    --coah-slate-800: rgb(30, 41, 59);
    --coah-sky: rgb(14, 165, 233);
    --coah-white: #ffffff;
    --coah-red: #dc2626;
  }

  /* ═══════════════════════════════════════════════════════════════════════
     STATION PAGE LAYOUT
     ═══════════════════════════════════════════════════════════════════════ */
  .coah-station {
    min-height: 100vh;
    background-color: var(--coah-slate-50);
  }

  /* ═══════════════════════════════════════════════════════════════════════
     HERO SECTION
     ═══════════════════════════════════════════════════════════════════════ */
  .coah-station-hero {
    background: linear-gradient(135deg, var(--coah-steel-dark) 0%, var(--coah-steel) 50%, var(--coah-steel-light) 100%);
    padding: 2.5rem 1rem;
    color: var(--coah-white);
  }

  .coah-station-hero__container {
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
  }

  .coah-station-hero__badges {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.25rem;
  }

  .coah-station-hero__badge {
    padding: 0.375rem 0.75rem;
    border-radius: 6px;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .coah-station-hero__badge--state {
    background: var(--coah-white);
    color: var(--coah-steel);
  }

  .coah-station-hero__badge--zone {
    background: rgba(255, 255, 255, 0.2);
    color: var(--coah-white);
  }

  .coah-station-hero__badge--special {
    background: var(--coah-sky);
    color: var(--coah-white);
  }

  .coah-station-hero__title {
    font-size: 2rem;
    font-weight: 800;
    margin-bottom: 0.75rem;
    line-height: 1.2;
  }

  .coah-station-hero__location {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    font-size: 1.125rem;
    opacity: 0.95;
    margin-bottom: 1.5rem;
  }

  .coah-station-hero__stats {
    display: flex;
    justify-content: center;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .coah-station-hero__stat {
    text-align: center;
  }

  .coah-station-hero__stat-value {
