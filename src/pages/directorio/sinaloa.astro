---
/**
 * ─── Directorio de Estaciones de Bomberos Sinaloa ───
 * Página con todas las estaciones de bomberos en Sinaloa
 * Estado del noroeste de Mexico, lider en agroexportacion y Puerto de Mazatlan
 * Organizado por municipio con información de contacto completa
 */
import PageLayout from "@layouts/PageLayout.astro";
import SectionHeader from "@components/SectionHeader.astro";
import StationCard from "@components/StationCard.astro";
import { estacionesSinaloa, getMunicipios, ESTADISTICAS_SINALOA } from "@data/estaciones-sinaloa";
import { breadcrumbJsonLd } from "@utils/seo";

// Obtener municipios
const municipios = getMunicipios();

// Estados vecinos para interlinking
const estadosVecinos = [
  { nombre: "Sonora", slug: "sonora" },
  { nombre: "Chihuahua", slug: "chihuahua" },
  { nombre: "Durango", slug: "durango" },
  { nombre: "Nayarit", slug: "nayarit" },
];

const keywords = [
  "bomberos sinaloa",
  "estaciones bomberos culiacan",
  "bomberos mazatlan",
  "emergencias sinaloa 911",
  "bomberos los mochis",
  "cuerpo bomberos sinaloa",
  "bomberos puerto mazatlan",
  "rescate acuatico sinaloa",
  "bomberos agroexportacion",
];

const breadcrumbSchema = breadcrumbJsonLd([
  { name: "Inicio", url: "/" },
  { name: "Directorio de Bomberos", url: "/directorio" },
  { name: "Sinaloa", url: "/directorio/sinaloa" },
]);

const itemListSchema = {
  "@context": "https://schema.org",
  "@type": "ItemList",
  "name": "Estaciones de Bomberos en Sinaloa, Mexico",
  "description": "Directorio oficial de las 20 estaciones de bomberos en Sinaloa. Telefonos de emergencia en Culiacan, Mazatlan, Los Mochis, Guasave y todo el estado. Puerto de Mazatlan, agroexportacion y zona de huracanes. Emergencias 911.",
  "numberOfItems": estacionesSinaloa.length,
  "itemListElement": estacionesSinaloa.map((e, i) => ({
    "@type": "ListItem",
    "position": i + 1,
    "item": {
      "@type": "FireStation",
      "name": e.nombre,
      "address": {
        "@type": "PostalAddress",
        "streetAddress": e.direccion,
        "addressLocality": e.municipio,
        "addressRegion": "Sinaloa",
        "addressCountry": "MX"
      },
      "telephone": e.telefono,
      "url": `https://bombero.mx/directorio/sinaloa/${e.slug}`
    }
  }))
};
---

<PageLayout
  title="Bomberos en Sinaloa | 20 Estaciones | Directorio Oficial BOMBERO.MX"
  description="Directorio oficial de las 20 estaciones de bomberos en Sinaloa. Telefonos de emergencia en Culiacan, Mazatlan, Los Mochis, Guasave y todo el estado. Puerto de Mazatlan, agroexportacion y zona de huracanes. Emergencias 911."
  keywords={keywords}
  canonical="https://bombero.mx/directorio/sinaloa"
  jsonLd={[breadcrumbSchema, itemListSchema]}
>
  <!-- Hero Section -->
  <section class="sin-hero">
    <div class="sin-hero__bg">
      <div class="sin-hero__gradient"></div>
      <div class="sin-hero__pattern"></div>
    </div>
    <div class="container">
      <div class="sin-hero__container">
        <!-- Left Column -->
        <div class="sin-hero__content">
          <nav class="sin-hero__breadcrumb">
            <a href="/">Inicio</a>
            <span>/</span>
            <a href="/directorio">Directorio</a>
            <span>/</span>
            <span>Sinaloa</span>
          </nav>
          <span class="sin-hero__badge">
            <span class="sin-hero__badge-dot"></span>
            SIN
          </span>
          <h1 class="sin-hero__title">
            Estaciones de Bomberos en
            <span class="sin-hero__highlight">Sinaloa</span>
          </h1>
          <p class="sin-hero__desc">
            Directorio completo del <strong>H. Cuerpo de Bomberos de Sinaloa</strong>.
            Encuentra teléfonos de emergencia, direcciones y servicios de todas las estaciones en el estado lider en agroexportacion y sede del Puerto de Mazatlan.
          </p>
          <div class="sin-hero__stats">
            <div class="sin-hero__stat">
              <span class="sin-hero__stat-number">{estacionesSinaloa.length}</span>
              <span class="sin-hero__stat-label">Estaciones</span>
            </div>
            <div class="sin-hero__stat">
              <span class="sin-hero__stat-number">{municipios.length}</span>
              <span class="sin-hero__stat-label">Municipios</span>
            </div>
            <div class="sin-hero__stat">
              <span class="sin-hero__stat-number">24/7</span>
              <span class="sin-hero__stat-label">Servicio</span>
            </div>
            <div class="sin-hero__stat">
              <span class="sin-hero__stat-number">3M+</span>
              <span class="sin-hero__stat-label">Habitantes</span>
            </div>
          </div>
        </div>

        <!-- Right Column - SEO Content -->
        <div class="sin-hero__seo">
          <h2 class="sin-hero__seo-title">H. Cuerpo de Bomberos de Sinaloa</h2>
          <p class="sin-hero__seo-text">
            <strong>Sinaloa</strong> es el estado <strong>numero uno en agroexportacion de Mexico</strong>, con mas de
            <strong>3 millones de habitantes</strong> distribuidos en 18 municipios. Culiacan, la capital, coordina
            operaciones de emergencia para un estado que exporta <strong>tomate, pepino, chile y hortalizas</strong>
            a mercados de Norteamerica y Europa, con riesgos especificos en bodegas y campos agricolas.
          </p>
          <h2 class="sin-hero__seo-title">Puerto de Mazatlan y Costa del Pacifico</h2>
          <p class="sin-hero__seo-text">
            <strong>Mazatlan</strong> es el principal puerto del Pacifico mexicano y uno de los destinos turisticos
            mas importantes del pais, con su famosa <strong>Zona Dorada</strong>. La temporada de huracanes
            (junio a noviembre) representa un riesgo elevado para la franja costera, por lo que los bomberos
            cuentan con <strong>capacitacion especializada en rescate naval y proteccion civil ante ciclones</strong>.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Emergency Banner -->
  <section class="sin-emergency">
    <div class="container">
      <div class="sin-emergency__content">
        <div class="sin-emergency__icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
          </svg>
        </div>
        <div class="sin-emergency__text">
          <span class="sin-emergency__label">Emergencias en Sinaloa</span>
          <span class="sin-emergency__number">911</span>
        </div>
        <p class="sin-emergency__desc">
          Número único de emergencias en todo Sinaloa. Para Culiacan tambien: 667 715 8311. Para Mazatlan: 669 982 0800.
        </p>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="sin-main">
    <div class="container">
      <div class="sin-main__grid">
        <!-- Stations Grid -->
        <div class="sin-main__content">
          <SectionHeader
            label="Directorio Completo"
            title="Estaciones de Bomberos en Sinaloa"
            description="Información de contacto actualizada de todas las estaciones del H. Cuerpo de Bomberos en Sinaloa. Selecciona una estación para ver sus datos de contacto, servicios y zonas de cobertura."
          />

          <!-- Stations Grid -->
          <div class="sin-stations-grid">
            {estacionesSinaloa.map((estacion) => (
              <StationCard
                nombre={estacion.nombreCorto}
                slug={estacion.slug}
                direccion={`${estacion.direccion}, ${estacion.colonia}`}
                alcaldia={estacion.municipio}
                telefono={estacion.telefono}
                servicios={estacion.servicios}
                horario={estacion.horario}
                baseUrl="/directorio/sinaloa"
              />
            ))}
          </div>

          <!-- SEO Content -->
          <div class="sin-seo">
            <h2>El H. Cuerpo de Bomberos de Sinaloa</h2>
            <p>
              El <strong>H. Cuerpo de Bomberos de Sinaloa</strong> es la institución encargada de
              el medio ambiente y el patrimonio de los mas de <strong>3 millones de sinaloenses</strong>.
              Con presencia en los 18 municipios del estado, los bomberos atienden emergencias las
              <strong>24 horas del dia, los 365 dias del ano</strong>, en una entidad que combina una
              potente industria agroexportadora con un extenso litoral pacifico.
            </p>

            <h3>¿Como contactar a los bomberos en Sinaloa?</h3>
            <p>
              En caso de <strong>emergencia en Sinaloa</strong>, marca el <strong>911</strong> desde cualquier
              telefono. Este numero conecta con el <strong>C5 de Sinaloa</strong> que coordina la respuesta de
              bomberos, policia y servicios medicos. Tambien puedes comunicarte directamente a la estacion mas
              cercana usando los telefonos de este directorio. Bomberos Culiacan: <strong>667 715 8311</strong>,
              Bomberos Mazatlan: <strong>669 982 0800</strong>, Bomberos Los Mochis: <strong>668 815 7050</strong>.
            </p>

            <h3>Riesgos Especificos en Sinaloa</h3>
            <p>
              Sinaloa presenta riesgos multiples y diferenciados: <strong>incendios agricolas</strong> en campos
              de tomate, chile y hortalizas durante la cosecha; <strong>huracanes del Pacifico</strong> (temporada
              junio-noviembre) que amenazan la costa y el Puerto de Mazatlan; <strong>emergencias industriales
              y portuarias</strong> en los corredores de agroexportacion y terminales maritimas; <strong>incendios
              forestales</strong> en la Sierra Madre Occidental (Badiraguato, Choix, Cosala); y <strong>rescates
              en carretera</strong> en la Carretera Internacional Mexico 15.
            </p>

            <h3>Servicios de los Bomberos Aguascalentenses</h3>
            <p>
              Los bomberos de Sinaloa estan capacitados para atender:
              <strong>incendios estructurales e industriales</strong>;
              <strong>HAZMAT agroindustrial</strong> en bodegas y empacadoras;
              <strong>rescate acuatico</strong> en playas, puertos y lagunas costeras;
              <strong>proteccion civil ante huracanes</strong> en toda la franja costera;
              <strong>rescate en sierra</strong> y zonas de dificil acceso;
              <strong>emergencias portuarias</strong> en Mazatlan y puertos pesqueros;
              <strong>rescate turistico</strong> en Pueblos Magicos y el Tren Chepe; y muchos otros servicios.
            </p>
          </div>
        </div>

        <!-- Sidebar -->
        <aside class="sin-sidebar">
          <!-- Quick Access -->
          <div class="sin-sidebar__card">
            <h4>Filtrar por Municipio</h4>
            <ul class="sin-sidebar__municipios">
              {municipios.map((municipio) => (
                <li>
                  <a href={`#${municipio.toLowerCase().replace(/\s+/g, '-').replace(/á/g, 'a').replace(/é/g, 'e').replace(/í/g, 'i').replace(/ó/g, 'o').replace(/ú/g, 'u')}`}>
                    <span class="sin-sidebar__bullet"></span>
                    <span>{municipio}</span>
                  </a>
                </li>
              ))}
            </ul>
          </div>

          <!-- Emergency Numbers -->
          <div class="sin-sidebar__card ags-sidebar__card--emergency">
            <h4>Teléfonos de Emergencia</h4>
            <div class="sin-sidebar__emergency-list">
              <div class="sin-sidebar__emergency-item">
                <span class="sin-sidebar__emergency-number">911</span>
                <span class="sin-sidebar__emergency-label">Emergencias</span>
              </div>
              <div class="sin-sidebar__emergency-item">
                <span class="sin-sidebar__emergency-number">449 910 2030</span>
                <span class="sin-sidebar__emergency-label">Bomberos Central</span>
              </div>
              <div class="sin-sidebar__emergency-item">
                <span class="sin-sidebar__emergency-number">449 910 3300</span>
                <span class="sin-sidebar__emergency-label">Protección Civil SIN</span>
              </div>
            </div>
          </div>

          <!-- Regiones -->
          <div class="sin-sidebar__card">
            <h4>Regiones del Estado</h4>
            <ul class="sin-sidebar__regiones">
              <li>
                <span class="sin-sidebar__region-name">Zona Centro</span>
                <span class="sin-sidebar__region-desc">Culiacan, Navolato, Sinaloa de Leyva, Angostura</span>
              </li>
              <li>
                <span class="sin-sidebar__region-name">Zona Norte</span>
                <span class="sin-sidebar__region-desc">Los Mochis, Guasave, El Fuerte, Choix</span>
              </li>
              <li>
                <span class="sin-sidebar__region-name">Zona Sur</span>
                <span class="sin-sidebar__region-desc">Mazatlan, Escuinapa, Rosario, Concordia</span>
              </li>
              <li>
                <span class="sin-sidebar__region-name">Zona Oriente</span>
                <span class="sin-sidebar__region-desc">El Llano, Pabellón de Arteaga</span>
              </li>
            </ul>
          </div>

          <!-- Nearby States -->
          <div class="sin-sidebar__card">
            <h4>Estados Vecinos</h4>
            <ul class="sin-sidebar__states">
              {estadosVecinos.map((estado) => (
                <li>
                  <a href={`/directorio/${estado.slug}`}>
                    <span>{estado.nombre}</span>
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M5 12h14M12 5l7 7-7 7"/>
                    </svg>
                  </a>
                </li>
              ))}
            </ul>
          </div>

          <!-- CTA -->
          <div class="sin-sidebar__card ags-sidebar__card--cta">
            <h4>¿Equipas una Estacion en SIN?</h4>
            <p>Somos distribuidores de equipo certificado NFPA para cuerpos de bomberos en todo Sinaloa</p>
            <a href="/cotizar" class="sin-sidebar__cta-btn">Solicitar Cotización</a>
          </div>

          <!-- Products -->
          <div class="sin-sidebar__card">
            <h4>Equipo para Bomberos</h4>
            <ul class="sin-sidebar__products">
              <li><a href="/productos/trajes-para-bomberos">Trajes Estructurales NFPA</a></li>
              <li><a href="/productos/cascos-para-bomberos">Cascos de Bombero</a></li>
              <li><a href="/productos/scba">Equipos SCBA</a></li>
              <li><a href="/productos/herramientas-rescate">Herramientas de Rescate</a></li>
            </ul>
            <a href="/productos" class="sin-sidebar__link">
              Ver catálogo completo
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </a>
          </div>

          <!-- Back to Directory -->
          <div class="sin-sidebar__card">
            <a href="/directorio" class="sin-sidebar__back">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M19 12H5M12 19l-7-7 7-7"/>
              </svg>
              <span>Ver todos los estados</span>
            </a>
          </div>

          <!-- Contact -->
          <div class="sin-sidebar__card">
            <h4>Contacto BOMBERO.MX</h4>
            <ul class="sin-sidebar__contact">
              <li><a href="tel:+525520780102">55 2078 0102</a></li>
              <li><a href="https://wa.me/525520780102">WhatsApp</a></li>
              <li><a href="mailto:ventas@bombero.mx">ventas@bombero.mx</a></li>
            </ul>
          </div>
        </aside>
      </div>
    </div>
  </section>
</PageLayout>

