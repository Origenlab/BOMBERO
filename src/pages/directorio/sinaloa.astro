  },
  {
    src: "/images/directorio/sin-culiacan-capital.avif",
    alt: "Ciudad de Culiacán capital de Sinaloa",
    label: "Culiacán"
  },
  {
    src: "/images/directorio/sin-campos-agricolas.avif",
