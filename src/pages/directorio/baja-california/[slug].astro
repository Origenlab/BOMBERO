---
/**
 * ─────────────────────────────────────────────────────────────────────────────
 * PÁGINA DE DETALLE DE ESTACIÓN - BAJA CALIFORNIA
 * ─────────────────────────────────────────────────────────────────────────────
 * Página individual optimizada para SEO con información completa de cada
 * estación de bomberos en Baja California.
 *
 * Incluye:
 * - Información de contacto completa
 * - Servicios y especialidades
 * - Zonas de cobertura
 * - Equipamiento disponible
 * - Historia de la estación
 * - Interlinking completo con el sitio
 * ─────────────────────────────────────────────────────────────────────────────
 */
import PageLayout from "@layouts/PageLayout.astro";
import { estacionesBajaCalifornia, getEstacionBySlug, getEstacionesCercanas, getMunicipios, getEstacionesByMunicipio } from "@data/estaciones-baja-california";

// Generar rutas estáticas para todas las estaciones
export function getStaticPaths() {
  return estacionesBajaCalifornia.map((estacion) => ({
    params: { slug: estacion.slug },
  }));
}

const { slug } = Astro.params;
const estacion = getEstacionBySlug(slug as string);

if (!estacion) {
  return Astro.redirect("/404");
}

// Datos relacionados
const estacionesCercanas = getEstacionesCercanas(slug as string, 4);
const estacionesMismoMunicipio = getEstacionesByMunicipio(estacion.municipio).filter(e => e.slug !== slug);
const municipios = getMunicipios();

// Estados vecinos para interlinking SEO
const estadosVecinos = [
  { nombre: "Baja California Sur", slug: "baja-california-sur" },
  { nombre: "Sonora", slug: "sonora" },
  { nombre: "Aguascalientes", slug: "aguascalientes" },
  { nombre: "Estado de México", slug: "estado-de-mexico" },
  { nombre: "Ciudad de México", slug: "ciudad-de-mexico" },
];

// Productos relacionados para interlinking
const productosRelacionados = [
  { nombre: "Trajes Estructurales NFPA 1971", href: "/productos/trajes-para-bomberos", desc: "Protección máxima certificada" },
  { nombre: "Cascos de Bombero", href: "/productos/cascos-para-bomberos", desc: "Cascos certificados NFPA/ANSI" },
  { nombre: "Equipos SCBA", href: "/productos/scba", desc: "Respiración autónoma Scott/MSA" },
  { nombre: "Herramientas de Rescate", href: "/productos/herramientas-rescate", desc: "Equipo hidráulico Holmatro" },
  { nombre: "Trajes HAZMAT", href: "/productos/hazmat", desc: "Protección química Nivel A/B" },
];

// Formatear teléfono y generar URL de mapa
const telefonoLink = estacion.telefono.replace(/\s/g, '');
const mapUrl = `https://www.google.com/maps/search/${encodeURIComponent(estacion.nombre + ' ' + estacion.direccion + ' ' + estacion.colonia + ' ' + estacion.municipio + ' Baja California México')}`;

// Generar descripción SEO dinámica
const seoDescription = `${estacion.descripcion} Teléfono directo: ${estacion.telefono}. Dirección: ${estacion.direccion}, ${estacion.colonia}, ${estacion.municipio}, Baja California. Emergencias 911. Servicio 24 horas.`;
---

<PageLayout
  title={`${estacion.nombreCorto} | Bomberos ${estacion.municipio}, Baja California | BOMBERO.MX`}
  description={seoDescription}
>
  <!-- Hero Section Optimizado -->
  <section class="est-hero">
    <div class="est-hero__bg">
      <div class="est-hero__gradient"></div>
    </div>
    <div class="container">
      <!-- Breadcrumb con Schema.org -->
      <nav class="est-hero__breadcrumb" aria-label="Breadcrumb" itemscope itemtype="https://schema.org/BreadcrumbList">
        <span itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
          <a href="/" itemprop="item"><span itemprop="name">Inicio</span></a>
          <meta itemprop="position" content="1" />
        </span>
        <span aria-hidden="true">/</span>
        <span itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
          <a href="/directorio" itemprop="item"><span itemprop="name">Directorio</span></a>
          <meta itemprop="position" content="2" />
        </span>
        <span aria-hidden="true">/</span>
        <span itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
          <a href="/directorio/baja-california" itemprop="item"><span itemprop="name">Baja California</span></a>
          <meta itemprop="position" content="3" />
        </span>
        <span aria-hidden="true">/</span>
        <span itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
          <span itemprop="name" aria-current="page">{estacion.nombreCorto}</span>
          <meta itemprop="position" content="4" />
        </span>
      </nav>

      <div class="est-hero__grid">
        <div class="est-hero__content">
          <div class="est-hero__badges">
            <span class="est-hero__badge est-hero__badge--municipio">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                <circle cx="12" cy="10" r="3"/>
              </svg>
              {estacion.municipio}, BC
            </span>
            <span class="est-hero__badge est-hero__badge--horario">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"/>
                <polyline points="12 6 12 12 16 14"/>
              </svg>
              {estacion.horario}
            </span>
            {estacion.tiempoRespuesta && (
              <span class="est-hero__badge est-hero__badge--response">
                Respuesta: {estacion.tiempoRespuesta}
              </span>
            )}
          </div>

          <h1 class="est-hero__title">{estacion.nombre}</h1>
          <p class="est-hero__desc">{estacion.descripcion}</p>

          <div class="est-hero__actions">
            <a href={`tel:${telefonoLink}`} class="est-hero__btn est-hero__btn--primary">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72"/>
              </svg>
              <span>Llamar: {estacion.telefono}</span>
            </a>
            <a href="tel:911" class="est-hero__btn est-hero__btn--emergency">
              <span>911</span>
              Emergencias
            </a>
            <a href={mapUrl} target="_blank" rel="noopener noreferrer" class="est-hero__btn est-hero__btn--secondary">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                <circle cx="12" cy="10" r="3"/>
              </svg>
              <span>Ver en Google Maps</span>
            </a>
          </div>
        </div>

        <!-- Tarjeta de Contacto -->
        <div class="est-hero__card" itemscope itemtype="https://schema.org/FireStation">
          <meta itemprop="name" content={estacion.nombre} />
          <meta itemprop="description" content={estacion.descripcion} />

          <div class="est-hero__card-header">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M3 21h18"/>
              <path d="M5 21V7l8-4 8 4v14"/>
              <path d="M9 21v-4a2 2 0 0 1 2-2h2a2 2 0 0 1 2 2v4"/>
            </svg>
            <span>Información de Contacto Oficial</span>
          </div>

          <div class="est-hero__card-body">
            <div class="est-hero__info-row" itemprop="address" itemscope itemtype="https://schema.org/PostalAddress">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                <circle cx="12" cy="10" r="3"/>
              </svg>
              <div>
                <strong>Dirección</strong>
                <span>
                  <span itemprop="streetAddress">{estacion.direccion}, {estacion.colonia}</span>,
                  CP <span itemprop="postalCode">{estacion.codigoPostal}</span>
                </span>
                <meta itemprop="addressLocality" content={estacion.ciudad} />
                <meta itemprop="addressRegion" content="Baja California" />
                <meta itemprop="addressCountry" content="MX" />
              </div>
            </div>

            <div class="est-hero__info-row">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72"/>
              </svg>
              <div>
                <strong>Teléfono Directo</strong>
                <a href={`tel:${telefonoLink}`} itemprop="telephone">{estacion.telefono}</a>
              </div>
            </div>

            <div class="est-hero__info-row est-hero__info-row--emergency">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07"/>
              </svg>
              <div>
                <strong>Emergencias</strong>
                <a href="tel:911" class="est-hero__emergency-link">911</a>
              </div>
            </div>

            {estacion.email && (
              <div class="est-hero__info-row">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                  <polyline points="22,6 12,13 2,6"/>
                </svg>
                <div>
                  <strong>Correo Electrónico</strong>
                  <a href={`mailto:${estacion.email}`} itemprop="email">{estacion.email}</a>
                </div>
              </div>
            )}

            <div class="est-hero__info-row">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
                <line x1="16" y1="2" x2="16" y2="6"/>
                <line x1="8" y1="2" x2="8" y2="6"/>
                <line x1="3" y1="10" x2="21" y2="10"/>
              </svg>
              <div>
                <strong>Ubicación</strong>
                <span>{estacion.ciudad}, {estacion.municipio}, Baja California</span>
              </div>
            </div>

            <meta itemprop="openingHours" content="Mo-Su 00:00-24:00" />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="est-main">
    <div class="container">
      <div class="est-main__grid">
        <!-- Content Principal -->
        <div class="est-main__content">
          <!-- Servicios de Emergencia -->
          <article class="est-section">
            <h2 class="est-section__title">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10"/>
              </svg>
              Servicios de Emergencia en {estacion.municipio}
            </h2>
            <p class="est-section__intro">
              La <strong>{estacion.nombreCorto}</strong> brinda los siguientes servicios de emergencia profesionales
              a los habitantes de <strong>{estacion.municipio}</strong> y comunidades aledañas en
              <strong>Baja California</strong>. Personal capacitado las <strong>24 horas del día, 365 días del año</strong>:
            </p>
            <ul class="est-services">
              {estacion.servicios.map((servicio) => (
                <li class="est-services__item">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                    <polyline points="20 6 9 17 4 12"/>
                  </svg>
                  <span>{servicio}</span>
                </li>
              ))}
            </ul>
          </article>

          <!-- Especialidades -->
          {estacion.especialidades && estacion.especialidades.length > 0 && (
            <article class="est-section">
              <h2 class="est-section__title">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                </svg>
                Especialidades y Capacidades Únicas
              </h2>
              <p class="est-section__intro">
                Esta estación cuenta con <strong>capacitación especializada</strong> y equipamiento específico para:
              </p>
              <div class="est-specialties">
                {estacion.especialidades.map((esp) => (
                  <div class="est-specialties__item">
                    <span class="est-specialties__icon">
                      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10"/>
                      </svg>
                    </span>
                    <span>{esp}</span>
                  </div>
                ))}
              </div>
            </article>
          )}

          <!-- Zonas de Cobertura -->
          <article class="est-section">
            <h2 class="est-section__title">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"/>
                <line x1="2" y1="12" x2="22" y2="12"/>
                <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/>
              </svg>
              Zonas de Cobertura en {estacion.municipio}
            </h2>
            <p class="est-section__intro">
              La <strong>{estacion.nombreCorto}</strong> brinda cobertura prioritaria a las siguientes
              colonias, fraccionamientos y zonas del municipio de <strong>{estacion.municipio}, Baja California</strong>:
            </p>
            <div class="est-zones">
              {estacion.zonasCobertura.map((zona) => (
                <span class="est-zones__tag">{zona}</span>
              ))}
            </div>
            {estacion.tiempoRespuesta && (
              <p class="est-section__note">
                <strong>Tiempo de respuesta promedio:</strong> {estacion.tiempoRespuesta}
              </p>
            )}
          </article>

          <!-- Equipamiento y Unidades -->
          {estacion.equipamiento && estacion.equipamiento.length > 0 && (
            <article class="est-section">
              <h2 class="est-section__title">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M14 18V6a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2v11a1 1 0 0 0 1 1h2"/>
                  <path d="M15 18H9"/>
                  <path d="M19 18h2a1 1 0 0 0 1-1v-3.65a1 1 0 0 0-.22-.624l-3.48-4.35A1 1 0 0 0 17.52 8H14"/>
                  <circle cx="17" cy="18" r="2"/>
                  <circle cx="7" cy="18" r="2"/>
                </svg>
                Equipamiento y Unidades de Emergencia
              </h2>
              <p class="est-section__intro">
                Esta estación cuenta con <strong>equipamiento profesional de última generación</strong>
                para atender todo tipo de emergencias:
              </p>
              <ul class="est-equipment">
                {estacion.equipamiento.map((equipo) => (
                  <li>{equipo}</li>
                ))}
              </ul>
              {estacion.unidadesDisponibles && (
                <div class="est-units">
                  <h4>Unidades Operativas Disponibles:</h4>
                  <div class="est-units__grid">
                    {estacion.unidadesDisponibles.map((unidad) => (
                      <span class="est-units__item">{unidad}</span>
                    ))}
                  </div>
                </div>
              )}
            </article>
          )}

          <!-- Personal y Recursos -->
          {(estacion.personalActivo || estacion.unidadesDisponibles) && (
            <article class="est-section">
              <h2 class="est-section__title">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                  <circle cx="9" cy="7" r="4"/>
                  <path d="M23 21v-2a4 4 0 0 0-3-3.87"/>
                  <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
                </svg>
                Personal y Recursos Operativos
              </h2>
              <div class="est-stats">
                {estacion.personalActivo && (
                  <div class="est-stats__item">
                    <span class="est-stats__number">{estacion.personalActivo}</span>
                    <span class="est-stats__label">Bomberos Activos</span>
                  </div>
                )}
                {estacion.unidadesDisponibles && (
                  <div class="est-stats__item">
                    <span class="est-stats__number">{estacion.unidadesDisponibles.length}</span>
                    <span class="est-stats__label">Unidades Operativas</span>
                  </div>
                )}
                <div class="est-stats__item">
                  <span class="est-stats__number">24/7</span>
                  <span class="est-stats__label">Disponibilidad</span>
                </div>
                <div class="est-stats__item">
                  <span class="est-stats__number">365</span>
                  <span class="est-stats__label">Días al Año</span>
                </div>
              </div>
            </article>
          )}

          <!-- Historia -->
          {estacion.historia && (
            <article class="est-section">
              <h2 class="est-section__title">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/>
                  <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/>
                </svg>
                Historia de la Estación
              </h2>
              <p class="est-section__text">{estacion.historia}</p>
            </article>
          )}

          <!-- SEO Content Premium -->
          <article class="est-section est-section--seo">
            <h2>Bomberos en {estacion.municipio}, Baja California</h2>
            <p>
              La <strong>{estacion.nombreCorto}</strong> forma parte del <strong>Heroico Cuerpo de Bomberos
              de {estacion.municipio}</strong>, institución comprometida con la protección de los habitantes
              de <strong>Baja California</strong>. Ubicada en <strong>{estacion.direccion}, colonia {estacion.colonia},
              {estacion.ciudad}</strong>, esta estación brinda servicio de emergencias las <strong>24 horas del día,
              los 365 días del año</strong>.
            </p>

            <h3>¿Cómo Contactar a los Bomberos de {estacion.municipio}?</h3>
            <p>
              En caso de <strong>emergencia en {estacion.municipio}, Baja California</strong>, marca el
              <strong>911</strong> para contacto inmediato con servicios de emergencia. También puedes
              comunicarte directamente con esta estación al <strong>{estacion.telefono}</strong>.
              {estacion.tiempoRespuesta && ` El tiempo de respuesta promedio es de ${estacion.tiempoRespuesta}.`}
            </p>

            <h3>{estacion.municipio}: Contexto Regional</h3>
            <p>
              <strong>{estacion.municipio}</strong> es uno de los municipios más importantes de
              <strong>Baja California</strong>, estado fronterizo con <strong>California, Estados Unidos</strong>.
              {estacion.municipio === 'Tijuana' && ' Tijuana es la ciudad fronteriza más visitada del mundo, con más de 50 millones de cruces anuales.'}
              {estacion.municipio === 'Mexicali' && ' Mexicali, capital del estado, enfrenta temperaturas extremas que pueden superar los 50°C en verano.'}
              {estacion.municipio === 'Ensenada' && ' Ensenada es el puerto de altura más importante del Pacífico mexicano y capital del vino mexicano.'}
              {estacion.municipio === 'Tecate' && ' Tecate es mundialmente conocida por su industria cervecera y paisajes montañosos.'}
              {estacion.municipio === 'Playas de Rosarito' && ' Playas de Rosarito es un destino turístico costero que recibe miles de visitantes de California semanalmente.'}
              Los bomberos de esta región están especialmente capacitados para los desafíos únicos de la zona fronteriza.
            </p>

            <h3>Equipo Certificado para Bomberos</h3>
            <p>
              En <strong><a href="/">BOMBERO.MX</a></strong> somos distribuidores autorizados de
              <strong>equipo profesional para bomberos certificado NFPA</strong>. Equipamos estaciones en
              <strong>{estacion.municipio}</strong> y todo <strong>Baja California</strong> con
              <a href="/productos/trajes-para-bomberos">trajes estructurales NFPA 1971</a>,
              <a href="/productos/cascos-para-bomberos">cascos certificados</a>,
              <a href="/productos/scba">equipos de respiración autónoma SCBA</a>,
              <a href="/productos/herramientas-rescate">herramientas de rescate Holmatro</a> y
              <a href="/productos/hazmat">trajes HAZMAT</a>.
              <a href="/cotizar">Solicita una cotización</a> sin compromiso.
            </p>
          </article>
        </div>

        <!-- Sidebar Optimizado -->
        <aside class="est-sidebar">
          <!-- Emergency Card -->
          <div class="est-sidebar__card est-sidebar__card--emergency">
            <h4>Emergencias 24/7</h4>
            <a href="tel:911" class="est-sidebar__emergency">
              <span class="est-sidebar__emergency-number">911</span>
              <span class="est-sidebar__emergency-label">Llamar ahora</span>
            </a>
            <p>Número único de emergencias en {estacion.municipio} y todo Baja California</p>
            <a href={`tel:${telefonoLink}`} class="est-sidebar__direct-call">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07"/>
              </svg>
              Directo: {estacion.telefono}
            </a>
          </div>

          <!-- Estaciones en el mismo municipio -->
          {estacionesMismoMunicipio.length > 0 && (
            <div class="est-sidebar__card">
              <h4>Más Estaciones en {estacion.municipio}</h4>
              <ul class="est-sidebar__stations">
                {estacionesMismoMunicipio.slice(0, 4).map((est) => (
                  <li>
                    <a href={`/directorio/baja-california/${est.slug}`}>
                      <span class="est-sidebar__station-name">{est.nombreCorto}</span>
                      <span class="est-sidebar__station-zona">{est.colonia}</span>
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          )}

          <!-- Estaciones Cercanas -->
          <div class="est-sidebar__card">
            <h4>Otras Estaciones en BC</h4>
            <ul class="est-sidebar__stations">
              {estacionesCercanas.map((est) => (
                <li>
                  <a href={`/directorio/baja-california/${est.slug}`}>
                    <span class="est-sidebar__station-name">{est.nombreCorto}</span>
                    <span class="est-sidebar__station-municipio">{est.municipio}</span>
                  </a>
                </li>
              ))}
            </ul>
            <a href="/directorio/baja-california" class="est-sidebar__link">
              Ver las 22 estaciones de BC
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
