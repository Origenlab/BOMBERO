  {
    nombre: "Costa Oaxaqueña",
    desc: "Huatulco 9 bahías, Puerto Escondido (Zicatela), Pochutla, Zipolite"
  },
  {
    nombre: "Istmo de Tehuantepec",
    desc: "Juchitán, Salina Cruz (Refinería HAZMAT), Tehuantepec, Corredor Interoceánico"
  },
  {
    nombre: "Sierra Norte y Mixteca",
    desc: "Ixtlán, Capulálpam (Pueblo Mágico), Huajuapan, Tlaxiaco"
  }
];

// Tarjetas de equipamiento EPP
const eppCards = [
  {
    image: "/images/productos/equipo-rescate-acuatico.avif",
    imageAlt: "Equipo de rescate acuático para playas de Oaxaca",
