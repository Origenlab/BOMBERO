---
/**
 * ═══════════════════════════════════════════════════════════════════════════════
 * DIRECTORIO DE BOMBEROS - OAXACA
 * ═══════════════════════════════════════════════════════════════════════════════
 * Estado pluricultural con 16 grupos étnicos
 * 2 sitios Patrimonio UNESCO: Centro Histórico + Monte Albán
 * Costa turística: Huatulco, Puerto Escondido
 * Istmo de Tehuantepec: Refinería y puerto industrial
 * ═══════════════════════════════════════════════════════════════════════════════
 */

import PageLayout from "@layouts/PageLayout.astro";
import { breadcrumbJsonLd } from "@utils/seo";
import {
  estacionesOaxaca,
  OAXACA_SEO,
  ZONAS_OAXACA,
  ALERTAS_OAXACA,
  FAQ_OAXACA,
  CONTEXTO_OAXACA,
  INFRAESTRUCTURA_OAXACA,
  getEstacionesPorZona,
  getEstacionesCosteras,
  getEstacionesHAZMAT,
  getEstacionesUNESCO,
  generarInterlinking,
  getAlertasActivas
} from "@data/estaciones-oaxaca";

// Configuración de página
const title = `${OAXACA_SEO.titulo} | Directorio BOMBERO.MX`;
const description = OAXACA_SEO.descripcion;

// Estadísticas
const totalEstaciones = estacionesOaxaca.length;
const estacionesCosteras = getEstacionesCosteras();
const estacionesHAZMAT = getEstacionesHAZMAT();
const estacionesUNESCO = getEstacionesUNESCO();

// Interlinking
const { estados: estadosVecinos, productos: productosRelacionados } = generarInterlinking();

// Alertas activas
const alertasActivas = getAlertasActivas();

// Schema.org múltiple para máximo SEO
const schemaOrg = {
  "@context": "https://schema.org",
  "@graph": [
    // GovernmentOrganization
    {
      "@type": "GovernmentOrganization",
      "name": "H. Cuerpo de Bomberos de Oaxaca",
      "description": "Servicio de bomberos del estado de Oaxaca, México",
      "areaServed": {
        "@type": "State",
        "name": "Oaxaca",
        "containedInPlace": { "@type": "Country", "name": "México" }
      },
      "numberOfEmployees": estacionesOaxaca.reduce((sum, e) => sum + (e.personal || 0), 0),
      "knowsAbout": ["Combate de incendios", "Rescate acuático", "HAZMAT", "Rescate patrimonio UNESCO"]
    },
    // ItemList de estaciones
    {
      "@type": "ItemList",
      "name": "Estaciones de Bomberos en Oaxaca",
      "description": `Directorio de ${totalEstaciones} estaciones de bomberos en el estado de Oaxaca`,
      "numberOfItems": totalEstaciones,
      "itemListElement": estacionesOaxaca.map((estacion, index) => ({
        "@type": "ListItem",
        "position": index + 1,
        "item": {
          "@type": "FireStation",
          "name": estacion.nombre,
          "address": estacion.direccion,
          "telephone": estacion.telefono
        }
      }))
    },
    // BreadcrumbList
    {
      "@type": "BreadcrumbList",
      "itemListElement": [
        { "@type": "ListItem", "position": 1, "name": "Inicio", "item": "https://bombero.mx" },
        { "@type": "ListItem", "position": 2, "name": "Directorio", "item": "https://bombero.mx/directorio" },
        { "@type": "ListItem", "position": 3, "name": "Oaxaca", "item": "https://bombero.mx/directorio/oaxaca" }
      ]
    },
    // FAQPage
    {
      "@type": "FAQPage",
      "mainEntity": FAQ_OAXACA.map(faq => ({
        "@type": "Question",
        "name": faq.pregunta,
        "acceptedAnswer": {
          "@type": "Answer",
          "text": faq.respuesta
        }
      }))
    },
    // TouristDestination (Oaxaca UNESCO)
    {
      "@type": "TouristDestination",
      "name": "Oaxaca de Juárez",
      "description": "Ciudad Patrimonio de la Humanidad UNESCO con zonas arqueológicas",
      "includesAttraction": [
        { "@type": "LandmarksOrHistoricalBuildings", "name": "Centro Histórico de Oaxaca" },
        { "@type": "LandmarksOrHistoricalBuildings", "name": "Monte Albán" }
      ]
    }
  ]
};

const keywords = [
  "bomberos oaxaca",
  "estaciones bomberos oaxaca ciudad",
  "emergencias oaxaca 911",
  "bomberos costa oaxaca",
  "bomberos sierra juárez",
  "cuerpo bomberos oaxaca",
  "rescate oaxaca",
];
const breadcrumbSchema = breadcrumbJsonLd([
  { name: "Inicio", url: "/" },
  { name: "Directorio de Bomberos", url: "/directorio" },
  { name: "Oaxaca", url: "/directorio/oaxaca" },
]);
---

<PageLayout
  title={title}
  description={description}
  keywords={keywords}
  canonical="https://bombero.mx/directorio/oaxaca"
  jsonLd={[breadcrumbSchema, schemaOrg]}
>

  <!-- Hero Section -->
  <section class="oax-hero">
    <div class="oax-hero__bg">
      <div class="oax-hero__gradient"></div>
      <div class="oax-hero__pattern"></div>
    </div>
    <div class="container">
      <div class="oax-hero__container">
        <!-- Breadcrumb -->
        <nav class="oax-breadcrumb" aria-label="Breadcrumb">
          <ol>
            <li><a href="/">Inicio</a></li>
            <li><a href="/directorio">Directorio</a></li>
            <li aria-current="page">Oaxaca</li>
          </ol>
        </nav>

        <!-- Alertas Activas -->
        {alertasActivas.length > 0 && (
          <div class="oax-alerts">
            {alertasActivas.map(alerta => (
              <div class={`oax-alert oax-alert--${alerta.tipo}`}>
                <span class="oax-alert__icon">{alerta.icono}</span>
                <span class="oax-alert__text">{alerta.mensaje}</span>
              </div>
            ))}
          </div>
        )}

        <div class="oax-hero__content">
          <div class="oax-hero__badges">
            <span class="oax-hero__badge oax-hero__badge--unesco">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 2L2 7l10 5 10-5-10-5z"/>
                <path d="M2 17l10 5 10-5"/>
                <path d="M2 12l10 5 10-5"/>
              </svg>
              2 Sitios UNESCO
            </span>
            <span class="oax-hero__badge oax-hero__badge--cultural">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"/>
                <path d="M2 12h20M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/>
              </svg>
              16 Grupos Étnicos
            </span>
          </div>

          <h1 class="oax-hero__title">
            Estaciones de Bomberos en
            <span class="oax-hero__highlight">Oaxaca</span>
          </h1>

          <p class="oax-hero__desc">
            Directorio completo del <strong>H. Cuerpo de Bomberos de Oaxaca</strong>.
            {totalEstaciones} estaciones protegiendo el <strong>Centro Histórico UNESCO</strong>,
            <strong>Monte Albán</strong>, la <strong>Costa Oaxaqueña</strong> y el
            <strong>Istmo de Tehuantepec</strong>.
          </p>

          <!-- Stats -->
          <div class="oax-hero__stats">
            <div class="oax-hero__stat">
              <span class="oax-hero__stat-number">{totalEstaciones}</span>
              <span class="oax-hero__stat-label">Estaciones</span>
            </div>
            <div class="oax-hero__stat">
              <span class="oax-hero__stat-number">{estacionesCosteras.length}</span>
              <span class="oax-hero__stat-label">Rescate Acuático</span>
            </div>
            <div class="oax-hero__stat">
              <span class="oax-hero__stat-number">{estacionesUNESCO.length}</span>
              <span class="oax-hero__stat-label">Cobertura UNESCO</span>
            </div>
            <div class="oax-hero__stat">
              <span class="oax-hero__stat-number">911</span>
              <span class="oax-hero__stat-label">Emergencias</span>
            </div>
          </div>

          <!-- Bilingual Section -->
          <div class="oax-hero__bilingual">
            <span class="oax-hero__bilingual-flag">EN</span>
            <p>{OAXACA_SEO.bilingue.descripcion}</p>
          </div>
        </div>

        <!-- Emergency Card -->
        <div class="oax-hero__emergency">
          <div class="oax-emergency-card">
            <div class="oax-emergency-card__header">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
              </svg>
              <span>Emergencias Oaxaca</span>
            </div>
            <a href="tel:911" class="oax-emergency-card__number">911</a>
            <p class="oax-emergency-card__note">Número único de emergencias en todo México</p>
            <div class="oax-emergency-card__locals">
              <div class="oax-emergency-card__local">
                <span class="oax-emergency-card__local-city">Oaxaca Centro</span>
                <a href="tel:+529515162424">(951) 516-2424</a>
              </div>
              <div class="oax-emergency-card__local">
                <span class="oax-emergency-card__local-city">Huatulco</span>
                <a href="tel:+529585870106">(958) 587-0106</a>
              </div>
              <div class="oax-emergency-card__local">
                <span class="oax-emergency-card__local-city">Puerto Escondido</span>
                <a href="tel:+529545820222">(954) 582-0222</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Patrimonio UNESCO Section -->
  <section class="oax-unesco">
    <div class="container">
      <div class="oax-unesco__header">
        <span class="oax-unesco__badge">Patrimonio de la Humanidad</span>
        <h2>Protección de Sitios UNESCO en Oaxaca</h2>
        <p>Nuestros bomberos protegen dos de los tesoros culturales más importantes de México</p>
      </div>

      <div class="oax-unesco__grid">
        {CONTEXTO_OAXACA.patrimonioUnesco.map(sitio => (
          <div class="oax-unesco__card">
            <div class="oax-unesco__card-year">{sitio.declaracion}</div>
            <h3>{sitio.sitio}</h3>
            <p>{sitio.descripcion}</p>
            <div class="oax-unesco__card-stats">
              <span>{sitio.visitantesAnuales} visitantes/año</span>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Zonas Grid -->
  <section class="oax-zones">
    <div class="container">
      <div class="oax-section-header">
        <span class="oax-section-header__label">6 Regiones</span>
        <h2 class="oax-section-header__title">Cobertura por Zona Geográfica</h2>
        <p class="oax-section-header__desc">
          Oaxaca cuenta con {totalEstaciones} estaciones distribuidas estratégicamente en sus 6 regiones principales
        </p>
      </div>

      <div class="oax-zones__grid">
        {Object.entries(ZONAS_OAXACA).map(([key, zona]) => {
          const estacionesZona = getEstacionesPorZona(zona.nombre);
          return (
            <div class="oax-zone-card" style={`--zone-color: ${zona.color}`}>
              <div class="oax-zone-card__header">
                <h3>{zona.nombre}</h3>
                <span class="oax-zone-card__count">{estacionesZona.length} estaciones</span>
              </div>
              <p class="oax-zone-card__desc">{zona.descripcion}</p>
              <div class="oax-zone-card__features">
                {zona.caracteristicas.slice(0, 3).map(car => (
                  <span class="oax-zone-card__feature">{car}</span>
                ))}
              </div>
              <ul class="oax-zone-card__stations">
                {estacionesZona.slice(0, 3).map(e => (
                  <li>
                    <a href={`/directorio/oaxaca/${e.slug}`}>{e.nombre.replace("Estación de Bomberos ", "").replace("Estación Central ", "")}</a>
                  </li>
                ))}
                {estacionesZona.length > 3 && (
                  <li class="oax-zone-card__more">+{estacionesZona.length - 3} más</li>
                )}
              </ul>
            </div>
          );
        })}
      </div>
    </div>
  </section>

  <!-- Estaciones List -->
  <section class="oax-stations">
    <div class="container">
      <div class="oax-section-header">
        <span class="oax-section-header__label">{totalEstaciones} Estaciones</span>
        <h2 class="oax-section-header__title">Directorio Completo de Estaciones</h2>
        <p class="oax-section-header__desc">
          Información de contacto, servicios y cobertura de todas las estaciones de bomberos en Oaxaca
        </p>
      </div>

      <div class="oax-stations__grid">
        {estacionesOaxaca.map((estacion) => (
          <a href={`/directorio/oaxaca/${estacion.slug}`} class="oax-station-card">
            <div class="oax-station-card__header">
              <span class="oax-station-card__zone" style={`--zone-color: ${ZONAS_OAXACA[Object.keys(ZONAS_OAXACA).find(k => ZONAS_OAXACA[k as keyof typeof ZONAS_OAXACA].nombre === estacion.zona) || 'vallesCentrales']?.color || '#7c3aed'}`}>
                {estacion.zona}
              </span>
              {estacion.caracteristicasEspeciales?.some(c => c.toLowerCase().includes('unesco')) && (
                <span class="oax-station-card__badge oax-station-card__badge--unesco">UNESCO</span>
              )}
              {estacion.caracteristicasEspeciales?.some(c => c.toLowerCase().includes('hazmat')) && (
                <span class="oax-station-card__badge oax-station-card__badge--hazmat">HAZMAT</span>
              )}
              {estacion.caracteristicasEspeciales?.some(c => c.toLowerCase().includes('acuático') || c.toLowerCase().includes('surf')) && (
                <span class="oax-station-card__badge oax-station-card__badge--aquatic">Rescate Acuático</span>
              )}
            </div>

            <h3 class="oax-station-card__name">
              {estacion.nombre.replace("Estación de Bomberos ", "").replace("Estación Central ", "")}
            </h3>

            <p class="oax-station-card__address">{estacion.direccion}</p>

            <div class="oax-station-card__contact">
              <span class="oax-station-card__phone">{estacion.telefono}</span>
              {estacion.personal && (
                <span class="oax-station-card__personnel">{estacion.personal} bomberos</span>
              )}
            </div>

            <div class="oax-station-card__services">
              {estacion.servicios.slice(0, 3).map(servicio => (
                <span class="oax-station-card__service">{servicio}</span>
              ))}
            </div>

            <span class="oax-station-card__cta">Ver detalles completos</span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="oax-faq">
    <div class="container">
      <div class="oax-section-header">
        <span class="oax-section-header__label">Preguntas Frecuentes</span>
        <h2 class="oax-section-header__title">Información sobre Bomberos en Oaxaca</h2>
      </div>

      <div class="oax-faq__grid">
        {FAQ_OAXACA.map((faq, index) => (
          <details class="oax-faq__item" open={index === 0}>
            <summary class="oax-faq__question">{faq.pregunta}</summary>
            <p class="oax-faq__answer">{faq.respuesta}</p>
          </details>
        ))}
      </div>
    </div>
  </section>

  <!-- Interlinking Estados Vecinos -->
  <section class="oax-interlinking">
    <div class="container">
      <div class="oax-section-header">
        <span class="oax-section-header__label">Estados Vecinos</span>
        <h2 class="oax-section-header__title">Bomberos en Estados Cercanos a Oaxaca</h2>
        <p class="oax-section-header__desc">
          Coordinación regional con cuerpos de bomberos de estados limítrofes
        </p>
      </div>

      <div class="oax-interlinking__grid">
        {estadosVecinos.map(estado => (
          <a href={`/directorio/${estado.slug}`} class="oax-neighbor-card">
            <h3>{estado.estado}</h3>
            <p class="oax-neighbor-card__relation">{estado.relacion}</p>
            <p class="oax-neighbor-card__context">{estado.contexto}</p>
            <span class="oax-neighbor-card__link">Ver estaciones en {estado.estado}</span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Interlinking Productos -->
  <section class="oax-products">
    <div class="container">
      <div class="oax-section-header">
        <span class="oax-section-header__label">Equipamiento</span>
        <h2 class="oax-section-header__title">Equipo para Bomberos de Oaxaca</h2>
        <p class="oax-section-header__desc">
          Equipamiento certificado NFPA para las necesidades específicas de Oaxaca
        </p>
      </div>

      <div class="oax-products__grid">
        {productosRelacionados.map(producto => (
          <a href={producto.slug} class="oax-product-card">
            <h3>{producto.producto}</h3>
            <p>{producto.contexto}</p>
            <span class="oax-product-card__cta">Ver productos</span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- SEO Content -->
  <section class="oax-seo">
    <div class="container">
      <div class="oax-seo__content">
        <h2>Bomberos de Oaxaca: Protegiendo el Patrimonio Cultural de México</h2>
        <p>
          El <strong>H. Cuerpo de Bomberos de Oaxaca</strong> tiene la importante misión de proteger uno de los
          estados más diversos culturalmente de México. Con <strong>{totalEstaciones} estaciones</strong> distribuidas
          en 6 regiones, los bomberos oaxaqueños cubren desde el <strong>Centro Histórico Patrimonio UNESCO</strong>
          hasta las playas de <strong>Huatulco y Puerto Escondido</strong>, pasando por la zona industrial del
          <strong>Istmo de Tehuantepec</strong>.
        </p>

        <h3>Protección del Patrimonio UNESCO</h3>
        <p>
          Oaxaca alberga dos sitios declarados <strong>Patrimonio de la Humanidad por la UNESCO</strong>: el
          Centro Histórico de la ciudad y la zona arqueológica de <strong>Monte Albán</strong>. Los bomberos
          cuentan con equipo especializado para la protección de estructuras patrimoniales, con protocolos
          específicos para emergencias en edificios históricos y zonas arqueológicas.
        </p>

        <h3>Cobertura Turística Costa Oaxaqueña</h3>
        <p>
          Las estaciones de <strong>Huatulco</strong>, <strong>Puerto Escondido</strong> y <strong>Pochutla</strong>
          brindan cobertura a los principales destinos turísticos de playa del estado. Personal capacitado en
          <strong>rescate acuático</strong>, atención bilingüe para turistas internacionales, y equipamiento
          especializado para emergencias en las 9 Bahías de Huatulco y las famosas olas de Zicatela.
        </p>

        <h3>Capacidad Industrial y HAZMAT</h3>
        <p>
          La estación <strong>HAZMAT de Salina Cruz</strong> protege la <strong>Refinería Antonio Dovalí Jaime</strong>
          (330,000 barriles/día) y el Puerto de Salina Cruz, parte del estratégico <strong>Corredor Interoceánico
          del Istmo de Tehuantepec</strong>. Capacidad de respuesta nivel III para materiales peligrosos,
          derrames de combustible y emergencias industriales.
        </p>

        <h3>Eventos Masivos: Guelaguetza y Día de Muertos</h3>
        <p>
          Los bomberos de Oaxaca despliegan operativos especiales durante los eventos más importantes del estado:
          la <strong>Guelaguetza</strong> (julio, 100,000+ asistentes) y el <strong>Día de Muertos</strong>
          (octubre-noviembre, 500,000+ turistas). Coordinación con protección civil para manejo de multitudes,
          prevención de incendios por veladoras y pirotecnia.
        </p>
      </div>
    </div>
  </section>
</PageLayout>

<style>
  /* ═══════════════════════════════════════════════════════════════════════════
     OAXACA - PÁGINA DE DIRECTORIO
     Theme: Púrpura cultural (#7c3aed) - Patrimonio UNESCO
     ═══════════════════════════════════════════════════════════════════════════ */

  :root {
    --oax-primary: #7c3aed;
    --oax-primary-dark: #6d28d9;
    --oax-primary-light: #a78bfa;
    --oax-accent: #f59e0b;
    --oax-unesco: #0ea5e9;
  }

  /* ═══ Hero Section ═══ */
  .oax-hero {
    position: relative;
    padding: var(--space-16) 0;
    background: linear-gradient(135deg, #1e1b4b 0%, #312e81 50%, #4c1d95 100%);
    overflow: hidden;
  }

  .oax-hero__bg {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .oax-hero__gradient {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(ellipse 80% 50% at 20% 20%, rgba(124, 58, 237, 0.3), transparent),
      radial-gradient(ellipse 60% 40% at 80% 80%, rgba(245, 158, 11, 0.2), transparent);
  }

  .oax-hero__pattern {
    position: absolute;
    inset: 0;
    background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M30 0L60 30L30 60L0 30z' fill='none' stroke='%23ffffff08' stroke-width='1'/%3E%3C/svg%3E");
    background-size: 60px 60px;
  }

  .oax-hero__container {
    position: relative;
    display: grid;
    grid-template-columns: 1fr 380px;
    gap: var(--space-10);
    align-items: start;
  }

  /* Breadcrumb */
  .oax-breadcrumb ol {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    list-style: none;
    padding: 0;
    margin: 0 0 var(--space-6);
  }

  .oax-breadcrumb li {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-sm);
    color: rgba(255, 255, 255, 0.6);
  }

  .oax-breadcrumb li:not(:last-child)::after {
    content: "/";
    color: rgba(255, 255, 255, 0.3);
  }

  .oax-breadcrumb a {
    color: rgba(255, 255, 255, 0.6);
    text-decoration: none;
    transition: color 0.2s;
  }

  .oax-breadcrumb a:hover {
    color: white;
  }

  .oax-breadcrumb [aria-current="page"] {
    color: var(--oax-primary-light);
    font-weight: 600;
  }

  /* Alerts */
  .oax-alerts {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
    margin-bottom: var(--space-6);
  }

  .oax-alert {
    display: flex;
