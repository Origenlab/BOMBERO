---
/**
 * ─── Página de Detalle de Estación de Bomberos ───
 * Página individual con toda la información de una estación
 * Incluye interlinking completo con el resto del sitio
 */
import PageLayout from "@layouts/PageLayout.astro";
import { estacionesCDMX, getEstacionBySlug, getEstacionesCercanas } from "@data/estaciones-cdmx";

// Generar rutas estáticas
export function getStaticPaths() {
  return estacionesCDMX.map((estacion) => ({
    params: { slug: estacion.slug },
  }));
}

const { slug } = Astro.params;
const estacion = getEstacionBySlug(slug as string);

if (!estacion) {
  return Astro.redirect("/404");
}

const estacionesCercanas = getEstacionesCercanas(slug as string, 3);

// Estados vecinos para interlinking
const estadosVecinos = [
  { nombre: "Estado de México", slug: "estado-de-mexico" },
  { nombre: "Morelos", slug: "morelos" },
  { nombre: "Hidalgo", slug: "hidalgo" },
  { nombre: "Puebla", slug: "puebla" },
];

// Categorías de productos relacionados
const productosRelacionados = [
  { nombre: "Trajes Estructurales", href: "/productos/trajes-para-bomberos", desc: "Trajes NFPA 1971 para bomberos" },
  { nombre: "Cascos de Bombero", href: "/productos/cascos", desc: "Cascos certificados NFPA" },
  { nombre: "Equipos SCBA", href: "/productos/scba", desc: "Equipos de respiración autónoma" },
  { nombre: "Herramientas de Rescate", href: "/productos/herramientas-rescate", desc: "Equipo Holmatro y más" },
];

// Formatear teléfono
const telefonoLink = estacion.telefono.replace(/\s/g, '');
const ubicacion = estacion.alcaldia ?? estacion.ciudad;
const mapUrl = `https://www.google.com/maps/search/${encodeURIComponent(estacion.nombre + ' ' + estacion.direccion + ' ' + estacion.colonia + ' ' + ubicacion + ' CDMX')}`;
const canonical = `https://bombero.mx/directorio/ciudad-de-mexico/${estacion.slug}`;
const seoKeywords = [
  `bomberos ${ubicacion.toLowerCase()}`,
  `estacion de bomberos ${ubicacion.toLowerCase()}`,
  `telefono bomberos ${ubicacion.toLowerCase()}`,
  "bomberos cdmx",
  "estaciones de bomberos en mexico",
];
const stationJsonLd = {
  "@context": "https://schema.org",
  "@type": "FireStation",
  name: estacion.nombre,
  description: estacion.descripcion,
  url: canonical,
  telephone: estacion.telefono,
  email: estacion.email,
  openingHours: "Mo-Su 00:00-23:59",
  address: {
    "@type": "PostalAddress",
    streetAddress: [estacion.direccion, estacion.colonia].filter(Boolean).join(", "),
    addressLocality: estacion.ciudad,
    addressRegion: "Ciudad de México",
    postalCode: estacion.codigoPostal,
    addressCountry: "MX",
  },
  geo: {
    "@type": "GeoCoordinates",
    latitude: estacion.coordenadas.lat,
    longitude: estacion.coordenadas.lng,
  },
  areaServed: {
    "@type": "AdministrativeArea",
    name: ubicacion,
  },
};
const breadcrumbJsonLd = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  itemListElement: [
    { "@type": "ListItem", position: 1, name: "Inicio", item: "https://bombero.mx" },
    { "@type": "ListItem", position: 2, name: "Directorio", item: "https://bombero.mx/directorio" },
    { "@type": "ListItem", position: 3, name: "Ciudad de México", item: "https://bombero.mx/directorio/ciudad-de-mexico" },
    { "@type": "ListItem", position: 4, name: estacion.nombre, item: canonical },
  ],
};
---

<PageLayout
  title={`${estacion.nombreCorto} | Bomberos ${ubicacion}, CDMX`}
  description={`${estacion.descripcion} Teléfono: ${estacion.telefono}. Dirección: ${estacion.direccion}, ${estacion.colonia}, ${ubicacion}, CDMX.`}
  keywords={seoKeywords}
  canonical={canonical}
  jsonLd={[stationJsonLd, breadcrumbJsonLd]}
>
  <!-- Hero Section -->
  <section class="est-hero">
    <div class="est-hero__bg">
      <div class="est-hero__gradient"></div>
    </div>
    <div class="container">
      <!-- Breadcrumb -->
      <nav class="est-hero__breadcrumb">
        <a href="/">Inicio</a>
        <span>/</span>
        <a href="/directorio">Directorio</a>
        <span>/</span>
        <a href="/directorio/ciudad-de-mexico">CDMX</a>
        <span>/</span>
        <span>{estacion.nombreCorto}</span>
      </nav>

      <div class="est-hero__grid">
        <div class="est-hero__content">
          <div class="est-hero__badges">
            <span class="est-hero__badge est-hero__badge--alcaldia">{estacion.alcaldia}</span>
            <span class="est-hero__badge est-hero__badge--horario">{estacion.horario}</span>
          </div>
          <h1 class="est-hero__title">{estacion.nombre}</h1>
          <p class="est-hero__desc">{estacion.descripcion}</p>

          <div class="est-hero__actions">
            <a href={`tel:${telefonoLink}`} class="est-hero__btn est-hero__btn--primary">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72"/>
              </svg>
              <span>Llamar: {estacion.telefono}</span>
            </a>
            <a href={mapUrl} target="_blank" rel="noopener" class="est-hero__btn est-hero__btn--secondary">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                <circle cx="12" cy="10" r="3"/>
              </svg>
              <span>Ver en Google Maps</span>
            </a>
          </div>
        </div>

        <div class="est-hero__card">
          <div class="est-hero__card-header">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M3 21h18"/>
              <path d="M5 21V7l8-4 8 4v14"/>
              <path d="M9 21v-4a2 2 0 0 1 2-2h2a2 2 0 0 1 2 2v4"/>
            </svg>
            <span>Información de Contacto</span>
          </div>
          <div class="est-hero__card-body">
            <div class="est-hero__info-row">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                <circle cx="12" cy="10" r="3"/>
              </svg>
              <div>
                <strong>Dirección</strong>
                <span>{estacion.direccion}, {estacion.colonia}, CP {estacion.codigoPostal}</span>
              </div>
            </div>
            <div class="est-hero__info-row">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72"/>
              </svg>
              <div>
                <strong>Teléfono</strong>
                <a href={`tel:${telefonoLink}`}>{estacion.telefono}</a>
              </div>
            </div>
            <div class="est-hero__info-row">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07"/>
              </svg>
              <div>
                <strong>Emergencias</strong>
                <a href="tel:911" class="est-hero__emergency">911</a>
              </div>
            </div>
            {estacion.tiempoRespuesta && (
              <div class="est-hero__info-row">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"/>
                  <polyline points="12 6 12 12 16 14"/>
                </svg>
                <div>
                  <strong>Tiempo de Respuesta</strong>
                  <span>{estacion.tiempoRespuesta}</span>
                </div>
              </div>
            )}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="est-main">
    <div class="container">
      <div class="est-main__grid">
        <!-- Content -->
        <div class="est-main__content">
          <!-- Servicios -->
          <article class="est-section">
            <h2 class="est-section__title">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10"/>
              </svg>
              Servicios de Emergencia
            </h2>
            <p class="est-section__intro">
              La <strong>{estacion.nombreCorto}</strong> ofrece los siguientes servicios de emergencia
              a los habitantes de <strong>{estacion.alcaldia}</strong> y zonas aledañas:
            </p>
            <ul class="est-services">
              {estacion.servicios.map((servicio) => (
                <li class="est-services__item">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                    <polyline points="20 6 9 17 4 12"/>
                  </svg>
                  <span>{servicio}</span>
                </li>
              ))}
            </ul>
          </article>

          <!-- Especialidades -->
          {estacion.especialidades && estacion.especialidades.length > 0 && (
            <article class="est-section">
              <h2 class="est-section__title">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                </svg>
                Especialidades
              </h2>
              <div class="est-specialties">
                {estacion.especialidades.map((esp) => (
                  <div class="est-specialties__item">
                    <span class="est-specialties__icon">
                      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10"/>
                      </svg>
                    </span>
                    <span>{esp}</span>
                  </div>
                ))}
              </div>
            </article>
          )}

          <!-- Cobertura -->
          <article class="est-section">
            <h2 class="est-section__title">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"/>
                <line x1="2" y1="12" x2="22" y2="12"/>
                <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/>
              </svg>
              Zonas de Cobertura
            </h2>
            <p class="est-section__intro">
              Esta estación brinda cobertura a las siguientes colonias y zonas de la <strong>Alcaldía {estacion.alcaldia}</strong>:
            </p>
            <div class="est-zones">
              {estacion.zonasCobertura.map((zona) => (
                <span class="est-zones__tag">{zona}</span>
              ))}
            </div>
          </article>

          <!-- Equipamiento -->
          {estacion.equipamiento && estacion.equipamiento.length > 0 && (
            <article class="est-section">
              <h2 class="est-section__title">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M14 18V6a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2v11a1 1 0 0 0 1 1h2"/>
                  <path d="M15 18H9"/>
                  <path d="M19 18h2a1 1 0 0 0 1-1v-3.65a1 1 0 0 0-.22-.624l-3.48-4.35A1 1 0 0 0 17.52 8H14"/>
                  <circle cx="17" cy="18" r="2"/>
                  <circle cx="7" cy="18" r="2"/>
                </svg>
                Equipamiento y Unidades
              </h2>
              <ul class="est-equipment">
                {estacion.equipamiento.map((equipo) => (
                  <li>{equipo}</li>
                ))}
              </ul>
              {estacion.unidadesDisponibles && (
                <div class="est-units">
                  <h4>Unidades Operativas:</h4>
                  <div class="est-units__grid">
                    {estacion.unidadesDisponibles.map((unidad) => (
                      <span class="est-units__item">{unidad}</span>
                    ))}
                  </div>
                </div>
              )}
            </article>
          )}

          <!-- Historia -->
          {estacion.historia && (
            <article class="est-section">
              <h2 class="est-section__title">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/>
                  <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/>
                </svg>
                Historia
              </h2>
              <p class="est-section__text">{estacion.historia}</p>
            </article>
          )}

          <!-- SEO Content -->
          <article class="est-section est-section--seo">
            <h2>Estaciones de Bomberos en {estacion.alcaldia}, CDMX</h2>
            <p>
              La <strong>{estacion.nombreCorto}</strong> es parte del <strong>Heroico Cuerpo de Bomberos de la Ciudad de México</strong>,
              institución que desde 1887 protege a los habitantes de la capital mexicana. Esta estación, ubicada en
              <strong>{estacion.direccion}, Colonia {estacion.colonia}</strong>, brinda atención las 24 horas del día,
              los 365 días del año.
            </p>
            <p>
              En caso de <strong>emergencia en {estacion.alcaldia}</strong>, marca el <strong>911</strong> o comunícate directamente
              a esta estación al <strong>{estacion.telefono}</strong>. Los bomberos de CDMX están capacitados para atender
              incendios, rescates vehiculares, fugas de gas, inundaciones y todo tipo de emergencias.
            </p>
            <h3>¿Necesitas equipo certificado para bomberos?</h3>
            <p>
              En <strong><a href="/">BOMBERO.MX</a></strong> somos distribuidores autorizados de <strong>equipo para bomberos certificado NFPA</strong>.
              Equipamos estaciones en toda la República Mexicana con <a href="/productos/trajes-para-bomberos">trajes estructurales</a>,
              <a href="/productos/cascos">cascos</a>, <a href="/productos/scba">equipos SCBA</a>,
              <a href="/productos/herramientas-rescate">herramientas de rescate</a> y más.
              <a href="/cotizar">Solicita una cotización</a> sin compromiso.
            </p>
          </article>
        </div>

        <!-- Sidebar -->
        <aside class="est-sidebar">
          <!-- Emergency Card -->
          <div class="est-sidebar__card est-sidebar__card--emergency">
            <h4>Emergencias</h4>
            <a href="tel:911" class="est-sidebar__emergency">
              <span class="est-sidebar__emergency-number">911</span>
              <span class="est-sidebar__emergency-label">Llamar ahora</span>
            </a>
            <p>Número único de emergencias en CDMX</p>
          </div>

          <!-- Estaciones Cercanas -->
          <div class="est-sidebar__card">
            <h4>Otras Estaciones en CDMX</h4>
            <ul class="est-sidebar__stations">
              {estacionesCercanas.map((est) => (
                <li>
                  <a href={`/directorio/ciudad-de-mexico/${est.slug}`}>
                    <span class="est-sidebar__station-name">{est.nombreCorto}</span>
                    <span class="est-sidebar__station-alcaldia">{est.alcaldia}</span>
                  </a>
                </li>
              ))}
            </ul>
            <a href="/directorio/ciudad-de-mexico" class="est-sidebar__link">
              Ver todas las estaciones
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </a>
          </div>

          <!-- Productos Relacionados -->
          <div class="est-sidebar__card">
            <h4>Equipo para Bomberos</h4>
            <ul class="est-sidebar__products">
              {productosRelacionados.map((prod) => (
                <li>
                  <a href={prod.href}>
                    <span class="est-sidebar__product-name">{prod.nombre}</span>
                    <span class="est-sidebar__product-desc">{prod.desc}</span>
                  </a>
                </li>
              ))}
            </ul>
            <a href="/productos" class="est-sidebar__link">
              Ver catálogo completo
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </a>
          </div>

          <!-- CTA -->
          <div class="est-sidebar__card est-sidebar__card--cta">
            <h4>¿Equipas Bomberos?</h4>
            <p>Distribuimos equipo certificado NFPA a estaciones de bomberos en todo México</p>
            <a href="/cotizar" class="est-sidebar__cta-btn">Solicitar Cotización</a>
          </div>

          <!-- Estados Cercanos -->
          <div class="est-sidebar__card">
            <h4>Directorio Nacional</h4>
            <ul class="est-sidebar__states">
              {estadosVecinos.map((estado) => (
                <li>
                  <a href={`/directorio/${estado.slug}`}>
                    {estado.nombre}
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M5 12h14M12 5l7 7-7 7"/>
                    </svg>
                  </a>
                </li>
              ))}
            </ul>
            <a href="/directorio" class="est-sidebar__link">
              Ver todos los estados
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </a>
          </div>

          <!-- Contacto BOMBERO.MX -->
          <div class="est-sidebar__card">
            <h4>Contacto BOMBERO.MX</h4>
            <ul class="est-sidebar__contact">
              <li>
                <a href="tel:+525520780102">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07"/>
                  </svg>
                  55 2078 0102
                </a>
              </li>
              <li>
                <a href="https://wa.me/525520780102">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"/>
                  </svg>
                  WhatsApp
                </a>
              </li>
              <li>
                <a href="mailto:ventas@bombero.mx">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                    <polyline points="22,6 12,13 2,6"/>
                  </svg>
                  ventas@bombero.mx
                </a>
              </li>
            </ul>
          </div>
        </aside>
      </div>
    </div>
  </section>
</PageLayout>

<style>
  /* ═══════════════════════════════════════════════════════════════════════
     PÁGINA DE DETALLE DE ESTACIÓN
     ═══════════════════════════════════════════════════════════════════════ */

  /* ═══ Hero Section ═══ */
  .est-hero {
    position: relative;
    padding: var(--space-12) 0 var(--space-16);
    background: var(--color-smoke-950);
    overflow: hidden;
  }

  .est-hero__bg {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .est-hero__gradient {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(ellipse 80% 50% at 50% -20%, rgba(220, 38, 38, 0.15), transparent),
      radial-gradient(ellipse 60% 50% at 100% 80%, rgba(249, 115, 22, 0.08), transparent);
  }

  .est-hero__breadcrumb {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-sm);
    margin-bottom: var(--space-6);
    position: relative;
  }

  .est-hero__breadcrumb a {
    color: var(--color-smoke-400);
    text-decoration: none;
  }

  .est-hero__breadcrumb a:hover {
    color: var(--color-fire-400);
  }

  .est-hero__breadcrumb span {
    color: var(--color-smoke-600);
  }

  .est-hero__grid {
    display: grid;
    grid-template-columns: 1fr 400px;
    gap: var(--space-10);
    align-items: start;
    position: relative;
  }

  .est-hero__badges {
    display: flex;
    gap: var(--space-3);
    margin-bottom: var(--space-4);
  }

  .est-hero__badge {
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-full);
    font-size: var(--text-xs);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .est-hero__badge--alcaldia {
    background: rgba(255, 255, 255, 0.1);
    color: white;
  }

  .est-hero__badge--horario {
    background: linear-gradient(135deg, var(--color-fire-500), var(--color-ember-500));
    color: white;
  }

  .est-hero__title {
    font-size: clamp(1.75rem, 3.5vw, 2.5rem);
    font-weight: 800;
    color: white;
    line-height: 1.2;
    margin: 0 0 var(--space-5);
  }

  .est-hero__desc {
    font-size: var(--text-base);
    color: var(--color-smoke-300);
    line-height: 1.8;
    margin: 0 0 var(--space-6);
  }

  .est-hero__actions {
    display: flex;
    gap: var(--space-4);
    flex-wrap: wrap;
  }

  .est-hero__btn {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-4) var(--space-6);
    border-radius: var(--radius-lg);
    font-size: var(--text-sm);
    font-weight: 700;
    text-decoration: none;
    transition: all 0.2s;
  }

  .est-hero__btn--primary {
    background: linear-gradient(135deg, var(--color-fire-500), var(--color-fire-600));
