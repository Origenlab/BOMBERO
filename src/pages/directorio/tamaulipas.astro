    font-size: clamp(2rem, 4vw, 2.75rem);
    font-weight: 800;
    color: white;
    line-height: 1.1;
    margin: 0 0 var(--space-5);
  }

  .tam-hero__highlight {
    background: linear-gradient(135deg, #38bdf8, #0284c7);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
