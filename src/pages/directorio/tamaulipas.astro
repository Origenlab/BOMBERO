  { nombre: "Región Centro", desc: "Ciudad Victoria (capital), San Fernando — corredor carretero federal" },
  { nombre: "Zona Sur / Sierra", desc: "Ciudad Mante, Linares, Reserva El Cielo — bosque de niebla UNESCO" },
];

// ─── Cards de EPP ─────────────────────────────────────────────────────────────
const eppCards = [
  { title: "HAZMAT Gas Natural", desc: "Nivel A para Cuenca de Burgos: metano, condensado, H₂S", icon: "hazmat" },
  { title: "HAZMAT Químico", desc: "Ácido acético, amoniaco, metanol en Puerto Altamira", icon: "chemical" },
  { title: "Rescate Fluvial", desc: "Lanchas para Río Bravo/Grande y Presa Falcón", icon: "water" },
  { title: "Transporte Internacional", desc: "Protocolos UN/DOT para tractocamiones en puentes fronterizos", icon: "truck" },
