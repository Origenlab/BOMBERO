---
/**
 * ─── Directorio de Estaciones de Bomberos Tamaulipas ───
 * Estado del noreste: mayor puerto terrestre de las Américas (Nuevo Laredo),
 * Cuenca de Burgos (gas natural), maquiladora automotriz (Reynosa, Matamoros),
 * Refinería PEMEX Francisco I. Madero, Puerto Industrial Altamira
 */
import PageLayout from "@layouts/PageLayout.astro";
import SectionHeader from "@components/SectionHeader.astro";
import StationCard from "@components/StationCard.astro";
import { estacionesTamaulipas, getMunicipios, ESTADISTICAS_TAMAULIPAS } from "@data/estaciones-tamaulipas";
import { breadcrumbJsonLd } from "@utils/seo";

const municipios = getMunicipios();

const estadosVecinos = [
  { nombre: "Nuevo León", slug: "nuevo-leon" },
  { nombre: "Tamaulipas", slug: "tamaulipas" },
  { nombre: "San Luis Potosí", slug: "san-luis-potosi" },
  { nombre: "Veracruz", slug: "veracruz" },
];

const keywords = [
  "bomberos tamaulipas",
  "estaciones bomberos reynosa",
  "bomberos tampico",
  "emergencias tamaulipas 911",
  "bomberos matamoros tamaulipas",
  "bomberos nuevo laredo",
  "cuerpo bomberos tamaulipas",
  "bomberos ciudad victoria tamaulipas",
  "proteccion civil tamaulipas",
  "bomberos frontera tamaulipas texas",
];

const breadcrumbSchema = breadcrumbJsonLd([
  { name: "Inicio", url: "/" },
  { name: "Directorio de Bomberos", url: "/directorio" },
  { name: "Tamaulipas", url: "/directorio/tamaulipas" },
]);

const itemListSchema = {
  "@context": "https://schema.org",
  "@type": "ItemList",
  "name": "Estaciones de Bomberos en Tamaulipas, México",
  "description": "Directorio oficial de las 20 estaciones de bomberos en Tamaulipas. Reynosa, Matamoros, Nuevo Laredo, Tampico, Ciudad Victoria y todo el estado. PEMEX, maquiladora, Puerto Industrial Altamira y frontera con Texas. Emergencias 911.",
  "numberOfItems": estacionesTamaulipas.length,
  "itemListElement": estacionesTamaulipas.map((e, i) => ({
    "@type": "ListItem",
    "position": i + 1,
    "item": {
      "@type": "FireStation",
      "name": e.nombre,
      "address": {
        "@type": "PostalAddress",
        "streetAddress": e.direccion,
        "addressLocality": e.municipio,
        "addressRegion": "Tamaulipas",
        "addressCountry": "MX"
      },
      "telephone": e.telefono,
      "url": `https://bombero.mx/directorio/tamaulipas/${e.slug}`
    }
  }))
};
---

<PageLayout
  title={`Bomberos en Tamaulipas | ${ESTADISTICAS_TAMAULIPAS.total_estaciones} Estaciones | Directorio Oficial BOMBERO.MX`}
  description="Directorio oficial de las 20 estaciones de bomberos en Tamaulipas. Reynosa, Matamoros, Nuevo Laredo, Tampico, Altamira. PEMEX Cuenca de Burgos, maquiladora automotriz y el mayor puerto terrestre de las Américas. Emergencias 911."
  keywords={keywords}
  canonical="https://bombero.mx/directorio/tamaulipas"
  jsonLd={[breadcrumbSchema, itemListSchema]}
>
  <!-- Hero Section -->
  <section class="tam-hero">
    <div class="tam-hero__bg">
      <div class="tam-hero__gradient"></div>
      <div class="tam-hero__pattern"></div>
    </div>
    <div class="container">
      <div class="tam-hero__container">
        <!-- Left Column -->
        <div class="tam-hero__content">
          <nav class="tam-hero__breadcrumb">
            <a href="/">Inicio</a>
            <span>/</span>
            <a href="/directorio">Directorio</a>
            <span>/</span>
            <span>Tamaulipas</span>
          </nav>
          <span class="tam-hero__badge">
            <span class="tam-hero__badge-dot"></span>
            TAM
          </span>
          <h1 class="tam-hero__title">
            Estaciones de Bomberos en
            <span class="tam-hero__highlight">Tamaulipas</span>
          </h1>
          <p class="tam-hero__desc">
            Directorio completo del <strong>H. Cuerpo de Bomberos de Tamaulipas</strong>.
            Encuentra teléfonos de emergencia, direcciones y servicios en el estado con la frontera más activa de México con Texas: el mayor puerto terrestre de las Américas, la Cuenca de Burgos, y los corredores maquiladores de Reynosa y Matamoros.
          </p>
          <div class="tam-hero__stats">
            <div class="tam-hero__stat">
              <span class="tam-hero__stat-number">{estacionesTamaulipas.length}</span>
              <span class="tam-hero__stat-label">Estaciones</span>
            </div>
            <div class="tam-hero__stat">
              <span class="tam-hero__stat-number">43</span>
              <span class="tam-hero__stat-label">Municipios</span>
            </div>
            <div class="tam-hero__stat">
              <span class="tam-hero__stat-number">24/7</span>
              <span class="tam-hero__stat-label">Servicio</span>
            </div>
            <div class="tam-hero__stat">
              <span class="tam-hero__stat-number">3.5M</span>
              <span class="tam-hero__stat-label">Habitantes</span>
            </div>
          </div>
        </div>

        <!-- Right Column - SEO Content -->
        <div class="tam-hero__seo">
          <h2 class="tam-hero__seo-title">Maquiladora, PEMEX y Frontera Texas: Riesgos Industriales Únicos</h2>
          <p class="tam-hero__seo-text">
            <strong>Tamaulipas</strong> concentra la mayor densidad industrial fronteriza de México. <strong>Reynosa</strong>
            alberga la Cuenca de Burgos (mayor reserva onshore de gas natural del país) y plantas de <strong>Samsung, Emerson,
            TRW y Delphi</strong>. <strong>Matamoros</strong> —la "Detroit de México"— fabrica arneses y componentes para
            las principales marcas automotrices mundiales. Los bomberos tamaulipecos son expertos en HAZMAT industrial
            de primer nivel mundial.
          </p>
          <h2 class="tam-hero__seo-title">Nuevo Laredo, Tampico-Altamira y 500 km de Frontera con EE.UU.</h2>
          <p class="tam-hero__seo-text">
            <strong>Nuevo Laredo</strong> es el mayor puerto terrestre de las Américas: el <strong>40% de las exportaciones
            mexicanas a EE.UU.</strong> pasan por sus puentes. El corredor Tampico-<strong>Altamira</strong>-Madero alberga
            la Refinería PEMEX (<strong>190,000 bbl/día</strong>) y el Puerto Industrial con <strong>BASF, Celanese y Vitro</strong>.
            La <strong>frontera de ~500 km con Texas</strong> exige coordinación binacional permanente con bomberos de
            Laredo, Brownsville y McAllen.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Emergency Banner -->
  <section class="tam-emergency">
    <div class="container">
      <div class="tam-emergency__content">
        <div class="tam-emergency__icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
          </svg>
        </div>
        <div class="tam-emergency__text">
          <span class="tam-emergency__label">Emergencias en Tamaulipas</span>
          <span class="tam-emergency__number">911</span>
        </div>
        <p class="tam-emergency__desc">
          Número único en todo Tamaulipas — 24/7, 365 días. Reynosa: 899 922 0500 · Tampico: 833 212 1515 · Nuevo Laredo: 867 712 8600
        </p>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="tam-main">
    <div class="container">
      <div class="tam-main__grid">
        <!-- Stations Grid -->
        <div class="tam-main__content">
          <SectionHeader
            label="Directorio Completo"
            title="Estaciones de Bomberos en Tamaulipas"
            description="Información de contacto actualizada de las 20 estaciones del H. Cuerpo de Bomberos de Tamaulipas, desde la frontera con Texas hasta el Golfo de México. Selecciona una estación para ver datos de contacto, servicios especializados y zonas de cobertura."
          />

          <div class="tam-stations-grid">
            {estacionesTamaulipas.map((estacion) => (
              <StationCard
                nombre={estacion.nombreCorto}
                slug={estacion.slug}
                direccion={`${estacion.direccion}, ${estacion.colonia}`}
                alcaldia={estacion.municipio}
                telefono={estacion.telefono}
                servicios={estacion.servicios}
                horario={estacion.horario}
                baseUrl="/directorio/tamaulipas"
              />
            ))}
          </div>

          <!-- SEO Content -->
          <div class="tam-seo">
            <h2>El H. Cuerpo de Bomberos de Tamaulipas</h2>
            <p>
              El <strong>H. Cuerpo de Bomberos de Tamaulipas</strong> protege a más de <strong>3.5 millones de tamaulipecos</strong>
              en el estado con la línea fronteriza más estratégica de México. Tamaulipas comparte cerca de <strong>500 km de frontera
              con el estado de Texas</strong>, albergando los cruces fronterizos de mayor actividad comercial del continente americano.
              La diversidad industrial —petróleo, maquiladora, petroquímica y agroindustria— forja bomberos de alta especialización
              técnica con protocolos únicos en el país.
            </p>

            <h3>¿Cómo contactar a los bomberos en Tamaulipas?</h3>
            <p>
              En cualquier <strong>emergencia en Tamaulipas</strong>, marca el <strong>911</strong>. El C4 estatal
              despacha la unidad más cercana. Contactos directos: <strong>Reynosa 899 922 0500</strong>,
              <strong>Tampico 833 212 1515</strong>, <strong>Nuevo Laredo 867 712 8600</strong>,
              <strong>Matamoros 868 813 2222</strong>, <strong>Ciudad Victoria 834 312 1330</strong>,
              <strong>Ciudad Madero 833 215 4800</strong>.
            </p>

            <h3>Cuenca de Burgos y PEMEX: Gas Natural del Noreste</h3>
            <p>
              La <strong>Cuenca de Burgos</strong>, que cubre gran parte del norte de Tamaulipas, es la mayor reserva de
              <strong>gas natural no asociado de México</strong>, con cientos de pozos, compresoras y gasoductos operados
              por PEMEX E&P. La concentración de infraestructura gasífera en Reynosa y municipios aledaños genera riesgos
              HAZMAT de máxima complejidad: fugas de gas metano, incendios en compresoras y emergencias en instalaciones
              de deshidratación. Los bomberos de Reynosa poseen <strong>certificación HAZMAT nivel A/B</strong> específica
              para gas natural de alta presión.
            </p>

            <h3>Puerto Industrial Altamira: Química y Petroquímica de Clase Mundial</h3>
            <p>
              El <strong>Puerto Industrial de Altamira</strong> es uno de los tres puertos industriales más importantes de
              México y el principal del Golfo de México por movimiento de carga química. <strong>BASF</strong> —la mayor planta
              química privada de México—, <strong>Celanese</strong> (ácido acético y acetato de vinilo), <strong>Vitro</strong>
              (sosa cáustica), <strong>Braskem</strong> y la terminal petroquímica de PEMEX generan riesgos HAZMAT de primera
              magnitud: ácido acético, amoniaco, metanol, sosa cáustica y productos petroquímicos de alta toxicidad. Los
              bomberos de Altamira poseen <strong>certificación HAZMAT nivel A</strong> en productos químicos industriales.
            </p>

            <h3>Nuevo Laredo: El Mayor Puerto Terrestre de las Américas</h3>
            <p>
              Los <strong>cinco puentes internacionales de Nuevo Laredo</strong> mueven más del <strong>40% de las
              exportaciones mexicanas a Estados Unidos</strong>, con miles de tractocamiones diarios que transportan
              desde electrónica y automóviles hasta productos químicos y alimentos. El riesgo de incendios en cargas
              de materiales peligrosos en tránsito internacional es cotidiano. Los bomberos de Nuevo Laredo trabajan
              bajo protocolos <strong>UN/DOT para HAZMAT de transporte terrestre internacional</strong> y mantienen
              acuerdos de cooperación binacional con el Cuerpo de Bomberos de Laredo, Texas.
            </p>

            <h3>Coordinación Binacional con Bomberos de Texas</h3>
            <p>
              Los cuerpos de bomberos de <strong>Reynosa, Matamoros y Nuevo Laredo</strong> mantienen acuerdos formales
              de <strong>cooperación binacional</strong> con sus pares texanos (McAllen/Hidalgo County, Brownsville/Cameron
              County y Laredo Fire Department), compartiendo recursos, capacitación y protocolos de respuesta en la
              franja fronteriza. Esta coordinación —única entre todos los estados fronterizos mexicanos por su nivel
              de formalización— permite tiempos de respuesta óptimos ante emergencias en los puentes y cruces internacionales.
            </p>

            <h3>Servicios de los Bomberos Tamaulipecos</h3>
            <p>
              Los bomberos de Tamaulipas están certificados para atender:
              <strong>incendios industriales HAZMAT</strong> (gas natural, productos petroquímicos, automotriz);
              <strong>rescate acuático</strong> en el Río Bravo/Grande, Presa Falcón y Laguna Madre;
              <strong>ARFF aeroportuario</strong> en Tampico y Reynosa;
              <strong>rescate en accidentes de tractocamiones</strong> en corredores fronterizos;
              <strong>incendios en refinería</strong> con espumas AFFF;
              <strong>rescate técnico de montaña</strong> en la Sierra Madre Oriental;
              <strong>coordinación binacional</strong> con bomberos de Texas; y
              <strong>rescate de turistas</strong> en la Reserva El Cielo (bosque de niebla UNESCO).
            </p>
          </div>
        </div>

        <!-- Sidebar -->
        <aside class="tam-sidebar">
          <!-- Quick Access -->
          <div class="tam-sidebar__card">
            <h4>Filtrar por Municipio</h4>
            <ul class="tam-sidebar__municipios">
              {municipios.map((municipio) => (
                <li>
                  <a href={`#${municipio.toLowerCase().replace(/\s+/g, '-').replace(/á/g, 'a').replace(/é/g, 'e').replace(/í/g, 'i').replace(/ó/g, 'o').replace(/ú/g, 'u')}`}>
                    <span class="tam-sidebar__bullet"></span>
                    <span>{municipio}</span>
                  </a>
                </li>
              ))}
            </ul>
          </div>

          <!-- Emergency Numbers -->
          <div class="tam-sidebar__card tam-sidebar__card--emergency">
            <h4>Teléfonos de Emergencia</h4>
            <div class="tam-sidebar__emergency-list">
              <div class="tam-sidebar__emergency-item">
                <span class="tam-sidebar__emergency-number">911</span>
                <span class="tam-sidebar__emergency-label">Emergencias Nacionales</span>
              </div>
              <div class="tam-sidebar__emergency-item">
                <span class="tam-sidebar__emergency-number">899 922 0500</span>
                <span class="tam-sidebar__emergency-label">Bomberos Reynosa</span>
              </div>
              <div class="tam-sidebar__emergency-item">
                <span class="tam-sidebar__emergency-number">833 212 1515</span>
                <span class="tam-sidebar__emergency-label">Bomberos Tampico</span>
              </div>
              <div class="tam-sidebar__emergency-item">
                <span class="tam-sidebar__emergency-number">867 712 8600</span>
                <span class="tam-sidebar__emergency-label">Bomberos Nuevo Laredo</span>
              </div>
              <div class="tam-sidebar__emergency-item">
                <span class="tam-sidebar__emergency-number">868 813 2222</span>
                <span class="tam-sidebar__emergency-label">Bomberos Matamoros</span>
              </div>
            </div>
          </div>

          <!-- Regiones -->
          <div class="tam-sidebar__card">
            <h4>Regiones del Estado</h4>
            <ul class="tam-sidebar__regiones">
              <li>
                <span class="tam-sidebar__region-name">Frontera Norte</span>
                <span class="tam-sidebar__region-desc">Nuevo Laredo, Reynosa, Matamoros, Río Bravo, Miguel Alemán, Camargo</span>
              </li>
              <li>
                <span class="tam-sidebar__region-name">Región Centro</span>
                <span class="tam-sidebar__region-desc">Ciudad Victoria (capital), San Fernando, Victoria Norte</span>
              </li>
              <li>
                <span class="tam-sidebar__region-name">Corredor Petroquímico Sur</span>
                <span class="tam-sidebar__region-desc">Tampico, Ciudad Madero, Altamira (Puerto Industrial)</span>
              </li>
              <li>
                <span class="tam-sidebar__region-name">Región Sur / Sierra</span>
                <span class="tam-sidebar__region-desc">Ciudad Mante, Linares, Soto la Marina, El Cielo</span>
              </li>
            </ul>
          </div>

          <!-- Nearby States -->
          <div class="tam-sidebar__card">
            <h4>Estados Vecinos</h4>
            <ul class="tam-sidebar__states">
              {estadosVecinos.map((estado) => (
                <li>
                  <a href={`/directorio/${estado.slug}`}>
                    <span>{estado.nombre}</span>
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M5 12h14M12 5l7 7-7 7"/>
                    </svg>
                  </a>
                </li>
              ))}
            </ul>
          </div>

          <!-- CTA -->
          <div class="tam-sidebar__card tam-sidebar__card--cta">
            <h4>¿Equipas una Estación en TAM?</h4>
            <p>Distribuimos equipo NFPA certificado para bomberos en Tamaulipas: HAZMAT gas natural, maquiladora, petroquímica y frontera</p>
            <a href="/cotizar" class="tam-sidebar__cta-btn">Solicitar Cotización</a>
          </div>

          <!-- Products -->
          <div class="tam-sidebar__card">
            <h4>Equipo para Bomberos</h4>
            <ul class="tam-sidebar__products">
              <li><a href="/productos/trajes-para-bomberos">Trajes Estructurales NFPA</a></li>
              <li><a href="/productos/cascos-para-bomberos">Cascos de Bombero</a></li>
              <li><a href="/productos/scba">Equipos SCBA</a></li>
              <li><a href="/productos/herramientas-rescate">Herramientas de Rescate</a></li>
            </ul>
            <a href="/productos" class="tam-sidebar__link">
              Ver catálogo completo
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </a>
          </div>

          <!-- Back to Directory -->
          <div class="tam-sidebar__card">
            <a href="/directorio" class="tam-sidebar__back">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M19 12H5M12 19l-7-7 7-7"/>
              </svg>
              <span>Ver todos los estados</span>
            </a>
          </div>

          <!-- Contact -->
          <div class="tam-sidebar__card">
            <h4>Contacto BOMBERO.MX</h4>
            <ul class="tam-sidebar__contact">
              <li><a href="tel:+525520780102">55 2078 0102</a></li>
              <li><a href="https://wa.me/525520780102">WhatsApp</a></li>
              <li><a href="mailto:ventas@bombero.mx">ventas@bombero.mx</a></li>
            </ul>
          </div>
        </aside>
      </div>
    </div>
  </section>
</PageLayout>

<style>
  /* ═══════════════════════════════════════════════════════════════════════
     DIRECTORIO TAMAULIPAS - ESTACIONES DE BOMBEROS
     ═══════════════════════════════════════════════════════════════════════ */

  .tam-hero {
    position: relative;
    padding: var(--space-16) 0;
    background: var(--color-smoke-950);
    overflow: hidden;
  }

  .tam-hero__bg {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .tam-hero__gradient {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(ellipse 80% 50% at 50% -20%, rgba(2, 132, 199, 0.18), transparent),
      radial-gradient(ellipse 60% 50% at 0% 50%, rgba(14, 165, 233, 0.1), transparent),
      radial-gradient(ellipse 60% 50% at 100% 80%, rgba(220, 38, 38, 0.08), transparent);
  }

  .tam-hero__pattern {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(255,255,255,0.02) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255,255,255,0.02) 1px, transparent 1px);
    background-size: 60px 60px;
