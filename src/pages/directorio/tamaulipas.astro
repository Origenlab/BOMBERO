  { src: "/images/directorio/bomberos-tamaulipas-maquiladora.avif", alt: "Respuesta en planta maquiladora Reynosa" },
  { src: "/images/directorio/bomberos-tamaulipas-altamira.avif", alt: "HAZMAT químico en Puerto Altamira" },
];

// ─── Números de Emergencia ────────────────────────────────────────────────────
const emergencyNumbers = [
  { number: "911", label: "Emergencias" },
  { number: "899 922 0500", label: "Bomberos Reynosa" },
  { number: "833 212 1515", label: "Bomberos Tampico" },
  { number: "867 712 8600", label: "Bomberos Nuevo Laredo" },
];

// ─── Regiones del Estado ──────────────────────────────────────────────────────
const regiones = [
  { nombre: "Frontera Norte", desc: "Nuevo Laredo (40% exportaciones MX), Reynosa, Matamoros — 500km frontera con Texas" },
  { nombre: "Zona Petrolera-Gas", desc: "Reynosa (Cuenca de Burgos), Ciudad Madero (Refinería 190,000 bbl/día)" },
