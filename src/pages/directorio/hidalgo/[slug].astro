---
/**
 * ╔═══════════════════════════════════════════════════════════════════════════════════════╗
 * ║  PÁGINA DINÁMICA DE ESTACIÓN DE BOMBEROS - HIDALGO                                   ║
 * ║  Genera 18 páginas individuales con SEO profesional avanzado                         ║
 * ╠═══════════════════════════════════════════════════════════════════════════════════════╣
 * ║  ZONAS: Pachuca, Industrial, Tulancingo, Pueblos Mágicos, Mezquital, Huasteca, Sur   ║
 * ║  ESPECIALIDADES: HAZMAT Refinería, Rescate Minero, Forestal, Turístico               ║
 * ╚═══════════════════════════════════════════════════════════════════════════════════════╝
 */

import PageLayout from "@layouts/PageLayout.astro";
import {
  estacionesHidalgo,
  generarMetaSEO,
  getContextoZona,
  HIDALGO_SEO,
} from "@data/estaciones-hidalgo";

export function getStaticPaths() {
  return estacionesHidalgo.map(estacion => ({
    params: { slug: estacion.slug },
    props: { estacion }
  }));
}

const { estacion } = Astro.props;
const metaSEO = generarMetaSEO(estacion);
const contextoZona = getContextoZona(estacion.ciudad);

// ═══════════════════════════════════════════════════════════════════════════════════════
// DETERMINACIÓN DE CONTEXTO ESPECÍFICO PARA CONTENIDO ENRIQUECIDO
// ═══════════════════════════════════════════════════════════════════════════════════════
const esPachuca = estacion.ciudad === 'Pachuca de Soto';
const esMineralReforma = estacion.ciudad === 'Mineral de la Reforma';
const esRealDelMonte = estacion.ciudad === 'Mineral del Monte';
const esTula = estacion.ciudad === 'Tula de Allende';
const esRefineria = estacion.slug.includes('refineria');
const esTepeji = estacion.ciudad === 'Tepeji del Río de Ocampo';
const esTulancingo = estacion.ciudad === 'Tulancingo de Bravo';
const esCuautepec = estacion.ciudad === 'Cuautepec de Hinojosa';
const esAcaxochitlan = estacion.ciudad === 'Acaxochitlán';
const esHuasca = estacion.ciudad === 'Huasca de Ocampo';
const esMineralChico = estacion.ciudad === 'Mineral del Chico';
const esHuichapan = estacion.ciudad === 'Huichapan';
const esActopan = estacion.ciudad === 'Actopan';
const esIxmiquilpan = estacion.ciudad === 'Ixmiquilpan';
const esHuejutla = estacion.ciudad === 'Huejutla de Reyes';
const esMolango = estacion.ciudad === 'Molango de Escamilla';
const esTizayuca = estacion.ciudad === 'Tizayuca';

// Determinar si es zona industrial para mostrar advertencias HAZMAT
const esZonaIndustrial = esTula || esRefineria || esTepeji || esTizayuca;

// Fecha de actualización para SEO
const fechaActualizacion = new Date().toISOString().split('T')[0];
---

<PageLayout
  title={metaSEO.title}
  description={metaSEO.description}
  keywords={metaSEO.keywords.join(', ')}
  canonical={metaSEO.canonical}
>
  <!-- ═══════════════════════════════════════════════════════════════════════════════════
       SCHEMA.ORG - FIRESTSTATION STRUCTURED DATA
       ═══════════════════════════════════════════════════════════════════════════════════ -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "FireStation",
    "name": estacion.nombre,
    "description": estacion.descripcion,
    "address": {
      "@type": "PostalAddress",
      "streetAddress": estacion.direccion,
      "addressLocality": estacion.ciudad,
      "addressRegion": "Hidalgo",
      "postalCode": estacion.codigoPostal,
      "addressCountry": "MX"
    },
    "telephone": estacion.telefono,
    "email": estacion.email,
    "openingHours": "Mo-Su 00:00-23:59",
    "geo": {
      "@type": "GeoCoordinates",
      "latitude": estacion.coordenadas.lat,
      "longitude": estacion.coordenadas.lng
    },
    "areaServed": {
      "@type": "City",
      "name": estacion.ciudad
    },
    "numberOfEmployees": estacion.personal,
    "url": metaSEO.canonical,
    "sameAs": estacion.redes ? Object.values(estacion.redes) : [],
    "potentialAction": {
      "@type": "CommunicateAction",
      "target": {
        "@type": "EntryPoint",
        "urlTemplate": `tel:${estacion.telefono.replace(/[^\d+]/g, '')}`,
        "actionPlatform": ["http://schema.org/MobileWebPlatform"]
      }
    }
  })} />

  <!-- Schema.org BreadcrumbList -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      { "@type": "ListItem", "position": 1, "name": "Inicio", "item": "https://bombero.mx" },
      { "@type": "ListItem", "position": 2, "name": "Directorio", "item": "https://bombero.mx/directorio" },
      { "@type": "ListItem", "position": 3, "name": "Hidalgo", "item": "https://bombero.mx/directorio/hidalgo" },
      { "@type": "ListItem", "position": 4, "name": estacion.nombre, "item": metaSEO.canonical }
    ]
  })} />

  <div class="hgo-station">
    <!-- ═══════════════════════════════════════════════════════════════════════════════
         HERO SECTION
         ═══════════════════════════════════════════════════════════════════════════════ -->
    <section class="hgo-station-hero">
      <div class="hgo-station-hero__container">
        <!-- Badges Informativos -->
        <div class="hgo-station-hero__badges">
          <span class="hgo-station-hero__badge hgo-station-hero__badge--state">HGO</span>
          <span class="hgo-station-hero__badge hgo-station-hero__badge--zone">{contextoZona.tipo}</span>
          {esPachuca && <span class="hgo-station-hero__badge hgo-station-hero__badge--special">Capital del Estado</span>}
          {esRealDelMonte && <span class="hgo-station-hero__badge hgo-station-hero__badge--special">Pueblo Mágico</span>}
          {esRefineria && <span class="hgo-station-hero__badge hgo-station-hero__badge--hazmat">HAZMAT Especializado</span>}
          {esTula && !esRefineria && <span class="hgo-station-hero__badge hgo-station-hero__badge--special">Zona Arqueológica</span>}
          {esHuasca && <span class="hgo-station-hero__badge hgo-station-hero__badge--special">Prismas Basálticos</span>}
          {esMineralChico && <span class="hgo-station-hero__badge hgo-station-hero__badge--special">Parque Nacional</span>}
          {esIxmiquilpan && <span class="hgo-station-hero__badge hgo-station-hero__badge--special">Balnearios Termales</span>}
          {esHuejutla && <span class="hgo-station-hero__badge hgo-station-hero__badge--special">Huasteca Hidalguense</span>}
        </div>

        <h1 class="hgo-station-hero__title">{estacion.nombre}</h1>

        <p class="hgo-station-hero__location">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="20" height="20">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          {estacion.ciudad}, Hidalgo, México
        </p>

        <!-- Estadísticas de la Estación -->
        <div class="hgo-station-hero__stats">
          <div class="hgo-station-hero__stat">
            <span class="hgo-station-hero__stat-value">{estacion.personal}</span>
            <span class="hgo-station-hero__stat-label">Bomberos</span>
          </div>
          <div class="hgo-station-hero__stat">
            <span class="hgo-station-hero__stat-value">{estacion.unidades}</span>
            <span class="hgo-station-hero__stat-label">Unidades</span>
          </div>
          <div class="hgo-station-hero__stat">
            <span class="hgo-station-hero__stat-value">{estacion.tiempoRespuestaMinutos || 8}</span>
            <span class="hgo-station-hero__stat-label">Min. Respuesta</span>
          </div>
          <div class="hgo-station-hero__stat">
            <span class="hgo-station-hero__stat-value">24/7</span>
            <span class="hgo-station-hero__stat-label">Servicio</span>
          </div>
        </div>
      </div>
    </section>

    <!-- ═══════════════════════════════════════════════════════════════════════════════
         BANNER DE EMERGENCIA
         ═══════════════════════════════════════════════════════════════════════════════ -->
    <section class="hgo-station-emergency">
      <div class="hgo-station-emergency__container">
        <div class="hgo-station-emergency__phone">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="24" height="24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          <div>
            <span class="hgo-station-emergency__label">Línea de emergencia directa</span>
            <a href={`tel:${estacion.telefono.replace(/[^\d+]/g, '')}`} class="hgo-station-emergency__number">
              {estacion.telefono}
            </a>
          </div>
        </div>
        <div class="hgo-station-emergency__national">
          <span>Emergencias Nacional:</span>
          <a href="tel:911"><strong>911</strong></a>
        </div>
      </div>
    </section>

    <!-- ═══════════════════════════════════════════════════════════════════════════════
         CONTENIDO PRINCIPAL
         ═══════════════════════════════════════════════════════════════════════════════ -->
    <div class="hgo-station-content">
      <div class="hgo-station-content__container">

        <!-- Columna Principal -->
        <div class="hgo-station-content__main">

          <!-- Descripción y Contexto Enriquecido -->
          <section class="hgo-station-section">
            <h2 class="hgo-station-section__title">Acerca de esta Estación</h2>
            <div class="hgo-station-section__content">
              <p>{estacion.descripcion}</p>

              {/* ════════════════════════════════════════════════════════════════════════
                  CONTEXTOS ESPECÍFICOS POR ZONA - CONTENIDO SEO ENRIQUECIDO
                  ════════════════════════════════════════════════════════════════════════ */}

              {esPachuca && (
                <div class="hgo-station-context hgo-station-context--pachuca">
                  <h3>Pachuca de Soto - "La Bella Airosa"</h3>
                  <p>
                    <strong>Pachuca</strong>, capital de Hidalgo conocida como <strong>"La Bella Airosa"</strong>
                    por sus vientos característicos, es una ciudad con más de <strong>350,000 habitantes</strong>
                    en su zona metropolitana y <strong>500 años de historia minera</strong>. El icónico
                    <strong>Reloj Monumental</strong> (1910), réplica del Big Ben, es símbolo de la ciudad.
                    La <strong>Universidad Autónoma del Estado de Hidalgo (UAEH)</strong> con 60,000 estudiantes
                    y la cercanía a la CDMX (91 km) generan alta demanda de servicios de emergencia. Los
                    bomberos protegen el centro histórico, zonas comerciales y la autopista México-Pachuca.
                  </p>
                </div>
              )}

              {esRealDelMonte && (
                <div class="hgo-station-context hgo-station-context--real-monte">
                  <h3>Real del Monte - Cuna del Fútbol Mexicano</h3>
                  <p>
                    <strong>Real del Monte</strong> (Mineral del Monte) es <strong>Pueblo Mágico desde 2004</strong>
                    y ciudad minera con <strong>más de 500 años de historia</strong>. Los mineros ingleses de
                    <strong>Cornualles</strong> llegaron en 1824 trayendo los famosos <strong>"pastes"</strong>
                    (empanadas) y el <strong>fútbol</strong> - aquí se jugó el primer partido en México en 1900.
                    A <strong>2,660 msnm</strong>, con calles empedradas, arquitectura victoriana y el
                    <strong>Cementerio Inglés</strong>, requiere técnicas especializadas. Los bomberos atienden
                    emergencias en minas turísticas, protegen el patrimonio y responden a clima extremo con
                    temperaturas bajo cero.
                  </p>
                </div>
              )}

              {esRefineria && (
                <div class="hgo-station-context hgo-station-context--refineria">
                  <h3>Refinería Miguel Hidalgo - PEMEX</h3>
                  <p>
                    Esta estación opera dentro de la <strong>Refinería Miguel Hidalgo de PEMEX</strong>,
                    la <strong>segunda más grande de México</strong> con capacidad de
                    <strong>{HIDALGO_SEO.industria.refineria_tula.capacidad_barriles_dia.toLocaleString('es-MX')} barriles diarios</strong>.
                    En operación desde <strong>1976</strong>, produce gasolina, diésel, turbosina, gas LP y
                    asfalto. El personal cuenta con <strong>certificación internacional HAZMAT</strong> y
                    especialización en incendios petroquímicos. Tiempo de respuesta máximo de
                    <strong>3 minutos</strong> a cualquier punto de las instalaciones. Coordinación permanente
                    con brigadas industriales bajo el <strong>Plan de Auxilio Mutuo</strong>.
                  </p>
                </div>
              )}

              {esTula && !esRefineria && (
                <div class="hgo-station-context hgo-station-context--tula">
                  <h3>Tula de Allende - Capital Industrial y Arqueológica</h3>
                  <p>
                    <strong>Tula</strong> combina patrimonio arqueológico de primer nivel con el
                    <strong>principal corredor industrial de Hidalgo</strong>. La <strong>Zona Arqueológica
                    de Tula</strong> fue capital del <strong>Imperio Tolteca</strong> (900-1150 d.C.), famosa
                    por los <strong>Atlantes</strong> de 4.6 metros. La zona industrial incluye la
                    <strong>Refinería PEMEX</strong>, cementeras <strong>CEMEX, Cruz Azul y Holcim</strong>,
                    y la <strong>Termoeléctrica CFE</strong>. Los bomberos tienen especialización
                    <strong>HAZMAT de alto nivel</strong> para emergencias petroquímicas e industriales.
                  </p>
                </div>
              )}

              {esTulancingo && (
                <div class="hgo-station-context hgo-station-context--tulancingo">
                  <h3>Tulancingo - Capital de la Industria Textil</h3>
                  <p>
                    <strong>Tulancingo de Bravo</strong> es la segunda ciudad más importante de Hidalgo con
                    más de <strong>160,000 habitantes</strong> y capital del <strong>Valle de Tulancingo</strong>.
                    Centro histórico de la <strong>industria textil mexicana</strong> con más de
                    <strong>450 empresas</strong> que producen lana, algodón y fibras sintéticas, generando
                    <strong>25,000 empleos</strong>. La carretera <strong>México-Tuxpan</strong> presenta
                    alto tránsito de carga. Los bomberos coordinan emergencias en toda la región, incluyendo
                    municipios serranos.
                  </p>
                </div>
              )}

              {esHuasca && (
                <div class="hgo-station-context hgo-station-context--huasca">
                  <h3>Huasca de Ocampo - Prismas Basálticos</h3>
                  <p>
                    <strong>Huasca de Ocampo</strong> fue el <strong>primer Pueblo Mágico de Hidalgo</strong>
                    designado en 2001. Su principal atractivo son los impresionantes <strong>Prismas
                    Basálticos de Santa María Regla</strong>, columnas hexagonales de basalto de hasta
                    <strong>40 metros de altura</strong> formadas hace millones de años. Las
                    <strong>haciendas de beneficio de plata del siglo XVIII</strong> (Santa María y San
                    Miguel Regla) son patrimonio histórico. Miles de visitantes llegan cada fin de semana.
                    Los bomberos atienden emergencias turísticas, rescates en barrancas y protección del
                    patrimonio hacendario.
                  </p>
                </div>
              )}

              {esMineralChico && (
                <div class="hgo-station-context hgo-station-context--mineral-chico">
                  <h3>Mineral del Chico - Primer Parque Nacional de México</h3>
                  <p>
                    <strong>Mineral del Chico</strong>, Pueblo Mágico desde 2011, alberga el
                    <strong>Parque Nacional El Chico</strong>, el <strong>primer parque nacional de México</strong>
                    decretado en <strong>1898</strong>. Con más de <strong>2,700 hectáreas</strong> de bosques
                    de oyamel a <strong>3,000 msnm</strong>, es destino de escaladores, ciclistas de montaña
                    y excursionistas. Las famosas <strong>peñas</strong> (Las Ventanas, Las Monjas, El Cuervo)
                    atraen a escaladores de todo México. Los bomberos tienen <strong>especialización en
                    rescate técnico de montaña</strong>, búsqueda de extraviados y combate de incendios
                    forestales en terreno de difícil acceso.
                  </p>
                </div>
              )}

              {esIxmiquilpan && (
                <div class="hgo-station-context hgo-station-context--ixmiquilpan">
                  <h3>Ixmiquilpan - Corazón de la Cultura Otomí</h3>
                  <p>
                    <strong>Ixmiquilpan</strong> es el corazón del <strong>Valle del Mezquital</strong> y
                    capital cultural del pueblo <strong>hñähñu (otomí)</strong>. Famoso por sus
                    <strong>balnearios de aguas termales</strong> y <strong>parques acuáticos</strong> que
                    atraen miles de visitantes cada fin de semana, especialmente en Semana Santa. El
                    <strong>Ex Convento de San Miguel Arcángel</strong> con sus frescos únicos de guerreros
                    indígenas es patrimonio invaluable. Los bomberos están especializados en
                    <strong>rescate acuático</strong> para atender emergencias en los numerosos balnearios.
                  </p>
                </div>
              )}

              {esHuejutla && (
                <div class="hgo-station-context hgo-station-context--huejutla">
                  <h3>Huejutla - Capital de la Huasteca Hidalguense</h3>
                  <p>
                    <strong>Huejutla de Reyes</strong> es la capital de la <strong>Huasteca Hidalguense</strong>,
                    región de clima tropical con importante población <strong>nahua</strong>. Es el centro
                    comercial y de servicios para decenas de comunidades indígenas de la sierra. El
                    <strong>río Huejutla</strong> y numerosos arroyos representan riesgo de
                    <strong>inundaciones</strong> en temporada de lluvias. Los bomberos tienen especialización
                    en <strong>rescate acuático en ríos de corriente</strong> y personal que habla
                    <strong>náhuatl</strong> para atención culturalmente apropiada a comunidades indígenas.
                  </p>
                </div>
              )}

              {esTizayuca && (
                <div class="hgo-station-context hgo-station-context--tizayuca">
                  <h3>Tizayuca - Puerta de Entrada desde la CDMX</h3>
                  <p>
                    <strong>Tizayuca</strong> es el municipio más al sur de Hidalgo, a solo <strong>52 km
                    de la Ciudad de México</strong>. Su ubicación estratégica en la <strong>autopista
                    México-Pachuca</strong>, una de las más transitadas del país con más de
                    <strong>50,000 vehículos diarios</strong>, lo ha convertido en importante
                    <strong>centro logístico e industrial</strong>. El crecimiento habitacional explosivo
                    con fraccionamientos de interés social suma más de 100,000 habitantes. Los bomberos
                    atienden alto volumen de <strong>accidentes vehiculares</strong>, emergencias
                    industriales y la zona habitacional densamente poblada.
                  </p>
                </div>
              )}

              {esAcaxochitlan && (
                <div class="hgo-station-context hgo-station-context--acaxochitlan">
                  <h3>Acaxochitlán - El Pueblo de las Flores</h3>
                  <p>
                    <strong>Acaxochitlán</strong> es conocido como el <strong>"Pueblo de las Flores"</strong>
                    por su importante industria de <strong>viveros y producción de plantas de ornato</strong>.
                    Ubicado en la <strong>Sierra Norte de Hidalgo</strong> a más de <strong>2,200 msnm</strong>,
                    los bomberos están especializados en <strong>incendios forestales</strong> en bosques de
                    oyamel y pino, rescate en terreno montañoso y atención a comunidades otomíes dispersas
                    en la sierra. El <strong>clima extremo</strong> con heladas y neblina presenta retos
                    adicionales.
                  </p>
                </div>
              )}

              {(esMineralReforma || esCuautepec || esTepeji || esActopan || esMolango || esHuichapan) && (
                <div class="hgo-station-context hgo-station-context--general">
                  <h3>Contexto Regional de la Estación</h3>
                  <p>
                    Esta estación forma parte de la red de <strong>{estacionesHidalgo.length} estaciones
                    de bomberos de Hidalgo</strong>, un estado que combina tradición minera, desarrollo
                    industrial, patrimonio cultural y diversidad geográfica única. La cobertura incluye
                    zonas {contextoZona.descripcion.toLowerCase()}. Los principales riesgos en esta área son:
                    <strong> {contextoZona.riesgosPrincipales.join(', ')}</strong>. El tiempo de respuesta
                    promedio es de <strong>{estacion.tiempoRespuestaMinutos || 8} minutos</strong>.
                  </p>
                </div>
              )}
            </div>
          </section>

          <!-- Servicios de Emergencia -->
          <section class="hgo-station-section">
            <h2 class="hgo-station-section__title">Servicios de Emergencia Disponibles</h2>
            <ul class="hgo-station-services">
              {estacion.servicios.map(servicio => (
                <li class="hgo-station-services__item">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="20" height="20">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span>{servicio}</span>
                </li>
              ))}
            </ul>
          </section>

          <!-- Especialidades (si existen) -->
          {estacion.especialidades && estacion.especialidades.length > 0 && (
            <section class="hgo-station-section">
              <h2 class="hgo-station-section__title">Especialidades Certificadas</h2>
              <div class="hgo-station-specialties">
                {estacion.especialidades.map(esp => (
                  <span class="hgo-station-specialty">{esp}</span>
                ))}
              </div>
            </section>
          )}

          <!-- Equipamiento y Unidades -->
          {estacion.equipamiento && estacion.equipamiento.length > 0 && (
            <section class="hgo-station-section">
              <h2 class="hgo-station-section__title">Equipamiento y Unidades de Emergencia</h2>
              <div class="hgo-station-equipment">
                {estacion.equipamiento.map(equipo => (
                  <div class="hgo-station-equipment__item">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="18" height="18">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    <span>{equipo}</span>
                  </div>
                ))}
              </div>
            </section>
          )}

          <!-- Cobertura Geográfica (si existe) -->
          {estacion.cobertura && estacion.cobertura.length > 0 && (
            <section class="hgo-station-section">
              <h2 class="hgo-station-section__title">Área de Cobertura</h2>
              <ul class="hgo-station-coverage">
                {estacion.cobertura.map(zona => (
                  <li class="hgo-station-coverage__item">{zona}</li>
                ))}
              </ul>
            </section>
          )}

          <!-- Ubicación y Mapa -->
          <section class="hgo-station-section">
            <h2 class="hgo-station-section__title">Ubicación</h2>
            <div class="hgo-station-map">
              <div class="hgo-station-map__placeholder">
