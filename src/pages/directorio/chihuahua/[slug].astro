---
/**
 * ============================================================================
 * PÁGINA DINÁMICA DE ESTACIÓN DE BOMBEROS - CHIHUAHUA
 * ============================================================================
 *
 * Genera páginas individuales para cada una de las 28 estaciones de bomberos
 * en el estado de Chihuahua, con SEO premium y contexto local.
 *
 * Zonas cubiertas:
 * - Zona Metropolitana Chihuahua (capital): 5 estaciones
 * - Ciudad Juárez (frontera): 7 estaciones
 * - Zona Agrícola Centro-Sur: 6 estaciones
 * - Sierra Tarahumara: 4 estaciones
 * - Zona Paquimé (UNESCO): 3 estaciones
 * - Zona Minera Histórica: 3 estaciones
 */

import PageLayout from "@layouts/PageLayout.astro";
import { estacionesChihuahua, generarMetaSEO, getContextoZona, CHIHUAHUA_SEO } from "@data/estaciones-chihuahua";

export function getStaticPaths() {
  return estacionesChihuahua.map(estacion => ({
    params: { slug: estacion.slug },
    props: { estacion }
  }));
}

const { estacion } = Astro.props;
const metaSEO = generarMetaSEO(estacion);
const contextoZona = getContextoZona(estacion.ciudad);

// Determinar tipo de zona para contexto SEO enriquecido
const esCapital = estacion.ciudad === 'Chihuahua' && estacion.estado === 'Chihuahua';
const esJuarez = estacion.ciudad === 'Ciudad Juárez';
const esSierra = ['Creel', 'Guachochi', 'Bocoyna', 'Madera'].includes(estacion.ciudad);
const esAgricola = ['Delicias', 'Cuauhtémoc', 'Camargo', 'Jiménez', 'Meoqui', 'Saucillo'].includes(estacion.ciudad);
const esMinera = ['Hidalgo del Parral', 'Santa Bárbara', 'Valle de Allende'].includes(estacion.ciudad);
const esPaquime = ['Nuevo Casas Grandes', 'Casas Grandes', 'Janos'].includes(estacion.ciudad);
const esAeropuerto = estacion.slug.includes('aeropuerto');

// Fecha de actualización
const fechaActualizacion = new Date().toISOString().split('T')[0];
---

<PageLayout
  title={metaSEO.title}
  description={metaSEO.description}
  keywords={metaSEO.keywords.join(', ')}
  canonical={metaSEO.canonical}
>
  <!-- Schema.org FireStation -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "FireStation",
    "name": estacion.nombre,
    "description": estacion.descripcion,
    "address": {
      "@type": "PostalAddress",
      "streetAddress": estacion.direccion,
      "addressLocality": estacion.ciudad,
      "addressRegion": "Chihuahua",
      "postalCode": estacion.codigoPostal,
      "addressCountry": "MX"
    },
    "telephone": estacion.telefono,
    "email": estacion.email,
    "openingHours": "Mo-Su 00:00-23:59",
    "geo": {
      "@type": "GeoCoordinates",
      "latitude": estacion.coordenadas.lat,
      "longitude": estacion.coordenadas.lng
    },
    "areaServed": {
      "@type": "City",
      "name": estacion.ciudad
    },
    "numberOfEmployees": estacion.personal,
    "url": metaSEO.canonical,
    "image": `https://bombero.mx/images/estaciones/chihuahua/${estacion.slug}.jpg`,
    "sameAs": estacion.redes ? Object.values(estacion.redes) : []
  })} />

  <!-- Schema.org BreadcrumbList -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "Inicio",
        "item": "https://bombero.mx"
      },
      {
        "@type": "ListItem",
        "position": 2,
        "name": "Directorio",
        "item": "https://bombero.mx/directorio"
      },
      {
        "@type": "ListItem",
        "position": 3,
        "name": "Chihuahua",
        "item": "https://bombero.mx/directorio/chihuahua"
      },
      {
        "@type": "ListItem",
        "position": 4,
        "name": estacion.nombre,
        "item": metaSEO.canonical
      }
    ]
  })} />

  <!-- Schema.org EmergencyService -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "EmergencyService",
    "name": estacion.nombre,
    "serviceType": "Fire Department",
    "areaServed": {
      "@type": "AdministrativeArea",
      "name": `${estacion.ciudad}, Chihuahua, México`
    },
    "availableChannel": {
      "@type": "ServiceChannel",
      "servicePhone": estacion.telefono,
      "availableLanguage": ["es", "en"]
    },
    "provider": {
      "@type": "GovernmentOrganization",
      "name": "Gobierno del Estado de Chihuahua"
    }
  })} />

  <main class="chih-station">
    <!-- Hero de la Estación -->
    <section class="chih-station-hero">
      <div class="chih-station-hero__container">
        <!-- Badges -->
        <div class="chih-station-hero__badges">
          <span class="chih-station-hero__badge chih-station-hero__badge--state">CHIH</span>
          <span class="chih-station-hero__badge chih-station-hero__badge--zone">{contextoZona.tipo}</span>
          {esJuarez && <span class="chih-station-hero__badge chih-station-hero__badge--special">Frontera EE.UU.</span>}
          {esSierra && <span class="chih-station-hero__badge chih-station-hero__badge--special">Sierra Tarahumara</span>}
          {esPaquime && <span class="chih-station-hero__badge chih-station-hero__badge--special">UNESCO</span>}
          {esMinera && <span class="chih-station-hero__badge chih-station-hero__badge--special">Zona Minera</span>}
          {esAeropuerto && <span class="chih-station-hero__badge chih-station-hero__badge--special">ARFF</span>}
        </div>

        <h1 class="chih-station-hero__title">{estacion.nombre}</h1>

        <p class="chih-station-hero__location">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="20" height="20">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          {estacion.ciudad}, Chihuahua, México
        </p>

        <!-- Estadísticas rápidas -->
        <div class="chih-station-hero__stats">
          <div class="chih-station-hero__stat">
            <span class="chih-station-hero__stat-value">{estacion.personal}</span>
            <span class="chih-station-hero__stat-label">Bomberos</span>
          </div>
          <div class="chih-station-hero__stat">
            <span class="chih-station-hero__stat-value">{estacion.unidades}</span>
            <span class="chih-station-hero__stat-label">Unidades</span>
          </div>
          <div class="chih-station-hero__stat">
            <span class="chih-station-hero__stat-value">24/7</span>
            <span class="chih-station-hero__stat-label">Servicio</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Banner de Emergencia -->
    <section class="chih-station-emergency">
      <div class="chih-station-emergency__container">
        <div class="chih-station-emergency__phone">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="24" height="24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          <div>
            <span class="chih-station-emergency__label">Teléfono de emergencia</span>
            <a href={`tel:${estacion.telefono.replace(/[^\d+]/g, '')}`} class="chih-station-emergency__number">
              {estacion.telefono}
            </a>
          </div>
        </div>
        <div class="chih-station-emergency__national">
          <span>Emergencias Nacional:</span>
          <a href="tel:911"><strong>911</strong></a>
        </div>
      </div>
    </section>

    <!-- Contenido Principal -->
    <div class="chih-station-content">
      <div class="chih-station-content__container">

        <!-- Columna Principal -->
        <div class="chih-station-content__main">

          <!-- Descripción y Contexto -->
          <section class="chih-station-section">
            <h2 class="chih-station-section__title">Acerca de esta Estación</h2>
            <div class="chih-station-section__content">
              <p>{estacion.descripcion}</p>

              {/* Contexto específico por tipo de zona */}
              {esCapital && (
                <div class="chih-station-context chih-station-context--capital">
                  <h3>Capital del Estado más Grande de México</h3>
                  <p>
                    La ciudad de <strong>Chihuahua</strong>, capital del estado con el mismo nombre, es el
                    centro político, económico y cultural de la entidad más extensa de México. Con más de
                    <strong>900,000 habitantes</strong>, la zona metropolitana alberga industrias
                    aeroespaciales, automotrices y manufactureras de clase mundial. Esta estación protege
                    tanto zonas residenciales como complejos industriales con tecnología de punta en
                    respuesta a emergencias.
                  </p>
                </div>
              )}

              {esJuarez && (
                <div class="chih-station-context chih-station-context--frontera">
                  <h3>Principal Frontera México-Estados Unidos</h3>
                  <p>
                    <strong>Ciudad Juárez</strong> es la ciudad fronteriza más poblada de México con
                    <strong>1.5 millones de habitantes</strong>. Comparte frontera con <strong>El Paso, Texas</strong>,
                    formando una de las áreas metropolitanas binacionales más grandes del mundo. Los bomberos de
                    Ciudad Juárez mantienen <strong>protocolos de cooperación binacional</strong> con El Paso
                    Fire Department para emergencias transfronterizas. La ciudad es sede del centro
                    maquilador más grande del país con más de <strong>400 plantas de manufactura</strong>.
                  </p>
                </div>
              )}

              {esSierra && (
                <div class="chih-station-context chih-station-context--sierra">
                  <h3>Sierra Tarahumara y Barrancas del Cobre</h3>
                  <p>
                    Esta estación opera en el corazón de la <strong>Sierra Tarahumara</strong>, hogar de las
                    <strong>Barrancas del Cobre</strong> —un sistema de cañones cuatro veces más grande que
                    el Gran Cañón de Arizona. La región es territorio ancestral del pueblo
                    <strong>Rarámuri (Tarahumara)</strong> y destino de <strong>turismo de aventura</strong>
                    de clase mundial. Los bomberos están especializados en <strong>rescate de montaña</strong>,
                    <strong>incendios forestales</strong> y <strong>búsqueda de personas</strong> en terreno
                    extremadamente accidentado.
                  </p>
                </div>
              )}

              {esAgricola && (
                <div class="chih-station-context chih-station-context--agricola">
                  <h3>Corazón Agrícola de Chihuahua</h3>
                  <p>
                    Esta estación protege una de las zonas agrícolas más productivas de México.
                    <strong>Chihuahua es el principal productor nacional</strong> de manzana, nuez, chile
                    y algodón. La región también es conocida por las <strong>comunidades menonitas</strong>,
                    famosas por su queso artesanal y productos lácteos. Los bomberos atienden emergencias
                    en <strong>agroindustrias</strong>, <strong>frigoríficos</strong> y extensas áreas
                    de cultivo.
                  </p>
                </div>
              )}

              {esPaquime && (
                <div class="chih-station-context chih-station-context--unesco">
                  <h3>Patrimonio de la Humanidad UNESCO</h3>
                  <p>
                    Esta estación tiene la responsabilidad de proteger la <strong>Zona Arqueológica de
                    Paquimé</strong>, declarada <strong>Patrimonio de la Humanidad por la UNESCO en 1998</strong>.
                    Paquimé fue el centro ceremonial más importante de la cultura del mismo nombre, que
                    floreció entre los siglos X y XIV. Los bomberos cuentan con protocolos especiales
                    para la <strong>protección del patrimonio arqueológico</strong> y coordinación con
                    el INAH para emergencias en el sitio.
                  </p>
                </div>
              )}

              {esMinera && (
                <div class="chih-station-context chih-station-context--minera">
                  <h3>Tradición Minera de Más de 400 Años</h3>
                  <p>
                    Esta estación opera en la <strong>zona minera histórica</strong> del sur de Chihuahua.
                    <strong>Hidalgo del Parral</strong>, donde fue asesinado Pancho Villa, y
                    <strong>Santa Bárbara</strong> (fundada en 1567) tienen más de cuatro siglos de
                    historia minera. Los bomberos están capacitados en <strong>rescate minero</strong>
                    y atención de emergencias en <strong>minas activas</strong> de cobre, plata y otros
                    minerales.
                  </p>
                </div>
              )}

              {esAeropuerto && (
                <div class="chih-station-context chih-station-context--aeropuerto">
                  <h3>Servicios Aeroportuarios ARFF</h3>
                  <p>
                    Estación especializada en <strong>Rescue and Fire Fighting (ARFF)</strong> con
                    certificación de la <strong>Dirección General de Aeronáutica Civil</strong>. Personal
                    capacitado en <strong>rescate de aeronaves</strong>, <strong>combate de incendios
                    con combustible de aviación</strong> y <strong>evacuación de pasajeros</strong>.
                    Equipamiento especializado con vehículos ARFF y espuma de alta capacidad.
                  </p>
                </div>
              )}
            </div>
          </section>

          <!-- Servicios -->
          <section class="chih-station-section">
            <h2 class="chih-station-section__title">Servicios de Emergencia</h2>
            <ul class="chih-station-services">
              {estacion.servicios.map(servicio => (
                <li class="chih-station-services__item">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="20" height="20">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span>{servicio}</span>
                </li>
              ))}
            </ul>
          </section>

          <!-- Equipamiento -->
          <section class="chih-station-section">
            <h2 class="chih-station-section__title">Equipamiento y Unidades</h2>
            <div class="chih-station-equipment">
              {estacion.equipamiento.map(equipo => (
                <div class="chih-station-equipment__item">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="18" height="18">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span>{equipo}</span>
                </div>
              ))}
            </div>
          </section>

          <!-- Mapa -->
          <section class="chih-station-section">
            <h2 class="chih-station-section__title">Ubicación</h2>
            <div class="chih-station-map">
              <div class="chih-station-map__placeholder">
                <p><strong>Dirección:</strong> {estacion.direccion}</p>
                <p><strong>Código Postal:</strong> {estacion.codigoPostal}</p>
                <p><strong>Coordenadas:</strong> {estacion.coordenadas.lat}, {estacion.coordenadas.lng}</p>
                <a
                  href={`https://www.google.com/maps/search/?api=1&query=${estacion.coordenadas.lat},${estacion.coordenadas.lng}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="chih-station-map__link"
                >
                  Ver en Google Maps
                </a>
              </div>
            </div>
          </section>
        </div>

        <!-- Sidebar -->
        <aside class="chih-station-sidebar">

          <!-- Información de Contacto -->
          <div class="chih-station-card chih-station-card--contact">
            <h3 class="chih-station-card__title">Información de Contacto</h3>
            <ul class="chih-station-card__list">
              <li>
                <strong>Teléfono:</strong>
                <a href={`tel:${estacion.telefono.replace(/[^\d+]/g, '')}`}>{estacion.telefono}</a>
              </li>
              <li>
                <strong>Email:</strong>
                <a href={`mailto:${estacion.email}`}>{estacion.email}</a>
              </li>
              <li>
                <strong>Horario:</strong>
                <span>{estacion.horario}</span>
              </li>
              <li>
                <strong>Dirección:</strong>
                <span>{estacion.direccion}</span>
              </li>
              <li>
                <strong>C.P.:</strong>
                <span>{estacion.codigoPostal}</span>
              </li>
            </ul>
          </div>

          <!-- Estadísticas -->
          <div class="chih-station-card">
            <h3 class="chih-station-card__title">Datos de la Estación</h3>
            <ul class="chih-station-card__list">
              <li>
                <strong>Personal:</strong>
                <span>{estacion.personal} bomberos</span>
              </li>
              <li>
                <strong>Unidades:</strong>
                <span>{estacion.unidades} vehículos</span>
              </li>
              {estacion.fechaFundacion && (
                <li>
                  <strong>Fundación:</strong>
                  <span>{estacion.fechaFundacion}</span>
                </li>
              )}
              <li>
                <strong>Zona:</strong>
                <span>{contextoZona.tipo}</span>
              </li>
              <li>
                <strong>Actualizado:</strong>
                <span>{fechaActualizacion}</span>
              </li>
            </ul>
          </div>

          <!-- Teléfonos Regionales -->
          <div class="chih-station-card chih-station-card--phones">
            <h3 class="chih-station-card__title">Emergencias Chihuahua</h3>
            <ul class="chih-station-card__phones">
              <li>
                <span>Emergencias Nacional</span>
                <a href="tel:911">911</a>
              </li>
              {esJuarez ? (
                <>
                  <li>
                    <span>Bomberos Cd. Juárez</span>
                    <a href="tel:+526566161000">(656) 616-1000</a>
                  </li>
                  <li>
                    <span>Cruz Roja Juárez</span>
                    <a href="tel:+526566161616">(656) 616-1616</a>
                  </li>
                </>
              ) : (
                <>
                  <li>
                    <span>Bomberos Chihuahua</span>
                    <a href="tel:+526144293300">(614) 429-3300</a>
                  </li>
                  <li>
                    <span>Cruz Roja Chihuahua</span>
                    <a href="tel:+526144114411">(614) 411-4411</a>
                  </li>
                </>
              )}
              <li>
                <span>Protección Civil</span>
                <a href="tel:+526144293310">(614) 429-3310</a>
              </li>
            </ul>
          </div>

          <!-- Redes Sociales -->
          {estacion.redes && Object.keys(estacion.redes).length > 0 && (
            <div class="chih-station-card">
              <h3 class="chih-station-card__title">Redes Sociales</h3>
              <div class="chih-station-social">
                {estacion.redes.facebook && (
                  <a href={estacion.redes.facebook} target="_blank" rel="noopener noreferrer" class="chih-station-social__link">
                    Facebook
                  </a>
                )}
                {estacion.redes.twitter && (
                  <a href={estacion.redes.twitter} target="_blank" rel="noopener noreferrer" class="chih-station-social__link">
                    Twitter/X
                  </a>
                )}
              </div>
            </div>
          )}

          <!-- Volver al directorio -->
          <div class="chih-station-card chih-station-card--back">
            <a href="/directorio/chihuahua" class="chih-station-back-link">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="20" height="20">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
              </svg>
              Ver todas las estaciones de Chihuahua
            </a>
          </div>

        </aside>
      </div>
    </div>

    <!-- Breadcrumb -->
    <nav class="chih-station-breadcrumb" aria-label="Breadcrumb">
      <ol class="chih-station-breadcrumb__list">
        <li class="chih-station-breadcrumb__item">
          <a href="/">Inicio</a>
        </li>
        <li class="chih-station-breadcrumb__item">
          <a href="/directorio">Directorio</a>
        </li>
        <li class="chih-station-breadcrumb__item">
          <a href="/directorio/chihuahua">Chihuahua</a>
        </li>
        <li class="chih-station-breadcrumb__item chih-station-breadcrumb__item--active">
          {estacion.nombre}
        </li>
      </ol>
    </nav>
  </main>
</PageLayout>

<style>
  /* ============================================
     VARIABLES CSS - TEMA COBRE DEL DESIERTO
     ============================================ */
  :root {
    --chih-copper: rgb(180, 83, 9);
    --chih-copper-light: rgb(217, 119, 6);
    --chih-copper-dark: rgb(146, 64, 14);
    --chih-cream: rgb(254, 243, 199);
    --chih-sand: rgb(253, 230, 138);
    --chih-earth: rgb(120, 53, 15);
    --chih-white: #ffffff;
    --chih-gray-50: #fafaf9;
    --chih-gray-100: #f5f5f4;
    --chih-gray-200: #e7e5e4;
    --chih-gray-400: #a8a29e;
    --chih-gray-600: #57534e;
    --chih-gray-800: #292524;
    --chih-red: #dc2626;
  }

  /* ============================================
     STATION PAGE LAYOUT
     ============================================ */
  .chih-station {
    min-height: 100vh;
    background-color: var(--chih-gray-50);
  }

  /* ============================================
     HERO SECTION
     ============================================ */
  .chih-station-hero {
    background: linear-gradient(135deg, var(--chih-copper-dark) 0%, var(--chih-copper) 50%, var(--chih-copper-light) 100%);
    padding: 2.5rem 1rem;
    color: var(--chih-white);
  }

  .chih-station-hero__container {
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
  }

  .chih-station-hero__badges {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.25rem;
  }

  .chih-station-hero__badge {
    padding: 0.375rem 0.75rem;
    border-radius: 6px;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .chih-station-hero__badge--state {
    background: var(--chih-white);
    color: var(--chih-copper);
  }

  .chih-station-hero__badge--zone {
    background: rgba(255, 255, 255, 0.2);
    color: var(--chih-white);
  }

  .chih-station-hero__badge--special {
    background: var(--chih-sand);
    color: var(--chih-earth);
  }

  .chih-station-hero__title {
    font-size: 2rem;
    font-weight: 800;
    margin-bottom: 0.75rem;
    line-height: 1.2;
  }

  .chih-station-hero__location {
    display: flex;
    align-items: center;
