---
/**
 * DIRECTORIO DE BOMBEROS — TLAXCALA (TLA)
 * Estado más pequeño de México | Mayor densidad industrial por km²
 * ÚNICA planta Audi en las Américas (San José Chiapa)
 * Capital textilera de México (Santa Ana Chiautempan)
 * Volcán La Malinche 4,461 msnm | Grupo Modelo Calpulalpan
 */
import DirectorioEstadoLayout from "@layouts/DirectorioEstadoLayout.astro";
import {
  estacionesTlaxcala,
  getMunicipios,
  getEstacionBySlug,
  getEstacionesCercanas,
} from "@data/estaciones-tlaxcala";
import { getEstadosVecinos } from "@data/estados-vecinos";

const estado = "Tlaxcala";
const sigla = "TLA";
const slug = "tlaxcala";

/* ───────────────────────────── THUMBNAILS HERO ───────────────────────────── */
const heroThumbs = [
  { src: "/images/directorio/estacion-bomberos-tlaxcala-01.avif", alt: "Estación Central de Bomberos Tlaxcala" },
  { src: "/images/directorio/estacion-bomberos-tlaxcala-02.avif", alt: "Bomberos planta Audi San José Chiapa" },
  { src: "/images/directorio/estacion-bomberos-tlaxcala-03.avif", alt: "Rescate Volcán La Malinche Tlaxcala" },
];

/* ─────────────────────────── GALERÍA DE IMÁGENES ─────────────────────────── */
const galleryImages = [
  { src: "/images/directorio/bomberos-tlaxcala-audi.avif", alt: "HAZMAT automotriz planta Audi México" },
  { src: "/images/directorio/bomberos-tlaxcala-malinche.avif", alt: "Rescate en alta montaña Volcán La Malinche" },
  { src: "/images/directorio/bomberos-tlaxcala-textil.avif", alt: "Bomberos industria textil Chiautempan" },
  { src: "/images/directorio/bomberos-tlaxcala-apizaco.avif", alt: "HAZMAT ferroviario Apizaco Ferromex" },
];

/* ───────────────────────── TELÉFONOS DE EMERGENCIA ───────────────────────── */
const emergencyNumbers = [
  { name: "Emergencias", number: "911" },
  { name: "Bomberos Tlaxcala Capital", number: "246 462 0100" },
  { name: "Bomberos Apizaco", number: "241 418 0300" },
  { name: "Bomberos Huamantla", number: "247 472 0500" },
  { name: "Bomberos Calpulalpan", number: "591 922 0300" },
  { name: "Bomberos Chiautempan", number: "241 416 0200" },
];

/* ──────────────────────────── REGIONES DEL ESTADO ────────────────────────── */
const regiones = [
  { nombre: "Corredor Audi", desc: "San José Chiapa (ÚNICA planta Audi Américas), proveedores Tier-1/Tier-2, Tlaltelulco" },
  { nombre: "Capital Industrial", desc: "Apizaco (nodo ferroviario Ferromex), Tetla (farmacéutico), corredor logístico" },
  { nombre: "Capital Textilera", desc: "Santa Ana Chiautempan (mayor concentración telares de México), Papalotla" },
  { nombre: "Región Capital", desc: "Tlaxcala de Xicohténcatl (capital), Centro Histórico colonial, Ixtacuixtla" },
  { nombre: "Oriente / La Malinche", desc: "Huamantla (volcán 4,461 msnm), San Pablo del Monte, Tetlatlahuca — rescate alta montaña" },
  { nombre: "Noroeste / Autopista 150D", desc: "Calpulalpan (Grupo Modelo cervecería), corredor México-Puebla-Veracruz" },
];

/* ────────────────────────── TARJETAS EPP DESTACADAS ──────────────────────── */
const eppCards = [
  { icon: "factory", title: "HAZMAT Automotriz", desc: "Audi México: baterías HV, VOCs pintura, isocianatos" },
  { icon: "flame", title: "Incendios Textiles", desc: "Fibras sintéticas poliéster/nylon, colorantes azo tóxicos" },
  { icon: "mountain", title: "Rescate Alta Montaña", desc: "Volcán La Malinche 4,461 msnm — nieve, hielo, hipotermia" },
  { icon: "rail", title: "HAZMAT Ferroviario", desc: "Nodo Ferromex Apizaco — carga peligrosa clasificada UN" },
];

/* ─────────────────────── IMÁGENES TARJETAS ESTACIONES ────────────────────── */
const stationImages = [
  "/images/directorio/estacion-bomberos-profesional-01.avif",
  "/images/directorio/camion-bomberos-autobomba-urbana-01.avif",
  "/images/directorio/equipo-hazmat-materiales-peligrosos-01.avif",
  "/images/directorio/estacion-bomberos-moderna-01.avif",
  "/images/directorio/camion-bomberos-escalera-telescopica-01.avif",
  "/images/directorio/estacion-bomberos-mexico-01.avif",
  "/images/directorio/unidad-rescate-bomberos-01.avif",
  "/images/directorio/bomberos-entrenamiento-01.avif",
  "/images/directorio/rescate-montana-bomberos-01.avif",
];

/* ──────────────────────────── ESTADOS VECINOS ────────────────────────────── */
const estadosVecinos = getEstadosVecinos("tlaxcala");

/* ───────────────────────────── SCHEMA.ORG SEO ────────────────────────────── */
const itemListSchema = {
  "@context": "https://schema.org",
  "@type": "ItemList",
  name: `Estaciones de Bomberos en ${estado}, México`,
  description: `Directorio oficial de las ${estacionesTlaxcala.length} estaciones de bomberos en Tlaxcala. Única planta Audi en las Américas (San José Chiapa), capital textilera de México (Chiautempan), Volcán La Malinche (4,461 msnm), Grupo Modelo Calpulalpan. El estado más pequeño con la mayor densidad industrial. Emergencias 911.`,
  numberOfItems: estacionesTlaxcala.length,
  itemListElement: estacionesTlaxcala.map((e, i) => ({
    "@type": "ListItem",
    position: i + 1,
    item: {
      "@type": "FireStation",
      name: e.nombre,
      address: {
        "@type": "PostalAddress",
        streetAddress: e.direccion,
        addressLocality: e.municipio,
        addressRegion: estado,
        addressCountry: "MX",
      },
      telephone: e.telefono,
      url: `https://bombero.mx/directorio/${slug}/${e.slug}`,
    },
  })),
};

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  itemListElement: [
    { "@type": "ListItem", position: 1, name: "Inicio", item: "https://bombero.mx/" },
    { "@type": "ListItem", position: 2, name: "Directorio", item: "https://bombero.mx/directorio" },
    { "@type": "ListItem", position: 3, name: estado, item: `https://bombero.mx/directorio/${slug}` },
  ],
};
---

<DirectorioEstadoLayout
  estado={estado}
  sigla={sigla}
  slug={slug}
  estaciones={estacionesTlaxcala}
  municipios={getMunicipios()}
  heroThumbs={heroThumbs}
  galleryImages={galleryImages}
  emergencyNumbers={emergencyNumbers}
  regiones={regiones}
  eppCards={eppCards}
  stationImages={stationImages}
  estadosVecinos={estadosVecinos}
  jsonLd={[itemListSchema, breadcrumbSchema]}
  title={`Bomberos en Tlaxcala | ${estacionesTlaxcala.length} Estaciones | Planta Audi | La Malinche | BOMBERO.MX`}
  description="Directorio oficial de las 15 estaciones de bomberos en Tlaxcala. Única planta Audi en las Américas (San José Chiapa, 12,000 empleados), capital textilera de México (Chiautempan), Volcán La Malinche (4,461 msnm), Grupo Modelo Calpulalpan. Estado más pequeño de México con mayor densidad industrial por km². Emergencias 911."
>
  <!-- ════════════════════════════════════════════════════════════════════════
       INTRO SLOT
       ════════════════════════════════════════════════════════════════════════ -->
  <Fragment slot="intro">
    Directorio completo del <strong>H. Cuerpo de Bomberos de Tlaxcala</strong>.
    El <strong>estado más pequeño de México</strong> (3,991 km²) y paradójicamente
    el de <strong>mayor densidad industrial por km²</strong>: sede de la
    <strong>única planta Audi en todo el continente americano</strong>,
    capital textilera nacional, el Volcán La Malinche a 4,461 msnm
    y la cervecería más grande del centro del país.
  </Fragment>

  <!-- ════════════════════════════════════════════════════════════════════════
       HERO SEO SLOT
       ════════════════════════════════════════════════════════════════════════ -->
  <Fragment slot="hero-seo">
    <div class="hero-seo__block">
      <h2 class="hero-seo__title">Audi México: La Única Planta en las Américas</h2>
      <p class="hero-seo__text">
        La <strong>Planta Audi México en San José Chiapa</strong> (2016, $1,300 MDD de inversión)
        es la <strong>única fábrica de automóviles Audi en todo el continente americano</strong>.
        Produce los modelos <strong>Audi Q5</strong> y <strong>A3 Sedan</strong> para distribución
        global —más de <strong>150,000 unidades/año</strong>— y emplea a <strong>12,000 personas</strong>.
        Los bomberos de San José Chiapa dominan HAZMAT automotriz premium: disolventes VOC del taller
        de pintura, baterías de alta tensión (400V) para híbridos plug-in y celdas de soldadura robotizada.
      </p>
    </div>
    <div class="hero-seo__block">
      <h2 class="hero-seo__title">Capital Textilera + Volcán La Malinche</h2>
      <p class="hero-seo__text">
        <strong>Santa Ana Chiautempan</strong> concentra el mayor número de telares industriales de México
        —más de 500 empresas textileras— con riesgos específicos de incendios en fibras sintéticas
        (poliéster, nylon) y colorantes azo tóxicos. El <strong>Volcán La Malinche</strong> (4,461 msnm)
        exige equipos de rescate en alta montaña: hipotermia, nieve, hielo y emergencias por altitud.
        Con apenas <strong>3,991 km²</strong>, Tlaxcala tiene la <strong>mayor concentración de parques
        industriales por km² de México</strong>.
      </p>
    </div>
  </Fragment>

  <!-- ════════════════════════════════════════════════════════════════════════
       SEO CONTENT SLOT
       ════════════════════════════════════════════════════════════════════════ -->
  <Fragment slot="seo">
    <section class="seo-content">
      <h2>El H. Cuerpo de Bomberos de Tlaxcala</h2>
      <p>
        El <strong>H. Cuerpo de Bomberos de Tlaxcala</strong> protege a más de <strong>1.3 millones
        de tlaxcaltecas</strong> en el estado más pequeño de México —y paradójicamente uno de los más
        importantes industrialmente—. Tlaxcala es el único estado de la República que nunca fue conquistado
        ni sometido por la Corona española y que, aliado con Hernán Cortés, fue decisivo en la historia de
        México. Ese espíritu de excelencia se refleja hoy en un cuerpo de bomberos altamente especializado
        que enfrenta riesgos industriales de primer nivel mundial.
      </p>

      <h3>¿Cómo contactar a los bomberos en Tlaxcala?</h3>
      <p>
        En cualquier <strong>emergencia en Tlaxcala</strong>, marca el <strong>911</strong>. Para contacto
        directo: <strong>Tlaxcala capital 246 462 0100</strong>, <strong>Apizaco 241 418 0300</strong>,
        <strong>Huamantla 247 472 0500</strong>, <strong>Calpulalpan 591 922 0300</strong>,
        <strong>Chiautempan 241 416 0200</strong>.
      </p>

      <h3>Planta Audi México — El Orgullo Industrial de Tlaxcala</h3>
      <p>
        La <strong>Planta Audi México en San José Chiapa</strong>, inaugurada en 2016 con una inversión de
        <strong>1,300 millones de dólares</strong>, es la única fábrica de automóviles <strong>Audi en
        todo el continente americano</strong>. Produce los modelos <strong>Audi Q5</strong> y <strong>Audi
        A3 Sedan</strong> para distribución global —más de 150,000 unidades anuales— y emplea directa e
        indirectamente a más de 12,000 personas. El taller de pintura con disolventes orgánicos volátiles,
        las líneas de producción de baterías de alta tensión (400V) para los modelos plug-in hybrid, y las
        celdas de soldadura robotizada (KUKA, FANUC) representan riesgos HAZMAT que demandan protocolos
        del Grupo Volkswagen y certificaciones internacionales.
      </p>

      <h3>La Capital Textilera de México: Santa Ana Chiautempan</h3>
      <p>
        <strong>Santa Ana Chiautempan</strong> concentra la mayor densidad de telares industriales del país,
        con más de 500 empresas textileras que producen <strong>sarapes, cobertores, ropa deportiva y
        telas técnicas</strong> para mercados de América del Norte, Europa y Asia. El riesgo de incendio
        es de alta complejidad: las fibras sintéticas (poliéster, nylon, acrílico) tienen una velocidad
        de propagación del fuego entre 5 y 10 veces superior a la madera. Los colorantes azo empleados en
        los baños de tintura contienen precursores que, al combustionar, generan gases tóxicos como el
        cloruro de hidrógeno y el cianuro de hidrógeno.
      </p>

      <h3>Volcán La Malinche: Rescate en Alta Montaña</h3>
      <p>
        El <strong>Volcán La Malinche</strong> —también llamado <strong>Matlalcuéitl</strong>, «la señora
        de las faldas azules» en náhuatl— alcanza los <strong>4,461 msnm</strong>, siendo la segunda
        montaña más alta del centro de México. El Parque Nacional que lo rodea recibe más de
        <strong>200,000 visitantes anuales</strong> entre excursionistas, montañistas y turistas. Los
        rescates en el volcán son frecuentes: hipotermia, torceduras en terreno volcánico irregular,
        lesiones por caídas en zonas de roca suelta y emergencias cardiorrespiratorias por altitud. Los
        bomberos de Huamantla y San Pablo del Monte mantienen equipos de <strong>rescate en alta montaña</strong>
        con indumentaria específica para nieve, hielo y condiciones extremas.
      </p>

      <h3>Grupo Modelo Calpulalpan y el Corredor Autopista 150D</h3>
      <p>
        La <strong>Planta Cervecera Grupo Modelo de Calpulalpan</strong> es una de las tres cervecerías
        más grandes de México, produciendo más de <strong>10 millones de hectolitros</strong> anuales de
        marcas como Corona, Modelo Especial y Pacífico. Sus riesgos industriales son específicos: el
        <strong>amoniaco</strong> empleado en refrigeración industrial puede ser letal en concentraciones
        de 50 ppm; el <strong>CO₂</strong> producido en la fermentación desplaza el oxígeno en espacios
        confinados. La autopista <strong>México 150D</strong> —la de mayor tráfico de carga del centro
        del país— pasa por el municipio, generando riesgo permanente de accidentes con materiales peligrosos.
      </p>

      <h3>Apizaco: El Nodo Ferroviario del Centro de México</h3>
      <p>
        <strong>Apizaco</strong> es el principal nodo ferroviario del centro de México, donde confluyen
        las rutas de <strong>Ferromex</strong> que conectan la Ciudad de México con Veracruz, el Bajío
        con el Golfo, y el corredor norte-sur del sistema ferroviario nacional. Diariamente pasan por
        Apizaco <strong>decenas de trenes de carga</strong>, incluyendo convoyes con carga peligrosa
        clasificada UN: clorosulfúrico, ácidos industriales, gases comprimidos, combustibles y productos
        petroquímicos. Los bomberos de Apizaco son los únicos en Tlaxcala con <strong>certificación de
        respuesta a accidentes ferroviarios</strong> y protocolos específicos con Ferromex.
      </p>

      <h3>Servicios de los Bomberos Tlaxcaltecas</h3>
      <p>
        Los bomberos de Tlaxcala están certificados para atender:
        <strong>incendios HAZMAT automotriz</strong> (Audi: VOCs, baterías HV, isocianatos);
        <strong>incendios de fibras textiles</strong> y colorantes industriales;
        <strong>HAZMAT ferroviario</strong> (carga peligrosa UN en tránsito Ferromex);
        <strong>HAZMAT cervecería</strong> (amoniaco, CO₂, alcohol);
        <strong>rescate en alta montaña</strong> (Volcán La Malinche, nieve y hielo);
        <strong>incendios forestales de altitud</strong> (bosque templado 2,800-4,200 msnm);
        <strong>protección de patrimonio cultural</strong> (Centro Histórico colonial);
        <strong>rescate vehicular</strong> en la Autopista 150D; y
        <strong>HAZMAT químico-farmacéutico</strong> en el corredor norte.
      </p>
    </section>
  </Fragment>
</DirectorioEstadoLayout>

<style>
  /* ══════════════════════════════════════════════════════════════════════════
     TLAXCALA — ESTILOS SEO
     Color: Amber/Cobre #b45309 — Audi + tradición textilera
     ══════════════════════════════════════════════════════════════════════════ */

  .hero-seo__block {
    margin-bottom: var(--space-4);
  }

  .hero-seo__block:last-child {
    margin-bottom: 0;
  }

  .hero-seo__title {
    font-size: var(--text-base);
    font-weight: 700;
    color: #fbbf24;
    margin: 0 0 var(--space-2);
  }

  .hero-seo__text {
    font-size: var(--text-sm);
    color: var(--color-smoke-300);
    line-height: 1.7;
    margin: 0;
  }

  .hero-seo__text strong {
    color: white;
  }

  /* ─── SEO Content ─── */
  .seo-content {
    padding: var(--space-8);
    background: white;
    border-radius: var(--radius-xl);
  }

  .seo-content h2 {
    font-size: var(--text-xl);
    font-weight: 700;
    color: var(--color-smoke-900);
    margin: 0 0 var(--space-4);
  }

  .seo-content h3 {
    font-size: var(--text-lg);
    font-weight: 700;
    color: var(--color-smoke-800);
    margin: var(--space-6) 0 var(--space-3);
  }

  .seo-content p {
    font-size: var(--text-base);
    color: var(--color-smoke-600);
    line-height: 1.8;
    margin: 0 0 var(--space-4);
  }

