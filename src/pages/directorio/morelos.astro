---
/**
 * Directorio de Estaciones de Bomberos Morelos
 * Estado con el clima mas agradable de Mexico: la Ciudad de la Eterna Primavera
 */
import PageLayout from "@layouts/PageLayout.astro";
import SectionHeader from "@components/SectionHeader.astro";
import StationCard from "@components/StationCard.astro";
import { estacionesMorelos } from "@data/estaciones-morelos";

const municipios = [...new Set(estacionesMorelos.map(e => e.ciudad))].filter(Boolean).sort();

const estadosVecinos = [
  { nombre: "Ciudad de Mexico", slug: "ciudad-de-mexico" },
  { nombre: "Estado de Mexico", slug: "estado-de-mexico" },
  { nombre: "Puebla", slug: "puebla" },
  { nombre: "Guerrero", slug: "guerrero" },
];
---

<PageLayout
  title="Estaciones de Bomberos en Morelos | Directorio BOMBERO.MX"
  description="Directorio completo de las estaciones de bomberos en Morelos. Telefonos de emergencia, direcciones y servicios. Estaciones cubriendo los municipios del estado. Emergencias 911."
>
  <!-- Hero Section -->
  <section class="mor-hero">
    <div class="mor-hero__bg">
      <div class="mor-hero__gradient"></div>
      <div class="mor-hero__pattern"></div>
    </div>
    <div class="container">
      <div class="mor-hero__container">
        <!-- Left Column -->
        <div class="mor-hero__content">
          <nav class="mor-hero__breadcrumb">
            <a href="/">Inicio</a>
            <span>/</span>
            <a href="/directorio">Directorio</a>
            <span>/</span>
            <span>Morelos</span>
          </nav>
          <span class="mor-hero__badge">
            <span class="mor-hero__badge-dot"></span>
            MOR
          </span>
          <h1 class="mor-hero__title">
            Estaciones de Bomberos en
            <span class="mor-hero__highlight">Morelos</span>
          </h1>
          <p class="mor-hero__desc">
            Directorio completo del <strong>H. Cuerpo de Bomberos de Morelos</strong>.
            Encuentra telefonos de emergencia, direcciones y servicios de todas las estaciones en el estado de la Ciudad de la Eterna Primavera.
          </p>
          <div class="mor-hero__stats">
            <div class="mor-hero__stat">
              <span class="mor-hero__stat-number">{estacionesMorelos.length}</span>
              <span class="mor-hero__stat-label">Estaciones</span>
            </div>
            <div class="mor-hero__stat">
              <span class="mor-hero__stat-number">{municipios.length}</span>
              <span class="mor-hero__stat-label">Municipios</span>
            </div>
            <div class="mor-hero__stat">
              <span class="mor-hero__stat-number">24/7</span>
              <span class="mor-hero__stat-label">Servicio</span>
            </div>
            <div class="mor-hero__stat">
              <span class="mor-hero__stat-number">2M+</span>
              <span class="mor-hero__stat-label">Habitantes</span>
            </div>
          </div>
        </div>

        <!-- Right Column - SEO Content -->
        <div class="mor-hero__seo">
          <h2 class="mor-hero__seo-title">H. Cuerpo de Bomberos de Morelos</h2>
          <p class="mor-hero__seo-text">
            <strong>Morelos</strong> es uno de los estados mas pequenos pero mas densamente poblados de Mexico, con mas de
            <strong>2 millones de habitantes</strong> distribuidos en 36 municipios. Los bomberos
            morelenses atienden emergencias en zonas residenciales, turisticas e industriales del estado.
          </p>
          <h2 class="mor-hero__seo-title">Turismo y Riesgos Especiales</h2>
          <p class="mor-hero__seo-text">
            Morelos recibe millones de visitantes cada ano en destinos como <strong>Cuernavaca, Tepoztlan y Cuautla</strong>.
            Los bomberos estan especialmente capacitados para atender
            <strong>emergencias en eventos masivos, zonas turisticas y accidentes en barrancas</strong>.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Emergency Banner -->
  <section class="mor-emergency">
    <div class="container">
      <div class="mor-emergency__content">
        <div class="mor-emergency__icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
          </svg>
        </div>
        <div class="mor-emergency__text">
          <span class="mor-emergency__label">Emergencias en Morelos</span>
          <span class="mor-emergency__number">911</span>
        </div>
        <p class="mor-emergency__desc">
          Numero unico de emergencias en todo Morelos. Disponible las 24 horas, los 365 dias del ano.
        </p>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="mor-main">
    <div class="container">
      <div class="mor-main__grid">
        <!-- Stations Grid -->
        <div class="mor-main__content">
          <SectionHeader
            label="Directorio Completo"
            title="Estaciones de Bomberos en Morelos"
            description="Informacion de contacto actualizada de todas las estaciones del H. Cuerpo de Bomberos en Morelos. Selecciona una estacion para ver sus datos de contacto, servicios y zonas de cobertura."
          />

          <!-- Stations Grid -->
          <div class="mor-stations-grid">
            {estacionesMorelos.map((estacion) => (
              <StationCard
                nombre={estacion.nombre}
                slug={estacion.slug}
                direccion={estacion.direccion}
                alcaldia={estacion.ciudad}
                telefono={estacion.telefono}
                servicios={estacion.servicios}
                horario={estacion.horario}
                baseUrl="/directorio/morelos"
              />
            ))}
          </div>

          <!-- SEO Content -->
          <div class="mor-seo">
            <h2>El H. Cuerpo de Bomberos de Morelos</h2>
            <p>
              El <strong>H. Cuerpo de Bomberos de Morelos</strong> es la institucion encargada de
              proteger la vida, el medio ambiente y el patrimonio de los mas de <strong>2 millones de morelenses</strong>.
              Con presencia en los principales municipios del estado, los bomberos atienden emergencias
              las <strong>24 horas del dia, los 365 dias del ano</strong>.
            </p>

            <h3>Como contactar a los bomberos en Morelos?</h3>
            <p>
              En caso de <strong>emergencia en Morelos</strong>, marca el <strong>911</strong> desde
              cualquier telefono. Este numero conecta con el <strong>C4 de Morelos</strong> que coordina
              la respuesta de bomberos, policia y servicios medicos. Tambien puedes comunicarte directamente a la
              estacion mas cercana usando los telefonos de este directorio.
            </p>

            <h3>Zonas de Mayor Riesgo en Morelos</h3>
            <p>
              Morelos presenta diversos riesgos que los bomberos atienden constantemente:
              <strong>incendios en zonas residenciales</strong> de alta densidad en Cuernavaca y Cuautla,
              <strong>accidentes en barrancas</strong> que atraviesan la capital del estado,
              <strong>incendios forestales</strong> en la sierra del Ajusco-Chichinautzin, y
              <strong>accidentes vehiculares</strong> en la autopista del Sol y las principales carreteras.
            </p>

            <h3>Servicios de los Bomberos Morelenses</h3>
            <p>
              Los bomberos de Morelos estan capacitados para atender:
              <strong>incendios estructurales, industriales y forestales</strong>;
              <strong>rescate vehicular en accidentes de transito</strong>;
              <strong>materiales peligrosos (HAZMAT)</strong>;
              <strong>rescate de personas atrapadas en barrancas</strong>;
              <strong>control de fugas de gas</strong>;
              <strong>rescate acuatico en rios y balnearios</strong>;
              <strong>emergencias en zonas turisticas</strong>; y muchos otros servicios
              vitales para la seguridad de la poblacion.
            </p>
          </div>
        </div>

        <!-- Sidebar -->
        <aside class="mor-sidebar">
          <!-- Quick Access -->
          <div class="mor-sidebar__card">
            <h4>Filtrar por Municipio</h4>
            <ul class="mor-sidebar__municipios">
              {municipios.map((municipio) => (
                <li>
                  <a href={`#${municipio.toLowerCase().replace(/\s+/g, '-').replace(/á/g, 'a').replace(/é/g, 'e').replace(/í/g, 'i').replace(/ó/g, 'o').replace(/ú/g, 'u')}`}>
                    <span class="mor-sidebar__bullet"></span>
                    <span>{municipio}</span>
                  </a>
                </li>
              ))}
            </ul>
          </div>

          <!-- Emergency Numbers -->
          <div class="mor-sidebar__card mor-sidebar__card--emergency">
            <h4>Telefonos de Emergencia</h4>
            <div class="mor-sidebar__emergency-list">
              <div class="mor-sidebar__emergency-item">
                <span class="mor-sidebar__emergency-number">911</span>
                <span class="mor-sidebar__emergency-label">Emergencias</span>
              </div>
              <div class="mor-sidebar__emergency-item">
                <span class="mor-sidebar__emergency-number">777 312 5678</span>
                <span class="mor-sidebar__emergency-label">Bomberos Cuernavaca</span>
              </div>
              <div class="mor-sidebar__emergency-item">
                <span class="mor-sidebar__emergency-number">735 352 0000</span>
                <span class="mor-sidebar__emergency-label">Proteccion Civil</span>
              </div>
            </div>
          </div>

          <!-- Regiones -->
          <div class="mor-sidebar__card">
            <h4>Regiones del Estado</h4>
            <ul class="mor-sidebar__regiones">
              <li>
                <span class="mor-sidebar__region-name">Zona Metropolitana Cuernavaca</span>
                <span class="mor-sidebar__region-desc">Cuernavaca, Temixco, Jiutepec, Emiliano Zapata</span>
              </li>
              <li>
                <span class="mor-sidebar__region-name">Zona Oriente</span>
                <span class="mor-sidebar__region-desc">Cuautla, Yautepec, Ayala, Tlayacapan</span>
              </li>
              <li>
                <span class="mor-sidebar__region-name">Zona Norte</span>
                <span class="mor-sidebar__region-desc">Tepoztlan, Tlalnepantla, Huitzilac</span>
              </li>
              <li>
                <span class="mor-sidebar__region-name">Zona Sur</span>
                <span class="mor-sidebar__region-desc">Jojutla, Tlaltizapan, Puente de Ixtla, Tepalcingo</span>
              </li>
            </ul>
          </div>

          <!-- Nearby States -->
          <div class="mor-sidebar__card">
            <h4>Estados Vecinos</h4>
            <ul class="mor-sidebar__states">
              {estadosVecinos.map((estado) => (
                <li>
                  <a href={`/directorio/${estado.slug}`}>
                    <span>{estado.nombre}</span>
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M5 12h14M12 5l7 7-7 7"/>
                    </svg>
                  </a>
                </li>
              ))}
            </ul>
          </div>

          <!-- CTA -->
          <div class="mor-sidebar__card mor-sidebar__card--cta">
            <h4>Equipas una Estacion en MOR?</h4>
            <p>Somos distribuidores de equipo certificado NFPA para cuerpos de bomberos en todo Morelos</p>
            <a href="/cotizar" class="mor-sidebar__cta-btn">Solicitar Cotizacion</a>
          </div>

          <!-- Products -->
          <div class="mor-sidebar__card">
            <h4>Equipo para Bomberos</h4>
            <ul class="mor-sidebar__products">
              <li><a href="/productos/trajes-para-bomberos">Trajes Estructurales NFPA</a></li>
              <li><a href="/productos/cascos-para-bomberos">Cascos de Bombero</a></li>
              <li><a href="/productos/scba">Equipos SCBA</a></li>
              <li><a href="/productos/herramientas-rescate">Herramientas de Rescate</a></li>
            </ul>
            <a href="/productos" class="mor-sidebar__link">
              Ver catalogo completo
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </a>
          </div>

          <!-- Back to Directory -->
          <div class="mor-sidebar__card">
            <a href="/directorio" class="mor-sidebar__back">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M19 12H5M12 19l-7-7 7-7"/>
              </svg>
              <span>Ver todos los estados</span>
            </a>
          </div>

          <!-- Contact -->
          <div class="mor-sidebar__card">
            <h4>Contacto BOMBERO.MX</h4>
            <ul class="mor-sidebar__contact">
              <li><a href="tel:+525520780102">55 2078 0102</a></li>
              <li><a href="https://wa.me/525520780102">WhatsApp</a></li>
              <li><a href="mailto:ventas@bombero.mx">ventas@bombero.mx</a></li>
            </ul>
          </div>
        </aside>
      </div>
    </div>
  </section>
</PageLayout>

<style>
  /* ═══════════════════════════════════════════════════════════════════════
     DIRECTORIO MORELOS - ESTACIONES DE BOMBEROS
     ═══════════════════════════════════════════════════════════════════════ */

  /* === Hero Section === */
  .mor-hero {
    position: relative;
    padding: var(--space-16) 0;
    background: var(--color-smoke-950);
    overflow: hidden;
  }

  .mor-hero__bg {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .mor-hero__gradient {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(ellipse 80% 50% at 50% -20%, rgba(220, 38, 38, 0.15), transparent),
      radial-gradient(ellipse 60% 50% at 0% 50%, rgba(249, 115, 22, 0.1), transparent),
      radial-gradient(ellipse 60% 50% at 100% 80%, rgba(220, 38, 38, 0.08), transparent);
  }

  .mor-hero__pattern {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(255,255,255,0.02) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255,255,255,0.02) 1px, transparent 1px);
    background-size: 60px 60px;
    mask-image: radial-gradient(ellipse at center, black 30%, transparent 70%);
  }

  .mor-hero__container {
    position: relative;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-12);
    align-items: center;
  }

  .mor-hero__breadcrumb {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-sm);
    margin-bottom: var(--space-4);
  }

  .mor-hero__breadcrumb a {
    color: var(--color-smoke-400);
    text-decoration: none;
    transition: color 0.2s;
  }

  .mor-hero__breadcrumb a:hover {
    color: var(--color-fire-400);
  }

  .mor-hero__breadcrumb span {
    color: var(--color-smoke-600);
  }

  .mor-hero__badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2) var(--space-4);
    background: rgba(220, 38, 38, 0.15);
    border: 1px solid rgba(220, 38, 38, 0.3);
    border-radius: var(--radius-full);
    font-size: var(--text-sm);
    font-weight: 700;
    color: var(--color-fire-400);
    margin-bottom: var(--space-4);
  }

  .mor-hero__badge-dot {
    width: 8px;
    height: 8px;
    background: var(--color-ember-500);
    border-radius: 50%;
  }

  .mor-hero__title {
    font-size: clamp(2rem, 4vw, 2.75rem);
    font-weight: 800;
    color: white;
    line-height: 1.1;
    margin: 0 0 var(--space-5);
  }

  .mor-hero__highlight {
    background: linear-gradient(135deg, var(--color-fire-500), var(--color-ember-500));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .mor-hero__desc {
    font-size: var(--text-base);
    color: var(--color-smoke-300);
    line-height: 1.7;
    margin: 0 0 var(--space-6);
  }

  .mor-hero__desc strong {
    color: white;
  }

  .mor-hero__stats {
    display: flex;
    gap: var(--space-6);
    padding-top: var(--space-5);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .mor-hero__stat {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .mor-hero__stat-number {
    font-size: var(--text-2xl);
    font-weight: 800;
    color: var(--color-fire-400);
  }

  .mor-hero__stat-label {
    font-size: var(--text-xs);
    color: var(--color-smoke-400);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .mor-hero__seo {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .mor-hero__seo-title {
    font-size: var(--text-base);
    font-weight: 700;
    color: var(--color-fire-400);
    margin: 0;
  }

  .mor-hero__seo-text {
    font-size: var(--text-sm);
    color: var(--color-smoke-300);
    line-height: 1.7;
    margin: 0;
  }

  .mor-hero__seo-text strong {
    color: white;
  }

  /* === Emergency Banner === */
  .mor-emergency {
    background: linear-gradient(135deg, var(--color-fire-600), var(--color-ember-600));
    padding: var(--space-5) 0;
  }

  .mor-emergency__content {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-6);
  }

  .mor-emergency__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 56px;
    height: 56px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    color: white;
  }

  .mor-emergency__text {
    display: flex;
    flex-direction: column;
  }

  .mor-emergency__label {
    font-size: var(--text-sm);
    color: rgba(255, 255, 255, 0.8);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .mor-emergency__number {
    font-size: var(--text-3xl);
    font-weight: 800;
    color: white;
  }

  .mor-emergency__desc {
    font-size: var(--text-sm);
    color: rgba(255, 255, 255, 0.9);
    margin: 0;
    max-width: 400px;
  }

  /* === Main Section === */
  .mor-main {
    padding: var(--space-16) 0;
    background: var(--color-smoke-50);
  }

  .mor-main__grid {
    display: grid;
    grid-template-columns: 1fr 340px;
    gap: var(--space-10);
    align-items: start;
  }

  /* === Stations Grid === */
  .mor-stations-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-6);
    margin-top: var(--space-8);
  }

  /* === SEO Content === */
  .mor-seo {
    margin-top: var(--space-12);
    padding: var(--space-8);
    background: white;
    border-radius: var(--radius-xl);
  }

  .mor-seo h2 {
    font-size: var(--text-xl);
    font-weight: 700;
    color: var(--color-smoke-900);
    margin: 0 0 var(--space-4);
  }

  .mor-seo h3 {
    font-size: var(--text-lg);
    font-weight: 700;
    color: var(--color-smoke-800);
    margin: var(--space-6) 0 var(--space-3);
  }

  .mor-seo p {
    font-size: var(--text-base);
    color: var(--color-smoke-600);
    line-height: 1.8;
    margin: 0 0 var(--space-4);
  }

  .mor-seo p:last-child {
    margin-bottom: 0;
  }

  .mor-seo strong {
    color: var(--color-smoke-800);
  }

  /* === Sidebar === */
  .mor-sidebar {
    display: flex;
    flex-direction: column;
    gap: var(--space-5);
    position: sticky;
    top: var(--space-6);
  }

  .mor-sidebar__card {
    padding: var(--space-5);
    background: white;
    border-radius: var(--radius-xl);
  }

  .mor-sidebar__card h4 {
    font-size: var(--text-base);
    font-weight: 700;
    color: var(--color-smoke-900);
    margin: 0 0 var(--space-4);
    padding-bottom: var(--space-3);
    border-bottom: 2px solid var(--color-fire-500);
  }

  .mor-sidebar__card > p {
    font-size: var(--text-sm);
    color: var(--color-smoke-500);
    line-height: 1.6;
    margin: 0 0 var(--space-4);
  }

  /* Municipios List */
  .mor-sidebar__municipios {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
    max-height: 320px;
    overflow-y: auto;
  }

  .mor-sidebar__municipios li a {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2);
    border-radius: var(--radius-md);
    font-size: var(--text-sm);
    color: var(--color-smoke-600);
    text-decoration: none;
    transition: all 0.2s;
  }

  .mor-sidebar__municipios li a:hover {
    background: var(--color-smoke-50);
    color: var(--color-fire-600);
  }

  .mor-sidebar__bullet {
    width: 6px;
    height: 6px;
    background: var(--color-fire-500);
    border-radius: 50%;
  }

  /* Regiones */
  .mor-sidebar__regiones {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .mor-sidebar__regiones li {
    padding: var(--space-3);
    background: var(--color-smoke-50);
    border-radius: var(--radius-lg);
  }

  .mor-sidebar__region-name {
    display: block;
    font-size: var(--text-sm);
    font-weight: 700;
    color: var(--color-smoke-800);
    margin-bottom: 2px;
  }

  .mor-sidebar__region-desc {
    font-size: var(--text-xs);
    color: var(--color-smoke-500);
    line-height: 1.4;
  }

  /* Emergency Card */
  .mor-sidebar__card--emergency {
    background: linear-gradient(135deg, var(--color-smoke-900), var(--color-smoke-800));
  }

  .mor-sidebar__card--emergency h4 {
    color: white;
    border-bottom-color: var(--color-fire-500);
  }

  .mor-sidebar__emergency-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .mor-sidebar__emergency-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--space-3);
    background: rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-lg);
  }

  .mor-sidebar__emergency-number {
    font-size: var(--text-base);
    font-weight: 700;
