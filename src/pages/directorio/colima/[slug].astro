---
/**
 * ─── Página de Detalle de Estación de Bomberos Colima ───
 * Usa EstacionLayout para mantener consistencia con el resto del sitio
 */
import EstacionLayout from "@layouts/EstacionLayout.astro";
import { estacionesColima, getEstacionBySlug, getEstacionesCercanas } from "@data/estaciones-colima";

// Generar rutas estáticas
export function getStaticPaths() {
  return estacionesColima.map((estacion) => ({
    params: { slug: estacion.slug },
  }));
}

const { slug } = Astro.params;
const estacion = getEstacionBySlug(slug as string);

if (!estacion) {
  return Astro.redirect("/404");
}

// Obtener estaciones cercanas para el sidebar
const estacionesCercanas = getEstacionesCercanas(slug as string, 3);

// Datos del estado
const estado = {
  nombre: "Colima",
  slug: "colima",
  siglas: "COL",
  poblacion: "731 mil",
  municipios: 10,
};

// Estados vecinos para interlinking
const estadosVecinos = [
  { nombre: "Jalisco", slug: "jalisco" },
  { nombre: "Michoacán", slug: "michoacan" },
  { nombre: "Nayarit", slug: "nayarit" },
  { nombre: "Guerrero", slug: "guerrero" },
  { nombre: "Ciudad de México", slug: "ciudad-de-mexico" },
];

// Variables para contenido personalizado
const ubicacion = estacion.municipio ?? estacion.ciudad;

// Tarjetas EPP para la sección de equipo certificado
const eppCards = [
  {
    image: "/images/directorio/traje-bombero-estructural-nfpa-01.avif",
    imageAlt: `Traje Estructural NFPA 1971 para bomberos ${ubicacion}`,
    badge: "NFPA 1971",
    title: "Traje Estructural NFPA 1971",
    text: `Diseñado para los bomberos de <strong>${ubicacion}</strong> que enfrentan emergencias volcánicas del Volcán de Fuego, incendios portuarios en Manzanillo y la zona agrícola limonera. Protección térmica certificada para el estado más pequeño de México.`,
    href: "/productos/trajes-para-bomberos",
    linkLabel: "Ver Trajes para Bombero",
  },
  {
    image: "/images/directorio/casco-bombero-proteccion-cabeza-01.avif",
    imageAlt: `Casco Estructural NFPA 1971 para bomberos ${ubicacion}`,
    badge: "NFPA 1971",
    title: "Casco Estructural NFPA 1971",
    text: `Certificación NFPA 1971 para operaciones en el <strong>Puerto de Manzanillo</strong> (mayor puerto de México en el Pacífico), emergencias volcánicas y protección contra caída de ceniza y proyectiles del <strong>Volcán de Fuego</strong>.`,
    href: "/productos/cascos-para-bomberos",
    linkLabel: "Ver Cascos para Bombero",
  },
  {
    image: "/images/directorio/guantes-bombero-resistentes-01.avif",
    imageAlt: `Guantes Estructurales NFPA 1971 para bomberos ${ubicacion}`,
    badge: "NFPA 1971",
    title: "Guantes Estructurales NFPA 1971",
    text: `Resistencia térmica certificada para emergencias en <strong>Colima</strong>. Prensión segura para rescate marítimo, operaciones portuarias HAZMAT y emergencias en la zona limonera más productiva de México.`,
    href: "/productos/guantes-para-bomberos",
    linkLabel: "Ver Guantes para Bombero",
  },
  {
    image: "/images/directorio/botas-bombero-proteccion-01.avif",
    imageAlt: `Botas Estructurales NFPA 1971 para bomberos ${ubicacion}`,
    badge: "NFPA 1971",
    title: "Botas Estructurales de Cuero",
    text: `Calzado certificado NFPA 1971 para el entorno diverso de <strong>Colima</strong>. Suela resistente a terreno volcánico, zonas portuarias y operaciones en playas con riesgo de tsunami.`,
    href: "/productos/botas-para-bomberos",
    linkLabel: "Ver Botas para Bombero",
  },
];
---

<EstacionLayout
  estacion={estacion}
  estado={estado}
  estadosVecinos={estadosVecinos}
  estacionesCercanas={estacionesCercanas}
  eppCards={eppCards}
>
  <!-- Contenido SEO personalizado para Colima -->
  <Fragment slot="seo-content">
    <h2>Bomberos en {ubicacion}, Colima</h2>
    <p>
      La <strong>{estacion.nombreCorto ?? estacion.nombre}</strong> es parte del <strong>H. Cuerpo de Bomberos de {ubicacion}</strong>,
      institución que protege a los habitantes del estado más pequeño pero más diverso de México.
      Esta estación, ubicada en <strong>{estacion.direccion}, {ubicacion}</strong>, brinda atención
      las 24 horas del día, los 365 días del año.
    </p>
    <p>
      En caso de <strong>emergencia en {ubicacion}</strong>, marca el <strong>911</strong> o comunícate directamente
      a esta estación al <strong>{estacion.telefono}</strong>. Los bomberos de Colima están capacitados para atender
      emergencias volcánicas, incendios portuarios, rescate marítimo, huracanes del Pacífico y todo tipo de emergencias.
    </p>
    <h3>Colima: Volcán de Fuego, Puerto de Manzanillo y Capital del Limón</h3>
    <p>
      <strong>Colima</strong> es el estado más pequeño de México pero concentra riesgos únicos. El <strong>Volcán de Fuego</strong>
      es uno de los más activos de Norteamérica, requiriendo vigilancia constante y planes de evacuación. <strong>Manzanillo</strong>
      es el puerto más importante de México en el Pacífico, manejando el 50% del comercio marítimo del país. La región
      produce el 40% del limón mexicano. Los bomberos enfrentan emergencias volcánicas, portuarias HAZMAT, huracanes
      y sismos frecuentes.
    </p>
    <h3>¿Necesitas equipo certificado para bomberos?</h3>
    <p>
      En <strong><a href="/">BOMBERO.MX</a></strong> somos distribuidores autorizados de <strong>equipo para bomberos certificado NFPA</strong>.
      Equipamos estaciones en todo Colima con <a href="/productos/trajes-para-bomberos">trajes estructurales</a>,
      <a href="/productos/cascos-para-bomberos">cascos</a>, <a href="/productos/scba">equipos SCBA</a>,
      <a href="/productos/hazmat">equipos HAZMAT</a> y más.
      <a href="/cotizar">Solicita una cotización</a> sin compromiso.
    </p>
  </Fragment>
</EstacionLayout>
