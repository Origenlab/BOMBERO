---
/**
 * ╔═══════════════════════════════════════════════════════════════════════════╗
 * ║  PÁGINA DINÁMICA DE ESTACIÓN DE BOMBEROS - COLIMA                        ║
 * ║  Genera 5 páginas individuales con SEO ultra-premium                     ║
 * ╠═══════════════════════════════════════════════════════════════════════════╣
 * ║  Zonas: Metropolitana, Portuaria, Agrícola, Volcánica                    ║
 * ║  Especialidades: Volcánicas, Marítimas, Agrícolas, HAZMAT Portuario     ║
 * ║  Riesgos: Volcán de Fuego, Tsunamis, Huracanes                          ║
 * ╚═══════════════════════════════════════════════════════════════════════════╝
 */

import PageLayout from "@layouts/PageLayout.astro";
import {
  estacionesColima,
  generarMetaSEO,
  getContextoZona,
  getNivelRiesgoVolcanico,
  COLIMA_SEO,
} from "@data/estaciones-colima";

export function getStaticPaths() {
  return estacionesColima.map(estacion => ({
    params: { slug: estacion.slug },
    props: { estacion }
  }));
}

const { estacion } = Astro.props;
const metaSEO = generarMetaSEO(estacion);
const contextoZona = getContextoZona(estacion.ciudad);
const riesgoVolcanico = getNivelRiesgoVolcanico(estacion.ciudad);

// Determinar tipo de zona para contexto SEO enriquecido
const esCapital = estacion.ciudad === 'Colima';
const esVillaDeAlvarez = estacion.ciudad === 'Villa de Álvarez';
const esManzanillo = estacion.ciudad === 'Manzanillo';
const esTecoman = estacion.ciudad === 'Tecomán';
const esComala = estacion.ciudad === 'Comala';

// Zonas agrupadas
const esMetropolitana = esCapital || esVillaDeAlvarez;
const esPortuaria = esManzanillo;
const esAgricola = esTecoman;
const esVolcanica = esComala;

// Fecha de actualización
const fechaActualizacion = new Date().toISOString().split('T')[0];
---

<PageLayout
  title={metaSEO.title}
  description={metaSEO.description}
  keywords={metaSEO.keywords.join(', ')}
  canonical={metaSEO.canonical}
>
  <!-- Schema.org FireStation -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "FireStation",
    "name": estacion.nombre,
    "description": estacion.descripcion,
    "address": {
      "@type": "PostalAddress",
      "streetAddress": estacion.direccion,
      "addressLocality": estacion.ciudad,
      "addressRegion": "Colima",
      "postalCode": estacion.codigoPostal,
      "addressCountry": "MX"
    },
    "telephone": estacion.telefono,
    "email": estacion.email,
    "openingHours": "Mo-Su 00:00-23:59",
    "geo": {
      "@type": "GeoCoordinates",
      "latitude": estacion.coordenadas.lat,
      "longitude": estacion.coordenadas.lng
    },
    "areaServed": {
      "@type": "City",
      "name": estacion.ciudad
    },
    "numberOfEmployees": estacion.personal,
    "url": metaSEO.canonical,
    "sameAs": estacion.redes ? Object.values(estacion.redes) : []
  })} />

  <!-- Schema.org BreadcrumbList -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      { "@type": "ListItem", "position": 1, "name": "Inicio", "item": "https://bombero.mx" },
      { "@type": "ListItem", "position": 2, "name": "Directorio", "item": "https://bombero.mx/directorio" },
      { "@type": "ListItem", "position": 3, "name": "Colima", "item": "https://bombero.mx/directorio/colima" },
      { "@type": "ListItem", "position": 4, "name": estacion.nombre, "item": metaSEO.canonical }
    ]
  })} />

  <main class="col-station">
    <!-- ═══════════════════════════════════════════════════════════════════
         HERO SECTION
         ═══════════════════════════════════════════════════════════════════ -->
    <section class="col-station-hero">
      <div class="col-station-hero__container">
        <!-- Badges -->
        <div class="col-station-hero__badges">
          <span class="col-station-hero__badge col-station-hero__badge--state">COL</span>
          <span class="col-station-hero__badge col-station-hero__badge--zone">{contextoZona.tipo}</span>
          {esCapital && <span class="col-station-hero__badge col-station-hero__badge--special">Capital Estatal</span>}
          {esManzanillo && <span class="col-station-hero__badge col-station-hero__badge--special">Puerto #1 Pacífico</span>}
          {esTecoman && <span class="col-station-hero__badge col-station-hero__badge--special">Capital del Limón</span>}
          {esComala && <span class="col-station-hero__badge col-station-hero__badge--special">Pueblo Mágico</span>}
          {esVolcanica && <span class="col-station-hero__badge col-station-hero__badge--volcano">Zona Volcánica</span>}
        </div>

        <h1 class="col-station-hero__title">{estacion.nombre}</h1>

        <p class="col-station-hero__location">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="20" height="20">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          {estacion.ciudad}, Colima, México
        </p>

        <!-- Estadísticas rápidas -->
        <div class="col-station-hero__stats">
          <div class="col-station-hero__stat">
            <span class="col-station-hero__stat-value">{estacion.personal}</span>
            <span class="col-station-hero__stat-label">Bomberos</span>
          </div>
          <div class="col-station-hero__stat">
            <span class="col-station-hero__stat-value">{estacion.unidades}</span>
            <span class="col-station-hero__stat-label">Unidades</span>
          </div>
          <div class="col-station-hero__stat">
            <span class="col-station-hero__stat-value">24/7</span>
            <span class="col-station-hero__stat-label">Servicio</span>
          </div>
        </div>
      </div>
    </section>

    <!-- ═══════════════════════════════════════════════════════════════════
         ALERTA VOLCÁNICA (solo zonas de riesgo)
         ═══════════════════════════════════════════════════════════════════ -->
    {(riesgoVolcanico.nivel === 'muy alto' || riesgoVolcanico.nivel === 'alto') && (
      <section class="col-station-volcanic-alert">
        <div class="col-station-volcanic-alert__container">
          <div class="col-station-volcanic-alert__content">
            <div class="col-station-volcanic-alert__icon">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="24" height="24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
              </svg>
            </div>
            <div class="col-station-volcanic-alert__text">
              <span class="col-station-volcanic-alert__level">Riesgo Volcánico: {riesgoVolcanico.nivel.toUpperCase()}</span>
              <span class="col-station-volcanic-alert__desc">{riesgoVolcanico.descripcion}</span>
            </div>
          </div>
        </div>
      </section>
    )}

    <!-- ═══════════════════════════════════════════════════════════════════
         BANNER DE EMERGENCIA
         ═══════════════════════════════════════════════════════════════════ -->
    <section class="col-station-emergency">
      <div class="col-station-emergency__container">
        <div class="col-station-emergency__phone">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="24" height="24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          <div>
            <span class="col-station-emergency__label">Teléfono de emergencia</span>
            <a href={`tel:${estacion.telefono.replace(/[^\d+]/g, '')}`} class="col-station-emergency__number">
              {estacion.telefono}
            </a>
          </div>
        </div>
        <div class="col-station-emergency__national">
          <span>Emergencias Nacional:</span>
          <a href="tel:911"><strong>911</strong></a>
        </div>
      </div>
    </section>

    <!-- ═══════════════════════════════════════════════════════════════════
         CONTENIDO PRINCIPAL
         ═══════════════════════════════════════════════════════════════════ -->
    <div class="col-station-content">
      <div class="col-station-content__container">

        <!-- Columna Principal -->
        <div class="col-station-content__main">

          <!-- Descripción y Contexto -->
          <section class="col-station-section">
            <h2 class="col-station-section__title">Acerca de esta Estación</h2>
            <div class="col-station-section__content">
              <p>{estacion.descripcion}</p>

              {/* Contexto específico por zona */}
              {esCapital && (
                <div class="col-station-context col-station-context--capital">
                  <h3>Coordinación Estatal y Monitoreo Volcánico</h3>
                  <p>
                    La <strong>Estación Central de Colima</strong> es el centro de coordinación para todas las
                    emergencias del estado y mantiene enlace permanente con el <strong>Centro Nacional de
                    Prevención de Desastres (CENAPRED)</strong> para el monitoreo del Volcán de Fuego de Colima,
                    uno de los volcanes más activos de Norteamérica. Responsable de coordinar evacuaciones
                    masivas y planes de contingencia volcánica para proteger a más de 350,000 personas en
                    zona de riesgo.
                  </p>
                </div>
              )}

              {esVillaDeAlvarez && (
                <div class="col-station-context col-station-context--metropolitana">
                  <h3>Zona Metropolitana de Mayor Crecimiento</h3>
                  <p>
                    <strong>Villa de Álvarez</strong> es el municipio de mayor crecimiento demográfico en Colima,
                    con nuevos desarrollos habitacionales, centros comerciales y el campus del Instituto
                    Tecnológico de Colima y la Universidad de Colima. Esta estación brinda cobertura al
                    corredor comercial más importante de la zona metropolitana y mantiene capacidad de
                    apoyo en emergencias volcánicas.
                  </p>
                </div>
              )}

              {esManzanillo && (
                <div class="col-station-context col-station-context--portuaria">
                  <h3>Puerto #1 del Pacífico Mexicano</h3>
                  <p>
                    El <strong>Puerto de Manzanillo</strong> es el más importante del Pacífico mexicano y
                    <strong>#1 nacional en movimiento de contenedores</strong> con 3.4 millones de TEU anuales.
                    Esta estación cuenta con personal certificado en <strong>HAZMAT marítimo</strong>,
                    <strong>incendios en buques</strong> y <strong>rescate acuático portuario</strong>.
                    Coordinación permanente con Capitanía de Puerto, Armada de México y terminales CONTECON,
                    SSA México y OCUPA. También atiende emergencias turísticas en playas y zona hotelera,
                    con preparación para <strong>tsunamis y huracanes</strong>.
                  </p>
                </div>
              )}

              {esTecoman && (
                <div class="col-station-context col-station-context--agricola">
                  <h3>Capital Mundial del Limón</h3>
                  <p>
                    <strong>Tecomán</strong> es conocido como la <strong>Capital Mundial del Limón</strong>,
                    produciendo el <strong>35% del limón mexicano</strong> a nivel nacional (850,000 toneladas
                    anuales). Esta estación está especializada en emergencias agrícolas, incluyendo
                    <strong>incendios en empacadoras de cítricos</strong>, manejo de <strong>agroquímicos</strong>
                    y atención a emergencias en zonas rurales de producción. También cubre emergencias en la
                    <strong>Laguna de Cuyutlán</strong> y las salinas de la región.
                  </p>
                </div>
              )}

              {esComala && (
                <div class="col-station-context col-station-context--volcanica">
                  <h3>Pueblo Mágico en Zona de Riesgo Volcánico</h3>
                  <p>
                    <strong>Comala</strong>, conocido como "El Pueblo Blanco" y escenario de la novela
                    <strong>"Pedro Páramo" de Juan Rulfo</strong>, es Pueblo Mágico desde 2002 y se encuentra
                    en la <strong>zona de influencia directa del Volcán de Fuego de Colima</strong>
                    (radio de {COLIMA_SEO.volcan.radio_exclusion_km} km). Esta estación es responsable de
                    coordinar <strong>evacuaciones volcánicas</strong> de comunidades cercanas al volcán,
                    atención de emergencias por <strong>caída de ceniza y lahares</strong>, y protección
                    del patrimonio histórico del pueblo. Enlace permanente con CENAPRED y la Red Sismológica.
                  </p>
                </div>
              )}
            </div>
          </section>

          <!-- Servicios -->
          <section class="col-station-section">
            <h2 class="col-station-section__title">Servicios de Emergencia</h2>
            <ul class="col-station-services">
              {estacion.servicios.map(servicio => (
                <li class="col-station-services__item">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="20" height="20">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span>{servicio}</span>
                </li>
              ))}
            </ul>
          </section>

          <!-- Equipamiento -->
          <section class="col-station-section">
            <h2 class="col-station-section__title">Equipamiento y Unidades</h2>
            <div class="col-station-equipment">
              {estacion.equipamiento.map(equipo => (
                <div class="col-station-equipment__item">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="18" height="18">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span>{equipo}</span>
                </div>
              ))}
            </div>
          </section>

          <!-- Mapa -->
          <section class="col-station-section">
            <h2 class="col-station-section__title">Ubicación</h2>
            <div class="col-station-map">
              <div class="col-station-map__placeholder">
                <p><strong>Dirección:</strong> {estacion.direccion}</p>
                <p><strong>Código Postal:</strong> {estacion.codigoPostal}</p>
                <p><strong>Coordenadas:</strong> {estacion.coordenadas.lat}, {estacion.coordenadas.lng}</p>
                <a
                  href={`https://www.google.com/maps/search/?api=1&query=${estacion.coordenadas.lat},${estacion.coordenadas.lng}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="col-station-map__link"
                >
                  Ver en Google Maps
                </a>
              </div>
            </div>
          </section>
        </div>

        <!-- Sidebar -->
        <aside class="col-station-sidebar">

          <!-- Información de Contacto -->
          <div class="col-station-card col-station-card--contact">
            <h3 class="col-station-card__title">Información de Contacto</h3>
            <ul class="col-station-card__list">
              <li>
                <strong>Teléfono:</strong>
                <a href={`tel:${estacion.telefono.replace(/[^\d+]/g, '')}`}>{estacion.telefono}</a>
              </li>
              <li>
                <strong>Email:</strong>
                <a href={`mailto:${estacion.email}`}>{estacion.email}</a>
              </li>
              <li>
                <strong>Horario:</strong>
                <span>{estacion.horario}</span>
              </li>
              <li>
                <strong>Dirección:</strong>
                <span>{estacion.direccion}</span>
              </li>
              <li>
                <strong>C.P.:</strong>
                <span>{estacion.codigoPostal}</span>
              </li>
            </ul>
          </div>

          <!-- Riesgo Volcánico -->
          {(riesgoVolcanico.nivel === 'muy alto' || riesgoVolcanico.nivel === 'alto') && (
            <div class="col-station-card col-station-card--volcano">
              <h3 class="col-station-card__title">Volcán de Fuego</h3>
              <ul class="col-station-card__list col-station-card__list--volcano">
                <li>
                  <strong>Nivel de riesgo:</strong>
                  <span class="col-station-card__risk">{riesgoVolcanico.nivel.toUpperCase()}</span>
                </li>
                <li>
                  <strong>Radio de afectación:</strong>
                  <span>{riesgoVolcanico.radio_km} km</span>
                </li>
                <li>
                  <strong>Altura volcán:</strong>
                  <span>{COLIMA_SEO.volcan.altura_msnm.toLocaleString('es-MX')} msnm</span>
                </li>
                <li>
                  <strong>Estado:</strong>
                  <span>Activo con monitoreo</span>
                </li>
              </ul>
            </div>
          )}

          <!-- Estadísticas -->
          <div class="col-station-card">
            <h3 class="col-station-card__title">Datos de la Estación</h3>
            <ul class="col-station-card__list">
              <li>
                <strong>Personal:</strong>
                <span>{estacion.personal} bomberos</span>
              </li>
              <li>
                <strong>Unidades:</strong>
                <span>{estacion.unidades} vehículos</span>
              </li>
              {estacion.fechaFundacion && (
                <li>
                  <strong>Fundación:</strong>
                  <span>{estacion.fechaFundacion}</span>
                </li>
              )}
              <li>
                <strong>Zona:</strong>
                <span>{contextoZona.tipo}</span>
              </li>
              <li>
                <strong>Actualizado:</strong>
                <span>{fechaActualizacion}</span>
              </li>
            </ul>
          </div>

          <!-- Teléfonos Regionales -->
          <div class="col-station-card col-station-card--phones">
            <h3 class="col-station-card__title">Emergencias Colima</h3>
            <ul class="col-station-card__phones">
              <li>
                <span>Emergencias Nacional</span>
                <a href="tel:911">911</a>
              </li>
              <li>
                <span>Bomberos Colima</span>
                <a href="tel:+523123123456">{COLIMA_SEO.telefonos.bomberos_colima}</a>
              </li>
              <li>
                <span>Bomberos Manzanillo</span>
                <a href="tel:+523143320911">{COLIMA_SEO.telefonos.bomberos_manzanillo}</a>
              </li>
              <li>
                <span>Monitoreo Volcánico</span>
                <a href="tel:+523123162020">{COLIMA_SEO.telefonos.monitoreo_volcanico}</a>
              </li>
            </ul>
          </div>

          <!-- Redes Sociales -->
          {estacion.redes && Object.keys(estacion.redes).length > 0 && (
            <div class="col-station-card">
              <h3 class="col-station-card__title">Redes Sociales</h3>
              <div class="col-station-social">
                {estacion.redes.facebook && (
                  <a href={estacion.redes.facebook} target="_blank" rel="noopener noreferrer" class="col-station-social__link">
                    Facebook
                  </a>
                )}
                {estacion.redes.twitter && (
                  <a href={estacion.redes.twitter} target="_blank" rel="noopener noreferrer" class="col-station-social__link">
                    Twitter/X
                  </a>
                )}
              </div>
            </div>
          )}

          <!-- Volver al directorio -->
          <div class="col-station-card col-station-card--back">
            <a href="/directorio/colima" class="col-station-back-link">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="20" height="20">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
              </svg>
              Ver todas las estaciones de Colima
            </a>
          </div>

        </aside>
      </div>
    </div>

    <!-- Breadcrumb -->
    <nav class="col-station-breadcrumb" aria-label="Breadcrumb">
      <ol class="col-station-breadcrumb__list">
        <li class="col-station-breadcrumb__item"><a href="/">Inicio</a></li>
        <li class="col-station-breadcrumb__item"><a href="/directorio">Directorio</a></li>
        <li class="col-station-breadcrumb__item"><a href="/directorio/colima">Colima</a></li>
        <li class="col-station-breadcrumb__item col-station-breadcrumb__item--active">{estacion.nombre}</li>
      </ol>
    </nav>
  </main>
</PageLayout>

<style>
  /* ═══════════════════════════════════════════════════════════════════════
     VARIABLES CSS - TEMA ESMERALDA TROPICAL
     ═══════════════════════════════════════════════════════════════════════ */
  :root {
    --col-emerald: rgb(16, 185, 129);
    --col-emerald-light: rgb(52, 211, 153);
    --col-emerald-dark: rgb(6, 78, 59);
    --col-emerald-50: rgb(236, 253, 245);
    --col-emerald-100: rgb(209, 250, 229);
    --col-emerald-200: rgb(167, 243, 208);
    --col-emerald-600: rgb(5, 150, 105);
    --col-emerald-800: rgb(6, 95, 70);
    --col-amber: rgb(245, 158, 11);
    --col-orange: rgb(249, 115, 22);
    --col-white: #ffffff;
    --col-red: #dc2626;
    --col-gray-50: rgb(249, 250, 251);
    --col-gray-100: rgb(243, 244, 246);
    --col-gray-200: rgb(229, 231, 235);
    --col-gray-400: rgb(156, 163, 175);
    --col-gray-600: rgb(75, 85, 99);
    --col-gray-800: rgb(31, 41, 55);
  }

  /* ═══════════════════════════════════════════════════════════════════════
     STATION PAGE LAYOUT
     ═══════════════════════════════════════════════════════════════════════ */
  .col-station {
    min-height: 100vh;
    background-color: var(--col-emerald-50);
  }

  /* ═══════════════════════════════════════════════════════════════════════
     HERO SECTION
     ═══════════════════════════════════════════════════════════════════════ */
  .col-station-hero {
    background: linear-gradient(135deg, var(--col-emerald-dark) 0%, var(--col-emerald-600) 50%, var(--col-emerald) 100%);
    padding: 2.5rem 1rem;
    color: var(--col-white);
  }

  .col-station-hero__container {
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
  }

  .col-station-hero__badges {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.25rem;
  }

  .col-station-hero__badge {
    padding: 0.375rem 0.75rem;
    border-radius: 6px;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .col-station-hero__badge--state {
    background: var(--col-white);
    color: var(--col-emerald-600);
