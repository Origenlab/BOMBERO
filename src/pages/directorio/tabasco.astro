<style>
  /* ═══════════════════════════════════════════════════════════════════════
     DIRECTORIO TABASCO - ESTACIONES DE BOMBEROS
     ═══════════════════════════════════════════════════════════════════════ */

  .tab-hero {
    position: relative;
    padding: var(--space-16) 0;
    background: var(--color-smoke-950);
    overflow: hidden;
  }

  .tab-hero__bg {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .tab-hero__gradient {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(ellipse 80% 50% at 50% -20%, rgba(5, 150, 105, 0.18), transparent),
      radial-gradient(ellipse 60% 50% at 0% 50%, rgba(16, 185, 129, 0.1), transparent),
      radial-gradient(ellipse 60% 50% at 100% 80%, rgba(220, 38, 38, 0.1), transparent);
  }

  .tab-hero__pattern {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(255,255,255,0.02) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255,255,255,0.02) 1px, transparent 1px);
    background-size: 60px 60px;
    mask-image: radial-gradient(ellipse at center, black 30%, transparent 70%);
  }

  .tab-hero__container {
