---
/**
 * ─── Directorio de Estaciones de Bomberos Tabasco ───
 * Estado del sureste: petróleo PEMEX 25-30% nacional, Refinería Olmeca Dos Bocas,
 * estado más inundable de México, cacao #1 en el país,
 * Pantanos de Centla y ríos Grijalva-Usumacinta
 */
import PageLayout from "@layouts/PageLayout.astro";
import SectionHeader from "@components/SectionHeader.astro";
import StationCard from "@components/StationCard.astro";
import { estacionesTabasco, getMunicipios, ESTADISTICAS_TABASCO } from "@data/estaciones-tabasco";
import { breadcrumbJsonLd } from "@utils/seo";

const municipios = getMunicipios();

const estadosVecinos = [
  { nombre: "Campeche", slug: "campeche" },
  { nombre: "Chiapas", slug: "chiapas" },
  { nombre: "Veracruz", slug: "veracruz" },
];

const keywords = [
  "bomberos tabasco",
  "estaciones bomberos villahermosa",
  "bomberos villahermosa",
  "emergencias tabasco 911",
  "bomberos paraiso tabasco",
  "refineria olmeca dos bocas bomberos",
  "cuerpo bomberos tabasco",
  "bomberos pemex tabasco",
  "proteccion civil tabasco",
  "bomberos inundaciones tabasco",
];

const breadcrumbSchema = breadcrumbJsonLd([
  { name: "Inicio", url: "/" },
  { name: "Directorio de Bomberos", url: "/directorio" },
  { name: "Tabasco", url: "/directorio/tabasco" },
]);

const itemListSchema = {
  "@context": "https://schema.org",
  "@type": "ItemList",
  "name": "Estaciones de Bomberos en Tabasco, México",
  "description": "Directorio oficial de las 17 estaciones de bomberos en Tabasco. Villahermosa, Paraíso-Dos Bocas, Macuspana, Cárdenas, Comalcalco y los 17 municipios. Petróleo PEMEX, Refinería Olmeca, inundaciones y Pantanos de Centla. Emergencias 911.",
  "numberOfItems": estacionesTabasco.length,
  "itemListElement": estacionesTabasco.map((e, i) => ({
    "@type": "ListItem",
    "position": i + 1,
    "item": {
      "@type": "FireStation",
      "name": e.nombre,
      "address": {
        "@type": "PostalAddress",
        "streetAddress": e.direccion,
        "addressLocality": e.municipio,
        "addressRegion": "Tabasco",
        "addressCountry": "MX"
      },
      "telephone": e.telefono,
      "url": `https://bombero.mx/directorio/tabasco/${e.slug}`
    }
  }))
};
---

<PageLayout
  title={`Bomberos en Tabasco | ${ESTADISTICAS_TABASCO.total_estaciones} Estaciones | Directorio Oficial BOMBERO.MX`}
  description="Directorio oficial de las 17 estaciones de bomberos en Tabasco. Villahermosa, Paraíso-Dos Bocas, Macuspana, Cárdenas. PEMEX, Refinería Olmeca, inundaciones y Pantanos de Centla. Emergencias 911."
  keywords={keywords}
  canonical="https://bombero.mx/directorio/tabasco"
  jsonLd={[breadcrumbSchema, itemListSchema]}
>
  <!-- Hero Section -->
  <section class="tab-hero">
    <div class="tab-hero__bg">
      <div class="tab-hero__gradient"></div>
      <div class="tab-hero__pattern"></div>
    </div>
    <div class="container">
      <div class="tab-hero__container">
        <!-- Left Column -->
        <div class="tab-hero__content">
          <nav class="tab-hero__breadcrumb">
            <a href="/">Inicio</a>
            <span>/</span>
            <a href="/directorio">Directorio</a>
            <span>/</span>
            <span>Tabasco</span>
          </nav>
          <span class="tab-hero__badge">
            <span class="tab-hero__badge-dot"></span>
            TAB
          </span>
          <h1 class="tab-hero__title">
            Estaciones de Bomberos en
            <span class="tab-hero__highlight">Tabasco</span>
          </h1>
          <p class="tab-hero__desc">
            Directorio completo del <strong>H. Cuerpo de Bomberos de Tabasco</strong>.
            Encuentra teléfonos de emergencia, direcciones y servicios en el corazón petrolero de México: sede de la Refinería Olmeca Dos Bocas, ríos Grijalva y Usumacinta, y el estado con mayor riesgo de inundaciones del país.
          </p>
          <div class="tab-hero__stats">
            <div class="tab-hero__stat">
              <span class="tab-hero__stat-number">{estacionesTabasco.length}</span>
              <span class="tab-hero__stat-label">Estaciones</span>
            </div>
            <div class="tab-hero__stat">
              <span class="tab-hero__stat-number">17</span>
              <span class="tab-hero__stat-label">Municipios</span>
            </div>
            <div class="tab-hero__stat">
              <span class="tab-hero__stat-number">24/7</span>
              <span class="tab-hero__stat-label">Servicio</span>
            </div>
            <div class="tab-hero__stat">
              <span class="tab-hero__stat-number">2.4M</span>
              <span class="tab-hero__stat-label">Habitantes</span>
            </div>
          </div>
        </div>

        <!-- Right Column - SEO Content -->
        <div class="tab-hero__seo">
          <h2 class="tab-hero__seo-title">PEMEX y Refinería Olmeca: El Mayor Riesgo Industrial</h2>
          <p class="tab-hero__seo-text">
            <strong>Tabasco</strong> produce el <strong>25-30% del petróleo y gas de México</strong> a través de
            PEMEX Exploración y Producción. La <strong>Refinería Olmeca en Dos Bocas (Paraíso)</strong>,
            inaugurada en 2023 con capacidad de 340,000 barriles diarios, es el mayor proyecto energético
            en la historia del país y exige bomberos especializados en HAZMAT de refinación al nivel industrial más alto.
          </p>
          <h2 class="tab-hero__seo-title">Inundaciones y Rescate Acuático en el Sureste</h2>
          <p class="tab-hero__seo-text">
            Tabasco es el estado <strong>más inundable de México</strong>. Las crecidas del <strong>Grijalva y el
            Usumacinta</strong> —los dos ríos más caudalosos del país— han inundado hasta el <strong>80% del territorio
            tabasqueño</strong> (2007), afectando 1.5 millones de personas. Los bomberos tabasqueños dominan
            el rescate acuático fluvial y lacustre en los Pantanos de Centla.
          </p>
        </div>
      </div>
