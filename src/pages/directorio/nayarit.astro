---
/**
 * Directorio de Estaciones de Bomberos Nayarit
 * La Puerta de Oro del Pacifico Mexicano - Riviera Nayarit
 */
import PageLayout from "@layouts/PageLayout.astro";
import SectionHeader from "@components/SectionHeader.astro";
import StationCard from "@components/StationCard.astro";
import { estacionesNayarit } from "@data/estaciones-nayarit";
import { breadcrumbJsonLd } from "@utils/seo";

const municipios = [...new Set(estacionesNayarit.map(e => e.ciudad))].filter(Boolean).sort();

const estadosVecinos = [
  { nombre: "Jalisco", slug: "jalisco" },
  { nombre: "Durango", slug: "durango" },
  { nombre: "Sinaloa", slug: "sinaloa" },
  { nombre: "Zacatecas", slug: "zacatecas" },
];

const keywords = [
  "bomberos nayarit",
  "estaciones bomberos tepic",
  "emergencias nayarit 911",
  "bomberos bahía de banderas",
  "bomberos riviera nayarit",
  "cuerpo bomberos nayarit",
];

const breadcrumbSchema = breadcrumbJsonLd([
  { name: "Inicio", url: "/" },
  { name: "Directorio de Bomberos", url: "/directorio" },
  { name: "Nayarit", url: "/directorio/nayarit" },
]);

const itemListSchema = {
  "@context": "https://schema.org",
  "@type": "ItemList",
  "name": "Estaciones de Bomberos en Nayarit, México",
  "description": "Directorio oficial de las estaciones de bomberos en Nayarit. Teléfonos de emergencia en Tepic, Bahía de Banderas, Xalisco y todo el estado. Emergencias 911. Cobertura costera 24 horas.",
  "numberOfItems": estacionesNayarit.length,
  "itemListElement": estacionesNayarit.map((e, i) => ({
    "@type": "ListItem",
    "position": i + 1,
    "item": {
      "@type": "FireStation",
      "name": e.nombre,
      "address": {
        "@type": "PostalAddress",
        "streetAddress": e.direccion,
        "addressLocality": e.ciudad,
        "addressRegion": "Nayarit",
        "addressCountry": "MX"
      },
      "telephone": e.telefono,
      "url": `https://bombero.mx/directorio/nayarit/${e.slug}`
    }
  }))
};
---

<PageLayout
  title="Bomberos en Nayarit | Directorio Oficial de Estaciones | BOMBERO.MX"
  description="Directorio oficial de las estaciones de bomberos en Nayarit. Teléfonos de emergencia en Tepic, Bahía de Banderas, Xalisco y todo el estado. Emergencias 911. Cobertura costera 24 horas."
  keywords={keywords}
  canonical="https://bombero.mx/directorio/nayarit"
  jsonLd={[breadcrumbSchema, itemListSchema]}
>
  <!-- Hero Section -->
  <section class="nay-hero">
    <div class="nay-hero__bg">
      <div class="nay-hero__gradient"></div>
      <div class="nay-hero__pattern"></div>
    </div>
    <div class="container">
      <div class="nay-hero__container">
        <!-- Left Column -->
        <div class="nay-hero__content">
          <nav class="nay-hero__breadcrumb">
            <a href="/">Inicio</a>
            <span>/</span>
            <a href="/directorio">Directorio</a>
            <span>/</span>
            <span>Nayarit</span>
          </nav>
          <span class="nay-hero__badge">
            <span class="nay-hero__badge-dot"></span>
            NAY
          </span>
          <h1 class="nay-hero__title">
            Estaciones de Bomberos en
            <span class="nay-hero__highlight">Nayarit</span>
          </h1>
          <p class="nay-hero__desc">
            Directorio completo del <strong>H. Cuerpo de Bomberos de Nayarit</strong>.
            Encuentra telefonos de emergencia, direcciones y servicios de todas las estaciones en el estado de la Riviera Nayarit.
          </p>
          <div class="nay-hero__stats">
            <div class="nay-hero__stat">
              <span class="nay-hero__stat-number">{estacionesNayarit.length}</span>
              <span class="nay-hero__stat-label">Estaciones</span>
            </div>
            <div class="nay-hero__stat">
              <span class="nay-hero__stat-number">{municipios.length}</span>
              <span class="nay-hero__stat-label">Municipios</span>
            </div>
            <div class="nay-hero__stat">
              <span class="nay-hero__stat-number">24/7</span>
              <span class="nay-hero__stat-label">Servicio</span>
            </div>
            <div class="nay-hero__stat">
              <span class="nay-hero__stat-number">1.3M+</span>
              <span class="nay-hero__stat-label">Habitantes</span>
            </div>
          </div>
        </div>

        <!-- Right Column - SEO Content -->
        <div class="nay-hero__seo">
          <h2 class="nay-hero__seo-title">H. Cuerpo de Bomberos de Nayarit</h2>
          <p class="nay-hero__seo-text">
            <strong>Nayarit</strong> es conocido como la Puerta de Oro del Pacifico Mexicano, con mas de
            <strong>1.3 millones de habitantes</strong> distribuidos en 20 municipios y 289 km de litoral costero.
            Los bomberos nayaritas atienden emergencias en zonas turisticas, costeras y de selva tropical.
          </p>
          <h2 class="nay-hero__seo-title">Riviera Nayarit y Riesgos Especiales</h2>
          <p class="nay-hero__seo-text">
            Nayarit alberga la <strong>Riviera Nayarit</strong>, destino de turismo de lujo con mas de 3 millones de visitantes internacionales al ano.
            Los bomberos estan especialmente capacitados para atender
            <strong>emergencias en zonas costera, rescate acuatico, huracanes e incendios forestales</strong>.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Emergency Banner -->
  <section class="nay-emergency">
    <div class="container">
      <div class="nay-emergency__content">
        <div class="nay-emergency__icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
          </svg>
        </div>
        <div class="nay-emergency__text">
          <span class="nay-emergency__label">Emergencias en Nayarit</span>
          <span class="nay-emergency__number">911</span>
        </div>
        <p class="nay-emergency__desc">
          Numero unico de emergencias en todo Nayarit. Disponible las 24 horas, los 365 dias del ano.
        </p>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="nay-main">
    <div class="container">
      <div class="nay-main__grid">
        <!-- Stations Grid -->
        <div class="nay-main__content">
          <SectionHeader
            label="Directorio Completo"
            title="Estaciones de Bomberos en Nayarit"
            description="Informacion de contacto actualizada de todas las estaciones del H. Cuerpo de Bomberos en Nayarit. Selecciona una estacion para ver sus datos de contacto, servicios y zonas de cobertura."
          />

          <!-- Stations Grid -->
          <div class="nay-stations-grid">
            {estacionesNayarit.map((estacion) => (
              <StationCard
                nombre={estacion.nombre}
                slug={estacion.slug}
                direccion={estacion.direccion}
                alcaldia={estacion.ciudad}
                telefono={estacion.telefono}
                servicios={estacion.servicios}
                horario={estacion.horario}
                baseUrl="/directorio/nayarit"
              />
            ))}
          </div>

          <!-- SEO Content -->
          <div class="nay-seo">
            <h2>El H. Cuerpo de Bomberos de Nayarit</h2>
            <p>
              El <strong>H. Cuerpo de Bomberos de Nayarit</strong> es la institucion encargada de
              proteger la vida, el medio ambiente y el patrimonio de los mas de <strong>1.3 millones de nayaritas</strong>.
              Con presencia en los principales municipios del estado, los bomberos atienden emergencias
              las <strong>24 horas del dia, los 365 dias del ano</strong>.
            </p>

            <h3>Como contactar a los bomberos en Nayarit?</h3>
            <p>
              En caso de <strong>emergencia en Nayarit</strong>, marca el <strong>911</strong> desde
              cualquier telefono. Este numero conecta con el <strong>C4 de Nayarit</strong> que coordina
              la respuesta de bomberos, policia y servicios medicos. Tambien puedes comunicarte directamente a la
              estacion mas cercana usando los telefonos de este directorio.
            </p>

            <h3>Zonas de Mayor Riesgo en Nayarit</h3>
            <p>
              Nayarit presenta diversos riesgos que los bomberos atienden constantemente:
              <strong>emergencias en zonas turisticas</strong> de la Riviera Nayarit con millones de visitantes,
              <strong>rescate acuatico</strong> en playas, rios y estuarios del Pacifico,
              <strong>huracanes</strong> durante la temporada de junio a noviembre, e
              <strong>incendios forestales</strong> en las sierras nayaritas y zonas de selva.
            </p>

            <h3>Servicios de los Bomberos Nayaritas</h3>
            <p>
              Los bomberos de Nayarit estan capacitados para atender:
              <strong>incendios estructurales, industriales y forestales</strong>;
              <strong>rescate vehicular en accidentes de transito</strong>;
              <strong>materiales peligrosos (HAZMAT)</strong>;
              <strong>rescate acuatico en playas y cuerpos de agua</strong>;
              <strong>emergencias por huracanes y tormentas tropicales</strong>;
              <strong>rescate en zonas de manglares y estuarios</strong>; y muchos otros servicios
              vitales para la seguridad de la poblacion y los visitantes.
            </p>
          </div>
        </div>

        <!-- Sidebar -->
        <aside class="nay-sidebar">
          <!-- Quick Access -->
          <div class="nay-sidebar__card">
            <h4>Filtrar por Municipio</h4>
            <ul class="nay-sidebar__municipios">
              {municipios.map((municipio) => (
                <li>
                  <a href={`#${municipio.toLowerCase().replace(/\s+/g, '-').replace(/á/g, 'a').replace(/é/g, 'e').replace(/í/g, 'i').replace(/ó/g, 'o').replace(/ú/g, 'u')}`}>
                    <span class="nay-sidebar__bullet"></span>
                    <span>{municipio}</span>
                  </a>
                </li>
              ))}
            </ul>
          </div>

          <!-- Emergency Numbers -->
          <div class="nay-sidebar__card nay-sidebar__card--emergency">
            <h4>Telefonos de Emergencia</h4>
            <div class="nay-sidebar__emergency-list">
              <div class="nay-sidebar__emergency-item">
                <span class="nay-sidebar__emergency-number">911</span>
                <span class="nay-sidebar__emergency-label">Emergencias</span>
              </div>
              <div class="nay-sidebar__emergency-item">
                <span class="nay-sidebar__emergency-number">311 211 8080</span>
                <span class="nay-sidebar__emergency-label">Bomberos Tepic</span>
              </div>
              <div class="nay-sidebar__emergency-item">
                <span class="nay-sidebar__emergency-number">329 291 7600</span>
                <span class="nay-sidebar__emergency-label">Bomberos Bahia Banderas</span>
              </div>
            </div>
          </div>

          <!-- Regiones -->
          <div class="nay-sidebar__card">
            <h4>Regiones del Estado</h4>
            <ul class="nay-sidebar__regiones">
              <li>
                <span class="nay-sidebar__region-name">Zona Metropolitana Tepic</span>
                <span class="nay-sidebar__region-desc">Tepic, Xalisco, San Blas</span>
              </li>
              <li>
                <span class="nay-sidebar__region-name">Riviera Nayarit Sur</span>
                <span class="nay-sidebar__region-desc">Nuevo Vallarta, Bucerias, Punta de Mita, Bahia de Banderas</span>
              </li>
              <li>
                <span class="nay-sidebar__region-name">Riviera Nayarit Norte</span>
                <span class="nay-sidebar__region-desc">Sayulita, San Pancho, Lo de Marcos, Guayabitos</span>
              </li>
              <li>
                <span class="nay-sidebar__region-name">Sierra del Nayar</span>
                <span class="nay-sidebar__region-desc">Ixtlan del Rio, Ahuacatlan, Compostela, Jala</span>
              </li>
            </ul>
          </div>

          <!-- Nearby States -->
          <div class="nay-sidebar__card">
            <h4>Estados Vecinos</h4>
            <ul class="nay-sidebar__states">
              {estadosVecinos.map((estado) => (
                <li>
                  <a href={`/directorio/${estado.slug}`}>
                    <span>{estado.nombre}</span>
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M5 12h14M12 5l7 7-7 7"/>
                    </svg>
                  </a>
                </li>
              ))}
            </ul>
          </div>

          <!-- CTA -->
          <div class="nay-sidebar__card nay-sidebar__card--cta">
            <h4>Equipas una Estacion en NAY?</h4>
            <p>Somos distribuidores de equipo certificado NFPA para cuerpos de bomberos en todo Nayarit</p>
            <a href="/cotizar" class="nay-sidebar__cta-btn">Solicitar Cotizacion</a>
          </div>

          <!-- Products -->
          <div class="nay-sidebar__card">
            <h4>Equipo para Bomberos</h4>
            <ul class="nay-sidebar__products">
              <li><a href="/productos/trajes-para-bomberos">Trajes Estructurales NFPA</a></li>
              <li><a href="/productos/cascos-para-bomberos">Cascos de Bombero</a></li>
              <li><a href="/productos/scba">Equipos SCBA</a></li>
              <li><a href="/productos/herramientas-rescate">Herramientas de Rescate</a></li>
            </ul>
            <a href="/productos" class="nay-sidebar__link">
              Ver catalogo completo
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </a>
          </div>

          <!-- Back to Directory -->
          <div class="nay-sidebar__card">
            <a href="/directorio" class="nay-sidebar__back">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M19 12H5M12 19l-7-7 7-7"/>
              </svg>
              <span>Ver todos los estados</span>
            </a>
          </div>

          <!-- Contact -->
          <div class="nay-sidebar__card">
            <h4>Contacto BOMBERO.MX</h4>
            <ul class="nay-sidebar__contact">
              <li><a href="tel:+525520780102">55 2078 0102</a></li>
              <li><a href="https://wa.me/525520780102">WhatsApp</a></li>
              <li><a href="mailto:ventas@bombero.mx">ventas@bombero.mx</a></li>
            </ul>
          </div>
        </aside>
      </div>
    </div>
  </section>
</PageLayout>

<style>
  /* ═══════════════════════════════════════════════════════════════════════
     DIRECTORIO NAYARIT - ESTACIONES DE BOMBEROS
     ═══════════════════════════════════════════════════════════════════════ */

  /* === Hero Section === */
  .nay-hero {
    position: relative;
    padding: var(--space-16) 0;
    background: var(--color-smoke-950);
    overflow: hidden;
  }

  .nay-hero__bg {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .nay-hero__gradient {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(ellipse 80% 50% at 50% -20%, rgba(220, 38, 38, 0.15), transparent),
      radial-gradient(ellipse 60% 50% at 0% 50%, rgba(249, 115, 22, 0.1), transparent),
      radial-gradient(ellipse 60% 50% at 100% 80%, rgba(220, 38, 38, 0.08), transparent);
  }

  .nay-hero__pattern {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(255,255,255,0.02) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255,255,255,0.02) 1px, transparent 1px);
    background-size: 60px 60px;
    mask-image: radial-gradient(ellipse at center, black 30%, transparent 70%);
  }

  .nay-hero__container {
    position: relative;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-12);
    align-items: center;
  }

  .nay-hero__breadcrumb {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-sm);
    margin-bottom: var(--space-4);
  }

  .nay-hero__breadcrumb a {
    color: var(--color-smoke-400);
    text-decoration: none;
    transition: color 0.2s;
  }

  .nay-hero__breadcrumb a:hover {
    color: var(--color-fire-400);
  }

  .nay-hero__breadcrumb span {
    color: var(--color-smoke-600);
  }

  .nay-hero__badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2) var(--space-4);
    background: rgba(220, 38, 38, 0.15);
    border: 1px solid rgba(220, 38, 38, 0.3);
    border-radius: var(--radius-full);
    font-size: var(--text-sm);
    font-weight: 700;
    color: var(--color-fire-400);
    margin-bottom: var(--space-4);
  }

  .nay-hero__badge-dot {
    width: 8px;
    height: 8px;
    background: var(--color-ember-500);
    border-radius: 50%;
  }

  .nay-hero__title {
    font-size: clamp(2rem, 4vw, 2.75rem);
    font-weight: 800;
    color: white;
    line-height: 1.1;
    margin: 0 0 var(--space-5);
  }

  .nay-hero__highlight {
    background: linear-gradient(135deg, var(--color-fire-500), var(--color-ember-500));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .nay-hero__desc {
    font-size: var(--text-base);
    color: var(--color-smoke-300);
    line-height: 1.7;
    margin: 0 0 var(--space-6);
  }

  .nay-hero__desc strong {
    color: white;
  }

  .nay-hero__stats {
    display: flex;
    gap: var(--space-6);
    padding-top: var(--space-5);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .nay-hero__stat {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .nay-hero__stat-number {
    font-size: var(--text-2xl);
    font-weight: 800;
    color: var(--color-fire-400);
  }

  .nay-hero__stat-label {
    font-size: var(--text-xs);
    color: var(--color-smoke-400);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .nay-hero__seo {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .nay-hero__seo-title {
    font-size: var(--text-base);
    font-weight: 700;
    color: var(--color-fire-400);
    margin: 0;
  }

  .nay-hero__seo-text {
    font-size: var(--text-sm);
    color: var(--color-smoke-300);
    line-height: 1.7;
    margin: 0;
  }

  .nay-hero__seo-text strong {
    color: white;
  }

  /* === Emergency Banner === */
  .nay-emergency {
    background: linear-gradient(135deg, var(--color-fire-600), var(--color-ember-600));
    padding: var(--space-5) 0;
  }

  .nay-emergency__content {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-6);
  }

  .nay-emergency__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 56px;
    height: 56px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    color: white;
  }

  .nay-emergency__text {
    display: flex;
    flex-direction: column;
  }

  .nay-emergency__label {
    font-size: var(--text-sm);
    color: rgba(255, 255, 255, 0.8);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .nay-emergency__number {
    font-size: var(--text-3xl);
    font-weight: 800;
    color: white;
  }

  .nay-emergency__desc {
    font-size: var(--text-sm);
    color: rgba(255, 255, 255, 0.9);
    margin: 0;
    max-width: 400px;
  }

  /* === Main Section === */
  .nay-main {
    padding: var(--space-16) 0;
    background: var(--color-smoke-50);
  }

  .nay-main__grid {
    display: grid;
    grid-template-columns: 1fr 340px;
    gap: var(--space-10);
    align-items: start;
  }

  /* === Stations Grid === */
  .nay-stations-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-6);
    margin-top: var(--space-8);
  }

  /* === SEO Content === */
  .nay-seo {
    margin-top: var(--space-12);
    padding: var(--space-8);
    background: white;
    border-radius: var(--radius-xl);
  }

  .nay-seo h2 {
    font-size: var(--text-xl);
    font-weight: 700;
    color: var(--color-smoke-900);
    margin: 0 0 var(--space-4);
  }

  .nay-seo h3 {
    font-size: var(--text-lg);
    font-weight: 700;
    color: var(--color-smoke-800);
    margin: var(--space-6) 0 var(--space-3);
  }

  .nay-seo p {
    font-size: var(--text-base);
    color: var(--color-smoke-600);
    line-height: 1.8;
    margin: 0 0 var(--space-4);
  }

  .nay-seo p:last-child {
    margin-bottom: 0;
  }

  .nay-seo strong {
    color: var(--color-smoke-800);
  }

  /* === Sidebar === */
  .nay-sidebar {
    display: flex;
    flex-direction: column;
    gap: var(--space-5);
    position: sticky;
    top: var(--space-6);
  }

  .nay-sidebar__card {
    padding: var(--space-5);
    background: white;
    border-radius: var(--radius-xl);
  }

  .nay-sidebar__card h4 {
    font-size: var(--text-base);
    font-weight: 700;
    color: var(--color-smoke-900);
    margin: 0 0 var(--space-4);
    padding-bottom: var(--space-3);
    border-bottom: 2px solid var(--color-fire-500);
  }

  .nay-sidebar__card > p {
    font-size: var(--text-sm);
    color: var(--color-smoke-500);
    line-height: 1.6;
    margin: 0 0 var(--space-4);
  }

  /* Municipios List */
  .nay-sidebar__municipios {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
    max-height: 320px;
