---
/**
 * ─── Directorio de Estaciones de Bomberos Sonora ───
 * Estado del noroeste: minería de cobre #1, automotriz Ford/Kia,
 * 588km frontera con EE.UU., Puerto de Guaymas y acuacultura
 * Organizado por municipio con información de contacto completa
 */
import PageLayout from "@layouts/PageLayout.astro";
import SectionHeader from "@components/SectionHeader.astro";
import StationCard from "@components/StationCard.astro";
import { estacionesSonora, getMunicipios, ESTADISTICAS_SONORA } from "@data/estaciones-sonora";
import { breadcrumbJsonLd } from "@utils/seo";

const municipios = getMunicipios();

const estadosVecinos = [
  { nombre: "Sinaloa", slug: "sinaloa" },
  { nombre: "Chihuahua", slug: "chihuahua" },
  { nombre: "Baja California", slug: "baja-california" },
  { nombre: "Nayarit", slug: "nayarit" },
];

const keywords = [
  "bomberos sonora",
  "estaciones bomberos hermosillo",
  "bomberos nogales sonora",
  "emergencias sonora 911",
  "bomberos ciudad obregon",
  "bomberos guaymas",
  "cuerpo bomberos hermosillo",
  "bomberos cananea mineria",
  "proteccion civil sonora",
  "bomberos frontera sonora arizona",
];

const breadcrumbSchema = breadcrumbJsonLd([
  { name: "Inicio", url: "/" },
  { name: "Directorio de Bomberos", url: "/directorio" },
  { name: "Sonora", url: "/directorio/sonora" },
]);

const itemListSchema = {
  "@context": "https://schema.org",
  "@type": "ItemList",
  "name": "Estaciones de Bomberos en Sonora, México",
  "description": "Directorio oficial de las 20 estaciones de bomberos en Sonora. Hermosillo, Nogales, Ciudad Obregón, Guaymas, Cananea y todo el estado. Minería, automotriz, frontera EE.UU. y Golfo de California. Emergencias 911.",
  "numberOfItems": estacionesSonora.length,
  "itemListElement": estacionesSonora.map((e, i) => ({
    "@type": "ListItem",
    "position": i + 1,
    "item": {
      "@type": "FireStation",
      "name": e.nombre,
      "address": {
        "@type": "PostalAddress",
        "streetAddress": e.direccion,
        "addressLocality": e.municipio,
        "addressRegion": "Sonora",
        "addressCountry": "MX"
      },
      "telephone": e.telefono,
      "url": `https://bombero.mx/directorio/sonora/${e.slug}`
    }
  }))
};
---

<PageLayout
  title={`Bomberos en Sonora | ${ESTADISTICAS_SONORA.total_estaciones} Estaciones | Directorio Oficial BOMBERO.MX`}
  description="Directorio oficial de las 20 estaciones de bomberos en Sonora. Hermosillo, Nogales, Ciudad Obregón, Guaymas, Cananea. Minería de cobre, automotriz, frontera con Arizona y Golfo de California. Emergencias 911."
  keywords={keywords}
  canonical="https://bombero.mx/directorio/sonora"
  jsonLd={[breadcrumbSchema, itemListSchema]}
>
  <!-- Hero Section -->
  <section class="son-hero">
    <div class="son-hero__bg">
      <div class="son-hero__gradient"></div>
      <div class="son-hero__pattern"></div>
    </div>
    <div class="container">
      <div class="son-hero__container">
        <!-- Left Column -->
        <div class="son-hero__content">
          <nav class="son-hero__breadcrumb">
            <a href="/">Inicio</a>
            <span>/</span>
            <a href="/directorio">Directorio</a>
            <span>/</span>
            <span>Sonora</span>
          </nav>
          <span class="son-hero__badge">
            <span class="son-hero__badge-dot"></span>
            SON
          </span>
          <h1 class="son-hero__title">
            Estaciones de Bomberos en
            <span class="son-hero__highlight">Sonora</span>
          </h1>
          <p class="son-hero__desc">
            Directorio completo del <strong>H. Cuerpo de Bomberos de Sonora</strong>.
            Encuentra teléfonos de emergencia, direcciones y servicios en el estado más grande del noroeste: capital del cobre mexicano, corredor automotriz Ford-Kia, 588 km de frontera con Arizona y el Mar de Cortés.
          </p>
          <div class="son-hero__stats">
            <div class="son-hero__stat">
              <span class="son-hero__stat-number">{estacionesSonora.length}</span>
              <span class="son-hero__stat-label">Estaciones</span>
            </div>
            <div class="son-hero__stat">
              <span class="son-hero__stat-number">72</span>
              <span class="son-hero__stat-label">Municipios</span>
            </div>
            <div class="son-hero__stat">
              <span class="son-hero__stat-number">24/7</span>
              <span class="son-hero__stat-label">Servicio</span>
            </div>
            <div class="son-hero__stat">
              <span class="son-hero__stat-number">3M+</span>
              <span class="son-hero__stat-label">Habitantes</span>
            </div>
          </div>
        </div>

        <!-- Right Column - SEO Content -->
        <div class="son-hero__seo">
          <h2 class="son-hero__seo-title">Industria y Minería: Riesgos Únicos en Sonora</h2>
          <p class="son-hero__seo-text">
            <strong>Sonora</strong> produce el <strong>65% del cobre de México</strong> en las minas de
            Cananea y Nacozari (Grupo México), opera las plantas <strong>Ford Hermosillo y Kia Pesqueira</strong>,
            y concentra el mayor corredor maquilador del noroeste en Nogales y Agua Prieta. Los bomberos
            sonorenses dominan respuesta ante HAZMAT minero, automotriz e industrial.
          </p>
          <h2 class="son-hero__seo-title">Frontera, Desierto y Mar de Cortés</h2>
          <p class="son-hero__seo-text">
            Con <strong>588 km de frontera con Arizona</strong>, Sonora requiere coordinación binacional
            permanente con cuerpos de bomberos de EE.UU. El <strong>Desierto de Sonora</strong> impone
            temperaturas extremas y riesgo de rescate desértico, mientras el <strong>Golfo de California</strong>
            (Mar de Cortés) exige capacidades marítimas en Guaymas y Puerto Peñasco.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Emergency Banner -->
  <section class="son-emergency">
    <div class="container">
      <div class="son-emergency__content">
        <div class="son-emergency__icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
          </svg>
        </div>
        <div class="son-emergency__text">
          <span class="son-emergency__label">Emergencias en Sonora</span>
          <span class="son-emergency__number">911</span>
        </div>
        <p class="son-emergency__desc">
          Número único en todo Sonora — 24/7, 365 días. Hermosillo: 662 210 3600 · Nogales: 631 312 1690 · Obregón: 644 415 7070
        </p>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="son-main">
    <div class="container">
      <div class="son-main__grid">
        <!-- Stations Grid -->
        <div class="son-main__content">
          <SectionHeader
            label="Directorio Completo"
            title="Estaciones de Bomberos en Sonora"
            description="Información de contacto actualizada de las 20 estaciones del H. Cuerpo de Bomberos de Sonora, desde la frontera con Arizona hasta el Valle del Mayo. Selecciona una estación para ver datos de contacto, servicios especializados y zonas de cobertura."
          />

          <div class="son-stations-grid">
            {estacionesSonora.map((estacion) => (
              <StationCard
                nombre={estacion.nombreCorto}
                slug={estacion.slug}
                direccion={`${estacion.direccion}, ${estacion.colonia}`}
                alcaldia={estacion.municipio}
                telefono={estacion.telefono}
                servicios={estacion.servicios}
                horario={estacion.horario}
                baseUrl="/directorio/sonora"
              />
            ))}
          </div>

          <!-- SEO Content -->
          <div class="son-seo">
            <h2>El H. Cuerpo de Bomberos de Sonora</h2>
            <p>
              El <strong>H. Cuerpo de Bomberos de Sonora</strong> protege a más de <strong>3 millones de sonorenses</strong>
              en el segundo estado más grande de México por superficie. Con 179,503 km² de territorio que abarca desde
              el Desierto de Sonora hasta la Sierra Madre Occidental, y desde la frontera con Arizona hasta las costas
              del Golfo de California, los bomberos sonorenses operan en condiciones de excepcional diversidad
              geográfica, climática e industrial.
            </p>

            <h3>¿Cómo contactar a los bomberos en Sonora?</h3>
            <p>
              En cualquier <strong>emergencia en Sonora</strong>, marca el <strong>911</strong>. El Centro de Control,
              Comando, Comunicaciones y Cómputo (<strong>C4 Sonora</strong>) despacha la unidad más cercana.
              Para contacto directo: <strong>Hermosillo 662 210 3600</strong>,
              <strong>Nogales 631 312 1690</strong>, <strong>Ciudad Obregón 644 415 7070</strong>,
              <strong>Guaymas 622 226 0095</strong>.
            </p>

            <h3>Riesgos Industriales y Mineros en Sonora</h3>
            <p>
              Sonora concentra la mayor actividad minera de México: la <strong>Mina Buenavista del Cobre en Cananea</strong>
              y la <strong>Mina La Caridad en Nacozari</strong> producen juntas más del 50% del cobre nacional.
              El <strong>corredor automotriz Hermosillo-Pesqueira</strong> (Ford Bronco Sport, Kia Sportage) genera
              riesgos específicos con pinturas, solventes y materiales peligrosos automotrices. Los bomberos de estas
              zonas cuentan con <strong>certificación HAZMAT nivel A</strong> y protocolos especializados.
            </p>

            <h3>Coordinación Binacional con Bomberos de Arizona</h3>
            <p>
              Los cuerpos de bomberos de <strong>Nogales, Agua Prieta y San Luis Río Colorado</strong> operan bajo
              acuerdos de <strong>cooperación binacional con bomberos de Arizona</strong> (Nogales AZ, Douglas AZ,
              San Luis AZ), compartiendo recursos, protocolos y capacitación. Esta coordinación es única en México
              y permite respuestas más rápidas en la franja fronteriza de alta densidad industrial y comercial.
            </p>

            <h3>Servicios de los Bomberos Sonorenses</h3>
            <p>
              Los bomberos de Sonora están certificados para atender:
              <strong>incendios industriales, estructurales y forestales</strong>;
              <strong>HAZMAT minero</strong> (ácido sulfúrico, cianuro, reactivos metalúrgicos);
              <strong>HAZMAT automotriz</strong> (pinturas, solventes, baterías de vehículos eléctricos);
              <strong>rescate acuático marino</strong> en el Golfo de California;
              <strong>rescate aeroportuario ARFF</strong> en Hermosillo y Nogales;
              <strong>rescate desértico</strong> en el Desierto de Sonora y Altar;
              <strong>coordinación binacional</strong> con cuerpos de bomberos de Arizona; y
              <strong>rescate minero</strong> en tajo abierto y socavón.
            </p>
          </div>
        </div>

        <!-- Sidebar -->
        <aside class="son-sidebar">
          <!-- Quick Access -->
          <div class="son-sidebar__card">
            <h4>Filtrar por Municipio</h4>
            <ul class="son-sidebar__municipios">
              {municipios.map((municipio) => (
                <li>
                  <a href={`#${municipio.toLowerCase().replace(/\s+/g, '-').replace(/á/g, 'a').replace(/é/g, 'e').replace(/í/g, 'i').replace(/ó/g, 'o').replace(/ú/g, 'u')}`}>
                    <span class="son-sidebar__bullet"></span>
                    <span>{municipio}</span>
                  </a>
                </li>
              ))}
            </ul>
          </div>

          <!-- Emergency Numbers -->
          <div class="son-sidebar__card son-sidebar__card--emergency">
            <h4>Teléfonos de Emergencia</h4>
            <div class="son-sidebar__emergency-list">
              <div class="son-sidebar__emergency-item">
                <span class="son-sidebar__emergency-number">911</span>
                <span class="son-sidebar__emergency-label">Emergencias Nacionales</span>
              </div>
              <div class="son-sidebar__emergency-item">
                <span class="son-sidebar__emergency-number">662 210 3600</span>
                <span class="son-sidebar__emergency-label">Bomberos Hermosillo</span>
              </div>
              <div class="son-sidebar__emergency-item">
                <span class="son-sidebar__emergency-number">631 312 1690</span>
                <span class="son-sidebar__emergency-label">Bomberos Nogales</span>
              </div>
              <div class="son-sidebar__emergency-item">
                <span class="son-sidebar__emergency-number">644 415 7070</span>
                <span class="son-sidebar__emergency-label">Bomberos Cd. Obregón</span>
              </div>
              <div class="son-sidebar__emergency-item">
                <span class="son-sidebar__emergency-number">622 226 0095</span>
                <span class="son-sidebar__emergency-label">Bomberos Guaymas</span>
              </div>
            </div>
          </div>

          <!-- Regiones -->
          <div class="son-sidebar__card">
            <h4>Regiones del Estado</h4>
            <ul class="son-sidebar__regiones">
              <li>
                <span class="son-sidebar__region-name">Región Centro</span>
                <span class="son-sidebar__region-desc">Hermosillo (capital), Magdalena, Ures</span>
              </li>
              <li>
                <span class="son-sidebar__region-name">Región Norte/Fronteriza</span>
                <span class="son-sidebar__region-desc">Nogales, Agua Prieta, Cananea, Nacozari, San Luis R.C., Caborca</span>
              </li>
              <li>
                <span class="son-sidebar__region-name">Región Sur/Yaqui-Mayo</span>
                <span class="son-sidebar__region-desc">Ciudad Obregón, Navojoa, Álamos, Huatabampo</span>
              </li>
              <li>
                <span class="son-sidebar__region-name">Región Costera/Golfo</span>
                <span class="son-sidebar__region-desc">Guaymas, San Carlos, Puerto Peñasco</span>
              </li>
            </ul>
          </div>

          <!-- Nearby States -->
          <div class="son-sidebar__card">
            <h4>Estados Vecinos</h4>
            <ul class="son-sidebar__states">
              {estadosVecinos.map((estado) => (
                <li>
                  <a href={`/directorio/${estado.slug}`}>
                    <span>{estado.nombre}</span>
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M5 12h14M12 5l7 7-7 7"/>
                    </svg>
                  </a>
                </li>
              ))}
            </ul>
          </div>

          <!-- CTA -->
          <div class="son-sidebar__card son-sidebar__card--cta">
            <h4>¿Equipas una Estación en SON?</h4>
            <p>Distribuimos equipo NFPA certificado para bomberos en Sonora: minería, industrial, automotriz y costero</p>
            <a href="/cotizar" class="son-sidebar__cta-btn">Solicitar Cotización</a>
          </div>

          <!-- Products -->
          <div class="son-sidebar__card">
            <h4>Equipo para Bomberos</h4>
            <ul class="son-sidebar__products">
              <li><a href="/productos/trajes-para-bomberos">Trajes Estructurales NFPA</a></li>
              <li><a href="/productos/cascos-para-bomberos">Cascos de Bombero</a></li>
              <li><a href="/productos/scba">Equipos SCBA</a></li>
              <li><a href="/productos/herramientas-rescate">Herramientas de Rescate</a></li>
            </ul>
            <a href="/productos" class="son-sidebar__link">
              Ver catálogo completo
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </a>
          </div>

          <!-- Back to Directory -->
          <div class="son-sidebar__card">
            <a href="/directorio" class="son-sidebar__back">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M19 12H5M12 19l-7-7 7-7"/>
              </svg>
              <span>Ver todos los estados</span>
            </a>
          </div>

          <!-- Contact -->
          <div class="son-sidebar__card">
            <h4>Contacto BOMBERO.MX</h4>
            <ul class="son-sidebar__contact">
              <li><a href="tel:+525520780102">55 2078 0102</a></li>
              <li><a href="https://wa.me/525520780102">WhatsApp</a></li>
              <li><a href="mailto:ventas@bombero.mx">ventas@bombero.mx</a></li>
            </ul>
          </div>
        </aside>
      </div>
    </div>
  </section>
</PageLayout>

