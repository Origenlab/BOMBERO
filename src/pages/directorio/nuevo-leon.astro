---
/**
 * Directorio de Estaciones de Bomberos Nuevo Leon
 * La Capital Industrial de Mexico - Zona Metropolitana de Monterrey
 */
import PageLayout from "@layouts/PageLayout.astro";
import SectionHeader from "@components/SectionHeader.astro";
import StationCard from "@components/StationCard.astro";
import { estacionesNuevoLeon } from "@data/estaciones-nuevo-leon";

const municipios = [...new Set(estacionesNuevoLeon.map(e => e.ciudad))].filter(Boolean).sort();

const estadosVecinos = [
  { nombre: "Coahuila", slug: "coahuila" },
  { nombre: "Tamaulipas", slug: "tamaulipas" },
  { nombre: "San Luis Potosi", slug: "san-luis-potosi" },
  { nombre: "Zacatecas", slug: "zacatecas" },
];
---

<PageLayout
  title="Estaciones de Bomberos en Nuevo Leon | Directorio BOMBERO.MX"
  description="Directorio completo de las estaciones de bomberos en Nuevo Leon. Telefonos de emergencia, direcciones y servicios. Estaciones cubriendo la Zona Metropolitana de Monterrey. Emergencias 911."
>
  <!-- Hero Section -->
  <section class="nl-hero">
    <div class="nl-hero__bg">
      <div class="nl-hero__gradient"></div>
      <div class="nl-hero__pattern"></div>
    </div>
    <div class="container">
      <div class="nl-hero__container">
        <!-- Left Column -->
        <div class="nl-hero__content">
          <nav class="nl-hero__breadcrumb">
            <a href="/">Inicio</a>
            <span>/</span>
            <a href="/directorio">Directorio</a>
            <span>/</span>
            <span>Nuevo Leon</span>
          </nav>
          <span class="nl-hero__badge">
            <span class="nl-hero__badge-dot"></span>
            NL
          </span>
          <h1 class="nl-hero__title">
            Estaciones de Bomberos en
            <span class="nl-hero__highlight">Nuevo Leon</span>
          </h1>
          <p class="nl-hero__desc">
            Directorio completo del <strong>H. Cuerpo de Bomberos de Nuevo Leon</strong>.
            Encuentra telefonos de emergencia, direcciones y servicios de todas las estaciones en el estado industrial de Mexico.
          </p>
          <div class="nl-hero__stats">
            <div class="nl-hero__stat">
              <span class="nl-hero__stat-number">{estacionesNuevoLeon.length}</span>
              <span class="nl-hero__stat-label">Estaciones</span>
            </div>
            <div class="nl-hero__stat">
              <span class="nl-hero__stat-number">{municipios.length}</span>
              <span class="nl-hero__stat-label">Municipios</span>
            </div>
            <div class="nl-hero__stat">
              <span class="nl-hero__stat-number">24/7</span>
              <span class="nl-hero__stat-label">Servicio</span>
            </div>
            <div class="nl-hero__stat">
              <span class="nl-hero__stat-number">5.8M+</span>
              <span class="nl-hero__stat-label">Habitantes</span>
            </div>
          </div>
        </div>

        <!-- Right Column - SEO Content -->
        <div class="nl-hero__seo">
          <h2 class="nl-hero__seo-title">H. Cuerpo de Bomberos de Nuevo Leon</h2>
          <p class="nl-hero__seo-text">
            <strong>Nuevo Leon</strong> es la capital industrial de Mexico, con mas de
            <strong>5.8 millones de habitantes</strong> en la Zona Metropolitana de Monterrey.
            Los bomberos regiomontanos atienden emergencias industriales, HAZMAT y rescates en la Sierra Madre Oriental.
          </p>
          <h2 class="nl-hero__seo-title">Capital Industrial y Riesgos Especiales</h2>
          <p class="nl-hero__seo-text">
            Nuevo Leon alberga corporativos globales como <strong>CEMEX, FEMSA, Ternium y Vitro</strong>.
            Los bomberos estan especialmente capacitados para atender
            <strong>emergencias industriales, materiales peligrosos HAZMAT y rescate en la Sierra Madre Oriental</strong>.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Emergency Banner -->
  <section class="nl-emergency">
    <div class="container">
      <div class="nl-emergency__content">
        <div class="nl-emergency__icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
          </svg>
        </div>
        <div class="nl-emergency__text">
          <span class="nl-emergency__label">Emergencias en Nuevo Leon</span>
          <span class="nl-emergency__number">911</span>
        </div>
        <p class="nl-emergency__desc">
          Numero unico de emergencias en todo Nuevo Leon. Disponible las 24 horas, los 365 dias del ano.
        </p>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="nl-main">
    <div class="container">
      <div class="nl-main__grid">
        <!-- Stations Grid -->
        <div class="nl-main__content">
          <SectionHeader
            label="Directorio Completo"
            title="Estaciones de Bomberos en Nuevo Leon"
            description="Informacion de contacto actualizada de todas las estaciones del H. Cuerpo de Bomberos en Nuevo Leon. Selecciona una estacion para ver sus datos de contacto, servicios y zonas de cobertura."
          />

          <!-- Stations Grid -->
          <div class="nl-stations-grid">
            {estacionesNuevoLeon.map((estacion) => (
              <StationCard
                nombre={estacion.nombre}
                slug={estacion.slug}
                direccion={estacion.direccion}
                alcaldia={estacion.ciudad}
                telefono={estacion.telefono}
                servicios={estacion.servicios}
                horario={estacion.horario}
                baseUrl="/directorio/nuevo-leon"
              />
            ))}
          </div>

          <!-- SEO Content -->
          <div class="nl-seo">
            <h2>El H. Cuerpo de Bomberos de Nuevo Leon</h2>
            <p>
              El <strong>H. Cuerpo de Bomberos de Nuevo Leon</strong> es la institucion encargada de
              proteger la vida, el medio ambiente y el patrimonio de los mas de <strong>5.8 millones de neoleoneses</strong>.
              Con presencia en los principales municipios de la Zona Metropolitana de Monterrey y el interior del estado,
              los bomberos atienden emergencias las <strong>24 horas del dia, los 365 dias del ano</strong>.
            </p>

            <h3>Como contactar a los bomberos en Nuevo Leon?</h3>
            <p>
              En caso de <strong>emergencia en Nuevo Leon</strong>, marca el <strong>911</strong> desde
              cualquier telefono. Este numero conecta con el <strong>C4 de Nuevo Leon</strong> que coordina
              la respuesta de bomberos, policia y servicios medicos. Tambien puedes comunicarte directamente a la
              estacion mas cercana usando los telefonos de este directorio.
            </p>

            <h3>Zonas de Mayor Riesgo en Nuevo Leon</h3>
            <p>
              Nuevo Leon presenta diversos riesgos que los bomberos atienden constantemente:
              <strong>emergencias industriales y HAZMAT</strong> en los corredores manufactureros de la ZMM,
              <strong>incendios forestales</strong> en la Sierra Madre Oriental durante temporada de marzo a junio,
              <strong>accidentes en autopistas</strong> del corredor comercial hacia Estados Unidos, y
              <strong>emergencias en grandes alturas</strong> en los rascacielos del area metropolitana.
            </p>

            <h3>Servicios de los Bomberos Neoleoneses</h3>
            <p>
              Los bomberos de Nuevo Leon estan capacitados para atender:
              <strong>incendios estructurales, industriales y forestales</strong>;
              <strong>materiales peligrosos HAZMAT Nivel III</strong>;
              <strong>rescate vehicular pesado en autopistas</strong>;
              <strong>rescate urbano especializado USAR</strong>;
              <strong>emergencias en edificios de gran altura</strong>;
              <strong>rescate en montana en la Sierra Madre Oriental</strong>; y muchos otros servicios
              vitales para la seguridad de la poblacion industrial mas importante del pais.
            </p>
          </div>
        </div>

        <!-- Sidebar -->
        <aside class="nl-sidebar">
          <!-- Quick Access -->
          <div class="nl-sidebar__card">
            <h4>Filtrar por Municipio</h4>
            <ul class="nl-sidebar__municipios">
              {municipios.map((municipio) => (
                <li>
                  <a href={`#${municipio.toLowerCase().replace(/\s+/g, '-').replace(/á/g, 'a').replace(/é/g, 'e').replace(/í/g, 'i').replace(/ó/g, 'o').replace(/ú/g, 'u')}`}>
                    <span class="nl-sidebar__bullet"></span>
                    <span>{municipio}</span>
                  </a>
                </li>
              ))}
            </ul>
          </div>

          <!-- Emergency Numbers -->
          <div class="nl-sidebar__card nl-sidebar__card--emergency">
            <h4>Telefonos de Emergencia</h4>
            <div class="nl-sidebar__emergency-list">
              <div class="nl-sidebar__emergency-item">
                <span class="nl-sidebar__emergency-number">911</span>
                <span class="nl-sidebar__emergency-label">Emergencias</span>
              </div>
              <div class="nl-sidebar__emergency-item">
                <span class="nl-sidebar__emergency-number">81 8340 0000</span>
                <span class="nl-sidebar__emergency-label">Bomberos Monterrey</span>
              </div>
              <div class="nl-sidebar__emergency-item">
                <span class="nl-sidebar__emergency-number">81 8158 5500</span>
                <span class="nl-sidebar__emergency-label">Proteccion Civil NL</span>
              </div>
            </div>
          </div>

          <!-- Regiones -->
          <div class="nl-sidebar__card">
            <h4>Regiones del Estado</h4>
            <ul class="nl-sidebar__regiones">
              <li>
                <span class="nl-sidebar__region-name">Area Metropolitana Monterrey</span>
                <span class="nl-sidebar__region-desc">Monterrey, San Pedro, Guadalupe, Apodaca, Garcia</span>
              </li>
              <li>
                <span class="nl-sidebar__region-name">Zona Industrial</span>
                <span class="nl-sidebar__region-desc">Apodaca, Santa Catarina, General Escobedo</span>
              </li>
              <li>
                <span class="nl-sidebar__region-name">Zona Sierra</span>
                <span class="nl-sidebar__region-desc">Santiago, Montemorelos, Iturbide, Aramberri</span>
              </li>
              <li>
                <span class="nl-sidebar__region-name">Zona Frontera Norte</span>
                <span class="nl-sidebar__region-desc">Anahuac, Sabinas Hidalgo, Cerralvo</span>
              </li>
            </ul>
          </div>

          <!-- Nearby States -->
          <div class="nl-sidebar__card">
            <h4>Estados Vecinos</h4>
            <ul class="nl-sidebar__states">
              {estadosVecinos.map((estado) => (
                <li>
                  <a href={`/directorio/${estado.slug}`}>
                    <span>{estado.nombre}</span>
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M5 12h14M12 5l7 7-7 7"/>
                    </svg>
                  </a>
                </li>
              ))}
            </ul>
          </div>

          <!-- CTA -->
          <div class="nl-sidebar__card nl-sidebar__card--cta">
            <h4>Equipas una Estacion en NL?</h4>
            <p>Somos distribuidores de equipo certificado NFPA para cuerpos de bomberos en todo Nuevo Leon</p>
            <a href="/cotizar" class="nl-sidebar__cta-btn">Solicitar Cotizacion</a>
          </div>

          <!-- Products -->
          <div class="nl-sidebar__card">
            <h4>Equipo para Bomberos</h4>
            <ul class="nl-sidebar__products">
              <li><a href="/productos/trajes-para-bomberos">Trajes Estructurales NFPA</a></li>
              <li><a href="/productos/cascos-para-bomberos">Cascos de Bombero</a></li>
              <li><a href="/productos/scba">Equipos SCBA</a></li>
              <li><a href="/productos/herramientas-rescate">Herramientas de Rescate</a></li>
            </ul>
            <a href="/productos" class="nl-sidebar__link">
              Ver catalogo completo
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </a>
          </div>

          <!-- Back to Directory -->
          <div class="nl-sidebar__card">
            <a href="/directorio" class="nl-sidebar__back">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M19 12H5M12 19l-7-7 7-7"/>
              </svg>
              <span>Ver todos los estados</span>
            </a>
          </div>

          <!-- Contact -->
          <div class="nl-sidebar__card">
            <h4>Contacto BOMBERO.MX</h4>
            <ul class="nl-sidebar__contact">
              <li><a href="tel:+525520780102">55 2078 0102</a></li>
              <li><a href="https://wa.me/525520780102">WhatsApp</a></li>
              <li><a href="mailto:ventas@bombero.mx">ventas@bombero.mx</a></li>
            </ul>
          </div>
        </aside>
      </div>
    </div>
  </section>
</PageLayout>

<style>
  /* ═══════════════════════════════════════════════════════════════════════
     DIRECTORIO NUEVO LEON - ESTACIONES DE BOMBEROS
     ═══════════════════════════════════════════════════════════════════════ */

  /* === Hero Section === */
  .nl-hero {
    position: relative;
    padding: var(--space-16) 0;
    background: var(--color-smoke-950);
    overflow: hidden;
  }

  .nl-hero__bg {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .nl-hero__gradient {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(ellipse 80% 50% at 50% -20%, rgba(220, 38, 38, 0.15), transparent),
      radial-gradient(ellipse 60% 50% at 0% 50%, rgba(249, 115, 22, 0.1), transparent),
      radial-gradient(ellipse 60% 50% at 100% 80%, rgba(220, 38, 38, 0.08), transparent);
  }

  .nl-hero__pattern {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(255,255,255,0.02) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255,255,255,0.02) 1px, transparent 1px);
    background-size: 60px 60px;
    mask-image: radial-gradient(ellipse at center, black 30%, transparent 70%);
  }

  .nl-hero__container {
    position: relative;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-12);
    align-items: center;
  }

  .nl-hero__breadcrumb {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-sm);
    margin-bottom: var(--space-4);
  }

  .nl-hero__breadcrumb a {
    color: var(--color-smoke-400);
    text-decoration: none;
    transition: color 0.2s;
  }

  .nl-hero__breadcrumb a:hover {
    color: var(--color-fire-400);
  }

  .nl-hero__breadcrumb span {
    color: var(--color-smoke-600);
  }

  .nl-hero__badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2) var(--space-4);
    background: rgba(220, 38, 38, 0.15);
    border: 1px solid rgba(220, 38, 38, 0.3);
    border-radius: var(--radius-full);
    font-size: var(--text-sm);
    font-weight: 700;
    color: var(--color-fire-400);
    margin-bottom: var(--space-4);
  }

  .nl-hero__badge-dot {
    width: 8px;
    height: 8px;
    background: var(--color-ember-500);
    border-radius: 50%;
  }

  .nl-hero__title {
    font-size: clamp(2rem, 4vw, 2.75rem);
    font-weight: 800;
    color: white;
    line-height: 1.1;
    margin: 0 0 var(--space-5);
  }

  .nl-hero__highlight {
    background: linear-gradient(135deg, var(--color-fire-500), var(--color-ember-500));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .nl-hero__desc {
    font-size: var(--text-base);
    color: var(--color-smoke-300);
    line-height: 1.7;
    margin: 0 0 var(--space-6);
  }

  .nl-hero__desc strong {
    color: white;
  }

  .nl-hero__stats {
    display: flex;
    gap: var(--space-6);
    padding-top: var(--space-5);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .nl-hero__stat {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .nl-hero__stat-number {
    font-size: var(--text-2xl);
    font-weight: 800;
    color: var(--color-fire-400);
  }

  .nl-hero__stat-label {
    font-size: var(--text-xs);
    color: var(--color-smoke-400);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .nl-hero__seo {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .nl-hero__seo-title {
    font-size: var(--text-base);
    font-weight: 700;
    color: var(--color-fire-400);
    margin: 0;
  }

  .nl-hero__seo-text {
    font-size: var(--text-sm);
    color: var(--color-smoke-300);
    line-height: 1.7;
    margin: 0;
  }

  .nl-hero__seo-text strong {
    color: white;
  }

  /* === Emergency Banner === */
  .nl-emergency {
    background: linear-gradient(135deg, var(--color-fire-600), var(--color-ember-600));
    padding: var(--space-5) 0;
  }

  .nl-emergency__content {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-6);
  }

  .nl-emergency__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 56px;
    height: 56px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    color: white;
  }

  .nl-emergency__text {
    display: flex;
    flex-direction: column;
  }

  .nl-emergency__label {
    font-size: var(--text-sm);
    color: rgba(255, 255, 255, 0.8);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .nl-emergency__number {
    font-size: var(--text-3xl);
    font-weight: 800;
    color: white;
  }

  .nl-emergency__desc {
    font-size: var(--text-sm);
    color: rgba(255, 255, 255, 0.9);
    margin: 0;
    max-width: 400px;
  }

  /* === Main Section === */
  .nl-main {
    padding: var(--space-16) 0;
    background: var(--color-smoke-50);
  }

  .nl-main__grid {
    display: grid;
    grid-template-columns: 1fr 340px;
    gap: var(--space-10);
    align-items: start;
  }

  /* === Stations Grid === */
  .nl-stations-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-6);
    margin-top: var(--space-8);
  }

  /* === SEO Content === */
  .nl-seo {
    margin-top: var(--space-12);
    padding: var(--space-8);
    background: white;
    border-radius: var(--radius-xl);
  }

  .nl-seo h2 {
    font-size: var(--text-xl);
    font-weight: 700;
    color: var(--color-smoke-900);
    margin: 0 0 var(--space-4);
  }

  .nl-seo h3 {
    font-size: var(--text-lg);
    font-weight: 700;
    color: var(--color-smoke-800);
    margin: var(--space-6) 0 var(--space-3);
  }

  .nl-seo p {
    font-size: var(--text-base);
    color: var(--color-smoke-600);
    line-height: 1.8;
    margin: 0 0 var(--space-4);
  }

  .nl-seo p:last-child {
    margin-bottom: 0;
  }

  .nl-seo strong {
    color: var(--color-smoke-800);
  }

  /* === Sidebar === */
  .nl-sidebar {
    display: flex;
    flex-direction: column;
    gap: var(--space-5);
    position: sticky;
    top: var(--space-6);
  }

  .nl-sidebar__card {
    padding: var(--space-5);
    background: white;
    border-radius: var(--radius-xl);
  }

  .nl-sidebar__card h4 {
    font-size: var(--text-base);
    font-weight: 700;
    color: var(--color-smoke-900);
    margin: 0 0 var(--space-4);
    padding-bottom: var(--space-3);
    border-bottom: 2px solid var(--color-fire-500);
  }

  .nl-sidebar__card > p {
    font-size: var(--text-sm);
    color: var(--color-smoke-500);
    line-height: 1.6;
    margin: 0 0 var(--space-4);
  }

  /* Municipios List */
  .nl-sidebar__municipios {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
    max-height: 320px;
    overflow-y: auto;
  }

  .nl-sidebar__municipios li a {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2);
    border-radius: var(--radius-md);
    font-size: var(--text-sm);
    color: var(--color-smoke-600);
    text-decoration: none;
    transition: all 0.2s;
  }

  .nl-sidebar__municipios li a:hover {
    background: var(--color-smoke-50);
    color: var(--color-fire-600);
  }

  .nl-sidebar__bullet {
    width: 6px;
    height: 6px;
    background: var(--color-fire-500);
    border-radius: 50%;
  }

  /* Regiones */
  .nl-sidebar__regiones {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .nl-sidebar__regiones li {
    padding: var(--space-3);
    background: var(--color-smoke-50);
    border-radius: var(--radius-lg);
  }

  .nl-sidebar__region-name {
    display: block;
    font-size: var(--text-sm);
    font-weight: 700;
    color: var(--color-smoke-800);
    margin-bottom: 2px;
  }

  .nl-sidebar__region-desc {
    font-size: var(--text-xs);
    color: var(--color-smoke-500);
    line-height: 1.4;
  }

  /* Emergency Card */
  .nl-sidebar__card--emergency {
    background: linear-gradient(135deg, var(--color-smoke-900), var(--color-smoke-800));
  }

  .nl-sidebar__card--emergency h4 {
    color: white;
    border-bottom-color: var(--color-fire-500);
  }

  .nl-sidebar__emergency-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .nl-sidebar__emergency-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--space-3);
    background: rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-lg);
  }

