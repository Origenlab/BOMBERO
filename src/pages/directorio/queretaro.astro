---
/**
 * ═══════════════════════════════════════════════════════════════════════════════
 * DIRECTORIO DE BOMBEROS - QUERÉTARO
 * ═══════════════════════════════════════════════════════════════════════════════
 * "El Silicon Valley de México" - Hub aeroespacial y automotriz
 * Centro Histórico UNESCO (1996) + Misiones Sierra Gorda (2003)
 * 4 Pueblos Mágicos | Ruta del Vino y Queso
 * Clúster aeroespacial #1 de México
 * ═══════════════════════════════════════════════════════════════════════════════
 */

import PageLayout from "@layouts/PageLayout.astro";
import { breadcrumbJsonLd } from "@utils/seo";
import {
  estacionesQueretaro,
  QUERETARO_SEO,
  ZONAS_QUERETARO,
  ALERTAS_QUERETARO,
  FAQ_QUERETARO,
  INDUSTRIA_QUERETARO,
  TURISMO_QUERETARO,
  INFRAESTRUCTURA_QUERETARO,
  getEstacionesPorZona,
  getEstacionesHAZMAT,
  getEstacionesAeroespaciales,
  getEstacionesPueblosMagicos,
  getEstacionesUNESCO,
  getEstacionesCarreteras,
  getEstacionesRescateVertical,
  generarInterlinking,
  getAlertasActivas,
  getEmpresasAeroespaciales,
  getEstadisticasAeroespaciales
} from "@data/estaciones-queretaro";

// Configuración de página
const title = `${QUERETARO_SEO.titulo} | Directorio BOMBERO.MX`;
const description = QUERETARO_SEO.descripcion;

// Estadísticas
const totalEstaciones = estacionesQueretaro.length;
const estacionesHAZMAT = getEstacionesHAZMAT();
const estacionesAeroespaciales = getEstacionesAeroespaciales();
const estacionesPueblosMagicos = getEstacionesPueblosMagicos();
const estacionesUNESCO = getEstacionesUNESCO();
const estacionesCarreteras = getEstacionesCarreteras();
const empresasAero = getEmpresasAeroespaciales();
const statsAero = getEstadisticasAeroespaciales();

// Interlinking
const { estados: estadosVecinos, productos: productosRelacionados } = generarInterlinking();

// Alertas activas
const alertasActivas = getAlertasActivas();

// Personal total
const personalTotal = estacionesQueretaro.reduce((sum, e) => sum + (e.personal || 0), 0);

// Schema.org Ultra-Profesional
const schemaOrg = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "GovernmentOrganization",
      "name": "H. Cuerpo de Bomberos de Querétaro",
      "alternateName": "Bomberos Querétaro",
      "description": "Servicio de bomberos del estado de Querétaro, México. Cobertura especializada para industria aeroespacial, Centro Histórico UNESCO y Pueblos Mágicos.",
      "areaServed": {
        "@type": "State",
        "name": "Querétaro",
        "containedInPlace": { "@type": "Country", "name": "México" }
      },
      "numberOfEmployees": personalTotal,
      "knowsAbout": [
        "Combate de incendios",
        "HAZMAT aeroespacial",
        "Rescate vertical",
        "Protección patrimonio UNESCO",
        "Rescate carretero"
      ]
    },
    {
      "@type": "ItemList",
      "name": "Estaciones de Bomberos en Querétaro",
      "description": `Directorio de ${totalEstaciones} estaciones de bomberos en Querétaro`,
      "numberOfItems": totalEstaciones,
      "itemListElement": estacionesQueretaro.map((estacion, index) => ({
        "@type": "ListItem",
        "position": index + 1,
        "item": {
          "@type": "FireStation",
          "name": estacion.nombre,
          "address": estacion.direccion,
          "telephone": estacion.telefono
        }
      }))
    },
    {
      "@type": "BreadcrumbList",
      "itemListElement": [
        { "@type": "ListItem", "position": 1, "name": "Inicio", "item": "https://bombero.mx" },
        { "@type": "ListItem", "position": 2, "name": "Directorio", "item": "https://bombero.mx/directorio" },
        { "@type": "ListItem", "position": 3, "name": "Querétaro", "item": "https://bombero.mx/directorio/queretaro" }
      ]
    },
    {
      "@type": "FAQPage",
      "mainEntity": FAQ_QUERETARO.map(faq => ({
        "@type": "Question",
        "name": faq.pregunta,
        "acceptedAnswer": { "@type": "Answer", "text": faq.respuesta }
      }))
    },
    {
      "@type": "TouristDestination",
      "name": "Querétaro",
      "description": "Estado con 2 sitios UNESCO y 4 Pueblos Mágicos",
      "includesAttraction": [
        { "@type": "LandmarksOrHistoricalBuildings", "name": "Centro Histórico UNESCO" },
        { "@type": "LandmarksOrHistoricalBuildings", "name": "Misiones Franciscanas UNESCO" },
        { "@type": "TouristAttraction", "name": "Peña de Bernal" }
      ]
    }
  ]
};

const keywords = [
  "bomberos querétaro",
  "estaciones bomberos querétaro ciudad",
  "emergencias querétaro 911",
  "cuerpo bomberos querétaro",
  "rescate querétaro",
  "bomberos san juan del río",
];
const breadcrumbSchema = breadcrumbJsonLd([
  { name: "Inicio", url: "/" },
  { name: "Directorio de Bomberos", url: "/directorio" },
  { name: "Querétaro", url: "/directorio/queretaro" },
]);
---

<PageLayout
  title={title}
  description={description}
  keywords={keywords}
  canonical="https://bombero.mx/directorio/queretaro"
  jsonLd={[breadcrumbSchema, schemaOrg]}
>

  <!-- Hero Section Premium -->
  <section class="qro-hero">
    <div class="qro-hero__bg">
      <div class="qro-hero__gradient"></div>
      <div class="qro-hero__pattern"></div>
      <div class="qro-hero__overlay"></div>
    </div>
    <div class="container">
      <div class="qro-hero__container">
        <nav class="qro-breadcrumb" aria-label="Breadcrumb">
          <ol>
            <li><a href="/">Inicio</a></li>
            <li><a href="/directorio">Directorio</a></li>
            <li aria-current="page">Querétaro</li>
          </ol>
        </nav>

        {alertasActivas.length > 0 && (
          <div class="qro-alerts">
            {alertasActivas.slice(0, 2).map(alerta => (
              <div class={`qro-alert qro-alert--${alerta.tipo}`}>
                <span class="qro-alert__icon">{alerta.icono}</span>
                <span class="qro-alert__text">{alerta.mensaje}</span>
                <span class="qro-alert__priority">{alerta.prioridad}</span>
              </div>
            ))}
          </div>
        )}

        <div class="qro-hero__content">
          <div class="qro-hero__badges">
            <span class="qro-hero__badge qro-hero__badge--aero">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M17.8 19.2L16 11l3.5-3.5C21 6 21.5 4 21 3c-1-.5-3 0-4.5 1.5L13 8 4.8 6.2c-.5-.1-.9.1-1.1.5l-.3.5c-.2.5-.1 1 .3 1.3L9 12l-2 3H4l-1 1 3 2 2 3 1-1v-3l3-2 3.5 5.3c.3.4.8.5 1.3.3l.5-.2c.4-.3.6-.7.5-1.2z"/>
              </svg>
              Hub Aeroespacial #1 México
            </span>
            <span class="qro-hero__badge qro-hero__badge--unesco">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 2L2 7l10 5 10-5-10-5z"/><path d="M2 17l10 5 10-5"/><path d="M2 12l10 5 10-5"/>
              </svg>
              2 Sitios UNESCO
            </span>
            <span class="qro-hero__badge qro-hero__badge--magic">
              4 Pueblos Mágicos
            </span>
          </div>

          <h1 class="qro-hero__title">
            Estaciones de Bomberos en
            <span class="qro-hero__highlight">Querétaro</span>
          </h1>

          <p class="qro-hero__desc">
            Directorio completo del <strong>H. Cuerpo de Bomberos de Querétaro</strong>.
            <strong>{totalEstaciones} estaciones</strong> con cobertura especializada para el
            <strong>clúster aeroespacial #1 de México</strong>, el <strong>Centro Histórico UNESCO</strong>,
            y la <strong>Ruta del Vino y Queso</strong>.
          </p>

          <div class="qro-hero__stats">
            <div class="qro-hero__stat">
              <span class="qro-hero__stat-number">{totalEstaciones}</span>
              <span class="qro-hero__stat-label">Estaciones</span>
            </div>
            <div class="qro-hero__stat">
              <span class="qro-hero__stat-number">{estacionesHAZMAT.length}</span>
              <span class="qro-hero__stat-label">HAZMAT</span>
            </div>
            <div class="qro-hero__stat">
              <span class="qro-hero__stat-number">{personalTotal}+</span>
              <span class="qro-hero__stat-label">Bomberos</span>
            </div>
            <div class="qro-hero__stat">
              <span class="qro-hero__stat-number">911</span>
              <span class="qro-hero__stat-label">Emergencias</span>
            </div>
          </div>

          <div class="qro-hero__bilingual">
            <div class="qro-hero__bilingual-header">
              <span class="qro-hero__bilingual-flag">EN</span>
              <span>For International Business</span>
            </div>
            <p>{QUERETARO_SEO.bilingue.descripcion}</p>
          </div>
        </div>

        <div class="qro-hero__emergency">
          <div class="qro-emergency-card">
            <div class="qro-emergency-card__header">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72"/>
              </svg>
              <span>Emergency Numbers</span>
            </div>
            <a href="tel:911" class="qro-emergency-card__number">911</a>
            <p class="qro-emergency-card__note">National Emergency Line / Línea Nacional</p>
            <div class="qro-emergency-card__locals">
              <div class="qro-emergency-card__local">
                <span>Central Querétaro</span>
                <a href="tel:+524422123939">(442) 212-3939</a>
              </div>
              <div class="qro-emergency-card__local">
                <span>HAZMAT Industrial</span>
                <a href="tel:+524422217800">(442) 221-7800</a>
              </div>
              <div class="qro-emergency-card__local">
                <span>San Juan del Río</span>
                <a href="tel:+524272720066">(427) 272-0066</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Aerospace Industry Section -->
  <section class="qro-aerospace">
    <div class="container">
      <div class="qro-aerospace__header">
        <span class="qro-aerospace__badge">Clúster Aeroespacial #1 México</span>
        <h2>Protección Industrial Aeroespacial</h2>
        <p>
          Querétaro es el hub aeroespacial más importante de México con {statsAero.empresas} empresas
          y {statsAero.empleos} empleos directos
        </p>
      </div>

      <div class="qro-aerospace__stats">
        <div class="qro-aerospace__stat">
          <span class="qro-aerospace__stat-value">{statsAero.empresas}</span>
          <span class="qro-aerospace__stat-label">Empresas Aeroespaciales</span>
        </div>
        <div class="qro-aerospace__stat">
          <span class="qro-aerospace__stat-value">{statsAero.empleos}</span>
          <span class="qro-aerospace__stat-label">Empleos Directos</span>
        </div>
        <div class="qro-aerospace__stat">
          <span class="qro-aerospace__stat-value">{statsAero.exportaciones}</span>
          <span class="qro-aerospace__stat-label">Exportaciones Anuales</span>
        </div>
        <div class="qro-aerospace__stat">
          <span class="qro-aerospace__stat-value">{statsAero.crecimiento}</span>
          <span class="qro-aerospace__stat-label">Crecimiento Anual</span>
        </div>
      </div>

      <div class="qro-aerospace__companies">
        {empresasAero.map(empresa => (
          <div class="qro-aerospace__company">
            <h3>{empresa.nombre}</h3>
            <p class="qro-aerospace__company-location">{empresa.ubicacion}</p>
            <div class="qro-aerospace__company-info">
              <span><strong>{empresa.empleados.toLocaleString()}</strong> empleados</span>
              <span>{empresa.actividad}</span>
            </div>
            <div class="qro-aerospace__company-risk">
              <span class="qro-aerospace__company-risk-icon">⚠️</span>
              <span>Riesgo HAZMAT: {empresa.riesgo}</span>
            </div>
          </div>
        ))}
      </div>

      <div class="qro-aerospace__coverage">
        <h3>Estaciones con Cobertura Aeroespacial HAZMAT</h3>
        <div class="qro-aerospace__stations">
          {estacionesAeroespaciales.slice(0, 4).map(e => (
            <a href={`/directorio/queretaro/${e.slug}`} class="qro-aerospace__station">
              <span class="qro-aerospace__station-name">{e.nombre.replace("Estación de Bomberos ", "").replace("Estación Central ", "")}</span>
              <span class="qro-aerospace__station-phone">{e.telefono}</span>
            </a>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- UNESCO Heritage Section -->
  <section class="qro-unesco">
    <div class="container">
      <div class="qro-section-header">
        <span class="qro-section-header__label">Patrimonio UNESCO</span>
        <h2 class="qro-section-header__title">2 Sitios Patrimonio de la Humanidad</h2>
      </div>

      <div class="qro-unesco__grid">
        {TURISMO_QUERETARO.patrimonioUnesco.map(sitio => (
          <div class="qro-unesco__card">
            <span class="qro-unesco__card-year">UNESCO {sitio.declaracion}</span>
            <h3>{sitio.sitio}</h3>
            <p>{sitio.descripcion}</p>
            <div class="qro-unesco__card-visitors">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/>
                <path d="M23 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/>
              </svg>
              <span>{sitio.visitantes}</span>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Zones Grid -->
  <section class="qro-zones">
    <div class="container">
      <div class="qro-section-header">
        <span class="qro-section-header__label">6 Zonas</span>
        <h2 class="qro-section-header__title">Cobertura Geográfica Especializada</h2>
      </div>

      <div class="qro-zones__grid">
        {Object.entries(ZONAS_QUERETARO).map(([key, zona]) => {
          const estacionesZona = getEstacionesPorZona(zona.nombre);
          return (
            <div class="qro-zone-card" style={`--zone-color: ${zona.color}`}>
              <div class="qro-zone-card__header">
                <h3>{zona.nombre}</h3>
                <span class="qro-zone-card__count">{estacionesZona.length}</span>
              </div>
              <p class="qro-zone-card__desc">{zona.descripcion}</p>
              <div class="qro-zone-card__meta">
                {zona.poblacion && <span>Población: {zona.poblacion}</span>}
                {zona.empleos && <span>Empleos: {zona.empleos}</span>}
                {zona.extension && <span>{zona.extension}</span>}
                {zona.visitantes && <span>{zona.visitantes}</span>}
              </div>
              <div class="qro-zone-card__risks">
                <span class="qro-zone-card__risks-title">Riesgos:</span>
                {zona.riesgosPrincipales.slice(0, 2).map(r => (
                  <span class="qro-zone-card__risk">{r}</span>
                ))}
              </div>
              <ul class="qro-zone-card__stations">
                {estacionesZona.slice(0, 2).map(e => (
                  <li><a href={`/directorio/queretaro/${e.slug}`}>{e.nombre.replace("Estación de Bomberos ", "").replace("Estación Central ", "")}</a></li>
                ))}
              </ul>
            </div>
          );
        })}
      </div>
    </div>
  </section>

  <!-- Pueblos Mágicos Section -->
  <section class="qro-magicos">
    <div class="container">
      <div class="qro-section-header">
        <span class="qro-section-header__label">Turismo</span>
        <h2 class="qro-section-header__title">4 Pueblos Mágicos de Querétaro</h2>
      </div>

      <div class="qro-magicos__grid">
        {TURISMO_QUERETARO.pueblosMagicos.map(pueblo => (
          <div class="qro-magico-card">
            <div class="qro-magico-card__header">
              <span class="qro-magico-card__year">Desde {pueblo.designacion}</span>
              <span class="qro-magico-card__visitors">{pueblo.visitantes}</span>
            </div>
            <h3>{pueblo.nombre}</h3>
            <p>{pueblo.atractivo}</p>
            <div class="qro-magico-card__risk">
              <span>Riesgo principal:</span> {pueblo.riesgo}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Wine Route Section -->
  <section class="qro-wine">
    <div class="container">
      <div class="qro-wine__content">
        <div class="qro-wine__info">
          <span class="qro-wine__badge">Ruta del Vino y Queso</span>
          <h2>Cobertura Zona Vitivinícola</h2>
          <p>
            La Ruta del Vino y Queso de Querétaro cuenta con <strong>{TURISMO_QUERETARO.rutaVino.viñedos} viñedos</strong> y
            <strong>{TURISMO_QUERETARO.rutaVino.queserias} queserías</strong>, atrayendo a
            <strong>{TURISMO_QUERETARO.rutaVino.visitantesAnuales}</strong> visitantes cada año.
          </p>
          <div class="qro-wine__events">
            <h4>Eventos Principales:</h4>
            <ul>
              {TURISMO_QUERETARO.rutaVino.eventos.map(evento => (
                <li>{evento}</li>
              ))}
            </ul>
          </div>
        </div>
        <div class="qro-wine__stations">
          <h4>Estaciones de Cobertura:</h4>
          {getEstacionesPorZona("Ruta del Vino y Queso").map(e => (
            <a href={`/directorio/queretaro/${e.slug}`} class="qro-wine__station">
              <span>{e.nombre.replace("Estación de Bomberos ", "")}</span>
              <span>{e.telefono}</span>
            </a>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Stations List -->
  <section class="qro-stations">
    <div class="container">
      <div class="qro-section-header">
        <span class="qro-section-header__label">{totalEstaciones} Estaciones</span>
        <h2 class="qro-section-header__title">Directorio Completo</h2>
      </div>

      <div class="qro-stations__grid">
        {estacionesQueretaro.map((estacion) => (
          <a href={`/directorio/queretaro/${estacion.slug}`} class="qro-station-card">
            <div class="qro-station-card__header">
              <span class="qro-station-card__zone" style={`--zone-color: ${ZONAS_QUERETARO[Object.keys(ZONAS_QUERETARO).find(k => ZONAS_QUERETARO[k as keyof typeof ZONAS_QUERETARO].nombre === estacion.zona) || 'centroHistorico']?.color || '#7c3aed'}`}>
                {estacion.zona}
              </span>
              {estacion.caracteristicasEspeciales?.some(c => c.toLowerCase().includes('hazmat')) && (
                <span class="qro-station-card__badge qro-station-card__badge--hazmat">HAZMAT</span>
              )}
              {estacion.caracteristicasEspeciales?.some(c => c.toLowerCase().includes('unesco')) && (
                <span class="qro-station-card__badge qro-station-card__badge--unesco">UNESCO</span>
              )}
              {estacion.caracteristicasEspeciales?.some(c => c.toLowerCase().includes('pueblo mágico')) && (
                <span class="qro-station-card__badge qro-station-card__badge--magic">P. Mágico</span>
              )}
              {estacion.caracteristicasEspeciales?.some(c => c.toLowerCase().includes('aeroespacial') || c.toLowerCase().includes('bombardier')) && (
                <span class="qro-station-card__badge qro-station-card__badge--aero">Aeroespacial</span>
              )}
            </div>
            <h3 class="qro-station-card__name">{estacion.nombre.replace("Estación de Bomberos ", "").replace("Estación Central ", "")}</h3>
            <p class="qro-station-card__address">{estacion.direccion}</p>
            <div class="qro-station-card__contact">
              <span class="qro-station-card__phone">{estacion.telefono}</span>
              {estacion.personal && <span class="qro-station-card__personnel">{estacion.personal} bomberos</span>}
            </div>
            <span class="qro-station-card__cta">Ver detalles</span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="qro-faq">
    <div class="container">
      <div class="qro-section-header">
        <span class="qro-section-header__label">FAQ</span>
        <h2 class="qro-section-header__title">Preguntas Frecuentes</h2>
      </div>

      <div class="qro-faq__grid">
        {FAQ_QUERETARO.slice(0, 6).map((faq, index) => (
          <details class="qro-faq__item" open={index === 0}>
            <summary>{faq.pregunta}</summary>
            <p>{faq.respuesta}</p>
          </details>
        ))}
      </div>
    </div>
  </section>

  <!-- Interlinking States -->
  <section class="qro-interlinking">
    <div class="container">
      <div class="qro-section-header">
        <span class="qro-section-header__label">Corredor Industrial Bajío</span>
        <h2 class="qro-section-header__title">Bomberos en Estados Vecinos</h2>
      </div>

      <div class="qro-interlinking__grid">
        {estadosVecinos.map(estado => (
          <a href={`/directorio/${estado.slug}`} class={`qro-neighbor-card qro-neighbor-card--${estado.prioridad}`}>
            <div class="qro-neighbor-card__priority">{estado.prioridad}</div>
            <h3>{estado.estado}</h3>
            <p class="qro-neighbor-card__relation">{estado.relacion}</p>
            <p class="qro-neighbor-card__context">{estado.contexto}</p>
            <span class="qro-neighbor-card__link">Ver estaciones</span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Products -->
  <section class="qro-products">
    <div class="container">
      <div class="qro-section-header">
        <span class="qro-section-header__label">Equipamiento Especializado</span>
        <h2 class="qro-section-header__title">Equipo para Industria Aeroespacial</h2>
      </div>

