    line-height: 1.8;
    margin: 0 0 var(--space-4);
  }

  .seo-content strong {
    color: var(--color-smoke-900);
    font-weight: 600;
  }

  @media (max-width: 768px) {
    .seo-content {
      padding: var(--space-5);
    }

    .seo-content h2 {
      font-size: var(--text-xl);
    }

    .seo-content h3 {
      font-size: var(--text-base);
    }
  }
