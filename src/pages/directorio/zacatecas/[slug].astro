---
/**
 * ─── Página de Detalle de Estación de Bomberos Zacatecas ───
 * Centro Histórico UNESCO 1993, Minera Peñasquito mayor mina plata del mundo,
 * HAZMAT explosivos/cianuro/xantatos mineros, Pueblos Mágicos Jerez y Sombrerete,
 * Sierra de Órganos Parque Nacional y 600+ años minería continua.
 */
import PageLayout from "@layouts/PageLayout.astro";
import { estacionesZacatecas, getEstacionBySlug, getEstacionesCercanas } from "@data/estaciones-zacatecas";

export function getStaticPaths() {
  return estacionesZacatecas.map((estacion) => ({
    params: { slug: estacion.slug },
  }));
}

const { slug } = Astro.params;
const estacion = getEstacionBySlug(slug as string);

if (!estacion) {
  return Astro.redirect("/404");
}

const estacionesCercanas = getEstacionesCercanas(slug as string, 3);

const estadosVecinos = [
  { nombre: "Aguascalientes", slug: "aguascalientes" },
  { nombre: "San Luis Potosí", slug: "san-luis-potosi" },
  { nombre: "Jalisco", slug: "jalisco" },
  { nombre: "Durango", slug: "durango" },
];

const productosRelacionados = [
  { nombre: "Trajes Estructurales NFPA", href: "/productos/trajes-para-bomberos", desc: "Trajes NFPA 1971 certificados" },
  { nombre: "Cascos de Bombero", href: "/productos/cascos-para-bomberos", desc: "Cascos certificados NFPA" },
  { nombre: "Equipos SCBA", href: "/productos/scba", desc: "Equipos de respiración autónoma" },
  { nombre: "Herramientas de Rescate", href: "/productos/herramientas-rescate", desc: "Equipo Holmatro y herramientas de excarcelación" },
];

const telefonoLink = estacion.telefono.replace(/\s/g, '');
const ubicacion = estacion.municipio ?? estacion.ciudad;
const mapUrl = `https://www.google.com/maps/search/${encodeURIComponent(estacion.nombre + ' ' + estacion.direccion + ' ' + estacion.colonia + ' ' + ubicacion + ' Zacatecas')}`;
const canonical = `https://bombero.mx/directorio/zacatecas/${estacion.slug}`;

const seoKeywords = [
  `bomberos ${ubicacion.toLowerCase()}`,
  `estacion bomberos ${ubicacion.toLowerCase()}`,
  `telefono bomberos ${ubicacion.toLowerCase()} zacatecas`,
  "bomberos zacatecas",
  "bomberos fresnillo",
  "emergencias zacatecas 911",
  "hazmat minero zacatecas",
  "directorio bomberos norte mexico",
];

const stationJsonLd = {
  "@context": "https://schema.org",
  "@type": "FireStation",
  name: estacion.nombre,
  description: estacion.descripcion,
  url: canonical,
  telephone: estacion.telefono,
  openingHours: "Mo-Su 00:00-23:59",
  address: {
    "@type": "PostalAddress",
    streetAddress: [estacion.direccion, estacion.colonia].filter(Boolean).join(", "),
    addressLocality: estacion.ciudad,
    addressRegion: "Zacatecas",
    postalCode: estacion.codigoPostal,
    addressCountry: "MX",
  },
  geo: {
    "@type": "GeoCoordinates",
    latitude: estacion.coordenadas.lat,
    longitude: estacion.coordenadas.lng,
  },
  areaServed: {
    "@type": "City",
    name: ubicacion,
  },
};

const breadcrumbJsonLd = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  itemListElement: [
    { "@type": "ListItem", position: 1, name: "Inicio", item: "https://bombero.mx" },
    { "@type": "ListItem", position: 2, name: "Directorio", item: "https://bombero.mx/directorio" },
    { "@type": "ListItem", position: 3, name: "Zacatecas", item: "https://bombero.mx/directorio/zacatecas" },
    { "@type": "ListItem", position: 4, name: estacion.nombre, item: canonical },
  ],
};
---

<PageLayout
  title={`${estacion.nombreCorto} | Bomberos ${ubicacion}, Zacatecas | BOMBERO.MX`}
  description={`${estacion.descripcion} Teléfono: ${estacion.telefono}. Dirección: ${estacion.direccion}, ${estacion.colonia}, ${ubicacion}, Zacatecas. Emergencias 911.`}
  keywords={seoKeywords}
  canonical={canonical}
  jsonLd={[stationJsonLd, breadcrumbJsonLd]}
>
  <section class="est-hero">
    <div class="est-hero__bg">
      <div class="est-hero__gradient"></div>
    </div>
    <div class="container">
      <nav class="est-hero__breadcrumb">
        <a href="/">Inicio</a>
        <span>/</span>
        <a href="/directorio">Directorio</a>
        <span>/</span>
        <a href="/directorio/zacatecas">Zacatecas</a>
        <span>/</span>
        <span>{estacion.nombreCorto}</span>
      </nav>

      <div class="est-hero__grid">
        <div class="est-hero__content">
          <div class="est-hero__badges">
            <span class="est-hero__badge est-hero__badge--municipio">{estacion.municipio}</span>
            <span class="est-hero__badge est-hero__badge--horario">{estacion.horario}</span>
          </div>
          <h1 class="est-hero__title">{estacion.nombre}</h1>
          <p class="est-hero__desc">{estacion.descripcion}</p>

          <div class="est-hero__actions">
            <a href={`tel:${telefonoLink}`} class="est-hero__btn est-hero__btn--primary">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72"/>
              </svg>
              <span>Llamar: {estacion.telefono}</span>
            </a>
            <a href={mapUrl} target="_blank" rel="noopener" class="est-hero__btn est-hero__btn--secondary">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                <circle cx="12" cy="10" r="3"/>
              </svg>
              <span>Ver en Google Maps</span>
            </a>
          </div>
        </div>

        <div class="est-hero__card">
          <div class="est-hero__card-header">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M3 21h18"/>
              <path d="M5 21V7l8-4 8 4v14"/>
              <path d="M9 21v-4a2 2 0 0 1 2-2h2a2 2 0 0 1 2 2v4"/>
            </svg>
            <span>Información de Contacto</span>
          </div>
          <div class="est-hero__card-body">
            <div class="est-hero__info-row">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                <circle cx="12" cy="10" r="3"/>
              </svg>
              <div>
                <strong>Dirección</strong>
                <span>{estacion.direccion}, {estacion.colonia}, CP {estacion.codigoPostal}</span>
              </div>
            </div>
            <div class="est-hero__info-row">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72"/>
              </svg>
              <div>
                <strong>Teléfono Directo</strong>
                <a href={`tel:${telefonoLink}`}>{estacion.telefono}</a>
              </div>
            </div>
            <div class="est-hero__info-row">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"/>
              </svg>
              <div>
                <strong>Emergencias</strong>
                <a href="tel:911" class="est-hero__emergency">911</a>
              </div>
            </div>
            {estacion.tiempoRespuesta && (
              <div class="est-hero__info-row">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"/>
                  <polyline points="12 6 12 12 16 14"/>
                </svg>
                <div>
                  <strong>Tiempo de Respuesta</strong>
                  <span>{estacion.tiempoRespuesta}</span>
                </div>
              </div>
            )}
            <div class="est-hero__info-row">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
                <circle cx="12" cy="7" r="4"/>
              </svg>
              <div>
                <strong>Personal Activo</strong>
                <span>{estacion.personalActivo} bomberos</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="est-services">
    <div class="container">
      <div class="est-services__grid">
        <!-- Services List -->
        <div class="est-services__main">
          <h2 class="est-services__title">Servicios de Emergencia</h2>
          <ul class="est-services__list">
            {estacion.servicios.map((servicio) => (
              <li class="est-services__item">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="20 6 9 17 4 12"/>
                </svg>
                <span>{servicio}</span>
              </li>
            ))}
          </ul>

          {estacion.especialidades && estacion.especialidades.length > 0 && (
            <div class="est-specialties">
              <h3 class="est-specialties__title">Especialidades y Capacidades Únicas</h3>
              <ul class="est-specialties__list">
                {estacion.especialidades.map((esp) => (
                  <li class="est-specialties__item">
                    <span class="est-specialties__dot"></span>
                    <span>{esp}</span>
                  </li>
                ))}
              </ul>
            </div>
          )}
        </div>

        <!-- Sidebar -->
        <aside class="est-sidebar">
          <!-- Emergency CTA -->
          <div class="est-sidebar__emergency">
            <div class="est-sidebar__emergency-icon">
              <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                <polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"/>
              </svg>
            </div>
            <div class="est-sidebar__emergency-text">
              <span>Emergencias</span>
              <a href="tel:911">911</a>
            </div>
          </div>

          <!-- Nearby Stations -->
          {estacionesCercanas.length > 0 && (
            <div class="est-sidebar__card">
              <h4>Estaciones Cercanas</h4>
              <ul class="est-sidebar__nearby">
                {estacionesCercanas.map((ec) => (
                  <li>
                    <a href={`/directorio/zacatecas/${ec.slug}`}>
                      <div>
                        <strong>{ec.nombreCorto}</strong>
                        <span>{ec.municipio}</span>
                      </div>
                      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M5 12h14M12 5l7 7-7 7"/>
                      </svg>
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          )}

          <!-- Nearby States -->
          <div class="est-sidebar__card">
            <h4>Estados Vecinos</h4>
            <ul class="est-sidebar__states">
              {estadosVecinos.map((estado) => (
                <li>
                  <a href={`/directorio/${estado.slug}`}>
                    <span>{estado.nombre}</span>
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M5 12h14M12 5l7 7-7 7"/>
                    </svg>
                  </a>
                </li>
              ))}
            </ul>
          </div>

          <!-- Products -->
          <div class="est-sidebar__card">
            <h4>Equipo Certificado NFPA</h4>
            <ul class="est-sidebar__products">
              {productosRelacionados.map((prod) => (
                <li>
                  <a href={prod.href}>
                    <strong>{prod.nombre}</strong>
                    <span>{prod.desc}</span>
                  </a>
                </li>
              ))}
            </ul>
            <a href="/cotizar" class="est-sidebar__cta">Solicitar Cotización</a>
          </div>

          <!-- Back Links -->
          <div class="est-sidebar__card est-sidebar__card--nav">
            <a href="/directorio/zacatecas" class="est-sidebar__back">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M19 12H5M12 19l-7-7 7-7"/>
              </svg>
              <span>Ver todas las estaciones en Zacatecas</span>
            </a>
            <a href="/directorio" class="est-sidebar__back">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M19 12H5M12 19l-7-7 7-7"/>
              </svg>
              <span>Ver todos los estados</span>
            </a>
          </div>
        </aside>
      </div>
    </div>
  </section>

  <!-- SEO Section -->
  <section class="est-seo">
    <div class="container">
      <h2>Bomberos de {ubicacion}, Zacatecas — Estado de la Plata</h2>
      <p>
        La <strong>estación de bomberos de {ubicacion}</strong> es parte del
        <strong>H. Cuerpo de Bomberos de Zacatecas</strong>, el estado que produce el
        <strong>25% de la plata mundial</strong> y alberga el
        <strong>Centro Histórico Patrimonio de la Humanidad UNESCO 1993</strong>.
        Los bomberos zacatecanos están capacitados con estándares NFPA internacionales y
        protocolos HAZMAT especializados para la industria minera de plata más importante del mundo,
        incluyendo la Minera Peñasquito (Newmont/Goldcorp), la mayor mina de plata del planeta.
      </p>
      <p>
        En caso de emergencia en {ubicacion}, <strong>marca el 911</strong> o contacta directamente
        a esta estación al <strong>{estacion.telefono}</strong>.
        El C4 de Zacatecas coordina la respuesta de todos los servicios de emergencia del estado
        las <strong>24 horas del día, 365 días del año</strong>.
      </p>
    </div>
  </section>
</PageLayout>

<style>
  /* ═══════════════════════════════════════════════════════════════════════
     ESTACIÓN INDIVIDUAL — ZACATECAS
     Color: Violeta Minero #7c3aed — Amatistas, Plata, Minería
     ═══════════════════════════════════════════════════════════════════════ */

  /* ═══ Hero ═══ */
  .est-hero {
    position: relative;
    padding: var(--space-10) 0 var(--space-12);
    background: var(--color-smoke-950);
    overflow: hidden;
  }

  .est-hero__bg {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .est-hero__gradient {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(ellipse 70% 60% at 30% 0%, rgba(124, 58, 237, 0.2), transparent),
      radial-gradient(ellipse 50% 40% at 100% 60%, rgba(109, 40, 217, 0.1), transparent);
  }

  .est-hero__breadcrumb {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-sm);
    margin-bottom: var(--space-6);
    position: relative;
  }

  .est-hero__breadcrumb a {
    color: var(--color-smoke-400);
    text-decoration: none;
    transition: color 0.2s;
  }

  .est-hero__breadcrumb a:hover { color: #a78bfa; }
  .est-hero__breadcrumb span { color: var(--color-smoke-600); }

  .est-hero__grid {
    position: relative;
    display: grid;
    grid-template-columns: 1fr 380px;
    gap: var(--space-10);
    align-items: start;
  }

  .est-hero__badges {
    display: flex;
    gap: var(--space-2);
    margin-bottom: var(--space-4);
  }

  .est-hero__badge {
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-full);
    font-size: var(--text-xs);
    font-weight: 600;
  }

  .est-hero__badge--municipio {
    background: rgba(124, 58, 237, 0.2);
    color: #a78bfa;
    border: 1px solid rgba(124, 58, 237, 0.3);
  }

  .est-hero__badge--horario {
    background: rgba(255, 255, 255, 0.08);
    color: var(--color-smoke-400);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .est-hero__title {
    font-size: clamp(1.5rem, 3vw, 2.25rem);
    font-weight: 800;
    color: white;
    line-height: 1.15;
    margin: 0 0 var(--space-4);
  }

  .est-hero__desc {
    font-size: var(--text-base);
    color: var(--color-smoke-300);
    line-height: 1.7;
    margin: 0 0 var(--space-6);
  }

  .est-hero__actions {
    display: flex;
    gap: var(--space-3);
    flex-wrap: wrap;
  }

  .est-hero__btn {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-3) var(--space-5);
    border-radius: var(--radius-lg);
    font-size: var(--text-sm);
    font-weight: 700;
    text-decoration: none;
    transition: all 0.2s;
  }

  .est-hero__btn--primary {
    background: #7c3aed;
    color: white;
  }

  .est-hero__btn--primary:hover {
    background: #6d28d9;
    transform: translateY(-2px);
    box-shadow: 0 4px 16px rgba(124, 58, 237, 0.4);
  }

  .est-hero__btn--secondary {
    background: rgba(255,255,255,0.08);
    color: var(--color-smoke-300);
    border: 1px solid rgba(255,255,255,0.12);
  }

  .est-hero__btn--secondary:hover {
    background: rgba(255,255,255,0.12);
    color: white;
  }

  /* Contact Card */
  .est-hero__card {
    background: var(--color-smoke-900);
    border: 1px solid var(--color-smoke-800);
    border-radius: var(--radius-xl);
    overflow: hidden;
  }

  .est-hero__card-header {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    padding: var(--space-4) var(--space-5);
    background: #7c3aed;
    color: white;
    font-size: var(--text-sm);
    font-weight: 700;
  }

  .est-hero__card-body {
    padding: var(--space-4);
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .est-hero__info-row {
    display: flex;
    gap: var(--space-3);
    align-items: flex-start;
    padding: var(--space-3);
    background: var(--color-smoke-800);
    border-radius: var(--radius-lg);
  }

  .est-hero__info-row svg {
    color: #8b5cf6;
    flex-shrink: 0;
    margin-top: 2px;
  }

  .est-hero__info-row div {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .est-hero__info-row strong {
    font-size: var(--text-xs);
    color: var(--color-smoke-400);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .est-hero__info-row span,
  .est-hero__info-row a {
    font-size: var(--text-sm);
    color: var(--color-smoke-200);
    text-decoration: none;
  }

  .est-hero__info-row a:hover { color: #a78bfa; }

  .est-hero__emergency {
    font-size: var(--text-xl) !important;
    font-weight: 800;
    color: #a78bfa !important;
  }

  /* ═══ Services Section ═══ */
  .est-services {
    padding: var(--space-12) 0;
    background: var(--color-smoke-50);
  }

  .est-services__grid {
    display: grid;
    grid-template-columns: 1fr 340px;
    gap: var(--space-10);
    align-items: start;
  }

  .est-services__title {
    font-size: var(--text-xl);
    font-weight: 700;
    color: var(--color-smoke-900);
    margin: 0 0 var(--space-6);
    padding-bottom: var(--space-4);
    border-bottom: 2px solid #7c3aed;
  }

  .est-services__list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-3);
  }

  .est-services__item {
    display: flex;
    gap: var(--space-3);
    align-items: flex-start;
    padding: var(--space-4);
    background: white;
    border-radius: var(--radius-lg);
    border-left: 3px solid #7c3aed;
  }

  .est-services__item svg {
    color: #7c3aed;
    flex-shrink: 0;
    margin-top: 2px;
  }

  .est-services__item span {
    font-size: var(--text-sm);
    color: var(--color-smoke-700);
    line-height: 1.4;
  }

  /* Specialties */
  .est-specialties {
    margin-top: var(--space-8);
    padding: var(--space-6);
    background: white;
    border-radius: var(--radius-xl);
    border-left: 4px solid #7c3aed;
  }

  .est-specialties__title {
    font-size: var(--text-lg);
    font-weight: 700;
    color: var(--color-smoke-900);
    margin: 0 0 var(--space-4);
  }

  .est-specialties__list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .est-specialties__item {
    display: flex;
    align-items: flex-start;
    gap: var(--space-3);
    font-size: var(--text-sm);
    color: var(--color-smoke-600);
    line-height: 1.5;
  }

  .est-specialties__dot {
    width: 8px;
    height: 8px;
    background: #7c3aed;
    border-radius: 50%;
    margin-top: 4px;
    flex-shrink: 0;
  }

  /* Sidebar */
  .est-sidebar {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    position: sticky;
    top: var(--space-6);
  }

  .est-sidebar__emergency {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    padding: var(--space-5);
    background: linear-gradient(135deg, #4c1d95, #6d28d9);
    border-radius: var(--radius-xl);
  }

  .est-sidebar__emergency-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 52px;
    height: 52px;
    background: rgba(255,255,255,0.2);
    border-radius: 50%;
    color: white;
    flex-shrink: 0;
  }

  .est-sidebar__emergency-text {
    display: flex;
