---
/**
 * ─────────────────────────────────────────────────────────────────────────────
 * DIRECTORIO DE ESTACIONES DE BOMBEROS - CHIAPAS
 * ─────────────────────────────────────────────────────────────────────────────
 * Página optimizada para SEO y marketing digital con información completa del
 * H. Cuerpo de Bomberos del Estado de Chiapas.
 *
 * PERFIL DE CHIAPAS:
 * - Población: 5.5 millones de habitantes
 * - Turistas anuales: 4.5 millones
 * - 5 Pueblos Mágicos: San Cristóbal, Chiapa de Corzo, Comitán, Palenque, Chamula
 * - Patrimonio UNESCO: Palenque, Selva Lacandona (Montes Azules)
 * - Frontera: 658 km con Guatemala
 *
 * KEYWORDS PRINCIPALES:
 * - Bomberos Tuxtla Gutiérrez, Bomberos San Cristóbal de las Casas
 * - Bomberos Tapachula, Bomberos Palenque, Emergencias Chiapas
 * - Rescate Cañón del Sumidero, Emergencias Selva Lacandona
 * - Bomberos incendios forestales Chiapas, 911 Chiapas
 * ─────────────────────────────────────────────────────────────────────────────
 */
import PageLayout from "@layouts/PageLayout.astro";
import SectionHeader from "@components/SectionHeader.astro";
import StationCard from "@components/StationCard.astro";
import { estacionesChiapas, getMunicipios, getEstadisticas, CHIAPAS_SEO } from "@data/estaciones-chiapas";
import { breadcrumbJsonLd } from "@utils/seo";

// Obtener datos
const municipios = getMunicipios();
const estadisticas = getEstadisticas();

// Estados vecinos para interlinking SEO
const estadosVecinos = [
  { nombre: "Tabasco", slug: "tabasco" },
  { nombre: "Oaxaca", slug: "oaxaca" },
  { nombre: "Veracruz", slug: "veracruz" },
  { nombre: "Campeche", slug: "campeche" },
];

// Datos de municipios principales con información SEO
const municipiosInfo = [
  { nombre: "Tuxtla Gutiérrez", poblacion: "604K", desc: "Capital del estado" },
  { nombre: "San Cristóbal", poblacion: "215K", desc: "Pueblo Mágico, capital cultural" },
  { nombre: "Tapachula", poblacion: "350K", desc: "Frontera Guatemala, café Soconusco" },
  { nombre: "Palenque", poblacion: "125K", desc: "Zona arqueológica UNESCO" },
  { nombre: "Comitán", poblacion: "150K", desc: "Lagos de Montebello" },
  { nombre: "Chiapa de Corzo", poblacion: "90K", desc: "Cañón del Sumidero" },
  { nombre: "Ocosingo", poblacion: "220K", desc: "Selva Lacandona" },
];

const keywords = ["bomberos chiapas", "estaciones bomberos tuxtla gutiérrez", "emergencias chiapas 911", "bomberos san cristóbal", "bomberos tapachula", "rescate cañón sumidero", "bomberos selva lacandona"];
const breadcrumbSchema = breadcrumbJsonLd([
  { name: "Inicio", url: "/" },
  { name: "Directorio de Bomberos", url: "/directorio" },
  { name: "Chiapas", url: "/directorio/chiapas" },
]);
const itemListSchema = {
  "@context": "https://schema.org",
  "@type": "ItemList",
  "name": "Estaciones de Bomberos en Chiapas, México",
  "description": "Directorio oficial de las 18 estaciones de bomberos en Chiapas. Teléfonos de emergencia en Tuxtla Gutiérrez, San Cristóbal, Tapachula, Palenque, Comitán y toda la Selva Lacandona. Rescate Cañón del Sumidero, emergencias forestales. 911 y contacto 24 horas.",
  "numberOfItems": estacionesChiapas.length,
  "itemListElement": estacionesChiapas.map((e, i) => ({
    "@type": "ListItem",
    "position": i + 1,
    "item": {
      "@type": "FireStation",
      "name": e.nombre,
      "address": {
        "@type": "PostalAddress",
        "streetAddress": e.direccion,
        "addressLocality": e.municipio || e.ciudad,
        "addressRegion": "Chiapas",
        "addressCountry": "MX"
      },
      "telephone": e.telefono,
      "url": `https://bombero.mx/directorio/chiapas/${e.slug}`
    }
  }))
};
---

<PageLayout
  title="Estaciones de Bomberos en Chiapas | Directorio Oficial | BOMBERO.MX"
  description="Directorio oficial de las 18 estaciones de bomberos en Chiapas. Teléfonos de emergencia en Tuxtla Gutiérrez, San Cristóbal, Tapachula, Palenque, Comitán y toda la Selva Lacandona. Rescate Cañón del Sumidero, emergencias forestales. 911 y contacto 24 horas."
  keywords={keywords}
  canonical="https://bombero.mx/directorio/chiapas"
  jsonLd={[breadcrumbSchema, itemListSchema]}
>
  <!-- Hero Section con SEO optimizado -->
  <section class="chis-hero">
    <div class="chis-hero__bg">
      <div class="chis-hero__gradient"></div>
      <div class="chis-hero__pattern"></div>
    </div>
    <div class="container">
      <div class="chis-hero__container">
        <!-- Left Column - Content Principal -->
        <div class="chis-hero__content">
          <nav class="chis-hero__breadcrumb" aria-label="Breadcrumb" itemscope itemtype="https://schema.org/BreadcrumbList">
            <span itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
              <a href="/" itemprop="item"><span itemprop="name">Inicio</span></a>
              <meta itemprop="position" content="1" />
            </span>
            <span aria-hidden="true">/</span>
            <span itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
              <a href="/directorio" itemprop="item"><span itemprop="name">Directorio Nacional</span></a>
              <meta itemprop="position" content="2" />
            </span>
            <span aria-hidden="true">/</span>
            <span itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
              <span itemprop="name" aria-current="page">Chiapas</span>
              <meta itemprop="position" content="3" />
            </span>
          </nav>

          <span class="chis-hero__badge">
            <span class="chis-hero__badge-dot"></span>
            CHIS
          </span>

          <h1 class="chis-hero__title">
            Estaciones de Bomberos en
            <span class="chis-hero__highlight">Chiapas</span>
          </h1>

          <p class="chis-hero__desc">
            Directorio oficial del <strong>Heroico Cuerpo de Bomberos del Estado de Chiapas</strong>.
            Acceso inmediato a teléfonos de emergencia, direcciones y servicios de las <strong>{estadisticas.totalEstaciones} estaciones</strong>
            que protegen a los <strong>5.5 millones de habitantes</strong>, <strong>5 Pueblos Mágicos</strong>,
            la <strong>Selva Lacandona</strong> y <strong>4.5 millones de turistas anuales</strong>.
          </p>

          <div class="chis-hero__stats">
            <div class="chis-hero__stat">
              <span class="chis-hero__stat-number">{estadisticas.totalEstaciones}</span>
              <span class="chis-hero__stat-label">Estaciones</span>
            </div>
            <div class="chis-hero__stat">
              <span class="chis-hero__stat-number">{estadisticas.totalMunicipios}</span>
              <span class="chis-hero__stat-label">Municipios</span>
            </div>
            <div class="chis-hero__stat">
              <span class="chis-hero__stat-number">24/7</span>
              <span class="chis-hero__stat-label">Servicio</span>
            </div>
            <div class="chis-hero__stat">
              <span class="chis-hero__stat-number">4.5M</span>
              <span class="chis-hero__stat-label">Turistas/año</span>
            </div>
          </div>

          <!-- Call to Action de Emergencia -->
          <div class="chis-hero__cta">
            <a href="tel:911" class="chis-hero__cta-btn chis-hero__cta-btn--primary">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72"/>
              </svg>
              Emergencias: 911
            </a>
            <a href="#estaciones" class="chis-hero__cta-btn chis-hero__cta-btn--secondary">
              Ver todas las estaciones
            </a>
          </div>
        </div>

        <!-- Right Column - SEO Content Premium -->
        <div class="chis-hero__seo">
          <h2 class="chis-hero__seo-title">Patrimonio UNESCO y 5 Pueblos Mágicos</h2>
          <p class="chis-hero__seo-text">
            <strong>Chiapas</strong> alberga <strong>Palenque</strong>, ciudad maya Patrimonio de la Humanidad,
            y <strong>5 Pueblos Mágicos</strong>: San Cristóbal de las Casas, Chiapa de Corzo, Comitán,
            Palenque y Chamula. Los bomberos protegen a <strong>4.5 millones de turistas anuales</strong>
            con rescate en <strong>Cascadas de Agua Azul</strong>, <strong>Cañón del Sumidero</strong>
            y <strong>Lagos de Montebello</strong>.
          </p>

          <h2 class="chis-hero__seo-title">Segunda Selva más Grande de América</h2>
          <p class="chis-hero__seo-text">
            La <strong>Selva Lacandona</strong> es la segunda reserva tropical más grande del continente.
            Con <strong>1.8 millones de hectáreas</strong>, los bomberos enfrentan <strong>incendios
            forestales masivos</strong> cada temporada seca (febrero-mayo), protegiendo el hábitat del
            <strong>jaguar, tapir, guacamaya roja</strong> y las comunidades indígenas Lacandón.
          </p>

          <h2 class="chis-hero__seo-title">Frontera Guatemala y Zona Petrolera</h2>
          <p class="chis-hero__seo-text">
            <strong>658 km de frontera con Guatemala</strong> convierten a Chiapas en estado estratégico.
            <strong>Tapachula</strong> es puerta de entrada a México. La zona norte incluye el
            <strong>Complejo Petrolero Cactus</strong> de PEMEX, con bomberos certificados <strong>HAZMAT</strong>
            para emergencias de hidrocarburos.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Emergency Banner con Schema Markup -->
  <section class="chis-emergency" itemscope itemtype="https://schema.org/EmergencyService">
    <div class="container">
      <div class="chis-emergency__content">
        <div class="chis-emergency__icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
          </svg>
        </div>
        <div class="chis-emergency__text">
          <span class="chis-emergency__label">Emergencias en Chiapas</span>
          <span class="chis-emergency__number" itemprop="telephone">911</span>
        </div>
        <div class="chis-emergency__info">
          <p class="chis-emergency__desc">
            <strong>Número único de emergencias</strong> que conecta con bomberos, policía, paramédicos,
            <strong>rescate en selva</strong> y <strong>brigadas forestales</strong>.
            Disponible <strong>24 horas, 365 días</strong> en todo el estado.
          </p>
          <meta itemprop="areaServed" content="Chiapas, México" />
          <meta itemprop="availableLanguage" content="Spanish, Tzotzil, Tzeltal" />
        </div>
      </div>
    </div>
  </section>

  <!-- Municipios Quick Access -->
  <section class="chis-municipios">
    <div class="container">
      <div class="chis-municipios__grid">
        {municipiosInfo.map((mun) => (
          <a href={`#${mun.nombre.toLowerCase().replace(/\s+/g, '-')}`} class="chis-municipios__card">
            <span class="chis-municipios__name">{mun.nombre}</span>
            <span class="chis-municipios__pop">{mun.poblacion} habitantes</span>
            <span class="chis-municipios__desc">{mun.desc}</span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="chis-main" id="estaciones">
    <div class="container">
      <div class="chis-main__grid">
        <!-- Stations Grid -->
        <div class="chis-main__content">
          <SectionHeader
            label="Directorio de Bomberos"
            title="Estaciones de Bomberos en Chiapas"
            description="Información verificada y actualizada de las 18 estaciones del Heroico Cuerpo de Bomberos en Chiapas. Selecciona una estación para acceder a datos de contacto, servicios especializados en rescate turístico, incendios forestales y emergencias de selva, zonas de cobertura y equipamiento disponible."
          />

          <!-- Stations Grid -->
          <div class="chis-stations-grid">
            {estacionesChiapas.map((estacion) => (
              <StationCard
                nombre={estacion.nombreCorto}
                slug={estacion.slug}
                direccion={`${estacion.direccion}, ${estacion.colonia}`}
                alcaldia={estacion.municipio}
                telefono={estacion.telefono}
                servicios={estacion.servicios}
                horario={estacion.horario}
                baseUrl="/directorio/chiapas"
              />
            ))}
          </div>

          <!-- SEO Content Premium -->
          <article class="chis-seo">
            <h2>El Heroico Cuerpo de Bomberos de Chiapas</h2>
            <p>
              El <strong>H. Cuerpo de Bomberos de Chiapas</strong> constituye una fuerza especializada
              en las emergencias únicas del estado más biodiverso de México. Con <strong>{estadisticas.totalEstaciones} estaciones
              estratégicamente ubicadas</strong> y más de <strong>{estadisticas.totalPersonal} elementos activos</strong>,
              este cuerpo profesional protege a los <strong>5.5 millones de habitantes</strong>,
              <strong>5 Pueblos Mágicos</strong>, el patrimonio arqueológico maya y la
              <strong>segunda selva tropical más grande de América</strong>.
            </p>

            <h3>¿Cómo Contactar a los Bomberos en Chiapas?</h3>
            <p>
              Ante cualquier <strong>emergencia en Chiapas</strong>, el número <strong>911</strong> conecta
              inmediatamente con el <strong>Centro de Comando, Control, Comunicaciones y Cómputo (C4)</strong>
              del estado. Este sistema coordina la respuesta de bomberos, policía, paramédicos, Protección Civil,
              <strong>brigadas forestales</strong> y <strong>rescate en selva</strong>. Para emergencias
              específicas en la <strong>capital</strong>, puedes marcar <strong>961 612 4692</strong>;
              en <strong>San Cristóbal de las Casas</strong> el <strong>967 678 0770</strong>;
              en <strong>Tapachula</strong> el <strong>962 626 1515</strong>;
              y en <strong>Palenque</strong> el <strong>916 345 0808</strong>.
            </p>

            <h3>Emergencias más Frecuentes en Chiapas</h3>
            <p>
              Los bomberos chiapanecos atienden emergencias únicas del estado turístico, fronterizo y selvático:
            </p>
            <ul class="chis-seo__list">
              <li><strong>Incendios forestales masivos</strong> en Selva Lacandona y Reserva Montes Azules</li>
              <li><strong>Rescate turístico</strong> en Cañón del Sumidero, Cascadas de Agua Azul y Lagos de Montebello</li>
              <li><strong>Emergencias en zonas arqueológicas</strong> UNESCO (Palenque, Bonampak, Yaxchilán)</li>
              <li><strong>Huracanes del Pacífico</strong> en costa del Soconusco y Tapachula</li>
              <li><strong>Accidentes carretera Panamericana</strong> y carreteras de montaña</li>
              <li><strong>Emergencias petroleras HAZMAT</strong> en zona norte (Complejo Cactus)</li>
              <li><strong>Rescate en comunidades indígenas</strong> aisladas (Tzotzil, Tzeltal, Lacandón)</li>
              <li><strong>Emergencias migratorias</strong> en frontera con Guatemala</li>
            </ul>

            <h3>Pueblos Mágicos y Destinos Turísticos</h3>
            <p>
              Chiapas cuenta con <strong>5 Pueblos Mágicos</strong> que requieren protección especializada:
              <strong>San Cristóbal de las Casas</strong> (capital cultural, 2 millones de visitantes),
              <strong>Chiapa de Corzo</strong> (Cañón del Sumidero, Fiesta Grande),
              <strong>Comitán de Domínguez</strong> (Lagos de Montebello),
              <strong>Palenque</strong> (zona arqueológica UNESCO) y
              <strong>San Juan Chamula</strong> (tradiciones Tzotziles).
            </p>

            <h3>Combate de Incendios Forestales</h3>
            <p>
              La <strong>Selva Lacandona</strong> y la <strong>Reserva de la Biosfera Montes Azules</strong>
              enfrentan cada temporada seca (febrero-mayo) <strong>incendios forestales de gran magnitud</strong>.
              El cuerpo de bomberos cuenta con <strong>brigadas especializadas certificadas CONAFOR</strong>,
              <strong>equipos de comunicación satelital</strong> y coordinación con el <strong>Ejército Mexicano</strong>.
              En 2019, se combatieron más de <strong>500 incendios</strong> que amenazaron la biodiversidad única.
            </p>

            <h3>Protección del Patrimonio UNESCO</h3>
            <p>
              Los bomberos chiapanecos protegen sitios de valor incalculable:
            </p>
            <ul class="chis-seo__list">
              <li><strong>Zona Arqueológica de Palenque</strong> — Patrimonio de la Humanidad desde 1987</li>
              <li><strong>Selva Lacandona</strong> — Reserva de la Biosfera Montes Azules, hábitat del jaguar</li>
              <li><strong>Bonampak</strong> — Murales mayas del siglo VIII, únicos en el mundo</li>
              <li><strong>Yaxchilán</strong> — Ciudad maya en la ribera del río Usumacinta</li>
            </ul>

            <h3>Equipamiento Especializado</h3>
            <p>
              Las estaciones de bomberos de Chiapas cuentan con <strong>equipamiento especializado</strong>
              para las condiciones únicas del estado selvático y turístico:
            </p>
            <ul class="chis-seo__list">
              <li><strong>Autobombas todo terreno</strong> para acceso a selva y comunidades aisladas</li>
              <li><strong>Lanchas de rescate</strong> para ríos, lagos y Cañón del Sumidero</li>
              <li><strong>Equipos forestales completos</strong> certificados CONAFOR</li>
              <li><strong>Unidades HAZMAT</strong> para zona petrolera norte</li>
              <li><strong>Comunicación satelital</strong> para operaciones en selva</li>
              <li><strong>Drones con cámara térmica</strong> para búsqueda de personas</li>
              <li><strong>Equipo de montaña y rappel</strong> para rescate en cascadas</li>
            </ul>
          </article>
        </div>

        <!-- Sidebar Optimizado -->
        <aside class="chis-sidebar">
          <!-- Filtro por Municipio -->
          <div class="chis-sidebar__card">
            <h4>Buscar por Municipio</h4>
            <ul class="chis-sidebar__municipios">
              {municipios.slice(0, 10).map((municipio) => (
                <li>
                  <a href={`#${municipio.toLowerCase().replace(/\s+/g, '-')}`}>
                    <span class="chis-sidebar__bullet"></span>
                    <span>{municipio}</span>
                    <span class="chis-sidebar__count">
                      {estadisticas.estacionesPorMunicipio.find(m => m.municipio === municipio)?.cantidad}
                    </span>
                  </a>
                </li>
              ))}
            </ul>
          </div>

          <!-- Teléfonos de Emergencia -->
          <div class="chis-sidebar__card chis-sidebar__card--emergency">
            <h4>Teléfonos de Emergencia</h4>
            <div class="chis-sidebar__emergency-list">
              <div class="chis-sidebar__emergency-item">
                <span class="chis-sidebar__emergency-number">911</span>
                <span class="chis-sidebar__emergency-label">Emergencias Generales</span>
              </div>
              <div class="chis-sidebar__emergency-item">
                <span class="chis-sidebar__emergency-number">961 612 4692</span>
                <span class="chis-sidebar__emergency-label">Bomberos Tuxtla Gutiérrez</span>
              </div>
              <div class="chis-sidebar__emergency-item">
                <span class="chis-sidebar__emergency-number">967 678 0770</span>
                <span class="chis-sidebar__emergency-label">Bomberos San Cristóbal</span>
              </div>
              <div class="chis-sidebar__emergency-item">
                <span class="chis-sidebar__emergency-number">962 626 1515</span>
                <span class="chis-sidebar__emergency-label">Bomberos Tapachula</span>
              </div>
              <div class="chis-sidebar__emergency-item">
                <span class="chis-sidebar__emergency-number">916 345 0808</span>
                <span class="chis-sidebar__emergency-label">Bomberos Palenque</span>
              </div>
              <div class="chis-sidebar__emergency-item">
                <span class="chis-sidebar__emergency-number">963 632 1616</span>
                <span class="chis-sidebar__emergency-label">Bomberos Comitán</span>
              </div>
            </div>
          </div>

          <!-- Estadísticas del Estado -->
          <div class="chis-sidebar__card">
            <h4>Chiapas en Números</h4>
            <ul class="chis-sidebar__stats">
              <li>
                <span class="chis-sidebar__stat-value">5.5M</span>
                <span class="chis-sidebar__stat-label">Habitantes</span>
              </li>
              <li>
                <span class="chis-sidebar__stat-value">4.5M</span>
                <span class="chis-sidebar__stat-label">Turistas/año</span>
              </li>
              <li>
                <span class="chis-sidebar__stat-value">{estadisticas.totalEstaciones}</span>
                <span class="chis-sidebar__stat-label">Estaciones</span>
              </li>
              <li>
                <span class="chis-sidebar__stat-value">{estadisticas.totalPersonal}+</span>
                <span class="chis-sidebar__stat-label">Bomberos activos</span>
              </li>
            </ul>
          </div>

          <!-- Pueblos Mágicos -->
          <div class="chis-sidebar__card">
            <h4>Pueblos Mágicos Protegidos</h4>
            <ul class="chis-sidebar__pueblos">
              {CHIAPAS_SEO.pueblosMagicos.map((pueblo) => (
                <li>
                  <span class="chis-sidebar__pueblo-name">{pueblo}</span>
                </li>
              ))}
            </ul>
          </div>

          <!-- Destinos Turísticos -->
          <div class="chis-sidebar__card">
            <h4>Destinos con Cobertura</h4>
            <ul class="chis-sidebar__destinos">
              <li>
                <span class="chis-sidebar__destino-name">Cañón del Sumidero</span>
                <span class="chis-sidebar__destino-desc">Rescate acuático y miradores</span>
              </li>
              <li>
                <span class="chis-sidebar__destino-name">Cascadas Agua Azul</span>
                <span class="chis-sidebar__destino-desc">Rescate en cascadas</span>
              </li>
              <li>
                <span class="chis-sidebar__destino-name">Lagos de Montebello</span>
                <span class="chis-sidebar__destino-desc">Rescate lacustre</span>
              </li>
              <li>
                <span class="chis-sidebar__destino-name">Selva Lacandona</span>
                <span class="chis-sidebar__destino-desc">Brigadas forestales</span>
              </li>
            </ul>
          </div>

          <!-- Estados Vecinos -->
          <div class="chis-sidebar__card">
            <h4>Estados Vecinos</h4>
            <ul class="chis-sidebar__states">
              {estadosVecinos.map((estado) => (
                <li>
                  <a href={`/directorio/${estado.slug}`}>
                    <span>{estado.nombre}</span>
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M5 12h14M12 5l7 7-7 7"/>
                    </svg>
                  </a>
                </li>
              ))}
            </ul>
          </div>

