---
/**
 * ╔═══════════════════════════════════════════════════════════════════════════╗
 * ║  PÁGINA DINÁMICA DE ESTACIÓN DE BOMBEROS - DURANGO                       ║
 * ║  Genera 12 páginas individuales con SEO ultra-premium                    ║
 * ╠═══════════════════════════════════════════════════════════════════════════╣
 * ║  Zonas: Capital, La Laguna, Sierra, Centro-Sur                           ║
 * ║  Especialidades: Incendios Forestales, HAZMAT, Rescate en Montaña        ║
 * ╚═══════════════════════════════════════════════════════════════════════════╝
 */

import PageLayout from "@layouts/PageLayout.astro";
import {
  estacionesDurango,
  generarMetaSEO,
  getContextoZona,
  DURANGO_SEO,
} from "@data/estaciones-durango";

export function getStaticPaths() {
  return estacionesDurango.map(estacion => ({
    params: { slug: estacion.slug },
    props: { estacion }
  }));
}

const { estacion } = Astro.props;
const metaSEO = generarMetaSEO(estacion);
const contextoZona = getContextoZona(estacion.ciudad);

// Determinar tipo de zona para contexto SEO enriquecido
const esCapital = estacion.ciudad === 'Durango';
const esGomezPalacio = estacion.ciudad === 'Gómez Palacio';
const esLerdo = estacion.ciudad === 'Lerdo';
const esSierra = ['Santiago Papasquiaro', 'Pueblo Nuevo', 'Pueblo Nuevo (El Salto)'].includes(estacion.ciudad);
const esPuebloMagico = estacion.ciudad === 'Nombre de Dios';
const esAgricola = ['Canatlán', 'Vicente Guerrero'].includes(estacion.ciudad);

// Fecha de actualización
const fechaActualizacion = new Date().toISOString().split('T')[0];
---

<PageLayout
  title={metaSEO.title}
  description={metaSEO.description}
  keywords={metaSEO.keywords.join(', ')}
  canonical={metaSEO.canonical}
>
  <!-- Schema.org FireStation -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "FireStation",
    "name": estacion.nombre,
    "description": estacion.descripcion,
    "address": {
      "@type": "PostalAddress",
      "streetAddress": estacion.direccion,
      "addressLocality": estacion.ciudad,
      "addressRegion": "Durango",
      "postalCode": estacion.codigoPostal,
      "addressCountry": "MX"
    },
    "telephone": estacion.telefono,
    "email": estacion.email,
    "openingHours": "Mo-Su 00:00-23:59",
    "geo": {
      "@type": "GeoCoordinates",
      "latitude": estacion.coordenadas.lat,
      "longitude": estacion.coordenadas.lng
    },
    "areaServed": {
      "@type": "City",
      "name": estacion.ciudad
    },
    "numberOfEmployees": estacion.personal,
    "url": metaSEO.canonical,
    "sameAs": estacion.redes ? Object.values(estacion.redes) : []
  })} />

  <!-- Schema.org BreadcrumbList -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      { "@type": "ListItem", "position": 1, "name": "Inicio", "item": "https://bombero.mx" },
      { "@type": "ListItem", "position": 2, "name": "Directorio", "item": "https://bombero.mx/directorio" },
      { "@type": "ListItem", "position": 3, "name": "Durango", "item": "https://bombero.mx/directorio/durango" },
      { "@type": "ListItem", "position": 4, "name": estacion.nombre, "item": metaSEO.canonical }
    ]
  })} />

  <main class="dgo-station">
    <!-- ═══════════════════════════════════════════════════════════════════
         HERO SECTION
         ═══════════════════════════════════════════════════════════════════ -->
    <section class="dgo-station-hero">
      <div class="dgo-station-hero__container">
        <!-- Badges -->
        <div class="dgo-station-hero__badges">
          <span class="dgo-station-hero__badge dgo-station-hero__badge--state">DGO</span>
          <span class="dgo-station-hero__badge dgo-station-hero__badge--zone">{contextoZona.tipo}</span>
          {esCapital && <span class="dgo-station-hero__badge dgo-station-hero__badge--special">Capital</span>}
          {esSierra && <span class="dgo-station-hero__badge dgo-station-hero__badge--special">Zona Forestal</span>}
          {esGomezPalacio && <span class="dgo-station-hero__badge dgo-station-hero__badge--special">La Laguna</span>}
          {esPuebloMagico && <span class="dgo-station-hero__badge dgo-station-hero__badge--special">Pueblo Mágico</span>}
          {esAgricola && <span class="dgo-station-hero__badge dgo-station-hero__badge--special">Zona Agrícola</span>}
        </div>

        <h1 class="dgo-station-hero__title">{estacion.nombre}</h1>

        <p class="dgo-station-hero__location">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="20" height="20">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          {estacion.ciudad}, Durango, México
        </p>

        <!-- Estadísticas rápidas -->
        <div class="dgo-station-hero__stats">
          <div class="dgo-station-hero__stat">
            <span class="dgo-station-hero__stat-value">{estacion.personal}</span>
            <span class="dgo-station-hero__stat-label">Bomberos</span>
          </div>
          <div class="dgo-station-hero__stat">
            <span class="dgo-station-hero__stat-value">{estacion.unidades}</span>
            <span class="dgo-station-hero__stat-label">Unidades</span>
          </div>
          <div class="dgo-station-hero__stat">
            <span class="dgo-station-hero__stat-value">24/7</span>
            <span class="dgo-station-hero__stat-label">Servicio</span>
          </div>
        </div>
      </div>
    </section>

    <!-- ═══════════════════════════════════════════════════════════════════
         BANNER DE EMERGENCIA
         ═══════════════════════════════════════════════════════════════════ -->
    <section class="dgo-station-emergency">
      <div class="dgo-station-emergency__container">
        <div class="dgo-station-emergency__phone">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="24" height="24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          <div>
            <span class="dgo-station-emergency__label">Teléfono de emergencia</span>
            <a href={`tel:${estacion.telefono.replace(/[^\d+]/g, '')}`} class="dgo-station-emergency__number">
              {estacion.telefono}
            </a>
          </div>
        </div>
        <div class="dgo-station-emergency__national">
          <span>Emergencias Nacional:</span>
          <a href="tel:911"><strong>911</strong></a>
        </div>
      </div>
    </section>

    <!-- ═══════════════════════════════════════════════════════════════════
         CONTENIDO PRINCIPAL
         ═══════════════════════════════════════════════════════════════════ -->
    <div class="dgo-station-content">
      <div class="dgo-station-content__container">

        <!-- Columna Principal -->
        <div class="dgo-station-content__main">

          <!-- Descripción y Contexto -->
          <section class="dgo-station-section">
            <h2 class="dgo-station-section__title">Acerca de esta Estación</h2>
            <div class="dgo-station-section__content">
              <p>{estacion.descripcion}</p>

              {/* Contexto específico por zona */}
              {esCapital && (
                <div class="dgo-station-context dgo-station-context--capital">
                  <h3>Capital del Estado - Centro de Coordinación Forestal</h3>
                  <p>
                    <strong>Victoria de Durango</strong> es la capital del estado más grande de México por superficie
                    forestal. Esta estación coordina las <strong>13 brigadas estatales</strong> contra incendios forestales
                    y mantiene enlace permanente con <strong>CONAFOR</strong>. El estado aporta el <strong>25% de la
                    producción nacional de madera</strong>, lo que requiere capacidades especiales de respuesta forestal.
                  </p>
                </div>
              )}

              {esSierra && (
                <div class="dgo-station-context dgo-station-context--forestal">
                  <h3>Sierra Madre Occidental - Zona de Alto Riesgo Forestal</h3>
                  <p>
                    Esta estación opera en el <strong>corazón forestal de México</strong>, donde se encuentran los
                    bosques de pino-encino más extensos del país. La temporada de incendios forestales
                    (<strong>enero-junio</strong>) requiere personal altamente especializado en combate de fuego
                    en terrenos extremos. El municipio de <strong>Pueblo Nuevo</strong> concentra la mayor superficie
                    boscosa afectable de Durango.
                  </p>
                </div>
              )}

              {esGomezPalacio && (
                <div class="dgo-station-context dgo-station-context--industrial">
                  <h3>Comarca Lagunera - Principal Cuenca Lechera de México</h3>
                  <p>
                    <strong>Gómez Palacio</strong> es parte de la Comarca Lagunera, sede de <strong>Grupo Lala</strong>
                    y otras empresas lácteas que conforman la principal cuenca lechera del país. Esta estación
                    tiene especialización en emergencias con <strong>amoniaco</strong> (refrigeración industrial)
                    y <strong>HAZMAT agroindustrial</strong>. La zona metropolitana La Laguna supera 1.3 millones
                    de habitantes.
                  </p>
                </div>
              )}

              {esLerdo && (
                <div class="dgo-station-context dgo-station-context--laguna">
                  <h3>Ciudad Jardín - Comarca Lagunera</h3>
                  <p>
                    <strong>Lerdo</strong>, conocida como "La Ciudad Jardín" por sus áreas verdes y viñedos,
                    es el tercer municipio más poblado de La Laguna duranguense. Las nuevas instalaciones
                    inauguradas en <strong>2023</strong> cuentan con infraestructura moderna de más de
                    680 metros cuadrados para mejorar los tiempos de respuesta.
                  </p>
                </div>
              )}

              {esPuebloMagico && (
                <div class="dgo-station-context dgo-station-context--pueblo-magico">
                  <h3>Pueblo Mágico - Primera Villa de Durango (1555)</h3>
                  <p>
                    <strong>Nombre de Dios</strong> fue la primera población española fundada en Durango en
                    <strong>1555</strong>. Designado Pueblo Mágico en <strong>2023</strong>, cuenta con
                    templos coloniales y arquitectura virreinal del siglo XVI que requieren protocolos
                    especiales de <strong>protección patrimonial</strong>. La estación atiende tanto
                    emergencias turísticas como la preservación del patrimonio histórico.
                  </p>
                </div>
              )}

              {esAgricola && (
                <div class="dgo-station-context dgo-station-context--agricola">
                  <h3>Zona Agrícola y Ganadera</h3>
                  <p>
                    Esta estación cubre una zona de vocación agrícola y ganadera con comunidades
                    menonitas dedicadas a la producción de lácteos y agricultura. <strong>Canatlán</strong>
                    es conocida como "Capital de la Manzana" por su feria internacional de este fruto.
                    Personal capacitado para emergencias rurales, incendios en pastizales y rescate
                    vehicular en carreteras federales.
                  </p>
                </div>
              )}
            </div>
          </section>

          <!-- Servicios -->
          <section class="dgo-station-section">
            <h2 class="dgo-station-section__title">Servicios de Emergencia</h2>
            <ul class="dgo-station-services">
              {estacion.servicios.map(servicio => (
                <li class="dgo-station-services__item">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="20" height="20">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span>{servicio}</span>
                </li>
              ))}
            </ul>
          </section>

          <!-- Equipamiento -->
          <section class="dgo-station-section">
            <h2 class="dgo-station-section__title">Equipamiento y Unidades</h2>
            <div class="dgo-station-equipment">
              {estacion.equipamiento.map(equipo => (
                <div class="dgo-station-equipment__item">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="18" height="18">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span>{equipo}</span>
                </div>
              ))}
            </div>
          </section>

          <!-- Mapa -->
          <section class="dgo-station-section">
            <h2 class="dgo-station-section__title">Ubicación</h2>
            <div class="dgo-station-map">
              <div class="dgo-station-map__placeholder">
                <p><strong>Dirección:</strong> {estacion.direccion}</p>
                <p><strong>Código Postal:</strong> {estacion.codigoPostal}</p>
                <p><strong>Coordenadas:</strong> {estacion.coordenadas.lat}, {estacion.coordenadas.lng}</p>
                <a
                  href={`https://www.google.com/maps/search/?api=1&query=${estacion.coordenadas.lat},${estacion.coordenadas.lng}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="dgo-station-map__link"
                >
                  Ver en Google Maps
                </a>
              </div>
            </div>
          </section>
        </div>

        <!-- Sidebar -->
        <aside class="dgo-station-sidebar">

          <!-- Información de Contacto -->
          <div class="dgo-station-card dgo-station-card--contact">
            <h3 class="dgo-station-card__title">Información de Contacto</h3>
            <ul class="dgo-station-card__list">
              <li>
                <strong>Teléfono:</strong>
                <a href={`tel:${estacion.telefono.replace(/[^\d+]/g, '')}`}>{estacion.telefono}</a>
              </li>
              <li>
                <strong>Email:</strong>
                <a href={`mailto:${estacion.email}`}>{estacion.email}</a>
              </li>
              <li>
                <strong>Horario:</strong>
                <span>{estacion.horario}</span>
              </li>
              <li>
                <strong>Dirección:</strong>
                <span>{estacion.direccion}</span>
              </li>
              <li>
                <strong>C.P.:</strong>
                <span>{estacion.codigoPostal}</span>
              </li>
            </ul>
          </div>

          <!-- Estadísticas -->
          <div class="dgo-station-card">
            <h3 class="dgo-station-card__title">Datos de la Estación</h3>
            <ul class="dgo-station-card__list">
              <li>
                <strong>Personal:</strong>
                <span>{estacion.personal} bomberos</span>
              </li>
              <li>
                <strong>Unidades:</strong>
                <span>{estacion.unidades} vehículos</span>
              </li>
              {estacion.fechaFundacion && (
                <li>
                  <strong>Fundación:</strong>
                  <span>{estacion.fechaFundacion}</span>
                </li>
              )}
              <li>
                <strong>Zona:</strong>
                <span>{contextoZona.tipo}</span>
              </li>
              <li>
                <strong>Actualizado:</strong>
                <span>{fechaActualizacion}</span>
              </li>
            </ul>
          </div>

          <!-- Teléfonos Regionales -->
          <div class="dgo-station-card dgo-station-card--phones">
            <h3 class="dgo-station-card__title">Emergencias Durango</h3>
            <ul class="dgo-station-card__phones">
              <li>
                <span>Emergencias Nacional</span>
                <a href="tel:911">911</a>
              </li>
              <li>
                <span>Bomberos Durango</span>
                <a href="tel:+526188144555">(618) 814-4555</a>
              </li>
              <li>
                <span>Bomberos Gómez Palacio</span>
                <a href="tel:+528717141210">(871) 714-1210</a>
              </li>
              <li>
                <span>CONAFOR Incendios</span>
                <a href="tel:+526188252003">(618) 825-2003</a>
              </li>
            </ul>
          </div>

          <!-- Redes Sociales -->
          {estacion.redes && Object.keys(estacion.redes).length > 0 && (
            <div class="dgo-station-card">
              <h3 class="dgo-station-card__title">Redes Sociales</h3>
              <div class="dgo-station-social">
                {estacion.redes.facebook && (
                  <a href={estacion.redes.facebook} target="_blank" rel="noopener noreferrer" class="dgo-station-social__link">
                    Facebook
                  </a>
                )}
                {estacion.redes.twitter && (
                  <a href={estacion.redes.twitter} target="_blank" rel="noopener noreferrer" class="dgo-station-social__link">
                    Twitter/X
                  </a>
                )}
              </div>
            </div>
          )}

          <!-- Volver al directorio -->
          <div class="dgo-station-card dgo-station-card--back">
            <a href="/directorio/durango" class="dgo-station-back-link">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="20" height="20">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
              </svg>
              Ver todas las estaciones de Durango
            </a>
          </div>

        </aside>
      </div>
    </div>

    <!-- Breadcrumb -->
    <nav class="dgo-station-breadcrumb" aria-label="Breadcrumb">
      <ol class="dgo-station-breadcrumb__list">
        <li class="dgo-station-breadcrumb__item"><a href="/">Inicio</a></li>
        <li class="dgo-station-breadcrumb__item"><a href="/directorio">Directorio</a></li>
        <li class="dgo-station-breadcrumb__item"><a href="/directorio/durango">Durango</a></li>
        <li class="dgo-station-breadcrumb__item dgo-station-breadcrumb__item--active">{estacion.nombre}</li>
      </ol>
    </nav>
  </main>
</PageLayout>

<style>
  /* ═══════════════════════════════════════════════════════════════════════
     VARIABLES CSS - TEMA VERDE BOSQUE/FORESTAL
     ═══════════════════════════════════════════════════════════════════════ */
  :root {
    --dgo-forest: rgb(22, 101, 52);
    --dgo-forest-light: rgb(34, 139, 34);
    --dgo-forest-dark: rgb(5, 46, 22);
    --dgo-green-50: rgb(240, 253, 244);
    --dgo-green-100: rgb(220, 252, 231);
    --dgo-green-200: rgb(187, 247, 208);
    --dgo-green-600: rgb(22, 163, 74);
    --dgo-amber: rgb(202, 138, 4);
    --dgo-white: #ffffff;
    --dgo-red: #dc2626;
    --dgo-slate-50: rgb(248, 250, 252);
    --dgo-slate-100: rgb(241, 245, 249);
    --dgo-slate-200: rgb(226, 232, 240);
    --dgo-slate-400: rgb(148, 163, 184);
    --dgo-slate-600: rgb(71, 85, 105);
    --dgo-slate-800: rgb(30, 41, 59);
  }

  /* ═══════════════════════════════════════════════════════════════════════
     STATION PAGE LAYOUT
     ═══════════════════════════════════════════════════════════════════════ */
  .dgo-station {
    min-height: 100vh;
    background-color: var(--dgo-green-50);
  }

  /* ═══════════════════════════════════════════════════════════════════════
     HERO SECTION
     ═══════════════════════════════════════════════════════════════════════ */
  .dgo-station-hero {
    background: linear-gradient(135deg, var(--dgo-forest-dark) 0%, var(--dgo-forest) 50%, var(--dgo-forest-light) 100%);
    padding: 2.5rem 1rem;
    color: var(--dgo-white);
  }

  .dgo-station-hero__container {
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
  }

  .dgo-station-hero__badges {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.25rem;
  }

  .dgo-station-hero__badge {
    padding: 0.375rem 0.75rem;
    border-radius: 6px;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .dgo-station-hero__badge--state {
    background: var(--dgo-white);
    color: var(--dgo-forest);
  }

  .dgo-station-hero__badge--zone {
    background: rgba(255, 255, 255, 0.2);
    color: var(--dgo-white);
  }

  .dgo-station-hero__badge--special {
    background: var(--dgo-amber);
    color: var(--dgo-white);
  }

  .dgo-station-hero__title {
    font-size: 2rem;
    font-weight: 800;
    margin-bottom: 0.75rem;
    line-height: 1.2;
  }

  .dgo-station-hero__location {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    font-size: 1.125rem;
    opacity: 0.95;
    margin-bottom: 1.5rem;
  }

  .dgo-station-hero__stats {
    display: flex;
    justify-content: center;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .dgo-station-hero__stat {
    text-align: center;
  }

  .dgo-station-hero__stat-value {
    display: block;
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--dgo-amber);
  }

  .dgo-station-hero__stat-label {
    font-size: 0.75rem;
    opacity: 0.9;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* ═══════════════════════════════════════════════════════════════════════
     EMERGENCY BANNER
     ═══════════════════════════════════════════════════════════════════════ */
  .dgo-station-emergency {
    background: var(--dgo-red);
    color: var(--dgo-white);
    padding: 1rem;
  }

  .dgo-station-emergency__container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .dgo-station-emergency__phone {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .dgo-station-emergency__label {
    display: block;
    font-size: 0.75rem;
    opacity: 0.9;
  }

  .dgo-station-emergency__number {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--dgo-white);
    text-decoration: none;
  }

  .dgo-station-emergency__number:hover {
    text-decoration: underline;
  }

  .dgo-station-emergency__national {
    font-size: 0.9375rem;
  }

  .dgo-station-emergency__national a {
    color: var(--dgo-white);
    text-decoration: none;
