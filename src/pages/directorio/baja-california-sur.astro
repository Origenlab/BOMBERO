---
/**
 * ─────────────────────────────────────────────────────────────────────────────
 * DIRECTORIO DE ESTACIONES DE BOMBEROS - BAJA CALIFORNIA SUR
 * ─────────────────────────────────────────────────────────────────────────────
 * Página optimizada para SEO con información completa del H. Cuerpo de Bomberos
 * del Estado de Baja California Sur. Incluye los principales municipios:
 * - La Paz (Capital del estado)
 * - Los Cabos (Destino turístico de clase mundial)
 * - Loreto (Pueblo Mágico)
 * - Comondú (Zona agrícola)
 * - Mulegé (Patrimonio histórico)
 *
 * Keywords principales:
 * - Bomberos La Paz, Bomberos Los Cabos, Bomberos Cabo San Lucas
 * - Emergencias Baja California Sur, 911 BCS
 * - Rescate turístico Los Cabos, Emergencias Mar de Cortés
 * - Bomberos huracanes Baja California Sur
 * ─────────────────────────────────────────────────────────────────────────────
 */
import PageLayout from "@layouts/PageLayout.astro";
import SectionHeader from "@components/SectionHeader.astro";
import StationCard from "@components/StationCard.astro";
import { estacionesBajaCaliforniaSur, getMunicipios, getEstadisticas } from "@data/estaciones-baja-california-sur";
import { breadcrumbJsonLd } from "@utils/seo";

// Obtener datos
const municipios = getMunicipios();
const estadisticas = getEstadisticas();

// Estados vecinos para interlinking SEO
const estadosVecinos = [
  { nombre: "Baja California", slug: "baja-california" },
  { nombre: "Sonora", slug: "sonora" },
  { nombre: "Sinaloa", slug: "sinaloa" },
];

// Datos de municipios con información SEO
const municipiosInfo = [
  { nombre: "Los Cabos", poblacion: "351K", desc: "Destino turístico de clase mundial" },
  { nombre: "La Paz", poblacion: "290K", desc: "Capital del estado, bahía segura" },
  { nombre: "Comondú", poblacion: "75K", desc: "Valle agrícola de Santo Domingo" },
  { nombre: "Loreto", poblacion: "21K", desc: "Pueblo Mágico, primera capital de las Californias" },
  { nombre: "Mulegé", poblacion: "61K", desc: "Patrimonio histórico francés, ballena gris" },
];

const keywords = ["bomberos baja california sur", "estaciones bomberos la paz", "bomberos los cabos", "emergencias bcs 911", "bomberos cabo san lucas", "bomberos loreto", "cuerpo bomberos bcs"];
const breadcrumbSchema = breadcrumbJsonLd([
  { name: "Inicio", url: "/" },
  { name: "Directorio de Bomberos", url: "/directorio" },
  { name: "Baja California Sur", url: "/directorio/baja-california-sur" },
]);
const itemListSchema = {
  "@context": "https://schema.org",
  "@type": "ItemList",
  "name": "Estaciones de Bomberos en Baja California Sur, México",
  "description": "Directorio oficial de las 6 estaciones de bomberos en Baja California Sur. Teléfonos de emergencia en La Paz, Los Cabos, Cabo San Lucas, Loreto y Santa Rosalía. Números 911 y contacto directo 24 horas.",
  "numberOfItems": estacionesBajaCaliforniaSur.length,
  "itemListElement": estacionesBajaCaliforniaSur.map((e, i) => ({
    "@type": "ListItem",
    "position": i + 1,
    "item": {
      "@type": "FireStation",
      "name": e.nombre,
      "address": {
        "@type": "PostalAddress",
        "streetAddress": e.direccion,
        "addressLocality": e.municipio || e.ciudad,
        "addressRegion": "Baja California Sur",
        "addressCountry": "MX"
      },
      "telephone": e.telefono,
      "url": `https://bombero.mx/directorio/baja-california-sur/${e.slug}`
    }
  }))
};
---

<PageLayout
  title="Estaciones de Bomberos en Baja California Sur | Directorio Oficial | BOMBERO.MX"
  description="Directorio oficial de las 6 estaciones de bomberos en Baja California Sur. Teléfonos de emergencia en La Paz, Los Cabos, Cabo San Lucas, Loreto y Santa Rosalía. Números 911 y contacto directo 24 horas."
  keywords={keywords}
  canonical="https://bombero.mx/directorio/baja-california-sur"
  jsonLd={[breadcrumbSchema, itemListSchema]}
>
  <!-- Hero Section con SEO optimizado -->
  <section class="bcs-hero">
    <div class="bcs-hero__bg">
      <div class="bcs-hero__gradient"></div>
      <div class="bcs-hero__pattern"></div>
    </div>
    <div class="container">
      <div class="bcs-hero__container">
        <!-- Left Column - Content Principal -->
        <div class="bcs-hero__content">
          <nav class="bcs-hero__breadcrumb" aria-label="Breadcrumb" itemscope itemtype="https://schema.org/BreadcrumbList">
            <span itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
              <a href="/" itemprop="item"><span itemprop="name">Inicio</span></a>
              <meta itemprop="position" content="1" />
            </span>
            <span aria-hidden="true">/</span>
            <span itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
              <a href="/directorio" itemprop="item"><span itemprop="name">Directorio Nacional</span></a>
              <meta itemprop="position" content="2" />
            </span>
            <span aria-hidden="true">/</span>
            <span itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
              <span itemprop="name" aria-current="page">Baja California Sur</span>
              <meta itemprop="position" content="3" />
            </span>
          </nav>

          <span class="bcs-hero__badge">
            <span class="bcs-hero__badge-dot"></span>
            BCS
          </span>

          <h1 class="bcs-hero__title">
            Estaciones de Bomberos en
            <span class="bcs-hero__highlight">Baja California Sur</span>
          </h1>

          <p class="bcs-hero__desc">
            Directorio oficial del <strong>Heroico Cuerpo de Bomberos del Estado de Baja California Sur</strong>.
            Acceso inmediato a teléfonos de emergencia, direcciones y servicios de las <strong>{estadisticas.totalEstaciones} estaciones</strong>
            que protegen a los <strong>798,000 habitantes</strong> del estado peninsular con el <strong>Mar de Cortés</strong> y
            destinos turísticos de fama mundial como <strong>Los Cabos</strong>.
          </p>

          <div class="bcs-hero__stats">
            <div class="bcs-hero__stat">
              <span class="bcs-hero__stat-number">{estadisticas.totalEstaciones}</span>
              <span class="bcs-hero__stat-label">Estaciones</span>
            </div>
            <div class="bcs-hero__stat">
              <span class="bcs-hero__stat-number">{estadisticas.totalMunicipios}</span>
              <span class="bcs-hero__stat-label">Municipios</span>
            </div>
            <div class="bcs-hero__stat">
              <span class="bcs-hero__stat-number">24/7</span>
              <span class="bcs-hero__stat-label">Servicio</span>
            </div>
            <div class="bcs-hero__stat">
              <span class="bcs-hero__stat-number">3M+</span>
              <span class="bcs-hero__stat-label">Turistas/año</span>
            </div>
          </div>

          <!-- Call to Action de Emergencia -->
          <div class="bcs-hero__cta">
            <a href="tel:911" class="bcs-hero__cta-btn bcs-hero__cta-btn--primary">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72"/>
              </svg>
              Emergencias: 911
            </a>
            <a href="#estaciones" class="bcs-hero__cta-btn bcs-hero__cta-btn--secondary">
              Ver todas las estaciones
            </a>
          </div>
        </div>

        <!-- Right Column - SEO Content Premium -->
        <div class="bcs-hero__seo">
          <h2 class="bcs-hero__seo-title">El Acuario del Mundo y Paraíso Turístico</h2>
          <p class="bcs-hero__seo-text">
            <strong>Baja California Sur</strong> alberga el <strong>Mar de Cortés</strong>, declarado
            <strong>Patrimonio Natural de la Humanidad por UNESCO</strong> y llamado "el acuario del mundo"
            por Jacques Cousteau. Los bomberos protegen a <strong>3+ millones de turistas anuales</strong> que
            visitan <strong>Los Cabos</strong>, el destino turístico más exclusivo de México, con
            emergencias que van desde <strong>rescate acuático</strong> hasta atención en
            <strong>resorts de ultra lujo</strong>.
          </p>

          <h2 class="bcs-hero__seo-title">Huracanes del Pacífico y Aislamiento Peninsular</h2>
          <p class="bcs-hero__seo-text">
            El estado enfrenta <strong>huracanes categoría 1-5</strong> cada temporada (junio-noviembre).
            El devastador <strong>Huracán Odile (2014)</strong> categoría 4 demostró la importancia de
            cuerpos de emergencia preparados. La <strong>geografía peninsular</strong> y el aislamiento
            de comunidades como <strong>Guerrero Negro, San Ignacio y Mulegé</strong> requieren
            <strong>tiempos de respuesta extendidos</strong> y equipamiento especializado.
          </p>

          <h2 class="bcs-hero__seo-title">Patrimonio Histórico y Ecológico Único</h2>
          <p class="bcs-hero__seo-text">
            Los bomberos protegen tesoros únicos: la <strong>Misión de Loreto</strong> (primera de California, 1697),
            las <strong>pinturas rupestres de la Sierra de San Francisco</strong> (Patrimonio UNESCO),
            la arquitectura francesa de <strong>Santa Rosalía</strong> con su iglesia diseñada por
            <strong>Gustave Eiffel</strong>, y santuarios de <strong>ballena gris</strong> en Guerrero Negro.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Emergency Banner con Schema Markup -->
  <section class="bcs-emergency" itemscope itemtype="https://schema.org/EmergencyService">
    <div class="container">
      <div class="bcs-emergency__content">
        <div class="bcs-emergency__icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
          </svg>
        </div>
        <div class="bcs-emergency__text">
          <span class="bcs-emergency__label">Emergencias en Baja California Sur</span>
          <span class="bcs-emergency__number" itemprop="telephone">911</span>
        </div>
        <div class="bcs-emergency__info">
          <p class="bcs-emergency__desc">
            <strong>Número único de emergencias</strong> que conecta con bomberos, policía, servicios médicos y
            <strong>rescate acuático</strong>. Disponible las <strong>24 horas, 365 días</strong> en todo el
            estado, incluyendo zonas turísticas y comunidades remotas.
          </p>
          <meta itemprop="areaServed" content="Baja California Sur, México" />
          <meta itemprop="availableLanguage" content="Spanish, English" />
        </div>
      </div>
    </div>
  </section>

  <!-- Municipios Quick Access -->
  <section class="bcs-municipios">
    <div class="container">
      <div class="bcs-municipios__grid">
        {municipiosInfo.map((mun) => (
          <a href={`#${mun.nombre.toLowerCase().replace(/\s+/g, '-')}`} class="bcs-municipios__card">
            <span class="bcs-municipios__name">{mun.nombre}</span>
            <span class="bcs-municipios__pop">{mun.poblacion} habitantes</span>
            <span class="bcs-municipios__desc">{mun.desc}</span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="bcs-main" id="estaciones">
    <div class="container">
      <div class="bcs-main__grid">
        <!-- Stations Grid -->
        <div class="bcs-main__content">
          <SectionHeader
            label="Directorio de Bomberos"
            title="Estaciones de Bomberos en Baja California Sur"
            description="Información verificada y actualizada de las 6 estaciones del Heroico Cuerpo de Bomberos en Baja California Sur. Selecciona una estación para acceder a datos de contacto, servicios especializados, zonas de cobertura y equipamiento disponible."
          />

          <!-- Stations Grid -->
          <div class="bcs-stations-grid">
            {estacionesBajaCaliforniaSur.map((estacion) => (
              <StationCard
                nombre={estacion.nombreCorto}
                slug={estacion.slug}
                direccion={`${estacion.direccion}, ${estacion.colonia}`}
                alcaldia={estacion.municipio}
                telefono={estacion.telefono}
                servicios={estacion.servicios}
                horario={estacion.horario}
                baseUrl="/directorio/baja-california-sur"
              />
            ))}
          </div>

          <!-- SEO Content Premium -->
          <article class="bcs-seo">
            <h2>El Heroico Cuerpo de Bomberos de Baja California Sur</h2>
            <p>
              El <strong>H. Cuerpo de Bomberos de Baja California Sur</strong> representa la primera línea de defensa
              contra emergencias en el estado peninsular más exclusivo de México. Con <strong>{estadisticas.totalEstaciones} estaciones
              estratégicamente ubicadas</strong> y más de <strong>{estadisticas.totalPersonal} elementos activos</strong>,
              este cuerpo profesional protege a los <strong>798,000 habitantes permanentes</strong> y a los
              <strong>más de 3 millones de turistas</strong> que visitan anualmente destinos como Los Cabos,
              La Paz, Loreto y las lagunas de avistamiento de ballena gris.
            </p>

            <h3>¿Cómo Contactar a los Bomberos en Baja California Sur?</h3>
            <p>
              Ante cualquier <strong>emergencia en Baja California Sur</strong>, el número <strong>911</strong> conecta
              inmediatamente con el <strong>Centro de Emergencias y Respuesta Inmediata (CERI)</strong> de cada municipio.
              Este sistema coordina la respuesta de bomberos, policía, paramédicos, Protección Civil y Capitanía de Puerto
              para emergencias marítimas. Para emergencias específicas en <strong>La Paz</strong>, puedes marcar
              <strong>612 122 0054</strong>; en <strong>Los Cabos</strong> el <strong>624 143 3577</strong>;
              y en <strong>Loreto</strong> el <strong>613 135 0059</strong>.
            </p>

            <h3>Emergencias más Frecuentes en Baja California Sur</h3>
            <p>
              Los bomberos sudcalifornianos atienden emergencias únicas del estado peninsular y turístico:
            </p>
            <ul class="bcs-seo__list">
              <li><strong>Rescate acuático</strong> en playas de alto riesgo de Los Cabos (corrientes del Pacífico)</li>
              <li><strong>Emergencias en embarcaciones</strong> turísticas, yates y cruceros en el Mar de Cortés</li>
              <li><strong>Huracanes y tormentas tropicales</strong> del Pacífico (temporada junio-noviembre)</li>
              <li><strong>Incendios en hoteles y resorts</strong> de ultra lujo con miles de huéspedes</li>
              <li><strong>Incendios forestales</strong> en Sierra de la Giganta y zonas serranas</li>
              <li><strong>Emergencias en comunidades aisladas</strong> con tiempos de respuesta de 30-60 minutos</li>
              <li><strong>Rescate de fauna marina</strong> (ballenas varadas, lobos marinos, tortugas)</li>
              <li><strong>Accidentes en carretera transpeninsular</strong> de 1,700+ km de longitud</li>
            </ul>

            <h3>Respuesta a Huracanes y Desastres Naturales</h3>
            <p>
              Baja California Sur enfrenta <strong>huracanes del Pacífico</strong> cada temporada. El
              <strong>Huracán Odile (2014)</strong> categoría 4 devastó Los Cabos, dejando a más de
              <strong>30,000 turistas</strong> varados y causando daños por miles de millones de dólares.
              El cuerpo de bomberos realizó más de <strong>500 rescates en 72 horas</strong>. Desde entonces,
              se han fortalecido los protocolos de <strong>evacuación de zonas turísticas</strong>,
              <strong>refugios temporales</strong> y <strong>coordinación con hoteles</strong>.
            </p>

            <h3>Turismo y Emergencias Internacionales</h3>
            <p>
              Con <strong>más de 3 millones de visitantes anuales</strong>, la mayoría de Estados Unidos y Canadá,
              los bomberos de BCS están capacitados para <strong>atención en inglés</strong> y coordinación con
              <strong>seguros médicos internacionales</strong>. Los Cabos recibe <strong>cruceros con 5,000+
              pasajeros</strong> que pueden requerir evacuación médica o atención de emergencias masivas en puerto.
            </p>

            <h3>Equipamiento Especializado</h3>
            <p>
              Las estaciones de bomberos de Baja California Sur cuentan con <strong>equipamiento especializado</strong>
              para las condiciones únicas del estado:
            </p>
            <ul class="bcs-seo__list">
              <li><strong>Lanchas de rescate</strong> y motos acuáticas para emergencias en el Mar de Cortés</li>
              <li><strong>Equipos de buceo</strong> profesional certificado para rescate submarino</li>
              <li><strong>Unidades todoterreno</strong> para zonas remotas y acceso limitado</li>
              <li><strong>Tanques nodriza</strong> de alta capacidad para zonas sin hidrantes</li>
              <li><strong>Sistemas de comunicación satelital</strong> para coordinación en zonas aisladas</li>
              <li><strong>Equipos forestales</strong> para combate en Sierra de la Giganta</li>
            </ul>

            <h3>Protección del Patrimonio UNESCO</h3>
            <p>
              Los bomberos protegen sitios de valor incalculable: el <strong>Mar de Cortés y sus islas</strong>
              (Patrimonio Natural de la Humanidad), las <strong>pinturas rupestres de la Sierra de San Francisco</strong>
              (Patrimonio Cultural), la <strong>Misión de Loreto</strong> (primera de las Californias, 1697) y la
              arquitectura francesa de <strong>Santa Rosalía</strong>, incluyendo la iglesia diseñada por
              <strong>Gustave Eiffel</strong>.
            </p>
          </article>
        </div>

        <!-- Sidebar Optimizado -->
        <aside class="bcs-sidebar">
          <!-- Filtro por Municipio -->
          <div class="bcs-sidebar__card">
            <h4>Buscar por Municipio</h4>
            <ul class="bcs-sidebar__municipios">
              {municipios.map((municipio) => (
                <li>
                  <a href={`#${municipio.toLowerCase().replace(/\s+/g, '-')}`}>
                    <span class="bcs-sidebar__bullet"></span>
                    <span>{municipio}</span>
                    <span class="bcs-sidebar__count">
                      {estadisticas.estacionesPorMunicipio.find(m => m.municipio === municipio)?.cantidad}
                    </span>
                  </a>
                </li>
              ))}
            </ul>
          </div>

          <!-- Teléfonos de Emergencia -->
          <div class="bcs-sidebar__card bcs-sidebar__card--emergency">
            <h4>Teléfonos de Emergencia</h4>
            <div class="bcs-sidebar__emergency-list">
              <div class="bcs-sidebar__emergency-item">
                <span class="bcs-sidebar__emergency-number">911</span>
                <span class="bcs-sidebar__emergency-label">Emergencias Generales</span>
              </div>
              <div class="bcs-sidebar__emergency-item">
                <span class="bcs-sidebar__emergency-number">612 122 0054</span>
                <span class="bcs-sidebar__emergency-label">Bomberos La Paz</span>
              </div>
              <div class="bcs-sidebar__emergency-item">
                <span class="bcs-sidebar__emergency-number">624 143 3577</span>
                <span class="bcs-sidebar__emergency-label">Bomberos Cabo San Lucas</span>
              </div>
              <div class="bcs-sidebar__emergency-item">
                <span class="bcs-sidebar__emergency-number">624 142 2466</span>
                <span class="bcs-sidebar__emergency-label">Bomberos San José del Cabo</span>
              </div>
              <div class="bcs-sidebar__emergency-item">
                <span class="bcs-sidebar__emergency-number">613 135 0059</span>
                <span class="bcs-sidebar__emergency-label">Bomberos Loreto</span>
              </div>
              <div class="bcs-sidebar__emergency-item">
                <span class="bcs-sidebar__emergency-number">615 152 0050</span>
                <span class="bcs-sidebar__emergency-label">Bomberos Santa Rosalía</span>
              </div>
            </div>
          </div>

          <!-- Estadísticas del Estado -->
          <div class="bcs-sidebar__card">
            <h4>Baja California Sur en Números</h4>
            <ul class="bcs-sidebar__stats">
              <li>
                <span class="bcs-sidebar__stat-value">798K</span>
                <span class="bcs-sidebar__stat-label">Habitantes permanentes</span>
              </li>
              <li>
                <span class="bcs-sidebar__stat-value">3M+</span>
                <span class="bcs-sidebar__stat-label">Turistas anuales</span>
              </li>
              <li>
                <span class="bcs-sidebar__stat-value">{estadisticas.totalEstaciones}</span>
                <span class="bcs-sidebar__stat-label">Estaciones de bomberos</span>
              </li>
              <li>
                <span class="bcs-sidebar__stat-value">{estadisticas.totalPersonal}+</span>
                <span class="bcs-sidebar__stat-label">Bomberos activos</span>
              </li>
            </ul>
          </div>

          <!-- Destinos Turísticos -->
          <div class="bcs-sidebar__card">
            <h4>Zonas Turísticas Protegidas</h4>
            <ul class="bcs-sidebar__tourism">
              <li>
                <span class="bcs-sidebar__tourism-name">Los Cabos</span>
                <span class="bcs-sidebar__tourism-desc">Destino #1 de lujo en México</span>
              </li>
              <li>
                <span class="bcs-sidebar__tourism-name">Mar de Cortés</span>
                <span class="bcs-sidebar__tourism-desc">Patrimonio UNESCO, buceo mundial</span>
              </li>
              <li>
                <span class="bcs-sidebar__tourism-name">Ballena Gris</span>
                <span class="bcs-sidebar__tourism-desc">Guerrero Negro, San Ignacio</span>
              </li>
              <li>
                <span class="bcs-sidebar__tourism-name">Loreto</span>
                <span class="bcs-sidebar__tourism-desc">Pueblo Mágico, Parque Nacional</span>
              </li>
            </ul>
          </div>

          <!-- Estados Vecinos -->
          <div class="bcs-sidebar__card">
            <h4>Estados Vecinos</h4>
            <ul class="bcs-sidebar__states">
              {estadosVecinos.map((estado) => (
                <li>
                  <a href={`/directorio/${estado.slug}`}>
                    <span>{estado.nombre}</span>
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M5 12h14M12 5l7 7-7 7"/>
                    </svg>
                  </a>
                </li>
              ))}
            </ul>
          </div>

          <!-- CTA Equipamiento -->
          <div class="bcs-sidebar__card bcs-sidebar__card--cta">
            <h4>¿Equipas Bomberos en BCS?</h4>
            <p>Distribuimos equipo certificado NFPA y rescate acuático a estaciones de bomberos en La Paz, Los Cabos, Loreto y todo Baja California Sur</p>
            <a href="/cotizar" class="bcs-sidebar__cta-btn">Solicitar Cotización</a>
          </div>

          <!-- Productos -->
          <div class="bcs-sidebar__card">
            <h4>Equipo para Bomberos BCS</h4>
            <ul class="bcs-sidebar__products">
              <li><a href="/productos/rescate-acuatico">Equipo de Rescate Acuático</a></li>
              <li><a href="/productos/trajes-para-bomberos">Trajes Estructurales NFPA 1971</a></li>
              <li><a href="/productos/scba">Equipos SCBA Scott / MSA</a></li>
              <li><a href="/productos/buceo">Equipos de Buceo Profesional</a></li>
              <li><a href="/productos/forestales">Equipos Forestales</a></li>
            </ul>
