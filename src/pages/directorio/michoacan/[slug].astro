---
/**
 * ─── Página de Detalle de Estación de Bomberos Michoacán ───
 * Usa EstacionLayout para mantener consistencia con el resto del sitio
 */
import EstacionLayout from "@layouts/EstacionLayout.astro";
import { estacionesMichoacan, getEstacionBySlug, getEstacionesCercanas } from "@data/estaciones-michoacan";

export function getStaticPaths() {
  return estacionesMichoacan.map((estacion) => ({
    params: { slug: estacion.slug },
  }));
}

const { slug } = Astro.params;
const estacion = getEstacionBySlug(slug as string);

if (!estacion) {
  return Astro.redirect("/404");
}

const estacionesCercanas = getEstacionesCercanas(slug as string, 3);

const estado = {
  nombre: "Michoacán",
  slug: "michoacan",
  siglas: "MICH",
  poblacion: "4.7 millones",
  municipios: 113,
};

const estadosVecinos = [
  { nombre: "Jalisco", slug: "jalisco" },
  { nombre: "Guanajuato", slug: "guanajuato" },
  { nombre: "Guerrero", slug: "guerrero" },
  { nombre: "Estado de México", slug: "estado-de-mexico" },
  { nombre: "Colima", slug: "colima" },
];

const ubicacion = estacion.municipio ?? estacion.ciudad;

const eppCards = [
  {
    image: "/images/directorio/traje-bombero-estructural-nfpa-01.avif",
    imageAlt: `Traje Estructural NFPA 1971 para bomberos ${ubicacion}`,
    badge: "NFPA 1971",
    title: "Traje Estructural NFPA 1971",
    text: `Diseñado para los bomberos de <strong>${ubicacion}</strong> que protegen sitios Patrimonio UNESCO como Morelia y Pátzcuaro. Certificación para emergencias en zonas turísticas, agroindustriales y portuarias.`,
    href: "/productos/trajes-para-bomberos",
    linkLabel: "Ver Trajes para Bombero",
  },
  {
    image: "/images/directorio/casco-bombero-proteccion-cabeza-01.avif",
    imageAlt: `Casco Estructural NFPA 1971 para bomberos ${ubicacion}`,
    badge: "NFPA 1971",
    title: "Casco Estructural NFPA 1971",
    text: `Certificación NFPA 1971 para operaciones en el Centro Histórico UNESCO de <strong>Morelia</strong>, el Puerto de <strong>Lázaro Cárdenas</strong> y la Reserva de la Mariposa Monarca.`,
    href: "/productos/cascos-para-bomberos",
    linkLabel: "Ver Cascos para Bombero",
  },
  {
    image: "/images/directorio/guantes-bombero-resistentes-01.avif",
    imageAlt: `Guantes Estructurales NFPA 1971 para bomberos ${ubicacion}`,
    badge: "NFPA 1971",
    title: "Guantes Estructurales NFPA 1971",
    text: `Resistencia térmica certificada para emergencias en <strong>Michoacán</strong>. Prensión segura para operaciones portuarias HAZMAT, rescate en volcanes y emergencias en la zona aguacatera.`,
    href: "/productos/guantes-para-bomberos",
    linkLabel: "Ver Guantes para Bombero",
  },
  {
    image: "/images/directorio/botas-bombero-proteccion-01.avif",
    imageAlt: `Botas Estructurales NFPA 1971 para bomberos ${ubicacion}`,
    badge: "NFPA 1971",
    title: "Botas Estructurales de Cuero",
    text: `Calzado certificado NFPA 1971 para el entorno diverso de <strong>Michoacán</strong>. Suela resistente para puerto industrial, terreno volcánico del Paricutín y zonas boscosas de la Mariposa Monarca.`,
    href: "/productos/botas-para-bomberos",
    linkLabel: "Ver Botas para Bombero",
  },
];
---

<EstacionLayout
  estacion={estacion}
  estado={estado}
  estadosVecinos={estadosVecinos}
  estacionesCercanas={estacionesCercanas}
  eppCards={eppCards}
>
  <Fragment slot="seo-content">
    <h2>Bomberos en {ubicacion}, Michoacán</h2>
    <p>
      La <strong>{estacion.nombreCorto ?? estacion.nombre}</strong> es parte del <strong>H. Cuerpo de Bomberos de {ubicacion}</strong>,
      institución que protege un estado con doble Patrimonio UNESCO y el puerto más importante del Pacífico mexicano.
      Esta estación, ubicada en <strong>{estacion.direccion}, {ubicacion}</strong>, brinda atención
      las 24 horas del día, los 365 días del año.
    </p>
    <p>
      En caso de <strong>emergencia en {ubicacion}</strong>, marca el <strong>911</strong> o comunícate directamente
      a esta estación al <strong>{estacion.telefono}</strong>. Los bomberos de Michoacán están capacitados para atender
      emergencias portuarias, protección patrimonial, incendios forestales y emergencias agroindustriales.
    </p>
    <h3>Michoacán: Morelia UNESCO, Mariposa Monarca y Puerto Lázaro Cárdenas</h3>
    <p>
      <strong>Michoacán</strong> posee doble Patrimonio UNESCO: el Centro Histórico de <strong>Morelia</strong>
      y la <strong>Reserva de la Biósfera de la Mariposa Monarca</strong>. <strong>Pátzcuaro</strong> es Pueblo Mágico
      con tradiciones ancestrales. <strong>Lázaro Cárdenas</strong> es el puerto comercial más importante del Pacífico.
      El volcán <strong>Paricutín</strong> es único en el mundo. Los bomberos protegen patrimonio cultural, natural y portuario.
    </p>
    <h3>¿Necesitas equipo certificado para bomberos?</h3>
    <p>
      En <strong><a href="/">BOMBERO.MX</a></strong> somos distribuidores autorizados de <strong>equipo para bomberos certificado NFPA</strong>.
      Equipamos estaciones en todo Michoacán con <a href="/productos/trajes-para-bomberos">trajes estructurales</a>,
      <a href="/productos/cascos-para-bomberos">cascos</a>, <a href="/productos/scba">equipos SCBA</a>,
      <a href="/productos/hazmat">equipos HAZMAT</a> y más.
      <a href="/cotizar">Solicita una cotización</a> sin compromiso.
    </p>
  </Fragment>
</EstacionLayout>
