            </li>
          </ul>

          <div class="featured__actions">
            <a href="/productos/epp-bomberos/traje-estructural" class="btn btn--primary btn--lg">
              Ver producto
            </a>
            <a href="/cotizar" class="btn btn--ghost">
              Solicitar cotización
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ═══════════════════════════════════════════════════════════════ -->
