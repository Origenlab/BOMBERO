---
/**
 * ─── DirectorioEstacionLayout ───
 * Layout reutilizable para TODAS las páginas de detalle de estación.
 * Contiene toda la estructura HTML y CSS.
 * Los archivos [slug].astro solo pasan datos como props — cero CSS.
 *
 * Secciones incluidas:
 *  1. Hero (breadcrumb + título + botones de acción + tarjeta de contacto)
 *  2. Main Grid (contenido principal + sidebar)
 *     Contenido: Servicios · Especialidades · Zonas · Equipamiento · Personal · Historia · SEO
 *     Sidebar: Emergencias · Estaciones del municipio · Otras BC · Productos · CTA · Nacional · Contacto
 */
import PageLayout from "@layouts/PageLayout.astro";

/* ── Tipos ─────────────────────────────────────────────────────────────── */
export interface EstacionDetalle {
  id:                  number;
  nombre:              string;
  nombreCorto:         string;
  slug:                string;
  descripcion:         string;
  direccion:           string;
  colonia:             string;
  codigoPostal:        string;
  ciudad:              string;
  municipio:           string;
  telefono:            string;
  email?:              string;
  horario:             string;
  tiempoRespuesta?:    string;
  personalActivo?:     number;
  servicios:           string[];
  especialidades?:     string[];
  zonasCobertura:      string[];
  equipamiento?:       string[];
  unidadesDisponibles?: string[];
  historia?:           string;
}

interface EstacionRef {
  nombreCorto: string;
  slug:        string;
  colonia?:    string;
  municipio:   string;
}

interface EstadoVecino {
  nombre: string;
  slug:   string;
}

interface ProductoRef {
  nombre: string;
  href:   string;
  desc:   string;
}

interface Props {
  /* Estado */
  estadoNombre:             string;          // "Baja California"
  estadoSlug:               string;          // "baja-california"

  /* Estación */
  estacion:                 EstacionDetalle;

  /* SEO */
  seoTitle?:                string;          // override del <title>
  seoDescription?:          string;          // override del meta description

  /* Relaciones */
  estacionesMismoMunicipio: EstacionRef[];
  estacionesCercanas:       EstacionRef[];
  estadosVecinos:           EstadoVecino[];
  productosRelacionados?:   ProductoRef[];

  /* Totales (para el link "Ver las N estaciones de X") */
  totalEstacionesEstado?:   number;
}

const {
  estadoNombre,
  estadoSlug,
  estacion,
  seoTitle,
  seoDescription,
  estacionesMismoMunicipio,
  estacionesCercanas,
  estadosVecinos,
  productosRelacionados = [
    { nombre: "Trajes Estructurales NFPA 1971",  href: "/productos/trajes-para-bomberos", desc: "Protección máxima certificada"       },
    { nombre: "Cascos de Bombero",               href: "/productos/cascos-para-bomberos", desc: "Cascos certificados NFPA/ANSI"       },
    { nombre: "Equipos SCBA",                    href: "/productos/scba",                 desc: "Respiración autónoma Scott/MSA"      },
    { nombre: "Herramientas de Rescate",         href: "/productos/herramientas-rescate", desc: "Equipo hidráulico Holmatro"          },
    { nombre: "Trajes HAZMAT",                   href: "/productos/trajes-para-bomberos", desc: "Protección química Nivel A/B"        },
  ],
  totalEstacionesEstado,
} = Astro.props;

/* ── Valores computados ─────────────────────────────────────────────────── */
const telefonoLink   = estacion.telefono.replace(/\s/g, "");
const mapUrl         = `https://www.google.com/maps/search/${encodeURIComponent(
  `${estacion.nombre} ${estacion.direccion} ${estacion.colonia} ${estacion.municipio} ${estadoNombre} México`
)}`;

const title = seoTitle
  ?? `${estacion.nombreCorto} | Bomberos ${estacion.municipio}, ${estadoNombre} | BOMBERO.MX`;

const description = seoDescription
  ?? `${estacion.descripcion} Teléfono directo: ${estacion.telefono}. Dirección: ${estacion.direccion}, ${estacion.colonia}, ${estacion.municipio}, ${estadoNombre}. Emergencias 911. Servicio ${estacion.horario}.`;

const linkTotal = totalEstacionesEstado
  ? `Ver las ${totalEstacionesEstado} estaciones de ${estadoNombre.split(" ")[0]}`
  : `Ver todas las estaciones de ${estadoNombre.split(" ")[0]}`;

const municipioContext: Record<string, string> = {
  "Tijuana":            "Tijuana es la ciudad fronteriza más visitada del mundo, con más de 50 millones de cruces anuales.",
  "Mexicali":           "Mexicali, capital del estado, enfrenta temperaturas extremas que pueden superar los 50°C en verano.",
  "Ensenada":           "Ensenada es el puerto de altura más importante del Pacífico mexicano y capital del vino mexicano.",
  "Tecate":             "Tecate es mundialmente conocida por su industria cervecera y sus paisajes montañosos.",
  "Playas de Rosarito": "Playas de Rosarito es un destino turístico costero que recibe miles de visitantes de California semanalmente.",
};
const ctxMunicipio = municipioContext[estacion.municipio] ?? "";
---

<PageLayout title={title} description={description}>

  <!-- ══════════════════════════════════════════════════
       SECCIÓN 1 — HERO
  ══════════════════════════════════════════════════ -->
  <section class="des-hero">
    <div class="des-hero__bg">
      <div class="des-hero__gradient"></div>
    </div>
    <div class="container">

      <!-- Breadcrumb -->
      <nav class="des-hero__breadcrumb" aria-label="Breadcrumb"
           itemscope itemtype="https://schema.org/BreadcrumbList">
        <span itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
          <a href="/" itemprop="item"><span itemprop="name">Inicio</span></a>
          <meta itemprop="position" content="1" />
        </span>
        <span aria-hidden="true">/</span>
        <span itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
          <a href="/directorio" itemprop="item"><span itemprop="name">Directorio</span></a>
          <meta itemprop="position" content="2" />
        </span>
        <span aria-hidden="true">/</span>
        <span itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
          <a href={`/directorio/${estadoSlug}`} itemprop="item">
            <span itemprop="name">{estadoNombre}</span>
          </a>
          <meta itemprop="position" content="3" />
        </span>
        <span aria-hidden="true">/</span>
        <span itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
          <span itemprop="name" aria-current="page">{estacion.nombreCorto}</span>
          <meta itemprop="position" content="4" />
        </span>
      </nav>

      <div class="des-hero__grid">

        <!-- Columna izquierda -->
        <div class="des-hero__content">
          <div class="des-hero__badges">
            <span class="des-hero__badge des-hero__badge--municipio">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/><circle cx="12" cy="10" r="3"/>
              </svg>
              {estacion.municipio}, {estadoNombre}
            </span>
            <span class="des-hero__badge des-hero__badge--horario">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/>
              </svg>
              {estacion.horario}
            </span>
            {estacion.tiempoRespuesta && (
              <span class="des-hero__badge des-hero__badge--response">
                Respuesta: {estacion.tiempoRespuesta}
              </span>
            )}
          </div>

          <h1 class="des-hero__title">{estacion.nombre}</h1>
          <p class="des-hero__desc">{estacion.descripcion}</p>

          <div class="des-hero__actions">
            <a href={`tel:${telefonoLink}`} class="des-hero__btn des-hero__btn--primary">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72"/>
              </svg>
              Llamar: {estacion.telefono}
            </a>
            <a href="tel:911" class="des-hero__btn des-hero__btn--emergency">
              <span>911</span> Emergencias
            </a>
            <a href={mapUrl} target="_blank" rel="noopener noreferrer" class="des-hero__btn des-hero__btn--secondary">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/><circle cx="12" cy="10" r="3"/>
              </svg>
              Ver en Google Maps
            </a>
          </div>
        </div>

        <!-- Tarjeta de Contacto con Schema.org -->
        <div class="des-hero__card" itemscope itemtype="https://schema.org/FireStation">
          <meta itemprop="name"        content={estacion.nombre} />
          <meta itemprop="description" content={estacion.descripcion} />

          <div class="des-hero__card-header">
            <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M3 21h18"/><path d="M5 21V7l8-4 8 4v14"/>
              <path d="M9 21v-4a2 2 0 0 1 2-2h2a2 2 0 0 1 2 2v4"/>
            </svg>
            <span>Información de Contacto Oficial</span>
          </div>

          <div class="des-hero__card-body">
            <!-- Dirección -->
            <div class="des-hero__info-row"
                 itemprop="address" itemscope itemtype="https://schema.org/PostalAddress">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/><circle cx="12" cy="10" r="3"/>
              </svg>
              <div>
                <strong>Dirección</strong>
                <span>
                  <span itemprop="streetAddress">{estacion.direccion}, {estacion.colonia}</span>,
                  CP <span itemprop="postalCode">{estacion.codigoPostal}</span>
                </span>
                <meta itemprop="addressLocality" content={estacion.ciudad} />
                <meta itemprop="addressRegion"   content={estadoNombre} />
                <meta itemprop="addressCountry"  content="MX" />
              </div>
            </div>

            <!-- Teléfono -->
            <div class="des-hero__info-row">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72"/>
              </svg>
              <div>
                <strong>Teléfono Directo</strong>
                <a href={`tel:${telefonoLink}`} itemprop="telephone">{estacion.telefono}</a>
              </div>
            </div>

            <!-- Emergencias -->
            <div class="des-hero__info-row des-hero__info-row--emergency">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07"/>
              </svg>
              <div>
                <strong>Emergencias</strong>
                <a href="tel:911" class="des-hero__emergency-link">911</a>
              </div>
            </div>

            <!-- Email (opcional) -->
            {estacion.email && (
              <div class="des-hero__info-row">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                  <polyline points="22,6 12,13 2,6"/>
                </svg>
                <div>
                  <strong>Correo Electrónico</strong>
                  <a href={`mailto:${estacion.email}`} itemprop="email">{estacion.email}</a>
                </div>
              </div>
            )}

            <!-- Ubicación -->
            <div class="des-hero__info-row">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
                <line x1="16" y1="2" x2="16" y2="6"/><line x1="8" y1="2" x2="8" y2="6"/>
                <line x1="3" y1="10" x2="21" y2="10"/>
              </svg>
              <div>
                <strong>Ubicación</strong>
                <span>{estacion.ciudad}, {estacion.municipio}, {estadoNombre}</span>
              </div>
            </div>
            <meta itemprop="openingHours" content="Mo-Su 00:00-24:00" />
          </div>
        </div>

      </div>
    </div>
  </section>

  <!-- ══════════════════════════════════════════════════
       SECCIÓN 2 — MAIN GRID
  ══════════════════════════════════════════════════ -->
  <section class="des-main">
    <div class="container">
      <div class="des-main__grid">

        <!-- ── CONTENIDO PRINCIPAL ── -->
        <div class="des-main__content">

          <!-- Servicios -->
          <article class="des-section">
            <h2 class="des-section__title">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10"/>
              </svg>
              Servicios de Emergencia en {estacion.municipio}
            </h2>
            <p class="des-section__intro">
              La <strong>{estacion.nombreCorto}</strong> brinda los siguientes servicios profesionales
              a los habitantes de <strong>{estacion.municipio}</strong> y comunidades aledañas en
              <strong>{estadoNombre}</strong> — las <strong>24 horas del día, los 365 días del año</strong>:
            </p>
            <ul class="des-services">
              {estacion.servicios.map((servicio) => (
                <li class="des-services__item">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                    <polyline points="20 6 9 17 4 12"/>
                  </svg>
                  <span>{servicio}</span>
                </li>
              ))}
            </ul>
          </article>

          <!-- Especialidades (opcional) -->
          {estacion.especialidades && estacion.especialidades.length > 0 && (
            <article class="des-section">
              <h2 class="des-section__title">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                </svg>
                Especialidades y Capacidades Únicas
              </h2>
              <p class="des-section__intro">
                Esta estación cuenta con <strong>capacitación especializada</strong> y equipamiento específico para:
              </p>
              <div class="des-specialties">
                {estacion.especialidades.map((esp) => (
                  <div class="des-specialties__item">
                    <span class="des-specialties__icon">
                      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10"/>
                      </svg>
                    </span>
                    <span>{esp}</span>
                  </div>
                ))}
              </div>
            </article>
          )}

          <!-- Zonas de Cobertura -->
          <article class="des-section">
            <h2 class="des-section__title">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"/>
                <line x1="2" y1="12" x2="22" y2="12"/>
                <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/>
              </svg>
              Zonas de Cobertura en {estacion.municipio}
            </h2>
            <p class="des-section__intro">
              La <strong>{estacion.nombreCorto}</strong> brinda cobertura prioritaria a las siguientes
              colonias, fraccionamientos y zonas de <strong>{estacion.municipio}, {estadoNombre}</strong>:
            </p>
            <div class="des-zones">
              {estacion.zonasCobertura.map((zona) => (
                <span class="des-zones__tag">{zona}</span>
              ))}
            </div>
            {estacion.tiempoRespuesta && (
              <p class="des-section__note">
                <strong>Tiempo de respuesta promedio:</strong> {estacion.tiempoRespuesta}
              </p>
            )}
          </article>

          <!-- Equipamiento (opcional) -->
          {estacion.equipamiento && estacion.equipamiento.length > 0 && (
            <article class="des-section">
              <h2 class="des-section__title">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M14 18V6a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2v11a1 1 0 0 0 1 1h2"/>
                  <path d="M15 18H9"/>
                  <path d="M19 18h2a1 1 0 0 0 1-1v-3.65a1 1 0 0 0-.22-.624l-3.48-4.35A1 1 0 0 0 17.52 8H14"/>
                  <circle cx="17" cy="18" r="2"/><circle cx="7" cy="18" r="2"/>
                </svg>
                Equipamiento y Unidades de Emergencia
              </h2>
              <p class="des-section__intro">
                Esta estación cuenta con <strong>equipamiento profesional</strong> para atender todo tipo de emergencias:
              </p>
              <ul class="des-equipment">
                {estacion.equipamiento.map((equipo) => (
                  <li>{equipo}</li>
                ))}
              </ul>
              {estacion.unidadesDisponibles && (
                <div class="des-units">
                  <h4>Unidades Operativas:</h4>
                  <div class="des-units__grid">
                    {estacion.unidadesDisponibles.map((u) => (
                      <span class="des-units__item">{u}</span>
                    ))}
                  </div>
                </div>
              )}
            </article>
          )}

          <!-- Personal y Recursos (opcional) -->
          {(estacion.personalActivo || estacion.unidadesDisponibles) && (
            <article class="des-section">
              <h2 class="des-section__title">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                  <circle cx="9" cy="7" r="4"/>
                  <path d="M23 21v-2a4 4 0 0 0-3-3.87"/>
                  <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
                </svg>
                Personal y Recursos Operativos
              </h2>
              <div class="des-stats">
                {estacion.personalActivo && (
                  <div class="des-stats__item">
                    <span class="des-stats__number">{estacion.personalActivo}</span>
                    <span class="des-stats__label">Bomberos Activos</span>
                  </div>
                )}
                {estacion.unidadesDisponibles && (
                  <div class="des-stats__item">
                    <span class="des-stats__number">{estacion.unidadesDisponibles.length}</span>
                    <span class="des-stats__label">Unidades Operativas</span>
                  </div>
                )}
                <div class="des-stats__item">
                  <span class="des-stats__number">24/7</span>
                  <span class="des-stats__label">Disponibilidad</span>
                </div>
                <div class="des-stats__item">
                  <span class="des-stats__number">365</span>
                  <span class="des-stats__label">Días al Año</span>
                </div>
              </div>
            </article>
          )}

          <!-- Historia (opcional) -->
          {estacion.historia && (
            <article class="des-section">
              <h2 class="des-section__title">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/>
                  <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/>
                </svg>
                Historia de la Estación
              </h2>
              <p class="des-section__text">{estacion.historia}</p>
            </article>
          )}

          <!-- Bloque SEO -->
          <article class="des-section des-section--seo">
            <h2>Bomberos en {estacion.municipio}, {estadoNombre}</h2>
            <p>
              La <strong>{estacion.nombreCorto}</strong> forma parte del <strong>H. Cuerpo de
              Bomberos de {estacion.municipio}</strong>, institución comprometida con la protección
              de los habitantes de <strong>{estadoNombre}</strong>. Ubicada en
              <strong>{estacion.direccion}, {estacion.colonia}, {estacion.ciudad}</strong>,
              brinda servicio de emergencias las <strong>24 horas del día, los 365 días del año</strong>.
            </p>

            <h3>¿Cómo Contactar a los Bomberos de {estacion.municipio}?</h3>
            <p>
              En caso de <strong>emergencia en {estacion.municipio}, {estadoNombre}</strong>, marca
              el <strong>911</strong> para contacto inmediato. También puedes comunicarte directamente
              con esta estación al <strong>{estacion.telefono}</strong>.
              {estacion.tiempoRespuesta && ` El tiempo de respuesta promedio es de ${estacion.tiempoRespuesta}.`}
            </p>

            <h3>{estacion.municipio}: Contexto Regional</h3>
            <p>
              <strong>{estacion.municipio}</strong> es uno de los municipios de
              <strong>{estadoNombre}</strong>.
              {ctxMunicipio && ` ${ctxMunicipio}`}
              {" "}Los bomberos de esta región están especialmente capacitados para los desafíos
              únicos del entorno local.
            </p>

            <h3>Equipo Certificado para Bomberos</h3>
            <p>
              En <strong><a href="/">BOMBERO.MX</a></strong> somos distribuidores autorizados de
              <strong>equipo profesional certificado NFPA</strong>. Equipamos estaciones en
              <strong>{estacion.municipio}</strong> y todo <strong>{estadoNombre}</strong> con
              <a href="/productos/trajes-para-bomberos">trajes estructurales NFPA 1971</a>,
              <a href="/productos/cascos-para-bomberos">cascos certificados</a>,
              <a href="/productos/guantes-para-bomberos">guantes certificados</a>,
              <a href="/productos/botas-para-bomberos">botas para bombero</a> y
              <a href="/productos/capuchas-para-bomberos">capuchas NFPA</a>.
              <a href="/cotizar">Solicita una cotización sin compromiso</a>.
            </p>
          </article>

        </div><!-- /des-main__content -->

        <!-- ── SIDEBAR ── -->
        <aside class="des-sidebar">

          <!-- Emergencias -->
          <div class="des-sidebar__card des-sidebar__card--emergency">
            <h4>Emergencias 24/7</h4>
            <a href="tel:911" class="des-sidebar__emergency">
              <span class="des-sidebar__emergency-number">911</span>
              <span class="des-sidebar__emergency-label">Llamar ahora</span>
            </a>
            <p>Número único de emergencias en {estacion.municipio} y todo {estadoNombre}</p>
            <a href={`tel:${telefonoLink}`} class="des-sidebar__direct-call">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07"/>
              </svg>
              Directo: {estacion.telefono}
