---
/**
 * ─── DirectorioEstadoLayout ───
 * Layout reutilizable para TODAS las páginas de estado del directorio.
 * Contiene toda la estructura HTML y CSS.
 * Los archivos de estado solo necesitan pasar datos como props — cero CSS.
 *
 * Secciones incluidas:
 *  1. Hero (mosaico de imágenes + stats)
 *  2. Emergency Banner (911)
 *  3. Gallery Strip (4 imágenes)
 *  4. Main Grid (estaciones + sidebar)
 *  5. EPP Complementario (4 tarjetas de producto)
 *  6. CTABanner
 */
import PageLayout from "@layouts/PageLayout.astro";
import SectionHeader from "@components/SectionHeader.astro";
import CTABanner from "@components/CTABanner.astro";
import StationCard from "@components/StationCard.astro";
import { cdnW } from "@utils/cdn";

/* ── Tipos ─────────────────────────────────────────────────────────────── */
interface EstacionData {
  nombreCorto: string;
  slug: string;
  direccion: string;
  colonia?: string;
  municipio?: string;
  ciudad?: string;
  telefono?: string;
  servicios?: string[];
  horario?: string;
}

interface EppCard {
  image: string;
  imageAlt: string;
  badge: string;
  title: string;
  text: string;       // puede contener HTML con <strong>
  href: string;
  linkLabel: string;
}

interface GalleryImage {
  src: string;
  alt: string;
  label: string;
}

interface HeroThumb {
  src: string;
  alt: string;
  label: string;
}

interface EmergencyNumber {
  number: string;
  label: string;
}

interface Region {
  nombre: string;
  desc: string;
}

interface EstadoVecino {
  nombre: string;
  slug: string;
}

interface Props {
  /* SEO */
  estado: string;               // "Baja California"
  sigla: string;                // "BC"
  slug: string;                 // "baja-california"
  description: string;
  keywords?: string[];
  canonical: string;
  jsonLd?: Record<string, unknown>[];

  /* Estadísticas Hero */
  totalEstaciones: number;
  totalMunicipios: number;
  habitantes: string;           // "3.8M+"

  /* Hero contenido */
  heroDesc: string;             // HTML (solo inner — sin <p> wrapper)
  heroImage: string;
  heroImageAlt: string;
  heroCaption: string;
  heroThumbs: [HeroThumb, HeroThumb, HeroThumb];  // exactamente 3

  /* Gallery */
  galleryImages: [GalleryImage, GalleryImage, GalleryImage, GalleryImage]; // 4

  /* Teléfonos emergencia sidebar */
  emergencyNumbers: EmergencyNumber[];

  /* Estaciones */
  estaciones: EstacionData[];
  stationImages: string[];

  /* Sidebar */
  municipios: string[];
  regiones: Region[];
  estadosVecinos: EstadoVecino[];

  /* EPP */
  eppCards: [EppCard, EppCard, EppCard, EppCard];  // exactamente 4

  /* CTABanner */
  ctaTitle: string;
  ctaDesc: string;
  ctaBtnText: string;
  ctaBtnHref?: string;
}

const {
  estado, sigla, slug, description, keywords, canonical, jsonLd,
  totalEstaciones, totalMunicipios, habitantes,
  heroDesc, heroImage, heroImageAlt, heroCaption, heroThumbs,
  galleryImages,
  emergencyNumbers,
  estaciones, stationImages,
  municipios, regiones, estadosVecinos,
  eppCards,
  ctaTitle, ctaDesc, ctaBtnText, ctaBtnHref = "/cotizar",
} = Astro.props;

/* CDN: transformar URLs de imágenes a través de ExactDN */
const heroImageCdn = cdnW(heroImage, 800);
const heroThumbsCdn = heroThumbs.map(t => ({ ...t, src: cdnW(t.src, 400) }));
const galleryImagesCdn = galleryImages.map(g => ({ ...g, src: cdnW(g.src, 500) }));
const stationImagesCdn = stationImages.map(s => cdnW(s, 400));
const eppCardsCdn = eppCards.map(c => ({ ...c, image: cdnW(c.image, 400) }));

/* Helper: genera slug-anchor de un municipio */
const toAnchor = (s: string) =>
  s.toLowerCase()
    .replace(/\s+/g, '-')
    .replace(/á/g, 'a').replace(/é/g, 'e')
    .replace(/í/g, 'i').replace(/ó/g, 'o')
    .replace(/ú/g, 'u').replace(/ñ/g, 'n');

const title = `Bomberos en ${estado} | ${totalEstaciones} Estaciones | BOMBERO.MX`;
---

<PageLayout
  title={title}
  description={description}
  keywords={keywords}
  canonical={canonical}
  jsonLd={jsonLd}
>

  <!-- ══════════════════════════════════════════════════
       SECCIÓN 1 — HERO
  ══════════════════════════════════════════════════ -->
  <section class="de-hero">
    <div class="de-hero__bg">
      <div class="de-hero__gradient"></div>
      <div class="de-hero__pattern"></div>
    </div>
    <div class="container">
      <div class="de-hero__container">

        <!-- Columna izquierda -->
        <div class="de-hero__content">
          <nav class="de-hero__breadcrumb">
            <a href="/">Inicio</a>
            <span>/</span>
            <a href="/directorio">Directorio</a>
            <span>/</span>
            <span>{estado}</span>
          </nav>
          <span class="de-hero__badge">
            <span class="de-hero__badge-dot"></span>
            {sigla}
          </span>
          <h1 class="de-hero__title">
            Estaciones de Bomberos en
            <span class="de-hero__highlight">{estado}</span>
          </h1>
          <p class="de-hero__desc" set:html={heroDesc} />
          <div class="de-hero__stats">
            <div class="de-hero__stat">
              <span class="de-hero__stat-number">{totalEstaciones}</span>
              <span class="de-hero__stat-label">Estaciones</span>
            </div>
            <div class="de-hero__stat">
              <span class="de-hero__stat-number">{totalMunicipios}</span>
              <span class="de-hero__stat-label">Municipios</span>
            </div>
            <div class="de-hero__stat">
              <span class="de-hero__stat-number">24/7</span>
              <span class="de-hero__stat-label">Servicio</span>
            </div>
            <div class="de-hero__stat">
              <span class="de-hero__stat-number">{habitantes}</span>
              <span class="de-hero__stat-label">Habitantes</span>
            </div>
          </div>
        </div>

        <!-- Columna derecha — Mosaico de imágenes -->
        <div class="de-hero__visual">
          <div class="de-hero__visual-main">
            <img
              src={heroImageCdn}
              alt={heroImageAlt}
              width="600" height="340"
              loading="eager" decoding="async"
            />
            <span class="de-hero__visual-caption">{heroCaption}</span>
          </div>
          <div class="de-hero__visual-row">
            {heroThumbsCdn.map((thumb) => (
              <div class="de-hero__visual-thumb">
                <img
                  src={thumb.src}
                  alt={thumb.alt}
                  width="280" height="160"
                  loading="eager" decoding="async"
                />
                <span>{thumb.label}</span>
              </div>
            ))}
          </div>
        </div>

      </div>
    </div>
  </section>

  <!-- ══════════════════════════════════════════════════
       SECCIÓN 2 — EMERGENCY BANNER
  ══════════════════════════════════════════════════ -->
  <section class="de-emergency">
    <div class="container">
      <div class="de-emergency__content">
        <div class="de-emergency__icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07A19.5 19.5 0 0 1 4.69 12a19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 3.6 1.27h3a2 2 0 0 1 2 1.72c.127.96.361 1.903.7 2.81a2 2 0 0 1-.45 2.11L7.91 8.86a16 16 0 0 0 6.07 6.07l.95-.95a2 2 0 0 1 2.11-.45c.907.339 1.85.573 2.81.7A2 2 0 0 1 22 16.92z"/>
          </svg>
        </div>
        <div class="de-emergency__text">
          <span class="de-emergency__label">Emergencias en {estado}</span>
          <span class="de-emergency__number">911</span>
        </div>
        <p class="de-emergency__desc">
          Número único de emergencias en todo {estado}. Disponible las 24 horas, los 365 días del año.
        </p>
      </div>
    </div>
  </section>

  <!-- ══════════════════════════════════════════════════
       SECCIÓN 3 — GALLERY STRIP
  ══════════════════════════════════════════════════ -->
  <section class="de-gallery">
    <div class="container">
      <div class="de-gallery__grid">
        {galleryImagesCdn.map((img) => (
          <div class="de-gallery__item">
            <img
              src={img.src}
              alt={img.alt}
              width="320" height="200"
              loading="lazy" decoding="async"
            />
            <div class="de-gallery__item-label">
              <span>{img.label}</span>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- ══════════════════════════════════════════════════
       SECCIÓN 4 — MAIN GRID: CONTENIDO + SIDEBAR
  ══════════════════════════════════════════════════ -->
  <section class="de-main">
    <div class="container">
      <div class="de-main__grid">

        <!-- Contenido principal -->
        <div class="de-main__content">
          <SectionHeader
            label="Directorio Completo"
            title={`Estaciones de Bomberos en ${estado}`}
            description={`Información de contacto actualizada de todas las estaciones del H. Cuerpo de Bomberos en ${estado}. Selecciona una estación para ver sus datos de contacto, servicios y zonas de cobertura.`}
          />

          <div class="de-stations-grid">
            {estaciones.map((estacion, i) => (
              <StationCard
                nombre={estacion.nombreCorto}
                slug={estacion.slug}
                direccion={`${estacion.direccion}${estacion.colonia ? ', ' + estacion.colonia : ''}`}
                alcaldia={estacion.municipio || estacion.ciudad || ''}
                telefono={estacion.telefono}
                servicios={estacion.servicios}
                horario={estacion.horario}
                image={stationImagesCdn[i % stationImagesCdn.length]}
                baseUrl={`/directorio/${slug}`}
              />
            ))}
          </div>

          <!-- Slot SEO — contenido de texto para posicionamiento -->
          <div class="de-seo">
            <slot name="seo" />
          </div>
        </div>

        <!-- Sidebar -->
        <aside class="de-sidebar">

          <!-- 1. Filtrar por Municipio -->
          <div class="de-sidebar__card">
            <h4>Filtrar por Municipio</h4>
            <ul class="de-sidebar__municipios">
              {municipios.map((municipio) => (
                <li>
                  <a href={`#${toAnchor(municipio)}`}>
                    <span class="de-sidebar__bullet"></span>
                    <span>{municipio}</span>
                  </a>
                </li>
              ))}
            </ul>
          </div>

          <!-- 2. Teléfonos de Emergencia -->
          <div class="de-sidebar__card de-sidebar__card--emergency">
            <h4>Teléfonos de Emergencia</h4>
            <div class="de-sidebar__emergency-list">
              {emergencyNumbers.map((item) => (
                <div class="de-sidebar__emergency-item">
                  <span class="de-sidebar__emergency-number">{item.number}</span>
                  <span class="de-sidebar__emergency-label">{item.label}</span>
                </div>
              ))}
            </div>
          </div>

          <!-- 3. Regiones del Estado -->
          <div class="de-sidebar__card">
            <h4>Regiones del Estado</h4>
            <ul class="de-sidebar__regiones">
              {regiones.map((region) => (
                <li>
                  <span class="de-sidebar__region-name">{region.nombre}</span>
                  <span class="de-sidebar__region-desc">{region.desc}</span>
                </li>
              ))}
            </ul>
          </div>

          <!-- 4. Estados Vecinos -->
          <div class="de-sidebar__card">
            <h4>Estados Vecinos</h4>
            <ul class="de-sidebar__states">
              {estadosVecinos.map((estado) => (
                <li>
                  <a href={`/directorio/${estado.slug}`}>
                    <span>{estado.nombre}</span>
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M5 12h14M12 5l7 7-7 7"/>
                    </svg>
                  </a>
                </li>
              ))}
            </ul>
          </div>

          <!-- 5. CTA Cotización -->
          <div class="de-sidebar__card de-sidebar__card--cta">
            <h4>¿Equipas una Estación en {sigla}?</h4>
            <p>Somos distribuidores de equipo certificado NFPA para cuerpos de bomberos en todo {estado}</p>
            <a href="/cotizar" class="de-sidebar__cta-btn">Solicitar Cotización</a>
          </div>

          <!-- 6. Equipo para Bomberos -->
          <div class="de-sidebar__card">
            <h4>Equipo para Bomberos</h4>
            <ul class="de-sidebar__products">
              <li><a href="/productos/trajes-para-bomberos">Trajes Estructurales NFPA</a></li>
              <li><a href="/productos/cascos-para-bomberos">Cascos de Bombero</a></li>
              <li><a href="/productos/guantes-para-bomberos">Guantes para Bombero</a></li>
              <li><a href="/productos/botas-para-bomberos">Botas para Bombero</a></li>
            </ul>
            <a href="/productos" class="de-sidebar__link">
              Ver catálogo completo
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </a>
          </div>

          <!-- 7. Volver al Directorio -->
          <div class="de-sidebar__card">
            <a href="/directorio" class="de-sidebar__back">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M19 12H5M12 19l-7-7 7-7"/>
              </svg>
              <span>Ver todos los estados</span>
            </a>
          </div>

          <!-- 8. Contacto BOMBERO.MX -->
          <div class="de-sidebar__card">
            <h4>Contacto BOMBERO.MX</h4>
            <ul class="de-sidebar__contact">
              <li><a href="tel:+525520780102">55 2078 0102</a></li>
              <li><a href="https://wa.me/525520780102">WhatsApp</a></li>
              <li><a href="mailto:ventas@bombero.mx">ventas@bombero.mx</a></li>
            </ul>
          </div>

        </aside>
      </div>
    </div>
  </section>

  <!-- ══════════════════════════════════════════════════
       SECCIÓN 5 — EPP COMPLEMENTARIO
  ══════════════════════════════════════════════════ -->
  <section class="de-epp">
    <div class="container">
      <SectionHeader
        label="EPP Certificado NFPA"
        title="Completa tu Equipo de Protección"
      >
        <p>El traje estructural NFPA 1971 trabaja como parte de un sistema. Distribuimos equipo certificado directamente a los cuerpos de bomberos de <strong>{estado}</strong>. Todos los equipos cumplen la misma edición de norma y están disponibles en stock inmediato.</p>
        <p>Desde cascos y guantes estructurales hasta equipos SCBA y extintores certificados NOM, cada pieza del catálogo está disponible para licitación gubernamental con ficha técnica y certificado de laboratorio incluidos.</p>
      </SectionHeader>

      <div class="de-epp__grid">
        {eppCardsCdn.map((card) => (
          <article class="de-epp__card">
            <a href={card.href} class="de-epp__card-image">
              <img
                src={card.image}
                alt={card.imageAlt}
                width="400" height="260"
                loading="lazy" decoding="async"
              />
              <span class="de-epp__card-badge">{card.badge}</span>
            </a>
            <div class="de-epp__card-content">
              <h3 class="de-epp__card-title">{card.title}</h3>
              <p class="de-epp__card-text" set:html={card.text} />
              <a href={card.href} class="de-epp__card-link">
                {card.linkLabel}
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                  <path d="M5 12h14M12 5l7 7-7 7"/>
                </svg>
              </a>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- ══════════════════════════════════════════════════
       SECCIÓN 6 — CTA BANNER
  ══════════════════════════════════════════════════ -->
  <CTABanner
    title={ctaTitle}
    desc={ctaDesc}
    btnText={ctaBtnText}
    btnHref={ctaBtnHref}
    whatsapp={true}
  />

</PageLayout>

<style>
  /* ═══════════════════════════════════════════════════════════════════════
     DIRECTORIO ESTADO LAYOUT — CSS COMPARTIDO PARA TODOS LOS ESTADOS
     Prefijo: de- (directorio-estado)
     ═══════════════════════════════════════════════════════════════════════ */

  /* ════════════════════════ HERO ════════════════════════ */
  .de-hero {
    position: relative;
    padding: var(--space-16) 0;
    background: var(--color-smoke-950);
    overflow: hidden;
  }

  .de-hero__bg {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .de-hero__gradient {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(ellipse 80% 50% at 50% -20%, rgba(220, 38, 38, 0.15), transparent),
      radial-gradient(ellipse 60% 50% at 0% 50%, rgba(249, 115, 22, 0.1), transparent),
      radial-gradient(ellipse 60% 50% at 100% 80%, rgba(220, 38, 38, 0.08), transparent);
  }

  .de-hero__pattern {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(255,255,255,0.02) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255,255,255,0.02) 1px, transparent 1px);
    background-size: 60px 60px;
    mask-image: radial-gradient(ellipse at center, black 30%, transparent 70%);
  }

  .de-hero__container {
    position: relative;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-12);
    align-items: center;
  }

  .de-hero__breadcrumb {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-sm);
    margin-bottom: var(--space-4);
  }

  .de-hero__breadcrumb a {
    color: var(--color-smoke-400);
    text-decoration: none;
    transition: color 0.2s;
  }

  .de-hero__breadcrumb a:hover { color: var(--color-fire-400); }

  .de-hero__breadcrumb span { color: var(--color-smoke-600); }

  .de-hero__badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2) var(--space-4);
    background: rgba(220, 38, 38, 0.15);
    border: 1px solid rgba(220, 38, 38, 0.3);
    border-radius: var(--radius-full);
    font-size: var(--text-sm);
    font-weight: 700;
    color: var(--color-fire-400);
    margin-bottom: var(--space-4);
  }

  .de-hero__badge-dot {
    width: 8px;
    height: 8px;
    background: var(--color-ember-500);
    border-radius: 50%;
  }

  .de-hero__title {
    font-size: clamp(2rem, 4vw, 2.75rem);
    font-weight: 800;
    color: white;
    line-height: 1.1;
    margin: 0 0 var(--space-5);
  }

  .de-hero__highlight {
    background: linear-gradient(135deg, var(--color-fire-500), var(--color-ember-500));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .de-hero__desc {
    font-size: var(--text-base);
    color: var(--color-smoke-300);
    line-height: 1.7;
    margin: 0 0 var(--space-6);
  }

  .de-hero__desc :global(strong) { color: white; }

  .de-hero__stats {
    display: flex;
    gap: var(--space-6);
    padding-top: var(--space-5);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .de-hero__stat {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .de-hero__stat-number {
    font-size: var(--text-2xl);
    font-weight: 800;
    color: var(--color-fire-400);
  }

  .de-hero__stat-label {
    font-size: var(--text-xs);
    color: var(--color-smoke-400);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  /* Hero visual mosaic */
  .de-hero__visual {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .de-hero__visual-main {
    position: relative;
    border-radius: var(--radius-xl);
    overflow: hidden;
    aspect-ratio: 16 / 9;
  }

  .de-hero__visual-main img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .de-hero__visual-caption {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: var(--space-3) var(--space-4);
    background: linear-gradient(transparent, rgba(0,0,0,0.7));
    color: white;
    font-size: var(--text-sm);
    font-weight: 600;
    letter-spacing: 0.03em;
  }

  .de-hero__visual-row {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-3);
  }

  .de-hero__visual-thumb {
    position: relative;
    border-radius: var(--radius-lg);
    overflow: hidden;
    aspect-ratio: 16 / 9;
  }

  .de-hero__visual-thumb img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .de-hero__visual-thumb span {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: var(--space-2) var(--space-3);
    background: linear-gradient(transparent, rgba(0,0,0,0.75));
    color: white;
    font-size: 11px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* ════════════════════════ EMERGENCY BANNER ════════════════════════ */
  .de-emergency {
    background: linear-gradient(135deg, var(--color-fire-600), var(--color-ember-600));
    padding: var(--space-5) 0;
  }

  .de-emergency__content {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-6);
  }

  .de-emergency__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 56px;
    height: 56px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    color: white;
    flex-shrink: 0;
  }

  .de-emergency__text {
    display: flex;
    flex-direction: column;
  }

  .de-emergency__label {
    font-size: var(--text-sm);
    color: rgba(255, 255, 255, 0.8);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .de-emergency__number {
    font-size: var(--text-3xl);
    font-weight: 800;
    color: white;
  }

  .de-emergency__desc {
    font-size: var(--text-sm);
