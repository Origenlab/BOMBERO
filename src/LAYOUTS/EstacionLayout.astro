---
/**
 * ═══════════════════════════════════════════════════════════════════════════
 * ESTACIÓN LAYOUT - Layout para páginas individuales de estaciones de bomberos
 * ═══════════════════════════════════════════════════════════════════════════
 *
 * Layout reutilizable para todas las páginas de detalle de estación en el
 * directorio nacional. Incluye:
 * - Hero con información de contacto
 * - Secciones de servicios, especialidades, cobertura, equipamiento
 * - Sidebar con estaciones cercanas y productos
 * - Sección EPP certificado NFPA
 * - CTA Banner
 *
 * Props:
 * - estacion: Objeto con datos de la estación
 * - estado: Objeto con datos del estado {nombre, slug, siglas, poblacion}
 * - estadosVecinos: Array de estados vecinos para interlinking
 * - estacionesCercanas: Array de estaciones cercanas
 * - eppCards: Array de tarjetas de productos EPP
 */
import PageLayout from "@layouts/PageLayout.astro";
import CTABanner from "@components/CTABanner.astro";
import { cdnW } from "@utils/cdn";

// Interfaz de la estación (campos opcionales tienen fallbacks en el layout)
interface Estacion {
  slug: string;
  nombre: string;
  nombreCorto?: string;
  descripcion?: string;
  ciudad: string;
  municipio?: string;
  direccion: string;
  colonia?: string;
  codigoPostal?: string;
  telefono: string;
  email?: string;
  horario: string;
  coordenadas?: { lat: number; lng: number };
  servicios: string[];
  especialidades?: string[];
  zonasCobertura?: string[];
  cobertura?: string[];
  equipamiento?: string[];
  unidadesDisponibles?: string[];
  personal?: number;
  personalActivo?: number;
  unidades?: number;
  tiempoRespuesta?: string;
  historia?: string;
}

interface Estado {
  nombre: string;
  slug: string;
  siglas: string;
  poblacion?: string;
  municipios?: number;
}

interface EstacionCercana {
  slug: string;
  nombreCorto?: string;
  nombre?: string;
  municipio?: string;
  ciudad?: string;
}

interface EstadoVecino {
  nombre: string;
  slug: string;
}

interface EPPCard {
  image: string;
  imageAlt: string;
  badge: string;
  title: string;
  text: string;
  href: string;
  linkLabel: string;
}

interface Props {
  estacion: Estacion;
  estado: Estado;
  estadosVecinos: EstadoVecino[];
  estacionesCercanas: EstacionCercana[];
  eppCards: EPPCard[];
}

const { estacion, estado, estadosVecinos, estacionesCercanas, eppCards } = Astro.props;

// CDN: transformar URLs de imágenes
const eppCardsCdn = eppCards.map(c => ({ ...c, image: cdnW(c.image, 400) }));

// Variables derivadas
const ubicacion = estacion.municipio ?? estacion.ciudad;
const nombreCortoDisplay = estacion.nombreCorto ?? estacion.nombre;
const colonia = estacion.colonia ?? '';
const zonasCobertura = estacion.zonasCobertura ?? estacion.cobertura ?? [];
const telefonoLink = estacion.telefono.replace(/\s/g, '');

// Productos relacionados (fijos)
const productosRelacionados = [
  { nombre: "Trajes Estructurales", href: "/productos/trajes-para-bomberos", desc: "Trajes NFPA 1971 para bomberos" },
  { nombre: "Cascos de Bombero", href: "/productos/cascos-para-bomberos", desc: "Cascos certificados NFPA" },
  { nombre: "Equipos SCBA", href: "/productos/scba", desc: "Equipos de respiración autónoma" },
  { nombre: "Herramientas de Rescate", href: "/productos/herramientas-rescate", desc: "Equipo Holmatro y más" },
];

// URLs y SEO
const mapUrl = `https://www.google.com/maps/search/${encodeURIComponent(estacion.nombre + ' ' + estacion.direccion + ' ' + colonia + ' ' + ubicacion + ' ' + estado.nombre)}`;
const canonical = `https://bombero.mx/directorio/${estado.slug}/${estacion.slug}`;
const seoKeywords = [
  `bomberos ${ubicacion.toLowerCase()}`,
  `estacion de bomberos ${ubicacion.toLowerCase()}`,
  `telefono bomberos ${ubicacion.toLowerCase()}`,
  `bomberos ${estado.nombre.toLowerCase()}`,
  "estaciones de bomberos en mexico",
];

// Schema.org JSON-LD
const stationJsonLd = {
  "@context": "https://schema.org",
  "@type": "FireStation",
  name: estacion.nombre,
  description: estacion.descripcion,
  url: canonical,
  telephone: estacion.telefono,
  email: estacion.email,
  openingHours: "Mo-Su 00:00-23:59",
  address: {
    "@type": "PostalAddress",
    streetAddress: [estacion.direccion, estacion.colonia].filter(Boolean).join(", "),
    addressLocality: estacion.ciudad,
    addressRegion: estado.nombre,
    postalCode: estacion.codigoPostal,
    addressCountry: "MX",
  },
  geo: {
    "@type": "GeoCoordinates",
    latitude: estacion.coordenadas.lat,
    longitude: estacion.coordenadas.lng,
  },
  areaServed: {
    "@type": "City",
    name: ubicacion,
  },
};

const breadcrumbJsonLd = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  itemListElement: [
    { "@type": "ListItem", position: 1, name: "Inicio", item: "https://bombero.mx" },
    { "@type": "ListItem", position: 2, name: "Directorio", item: "https://bombero.mx/directorio" },
    { "@type": "ListItem", position: 3, name: estado.nombre, item: `https://bombero.mx/directorio/${estado.slug}` },
    { "@type": "ListItem", position: 4, name: estacion.nombre, item: canonical },
  ],
};
---

<PageLayout
  title={`${nombreCortoDisplay} | Bomberos ${ubicacion} | BOMBERO.MX`}
  description={`${estacion.descripcion} Teléfono: ${estacion.telefono}. Dirección: ${estacion.direccion}, ${estacion.colonia}, ${ubicacion}, ${estado.nombre}.`}
  keywords={seoKeywords}
  canonical={canonical}
  jsonLd={[stationJsonLd, breadcrumbJsonLd]}
>
  <!-- Hero Section -->
  <section class="est-hero">
    <div class="est-hero__bg">
      <div class="est-hero__gradient"></div>
    </div>
    <div class="container">
      <!-- Breadcrumb -->
      <nav class="est-hero__breadcrumb">
        <a href="/">Inicio</a>
        <span>/</span>
        <a href="/directorio">Directorio</a>
        <span>/</span>
        <a href={`/directorio/${estado.slug}`}>{estado.nombre}</a>
        <span>/</span>
        <span>{nombreCortoDisplay}</span>
      </nav>

      <div class="est-hero__grid">
        <div class="est-hero__content">
          <div class="est-hero__badges">
            <span class="est-hero__badge est-hero__badge--municipio">{ubicacion}</span>
            <span class="est-hero__badge est-hero__badge--horario">{estacion.horario}</span>
          </div>
          <h1 class="est-hero__title">{estacion.nombre}</h1>
          <p class="est-hero__desc">{estacion.descripcion}</p>

          <div class="est-hero__actions">
            <a href={`tel:${telefonoLink}`} class="est-hero__btn est-hero__btn--primary">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72"/>
              </svg>
              <span>Llamar: {estacion.telefono}</span>
            </a>
            <a href={mapUrl} target="_blank" rel="noopener" class="est-hero__btn est-hero__btn--secondary">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                <circle cx="12" cy="10" r="3"/>
              </svg>
              <span>Ver en Google Maps</span>
            </a>
          </div>
        </div>

        <div class="est-hero__card">
          <div class="est-hero__card-header">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M3 21h18"/>
              <path d="M5 21V7l8-4 8 4v14"/>
              <path d="M9 21v-4a2 2 0 0 1 2-2h2a2 2 0 0 1 2 2v4"/>
            </svg>
            <span>Información de Contacto</span>
          </div>
          <div class="est-hero__card-body">
            <div class="est-hero__info-row">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                <circle cx="12" cy="10" r="3"/>
              </svg>
              <div>
                <strong>Dirección</strong>
                <span>{estacion.direccion}, {estacion.colonia}, CP {estacion.codigoPostal}</span>
              </div>
            </div>
            <div class="est-hero__info-row">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72"/>
              </svg>
              <div>
                <strong>Teléfono</strong>
                <a href={`tel:${telefonoLink}`}>{estacion.telefono}</a>
              </div>
            </div>
            <div class="est-hero__info-row">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07"/>
              </svg>
              <div>
                <strong>Emergencias</strong>
                <a href="tel:911" class="est-hero__emergency">911</a>
              </div>
            </div>
            {estacion.tiempoRespuesta && (
              <div class="est-hero__info-row">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"/>
                  <polyline points="12 6 12 12 16 14"/>
                </svg>
                <div>
                  <strong>Tiempo de Respuesta</strong>
                  <span>{estacion.tiempoRespuesta}</span>
                </div>
              </div>
            )}
            <div class="est-hero__info-row">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
                <line x1="16" y1="2" x2="16" y2="6"/>
                <line x1="8" y1="2" x2="8" y2="6"/>
                <line x1="3" y1="10" x2="21" y2="10"/>
              </svg>
              <div>
                <strong>Municipio</strong>
                <span>{ubicacion}, {estado.nombre}</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="est-main">
    <div class="container">
      <div class="est-main__grid">
        <!-- Content -->
        <div class="est-main__content">
          <!-- Servicios -->
          <article class="est-section">
            <h2 class="est-section__title">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10"/>
              </svg>
              Servicios de Emergencia
            </h2>
            <p class="est-section__intro">
              La <strong>{nombreCortoDisplay}</strong> ofrece los siguientes servicios de emergencia
              a los habitantes de <strong>{ubicacion}</strong> y zonas aledañas en {estado.nombre}:
            </p>
            <ul class="est-services">
              {estacion.servicios.map((servicio) => (
                <li class="est-services__item">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                    <polyline points="20 6 9 17 4 12"/>
                  </svg>
                  <span>{servicio}</span>
                </li>
              ))}
            </ul>
          </article>

          <!-- Especialidades -->
          {estacion.especialidades && estacion.especialidades.length > 0 && (
            <article class="est-section">
              <h2 class="est-section__title">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                </svg>
                Especialidades
              </h2>
              <div class="est-specialties">
                {estacion.especialidades.map((esp) => (
                  <div class="est-specialties__item">
                    <span class="est-specialties__icon">
                      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10"/>
                      </svg>
                    </span>
                    <span>{esp}</span>
                  </div>
                ))}
              </div>
            </article>
          )}

          <!-- Cobertura -->
          {zonasCobertura && zonasCobertura.length > 0 && (
            <article class="est-section">
              <h2 class="est-section__title">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"/>
                  <line x1="2" y1="12" x2="22" y2="12"/>
                  <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/>
                </svg>
                Zonas de Cobertura
              </h2>
              <p class="est-section__intro">
                Esta estación brinda cobertura a las siguientes colonias y zonas del municipio de <strong>{ubicacion}</strong>:
              </p>
              <div class="est-zones">
                {zonasCobertura.map((zona) => (
                  <span class="est-zones__tag">{zona}</span>
                ))}
              </div>
            </article>
          )}

          <!-- Equipamiento -->
          {estacion.equipamiento && estacion.equipamiento.length > 0 && (
            <article class="est-section">
              <h2 class="est-section__title">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M14 18V6a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2v11a1 1 0 0 0 1 1h2"/>
                  <path d="M15 18H9"/>
                  <path d="M19 18h2a1 1 0 0 0 1-1v-3.65a1 1 0 0 0-.22-.624l-3.48-4.35A1 1 0 0 0 17.52 8H14"/>
                  <circle cx="17" cy="18" r="2"/>
                  <circle cx="7" cy="18" r="2"/>
                </svg>
                Equipamiento y Unidades
              </h2>
              <ul class="est-equipment">
                {estacion.equipamiento.map((equipo) => (
                  <li>{equipo}</li>
                ))}
              </ul>
              {estacion.unidadesDisponibles && (
                <div class="est-units">
                  <h4>Unidades Operativas:</h4>
                  <div class="est-units__grid">
                    {estacion.unidadesDisponibles.map((unidad) => (
                      <span class="est-units__item">{unidad}</span>
                    ))}
                  </div>
                </div>
              )}
            </article>
          )}

          <!-- Personal y Estadísticas -->
          {(estacion.personalActivo || estacion.unidadesDisponibles) && (
            <article class="est-section">
              <h2 class="est-section__title">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                  <circle cx="9" cy="7" r="4"/>
                  <path d="M23 21v-2a4 4 0 0 0-3-3.87"/>
                  <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
                </svg>
                Personal y Recursos
              </h2>
              <div class="est-stats">
                {estacion.personalActivo && (
                  <div class="est-stats__item">
                    <span class="est-stats__number">{estacion.personalActivo}</span>
                    <span class="est-stats__label">Elementos Activos</span>
                  </div>
                )}
                {estacion.unidadesDisponibles && (
                  <div class="est-stats__item">
                    <span class="est-stats__number">{estacion.unidadesDisponibles.length}</span>
                    <span class="est-stats__label">Unidades Operativas</span>
                  </div>
                )}
                <div class="est-stats__item">
                  <span class="est-stats__number">24/7</span>
                  <span class="est-stats__label">Disponibilidad</span>
                </div>
              </div>
            </article>
          )}

          <!-- Historia -->
          {estacion.historia && (
            <article class="est-section">
              <h2 class="est-section__title">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/>
                  <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/>
                </svg>
                Historia
              </h2>
              <p class="est-section__text">{estacion.historia}</p>
            </article>
          )}

          <!-- SEO Content (slot) -->
          <article class="est-section est-section--seo">
            <slot name="seo-content">
              <h2>Bomberos en {ubicacion}, {estado.nombre}</h2>
              <p>
                La <strong>{nombreCortoDisplay}</strong> es parte del <strong>H. Cuerpo de Bomberos de {estado.nombre}</strong>.
                Esta estación, ubicada en <strong>{estacion.direccion}{colonia ? `, ${colonia}` : ''}, {ubicacion}</strong>,
                brinda atención las 24 horas del día, los 365 días del año.
              </p>
              <p>
                En caso de <strong>emergencia en {ubicacion}</strong>, marca el <strong>911</strong> o comunícate directamente
                a esta estación al <strong>{estacion.telefono}</strong>. Los bomberos de {estado.nombre} están capacitados para atender
                incendios, rescates vehiculares, fugas de gas, emergencias industriales y todo tipo de emergencias.
              </p>
              <h3>¿Necesitas equipo certificado para bomberos?</h3>
              <p>
                En <strong><a href="/">BOMBERO.MX</a></strong> somos distribuidores autorizados de <strong>equipo para bomberos certificado NFPA</strong>.
                Equipamos estaciones en todo {estado.nombre} con <a href="/productos/trajes-para-bomberos">trajes estructurales</a>,
                <a href="/productos/cascos-para-bomberos">cascos</a>, <a href="/productos/scba">equipos SCBA</a>,
                <a href="/productos/herramientas-rescate">herramientas de rescate</a> y más.
                <a href="/cotizar">Solicita una cotización</a> sin compromiso.
              </p>
            </slot>
          </article>
        </div>

        <!-- Sidebar -->
        <aside class="est-sidebar">
          <!-- Emergency Card -->
          <div class="est-sidebar__card est-sidebar__card--emergency">
            <h4>Emergencias</h4>
            <a href="tel:911" class="est-sidebar__emergency">
              <span class="est-sidebar__emergency-number">911</span>
              <span class="est-sidebar__emergency-label">Llamar ahora</span>
            </a>
            <p>Número único de emergencias en {estado.nombre}</p>
          </div>

          <!-- Estaciones Cercanas -->
          <div class="est-sidebar__card">
            <h4>Otras Estaciones en {estado.siglas}</h4>
            <ul class="est-sidebar__stations">
              {estacionesCercanas.map((est) => (
                <li>
                  <a href={`/directorio/${estado.slug}/${est.slug}`}>
                    <span class="est-sidebar__station-name">{est.nombreCorto ?? est.nombre}</span>
                    <span class="est-sidebar__station-municipio">{est.municipio ?? est.ciudad}</span>
                  </a>
                </li>
              ))}
            </ul>
            <a href={`/directorio/${estado.slug}`} class="est-sidebar__link">
              Ver todas las estaciones
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </a>
          </div>

          <!-- Productos Relacionados -->
          <div class="est-sidebar__card">
            <h4>Equipo para Bomberos</h4>
            <ul class="est-sidebar__products">
              {productosRelacionados.map((prod) => (
                <li>
                  <a href={prod.href}>
                    <span class="est-sidebar__product-name">{prod.nombre}</span>
                    <span class="est-sidebar__product-desc">{prod.desc}</span>
                  </a>
                </li>
              ))}
            </ul>
            <a href="/productos" class="est-sidebar__link">
              Ver catálogo completo
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </a>
          </div>

          <!-- CTA -->
          <div class="est-sidebar__card est-sidebar__card--cta">
            <h4>¿Equipas Bomberos?</h4>
            <p>Distribuimos equipo certificado NFPA a estaciones de bomberos en todo México</p>
            <a href="/cotizar" class="est-sidebar__cta-btn">Solicitar Cotización</a>
          </div>

          <!-- Estados Cercanos -->
          <div class="est-sidebar__card">
            <h4>Directorio Nacional</h4>
            <ul class="est-sidebar__states">
              {estadosVecinos.map((estadoVecino) => (
                <li>
                  <a href={`/directorio/${estadoVecino.slug}`}>
                    {estadoVecino.nombre}
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M5 12h14M12 5l7 7-7 7"/>
                    </svg>
                  </a>
                </li>
              ))}
            </ul>
            <a href="/directorio" class="est-sidebar__link">
              Ver todos los estados
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </a>
          </div>

          <!-- Contacto BOMBERO.MX -->
          <div class="est-sidebar__card">
            <h4>Contacto BOMBERO.MX</h4>
            <ul class="est-sidebar__contact">
              <li>
                <a href="tel:+525520780102">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07"/>
                  </svg>
                  55 2078 0102
                </a>
              </li>
              <li>
